@CARDCAN_2157(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2157)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,2157)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2157,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件종족 = 식물족
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	IF ゾーン == "필드" 
		SIF 戦闘場所(듀얼리스트) == 場所
			RETURN 0
	ELSEIF ゾーン == "손패"
		PRINT
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_2(듀얼리스트,2157)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_種:%듀얼리스트%_戦闘カード") != 식물족
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2157(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2157,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 効追除処
		CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所,"守備표시")
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2157,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		選択カード = 戦闘場所(듀얼리스트)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一守",1000)
	ENDIF
ENDIF

