#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 마돌체 푸딩세스 쇼코 아 라 모드
	CASE "略称"
RESULTS = 초코 푸딩
	CASE "カテゴリ"
RESULTS:0 = 마돌체
ENDSELECT


@CARD_41340(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 엑시즈
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2200
	CASE "성별"
		RETURN 牝性
ENDSELECT
RETURN 0

