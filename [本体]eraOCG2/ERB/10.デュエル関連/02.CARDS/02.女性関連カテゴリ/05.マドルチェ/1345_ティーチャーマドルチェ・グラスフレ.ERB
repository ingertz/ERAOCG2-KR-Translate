@CARDCAN_1345(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1345)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	RETURN 1	
ENDIF

@CARDEFFECT_1345(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戻した数
#DIM DYNAMIC 選択カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1345,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 마돌체
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"モ耐",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"魔耐",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"함정耐",1,1)
		ENDIF
PRINTL 묘지의 카드를 덱으로 되돌리겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 마돌체
			효과条件任意 = 1
			IF GETVARS(@"%듀얼리스트%_フィールド名")  ==  "マドル シャト-"
				효과条件行先플래그 = 손패行き
			ELSE
				효과条件行先플래그 = 덱行き
			ENDIF
			효과条件複数 = 98
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT == 1
				戻した数 = RESULT:2
				CALL FULLRESET
				효과条件行先플래그 = 덱行き
				효과条件任意 = 1
				효과条件複数 = 100 - 戻した数
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대묘지",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF