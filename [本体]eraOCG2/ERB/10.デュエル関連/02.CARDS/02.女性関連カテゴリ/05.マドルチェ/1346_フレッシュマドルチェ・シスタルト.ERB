@CARDCAN_1346(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1346)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1346(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 選択カード



IF 종류 == 지속효과
	;효과①
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 마돌체
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과条件カテゴリ = 마돌체
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
	ENDIF
	;효과②
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"破耐",1,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦耐",1,1)
	ENDIF
ENDIF


