	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


@CARD_2142(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT
RETURN 0

