@CARDNAME_82142,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 선율의 바르모니카
	CASE "略称"
		RESULTS = 선율
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


@CARD_82142(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_82142(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의  카드는 1턴에 1장밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①：자신 필드에 "바르모니카」 몬스터 카드가 존재할 경우, 이하의 효과에서 1개를 고르고 적용한다.
PRINTL 자신 필드에 "바르모니카」 L몬스터가 존재할 경우, 양쪽을 고르고 적용할 수 있다.
PRINTL ●자신은 500 LP 회복한다.
PRINTL 이 턴 중, 자신 필드의 "바르모니카」 몬스터 카드를, 상대는 효과의 대상으로 할 수 없다.
PRINTL ●자신은 500 데미지를 받는다.
PRINTL 그 후, 상대 필드의 효과 몬스터 1장의 효과를 턴 종료시까지 무효로 할 수 있다.

@CARDCAN_82142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82142)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,82142)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 바르모니카
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_82142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82142,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 링크
		효과条件カテゴリ = 바르모니카
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1

		IF 듀얼리스트 == "자신"
			PRINTL
			PRINTL 어떤 느낌의
			PRINTL 　음을 선택해?
			PRINTL
			PRINTL （속닥속닥…！）
			PRINTL （회복하면서 자신 필드의「바르모니카" 몬스터 카드에 대상 내성을 주자…！）[0]
			PRINTL
			PRINTL （소근소근…♪）
			PRINTL （데미지를 받고서라도 상대 몬스터 1장의 효과를 턴 종료시까지 무효로 해…♪）[1]
			IF 条件달성 == 1
				PRINTL
				PRINTL （（아니면, 둘다?））[2]
			ENDIF
			BINPUT
			IF RESULT == 0
				CALL CARDEFFECT_82142_1(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL CARDEFFECT_82142_2(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 2
				CALL CARDEFFECT_82142_1(듀얼리스트,종류,ゾーン,場所)
				CALL CARDEFFECT_82142_2(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ELSEIF 듀얼리스트 == "상대"
			IF 条件달성 == 1
				PRINTFORML 選ばれた효과 
				PRINTFORMW ●両方適用する
				CALL CARDEFFECT_82142_1(듀얼리스트,종류,ゾーン,場所)
				CALL CARDEFFECT_82142_2(듀얼리스트,종류,ゾーン,場所)
			ELSE
				SELECTCASE RAND:2
					CASE 0
						PRINTFORML 選ばれた효과 
						PRINTFORMW ●５００ＬＰ回復する。이 턴 중에、자신 필드의 "바르모니카」モンスター 카드를 상대는 효과의 대상으로할 수 없다
						CALL CARDEFFECT_82142_1(듀얼리스트,종류,ゾーン,場所)
					CASE 1
						PRINTFORML 選ばれた효과 
						PRINTFORMW ●５００데미지를 受ける。그 후、상대 필드의 효과몬스터 １장 의 효과를 턴 종료시까지 無効로할 수 있다。
						CALL CARDEFFECT_82142_2(듀얼리스트,종류,ゾーン,場所)
				ENDSELECT
			ENDIF

		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_82142_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL FULLRESET
CALL LIFE_CHANGE(듀얼리스트,"増加","효과",500)
CALL FULLRESET
효과条件カテゴリ = 바르모니카
효과条件종류 = モン全般
CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",1)
CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐",1)

RETURN


@CARDEFFECT_82142_2(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

