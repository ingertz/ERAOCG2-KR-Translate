@CARD_EXPLANATION_62037(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드는 룰 상 「네프티스」 카드로 취급한다.
PRINTL 이 카드명의 ①②의 효과는 1턴에 1번, 어느 하나만 사용할 수 있다.
CALLFORM CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①: 자신의 패 / 덱에서 「네프티스」 몬스터 1장을 선택하여 파괴하고,
PRINTL 파괴한 몬스터와는 카드명이 다른 「네프티스」 몬스터 1장을 덱에서 패로 가져온다.
CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ②: 자신의 「네프티스」 몬스터가 파괴되었을 경우에 발동할 수 있다.
PRINTL 묘지의 이 카드를 패로 가져온다.


@CARDCAN_62037(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者 

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62037)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62037)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 네프티스
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 네프티스
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_1(듀얼리스트,62037)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 네프티스
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62037(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62037,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 네프티스
		효과条件종류 = モン全般
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARDNAME_{RESULT:1},"名前"
			選択カード名前 = %RESULTS%
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 네프티스
			효과条件종류 = モン全般
			효과条件固名前 = %選択カード名前%
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62037,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 봉황신에게의 공물
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

