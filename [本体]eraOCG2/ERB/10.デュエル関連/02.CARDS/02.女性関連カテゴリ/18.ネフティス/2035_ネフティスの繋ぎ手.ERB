@CARDCAN_2035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2035)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,2035)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件종류 = 의식
	효과条件カテゴリ = 네프티스
	효과条件固名前 = 네프티스의 이어주는 손
	효과条件特不無視 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,2035)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == ターン開始時予約
	RETURN 1
ENDIF

@CARDEFFECT_2035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2035,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件종류 = 의식
		효과条件カテゴリ = 네프티스
		효과条件固名前 = 네프티스의 이어주는 손
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL FULLRESET
			CALL CARD_EX_SUMMON(듀얼리스트,参照先（CS）,選択カード（CS）)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2035,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,2035,スタン予約)
	ENDIF
ELSEIF 종류 == ターン開始時予約
	SETCOLOR C_YELLOW
PRINTL 이어주는 손의 효과입니다
	RESETCOLOR
	CALL FULLRESET
	효과条件종류 = 의식以外
	효과条件カテゴリ = 네프티스
	효과条件任意 = 1
	효과条件行先플래그 = 破壊行き
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
	CALL FULLRESET
	효과条件종류 = 의식以外
	효과条件カテゴリ = 네프티스
	효과条件任意 = 1
	효과条件行先플래그 = 破壊行き
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
	CALL FULLRESET
	효과条件종류 = 의식以外
	효과条件カテゴリ = 네프티스
	효과条件任意 = 1
	효과条件行先플래그 = 破壊行き
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
ENDIF