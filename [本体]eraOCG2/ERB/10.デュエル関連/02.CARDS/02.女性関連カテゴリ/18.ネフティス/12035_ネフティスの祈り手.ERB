@CARDCAN_12035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12035)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,12035)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 네프티스
	효과条件固名前 = 네프티스의 기도자
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,12035)
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時予約

	RETURN 1
ENDIF

@CARDEFFECT_12035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12035,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 네프티스
			효과条件固名前 = 네프티스의 기도자
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12035,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,12035,スタン予約)
	ENDIF
ELSEIF 종류 == ターン開始時予約
	SETCOLOR C_YELLOW
PRINTL 기도자의 효과입니다
	RESETCOLOR
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 네프티스
	효과条件종류 = 마함全般
	CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
ENDIF