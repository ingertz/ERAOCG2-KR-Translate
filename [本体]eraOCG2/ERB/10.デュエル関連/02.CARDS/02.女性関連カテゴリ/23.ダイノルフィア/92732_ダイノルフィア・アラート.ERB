@CARDCAN_92732(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92732)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,92732)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0

	SIF メインフェイズ != 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 다이놀피어
	CALL 효과条件レベル_ADV(8, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,92732)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") > 2000
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_효과ダメージ無効") == 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_92732(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC 묘지送カード,10
#DIM DYNAMIC 손패묘지送カード,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 소환可能レベル


IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92732,1)
	IF RESULT == 0	
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		SIF GETVAR(@"%듀얼리스트%_ぺギア") <= 0
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(GETVAR(@"ライフ_%듀얼리스트%")  / 2))
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 다이놀피어
		CALL 효과条件レベル_ADV(8,"以下")
		효과추가종류 = 26
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カード소환先")}, "レベル"
		소환可能レベル = 8 - RESULT
		IF 소환可能レベル > 0 && モンスター数(듀얼리스트) < 5
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 다이놀피어
			CALL 효과条件レベル_ADV(소환可能レベル,"以下")
			효과추가종류 = 26
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		CALL CARD_SS_RESTRICTION(듀얼리스트,"다이놀피어")
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92732,2)
	IF RESULT == 0	
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"효과ダメージ無効",1)
	ENDIF
ENDIF

