@CARDNAME_1156,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 문라이트 화이트 래빗
	CASE "略称"
RESULTS = 문라이트 백토
	CASE "カテゴリ"
RESULTS:0 = 문라이트
ENDSELECT


@CARD_1156(参照先)

#DIMS DYNAMIC 参照先
