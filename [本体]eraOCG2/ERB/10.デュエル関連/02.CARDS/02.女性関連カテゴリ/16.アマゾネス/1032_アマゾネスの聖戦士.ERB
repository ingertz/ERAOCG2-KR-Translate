PRINTL 덱에서 「아마조네스의 성전사」 이외의 「아마조네스」 몬스터 1장을 패에 더한다.

@CARDSUMMON_AA_1032


@CARDCAN_1032(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1032)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1032)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 아마조네스
	효과条件固名前 = 아마조네스의 성전사
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1032(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 아마조네스
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 200
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)	
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1032,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = 아마조네스의 성전사
		효과条件カテゴリ = 아마조네스
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF



