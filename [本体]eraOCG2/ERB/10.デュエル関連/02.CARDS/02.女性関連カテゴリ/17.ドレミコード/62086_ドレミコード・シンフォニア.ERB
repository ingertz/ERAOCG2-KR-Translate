@CARDCAN_62086(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62086)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,62086)
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미코드
	효과条件固名前起動 = 1
	효과条件표시 = 表側표시
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 2
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_62086(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 도레미코드数 
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62086,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲필드 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 도레미코드
		효과条件固名前起動 = 1
		효과条件표시 = 表側표시
		효과条件CNT = 1	
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		도레미코드数 = RESULT
		IF 도레미코드数 >= 3
			PRINTFORMW 序章……
			PRINTFORMW 「「「Solfachord Trio！」」」
			PRINTFORMW 도레미코드たちは楽器の妖精を呼び出し、それぞれ고무の演奏を始めた。
		ENDIF
		IF 도레미코드数 >= 5
			PRINTFORMW 第二章……！
			PRINTFORMW 「「「「「Solfachord La Quintet」」」」」
			PRINTFORMW 遅れてきた二人が合流し、５人組で浄化の演奏を奏でた。
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
		IF 도레미코드数 >= 7
			PRINTFORMW 最終組曲……！！
			PRINTFORMW 「「「「「「「Solfachord... La Orchestra！！」」」」」」」
			PRINTFORMW 場にそろったドレミ界の天使たちが幸せの多重奏を奏でると、天上界の扉が開かれた！
			IF モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 그란도레미코드
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ELSE
				PRINTFORML
				PRINTFORMW （席に空きが無いことを知ると、扉は静かに閉じられた）
			ENDIF
		ENDIF
		CALL FULLRESET
		효과条件カテゴリ = 도레미코드
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一攻",300 * 도레미코드数)


	ENDIF
ENDIF