@CARDCAN_62087(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62087)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62087)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF



@CARDEFFECT_62087(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,3
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62087,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		SIF 마함数(듀얼리스트) >= 4
			효과使用불가 = 1

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = EX以外全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			효과使用불가 = 1

		IF 효과使用불가 == 1
			RESULT = いいえ
		ELSE
PRINTL 패에서 「도레미코드」P 몬스터 1장을 고르고, EX덱에 앞면 표시로 더하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ENDIF
		IF RESULT == はい
			CALL CARDEFFECT_62087_1(듀얼리스트,종류,ゾーン,場所)
		ELSEIF RESULT == いいえ
			CALL CARDEFFECT_62087_2(듀얼리스트,종류,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_62087_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
