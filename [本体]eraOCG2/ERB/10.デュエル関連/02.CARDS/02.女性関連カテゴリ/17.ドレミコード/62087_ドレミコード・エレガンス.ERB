	효과条件レベル:0 = 1
	효과条件レベル:1 = 3
	효과条件レベル:2 = 5
	효과条件レベル:3 = 7
	CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")

	CALL FULLRESET
	효과条件カテゴリ = 도레미코드
	효과条件종류 = EX以外全般
	효과条件レベル:0 = 2
	효과条件レベル:1 = 4
	효과条件レベル:2 = 6
	효과条件レベル:3 = 8
	CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
ENDIF
RETURN


