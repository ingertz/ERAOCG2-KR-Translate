		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 위치 클래스
	효과条件カテゴリ:1 = 마나리아
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	RETURN 1
