@CARDCAN_4403(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4403)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4403)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 묘지数(듀얼리스트) + 제외数(듀얼리스트) < 3
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4403,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4403)
		RETURN 0
	SIF 묘지数(듀얼리스트) + 제외数(듀얼리스트) < 3
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 엘프 클래스
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	IF 묘지数(듀얼리스트) + 제외数(듀얼리스트) < 10
		SIF 발동済_1(듀얼리스트,覚醒발동)
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4403(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 守備力修正


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4403,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4403,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 엘프 클래스
		효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動
	IF 묘지数(듀얼리스트) + 제외数(듀얼리스트) >= 10
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동)
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	ENDIF
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",1000)
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ENDIF
		IF 묘지数(듀얼리스트) + 제외数(듀얼리스트) >= 10
			SETCOLOR C_WIND_T
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORML 「焼き焦がす！
			PRINTFORML 　　　　　　　　　燃え尽きろ！」
			PRINTL
			CUSTOMDRAWLINE ―
			RESETCOLOR
			WAIT


			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1500)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",1500)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"直攻",2)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"攻誘",2)
		ENDIF
	ENDIF
ENDIF
