@CARDCAN_4400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4400)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時; || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4400)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 永攻紋章起動
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	SIF 발동済_1(듀얼리스트,覚醒발동)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正


IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4400)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,4400,永攻紋章予約)
		;효과발동횟수を기록
		CALL CARD_EFFECT_D1USE(듀얼리스트,4400)
		IF 覚醒횟수(듀얼리스트) >= 3
			CALL CARDDRAW_BASIC(듀얼리스트,2)
		ENDIF
	ENDIF
ELSEIF 종류 == 永攻紋章起動
	CALL FULLRESET
	효과条件カテゴリ = 없음
	효과条件スーパー종류 = 효과無し全般
	攻撃力修正 = 700 * (FINDELEMENT(자신_발동済D1,4400) + 1)
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",0,攻撃力修正,攻撃力修正)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",1000)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件固ID = 4400
		효과条件カテゴリ = 없음
		효과条件スーパー종류 = 효과無し全般
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件固ID = 4400
			효과条件カテゴリ = 없음
			효과条件スーパー종류 = 효과無し全般
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

