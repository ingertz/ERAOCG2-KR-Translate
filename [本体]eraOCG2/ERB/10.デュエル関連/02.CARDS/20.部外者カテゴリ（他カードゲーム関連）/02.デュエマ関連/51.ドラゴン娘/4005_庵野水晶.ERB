@CARDNAME_4005,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 안노 수정
	CASE "略称"
RESULTS = 안노 수정
	CASE "カテゴリ"
RESULTS:0 = 커맨드
RESULTS:1 = 드래곤 아가씨
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_4005(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 물속성
		RESULT:2 = 화염속성
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1700
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

