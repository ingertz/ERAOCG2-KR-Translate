@CARDCAN_29703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29703)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,29703)
		RETURN 0
	SIF 現山札数(듀얼리스트) == 0
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,29703)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊",1)
	SIF RESULT != 1
		RETURN 0
	SIF 現山札数(듀얼리스트) == 0
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF
		
@CARDEFFECT_29703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29703,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件任意 = 1
		효과条件以守備力 = 2500
		효과条件종류 = モン全般
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29703,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件任意 = 1
		효과条件以守備力 = 2500
		효과条件종류 = モン全般
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF
ENDIF
