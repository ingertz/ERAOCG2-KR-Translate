CALLFORM CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①: 자신의 덱 위에서 3장을 넘기고, 그 중에서 「나이트」 카드 1장을 패에 추가한다.
PRINTL 『나이트 매직』
PRINTL 자신의 필드에 「나이트」 몬스터가 존재할 경우, 이 카드의 ①의 효과를 한 번 더 사용한다.
@CARDCAN_36620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36620)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,36620)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_36620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36620,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 나이트
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,3)
		CALL SHUFFLE(듀얼리스트)

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 表側표시
		효과条件カテゴリ = 나이트
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT >= 1
			CALL FULLRESET
			효과条件カテゴリ = 나이트
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,3)
			CALL SHUFFLE(듀얼리스트)
		ENDIF
	ENDIF
ENDIF
