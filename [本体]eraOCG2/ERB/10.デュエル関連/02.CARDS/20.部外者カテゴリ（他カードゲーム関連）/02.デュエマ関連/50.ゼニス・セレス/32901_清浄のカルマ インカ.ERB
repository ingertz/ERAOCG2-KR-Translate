@CARDCAN_32901(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,32901)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,32901)
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 제니스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 종류 == フリー誘発
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_32901(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止묘지",3,2)
	CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止덱",3,2)
	CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止제외",3,2)
ELSEIF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32901,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き,4)
		CALL FULLRESET
		효과条件行先플래그 = 덱行き
		효과条件複数 = 97
		CALL CARD_ADD_GY_BASIC(듀얼리스트, "상대묘지",ゾーン,場所)
	ENDIF
ENDIF



