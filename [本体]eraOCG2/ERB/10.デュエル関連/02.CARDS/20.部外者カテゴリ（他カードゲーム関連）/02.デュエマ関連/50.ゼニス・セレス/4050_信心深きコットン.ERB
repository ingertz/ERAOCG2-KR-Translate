@CARDCAN_4050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4050)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,4050)
		RETURN 0
	SIF 現山札数(듀얼리스트) <= 0
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5 && 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4050,1)
	IF RESULT == 0
		SIF 現山札数(듀얼리스트) <= 0
			RETURN 0

		IF 듀얼리스트 == "자신"
			PRINTFORML どの종류を宣言しますか？
			PRINTFORML [1] - モンスター
			PRINTFORML [2] - 마법
			PRINTFORML [3] - 함정
			PRINTFORML 
			BINPUT
		ELSEIF 듀얼리스트 == "상대"
			RESULT = 1
		ENDIF


		TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:0"))
		PRINTW
		IF RESULT == 1
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
			IF RESULT <= 10 
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "덱", 0)
			ENDIF
		ELSEIF RESULT == 2
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
			IF INRANGE(RESULT,20,30) 
				CALL CARD_DISPOSE(듀얼리스트,"덱",0,마함行き,2)
			ENDIF
		ELSEIF RESULT == 3
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
			IF INRANGE(RESULT,30,40) 
				CALL CARD_DISPOSE(듀얼리스트,"덱",0,마함行き,2)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4050)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

