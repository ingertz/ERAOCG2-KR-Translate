@CARDCAN_73902(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73902)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	IF ゾーン == "손패"
		PRINT
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,73902)
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1		
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;とりあえずチェックだけ
	CALL FULLRESET
	효과範囲덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0


	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	IF ゾーン == "손패"
		PRINT
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,73902)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")},"カテゴリ"
	SIF !MATCH(RESULTS, "제니스")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73902(듀얼리스트,종류,ゾーン,場所)
;大枠
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73902,1)
	IF RESULT == 0
		;通常마법汎用발동後묘지送り処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		SIF 종류 == 攻撃時誘発
			GOTO ATK_EFFECT
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲필드 = 1		
		효과条件표시 = 裏側표시
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			$ATK_EFFECT
			CALL CARDEFFECT_73902_0(듀얼리스트,종류,ゾーン,場所)
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ:0 = 제니스
			효과条件カテゴリ:1 = 언노운
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				PRINTL
PRINTL 수정이 다시 빛을 발한다!
				PRINTL
				CALL CARDEFFECT_73902_0(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF

@CARDEFFECT_73902_0(듀얼리스트,종류,ゾーン,場所)
;결단選択処理
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%




CALL FULLRESET
효과範囲상대필드 = 1
효과範囲상대마함 = 1
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT != 1
	효과使用불가:1 = 1

SIF 마함数(듀얼리스트) >= 4
	효과使用불가:2 = 1

SIF 現山札数(듀얼리스트) < 2
	효과使用불가:2 = 1

IF 듀얼리스트 == "자신"
	PRINTL
PRINTL 어떤 결단을 기동하시겠습니까?
	PRINTL
PRINTL [ 1] - 천정 - 「제니스」「언노운」「세레스」 회수
	IF 효과使用불가:1 == 0
PRINTL [ 2] - 정체 - 상대 필드의 카드를 덱 맨 아래로 보낸다
	ELSE 
PRINTL      - 정체 - 기동불가
	ENDIF
	IF 효과使用불가:2 == 0
PRINTL [ 3] - 수정 - 덱 위의 카드를 발동불가 상태로 세트
	ELSE
PRINTL      - 수정 - 기동불가
	ENDIF
	BINPUT

ELSEIF 듀얼리스트 == "상대"
	RESULT = 1
ENDIF

IF RESULT == 1
	CALL CARDEFFECT_73902_1(듀얼리스트,종류,ゾーン,場所)
ELSEIF RESULT == 2
	CALL CARDEFFECT_73902_2(듀얼리스트,종류,ゾーン,場所)
ELSEIF RESULT == 3
	CALL CARDEFFECT_73902_3(듀얼리스트,종류,ゾーン,場所)
ENDIF

RETURN

