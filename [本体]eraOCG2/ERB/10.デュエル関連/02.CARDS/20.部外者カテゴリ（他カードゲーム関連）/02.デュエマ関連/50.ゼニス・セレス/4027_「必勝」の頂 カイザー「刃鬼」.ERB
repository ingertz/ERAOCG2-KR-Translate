			TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:0"))
			PRINTW
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")}, "レベル"
			듀얼리스트レベル = RESULT
			TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
			PRINTW
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_덱:0")}, "レベル"
			対面者レベル = RESULT

			CALL SHUFFLE(듀얼리스트)
			CALL SHUFFLE(対面者)
			SETCOLOR C_YELLOW
			PRINTL
			PRINTFORMW {듀얼리스트レベル} VS {対面者レベル}
			PRINTL
			IF 듀얼리스트レベル >= 対面者レベル
				IF 듀얼리스트 == "자신"
					PRINTW VICTORY！ 
				ELSE
					PRINTW LOSE…
				ENDIF
			ELSE
				IF 듀얼리스트 == "자신"
					PRINTW LOSE… 
				ELSE
					PRINTW VICTORY！ 
				ENDIF
			ENDIF
			RESETCOLOR

			IF 듀얼리스트レベル >= 対面者レベル
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과範囲묘지 = 1
				효과条件カテゴリ = 헌터
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				PRINTL
				SETCOLOR C_RED
