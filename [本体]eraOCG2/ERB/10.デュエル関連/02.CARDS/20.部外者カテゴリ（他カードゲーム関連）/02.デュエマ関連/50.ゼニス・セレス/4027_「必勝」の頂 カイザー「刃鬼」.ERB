				RESETCOLOR
			ENDIF
		REND
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4027)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

