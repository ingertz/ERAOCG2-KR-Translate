@CARDSUMMON_29946(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 3
素材条件カテゴリ = 갓 노바
素材条件固名前起動 = 1

CALL FULLRESET
효과範囲묘지 = 1
효과範囲제외 = 1
효과条件名前 = 신인류 요미－갓링크－
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT != 1
	素材条件固名前 = イズモ


IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 이즈모
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,29946) 
	RETURN RESULT
ENDIF


