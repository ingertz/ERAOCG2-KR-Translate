PRINTL 그 후, 자신의 마법&함정 존에 「갓 노바」 P 몬스터가 1장 이하일 경우,
PRINTL 손패를 1장 버리는 것으로,
PRINTL 덱에서 「극한우신 오메가」 이외의 「갓 노바」 P 몬스터 1장을 자신의 마법&함정 존에 앞면 표시로 놓을 수 있다.
CALLFORM CARD_ABLE(0,소환強制誘発)
PRINTL ②: 이 카드가 몬스터 존 또는 마법&함정 존에 존재하는 한,
PRINTL 상대가 몬스터를 소환 / 특수 소환할 때마다, 상대에게 300 데미지를 준다.


@CARDCAN_29944(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29944)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,29944)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
효과条件名前 = 극한 우신 오메가
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "필드" && ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 最終소환決者 == 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0		
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_3(듀얼리스트,29944)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件他所 = 1
	효과条件カテゴリ = 갓 노바
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 오라클
	효과条件종류 = レベル持ち
	CALL 효과条件レベル_ADV(6, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29944(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29944,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		SIF 손패数(듀얼리스트) <= 0
			RETURN 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = 극한우신 오메가
		효과条件カテゴリ = 갓 노바
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 갓 노바
		효과条件分割 = 펜듈럼
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT >= 2
			RETURN 0
		CALL FULLRESET
		효과条件任意 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件固名前 = 극한우신 오메가
			효과条件カテゴリ = 갓 노바
			효과条件分割 = 펜듈럼
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",29944)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환強制誘発
PRINTL 오메가의 효과 발동!
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",300,1)
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29944,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ = 오라클
		효과条件종류 = 링크以外
		CALL 효과条件レベル_ADV(6, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

