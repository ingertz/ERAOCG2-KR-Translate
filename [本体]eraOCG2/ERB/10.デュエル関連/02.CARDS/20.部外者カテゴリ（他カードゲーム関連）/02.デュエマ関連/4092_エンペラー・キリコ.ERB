@CARDCAN_4092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4092)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,4092)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,4092)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 물속성
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 손패数(듀얼리스트) < 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時 
	;とりあえずチェックだけ
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)

	RETURN 1
ENDIF


@CARDEFFECT_4092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード
#DIM DYNAMIC リピート数
#DIM DYNAMIC 특수소환数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4092,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件複数 = 2
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL RESETCONDITION_MAT
			必要素材数 = 1
			素材条件속성 = 물속성
			重ねてＸ = 1
			TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4092)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF カウンタ == 場所
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,덱行き)
		NEXT
		リピート数 = 現山札数(듀얼리스트)
		FOR カウンタ,0,リピート数
			SIF モンスター数(듀얼리스트) >= 5
				BREAK
			SIF 특수소환数 >= 3
				BREAK
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
			IF RESULT <= 10
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "덱", 0,"攻撃표시")
				IF RESULT == 1
					특수소환数 ++
				ENDIF
			ELSE
				CALL CARD_ADD(듀얼리스트, "덱", "덱",0)
			ENDIF
		NEXT
		CALL SET_PLAYER_INFO(듀얼리스트,"SS制限", 2)
	ENDIF
ENDIF