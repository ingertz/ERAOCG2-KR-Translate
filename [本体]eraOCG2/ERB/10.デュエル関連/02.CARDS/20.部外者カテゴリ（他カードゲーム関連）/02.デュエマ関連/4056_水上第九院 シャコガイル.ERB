@CARDCAN_4056(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4056)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時強制 || 종류 == 특수소환時強制
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,4056)
		RETURN 
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT > 0
		RETURN 0
	CALL SET_PLAYER_INFO(듀얼리스트,"듀얼패배플래그",6,1)
ENDIF

@CARDEFFECT_4056(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 소환時強制 || 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4056)
	IF RESULT == 0
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"묘지",カウンタ,덱行き)
		NEXT
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%듀얼리스트%_제외:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"제외",カウンタ,덱行き)
		NEXT
	ENDIF
ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4056,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,5)
		IF 손패数(듀얼리스트) >= 5
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件複数 = 3
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
