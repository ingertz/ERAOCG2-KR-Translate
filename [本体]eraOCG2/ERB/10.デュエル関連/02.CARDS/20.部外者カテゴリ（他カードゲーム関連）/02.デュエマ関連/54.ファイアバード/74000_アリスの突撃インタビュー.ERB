@CARD_EXPLANATION_74000(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 카드는 1턴에 1번만 발동할 수 있다.
CALLFORM CARD_ABLE(1,마함起動 ,フリー誘発)
PRINTL ①: 자신의 패에서 「파이어 버드」 몬스터를 1장 버리고 발동할 수 있다.
PRINTL 레벨 랭크의 합계가 그 버린 몬스터의 레벨 이하가 되도록,
PRINTL 상대의 몬스터를 2장까지 선택하여 파괴한다.
PRINTL 그 후, 자신의 묘지에서 레벨 5 이하의 몬스터 1장을 선택하여 특수 소환할 수 있다.
PRINTL 이 효과는 자신이 직접 공격을 받았을 경우에도 발동할 수 있다.

@CARDCAN_74000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,74000)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 ||  종류 == フリー誘発
	SIF モンスター数(対面者) < 1
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF 발동済_1(듀얼리스트,74000)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 파이어 버드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,74000)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾種",2)
	SIF RESULT != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 파이어 버드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF モンスター数(対面者) < 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_74000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC レベル数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74000,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 파이어 버드
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}("レベル")
			レベル数 = RESULT
		
			CALL FULLRESET
			CALL 효과条件レベル_ADV(レベル数, "以下")
			효과条件종류 = 링크以外
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
			IF RESULT == 1
				TRYCALLFORM CARD_{他参照選択カードID}("レベル")
				レベル数 = レベル数 - RESULT
				IF レベル数 > 0
					CALL FULLRESET
					CALL 효과条件レベル_ADV(レベル数, "以下")
					효과条件종류 = 링크以外
					효과条件任意 = 1
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
				ENDIF
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = レベル持ち
		CALL 효과条件レベル_ADV(5, "以下")
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74000,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 파이어 버드
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}("レベル")
			レベル数 = RESULT
		
			CALL FULLRESET
			CALL 효과条件レベル_ADV(レベル数, "以下")
			효과条件종류 = 링크以外
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
			IF RESULT == 1
				TRYCALLFORM CARD_{他参照選択カードID}("レベル")
				レベル数 = レベル数 - RESULT
				IF レベル数 > 0
					CALL FULLRESET
					CALL 효과条件レベル_ADV(レベル数, "以下")
					효과条件종류 = 링크以外
					효과条件任意 = 1
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
				ENDIF
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = レベル持ち
		CALL 효과条件レベル_ADV(5, "以下")
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
