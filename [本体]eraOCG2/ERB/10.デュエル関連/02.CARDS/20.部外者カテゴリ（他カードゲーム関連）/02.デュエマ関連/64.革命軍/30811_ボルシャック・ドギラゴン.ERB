@CARDCAN_30811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,30811)
SIF RESULT == 1
	RETURN 0


IF 종류 == 攻撃時誘発 && ターンプレイヤー != 듀얼리스트
	SIF ゾーン != "손패"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 5
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,30811,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") >= 3000
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	RETURN 1

ELSEIF 종류 == 攻撃時誘発 && ターンプレイヤー == 듀얼리스트
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_30811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 戦闘カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発 && ターンプレイヤー != 듀얼리스트
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30811,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 화염속성
		효과条件任意 = 1
		효과条件山切り無し = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,1)
		IF RESULT == 1
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30811,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 攻撃時誘発 && ターンプレイヤー == 듀얼리스트
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30811,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ENDIF