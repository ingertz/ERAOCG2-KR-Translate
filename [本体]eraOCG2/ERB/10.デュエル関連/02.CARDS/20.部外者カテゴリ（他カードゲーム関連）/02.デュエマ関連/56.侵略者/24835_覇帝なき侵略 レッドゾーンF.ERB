RESULTS:4 = DUEL MASTERS
ENDSELECT


@CARD_24835(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
