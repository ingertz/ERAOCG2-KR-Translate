@CARDCAN_14062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,14062)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "손패" && ゾーン != "필드" && ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,14062,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALLFORM ATTACK_CARD(듀얼리스트,"속성")
	SIF !GROUPMATCH(RESULT,물속성,어둠속성,바람속성)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_14062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードID


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14062)
	IF RESULT == 0
		CALL INVASION(듀얼리스트,ゾーン,場所)
		IF RESULT == 1 && ゾーン == "필드" && モンスター数(듀얼리스트) < 5
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성:0 = 물속성
			효과条件속성:1 = 어둠속성
			효과条件속성:2 = 바람속성
			효과추가종류 = 効追一無
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"超속성효과無効",10)
	ENDIF
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14062)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주십시오
			PRINTL
PRINTL [0] - 몬스터를 패로 되돌린다
PRINTL [1] - 몬스터를 파괴한다.
PRINTL [2] - 몬스터의 효과를 무효로 한다.
			BINPUT
		ELSE
			RESULT = RAND:3
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"손패")
		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ELSEIF RESULT == 2
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"지속無効")
		ENDIF
	ENDIF
ENDIF