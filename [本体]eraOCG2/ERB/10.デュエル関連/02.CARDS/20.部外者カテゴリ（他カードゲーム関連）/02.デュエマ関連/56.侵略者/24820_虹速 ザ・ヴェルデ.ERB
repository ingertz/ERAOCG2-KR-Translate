@CARD_24820(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 물속성
		RESULT:2 = 화염속성
		RESULT:3 = 어둠속성
		RESULT:4 = 빛속성
		RETURN 바람속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1200
ENDSELECT

RETURN 0

@CARD_EXPLANATION_24820(종류)
