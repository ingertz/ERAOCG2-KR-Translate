@CARDCAN_75070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75070)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,75070)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件속성 = 빛속성
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 초차원
	효과条件속성 = 빛속성
	효과条件カテゴリ = 사이킥
	CALLFORM 효과条件レベル_ADV(7, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_75070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75070,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = 초차원
		효과条件속성 = 빛속성
		효과条件カテゴリ = 사이킥
		CALLFORM 효과条件レベル_ADV(7, "以下")
		CALL DIMSUMMON(듀얼리스트,ゾーン,場所,8)

;		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)	
;		選択カード = RESULT
;		IF 選択カード != 9999
;			CALL DIMSUMMON(듀얼리스트,ゾーン,場所,選択カード,7,8)
;		ENDIF

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 攻撃표시
	CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	選択カード = RESULT
	IF 選択カード != 9999
		CALL CARD_SELECT(듀얼리스트,選択カード)
		CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"表",3,1)
	ENDIF
	ENDIF
ENDIF

