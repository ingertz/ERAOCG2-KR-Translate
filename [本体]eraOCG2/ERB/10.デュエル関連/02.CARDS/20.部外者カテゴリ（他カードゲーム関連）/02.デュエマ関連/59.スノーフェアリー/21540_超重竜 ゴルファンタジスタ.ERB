@CARDCAN_21540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21540)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,4030)
		RETURN 0

	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
	SIF !MATCH(RESULTS,"자이언트")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_星:戦闘場所(듀얼리스트)") < 5
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4030)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 자이언트
	CALLFORM 효과条件レベル_ADV(6,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時
	SIF 발동済_D1(듀얼리스트,4030)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF
		
@CARDEFFECT_21540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 合計コスト

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21540,1)
	IF RESULT == 0
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)},"종류"
		IF INRANGE(RESULT,4,10)
			CALL CARD_DISPOSE(듀얼리스트,"필드",戦闘場所(듀얼리스트),EX덱行き)
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,"필드",戦闘場所(듀얼리스트),손패行き)
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			IF GETVAR(@"%듀얼리스트%_필드:カード소환先") > 0
				CALL EVADE_ATTACK(듀얼리스트)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21540,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 자이언트
		CALLFORM 효과条件レベル_ADV(6,"以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21540,20)
	IF RESULT == 0
		PRINTL
		SETCOLOR C_GREEN
		PRINT　　　ファイナル　
		SETCOLOR C_L_BLUE
PRINTL 엔드
		SETCOLOR C_GREEN
		PRINT 　　　終　局　
		SETCOLOR C_L_BLUE
		PRINT 宣　言　
PRINTL !
		PRINTW
		PRINTL
		RESETCOLOR

		SIF 듀얼리스트 == "자신"
PRINTL 카드를 드로우하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件종류 = モン全般
			효과条件표시 = 表側표시
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			CALL CARDDRAW_BASIC(듀얼리스트,RESULT)
		ENDIF

		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = モン全般
		효과条件표시 = 表側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		合計コスト = RESULT:2

		SIF 合計コスト < 1
			RETURN 0
		
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲마함 = 1
		효과条件任意 = 1
		CALLFORM 효과条件レベル_ADV(合計コスト,"以下")
		효과条件複数 = 任意の数
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
