@CARDSUMMON_54800(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 最低링크数

CALL FULLRESET
효과範囲마함 = 1
효과条件종류 = モン全般
효과条件표시 = 表側표시
효과条件CNT = 1
CALL CARD_CHECK_ADV(듀얼리스트,,"",)
最低링크数 = 3 - RESULT
SIF 最低링크数 < 1
	最低링크数 = 1

;素材条件
CALL RESETCONDITION_MAT
必要링크数 = 最低링크数
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 스노우 페어리
ELSE
	PRINT
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,54800) 
	RETURN RESULT
ENDIF


