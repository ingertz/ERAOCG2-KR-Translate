@CARDCAN_4104(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4104)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4104)
		RETURN 0
	SIF 現山札数(듀얼리스트) < 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,4104)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 스노우 페어리
	효과条件固名前 = 연애요정 아지사이
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_4104(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4104,1)
	IF RESULT == 0
		TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:0"))

		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"カテゴリ"
		SIF MATCH(RESULTS,"스노우 페어리")
			条件달성 ++
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
		SIF RESULT < モン全般
			条件달성 ++
		IF 条件달성 == 2
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"덱",0)

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 스노우 페어리
			효과条件종류 = モン全般
			효과条件任意 = 1
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ELSE
			CALL FULLRESET
			CALL CARD_ADD(듀얼리스트,"덱","손패",0)
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4104,2)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF

