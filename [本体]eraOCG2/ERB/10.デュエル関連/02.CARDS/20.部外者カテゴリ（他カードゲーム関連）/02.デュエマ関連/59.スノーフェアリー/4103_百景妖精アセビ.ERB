@CARDSUMMON_4103(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 最低링크数

最低링크数 = 5

FOR カウンタ,0,5
	SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
		CONTINUE
	SIF GETVAR(@"%듀얼리스트%_魔_表:カウンタ") != 1
		CONTINUE
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")},"종류"
	SIF RESULT >= モン全般
		CONTINUE
	最低링크数 -= 1
NEXT

SIF 最低링크数 < 3
	最低링크数 = 3

;素材条件
CALL RESETCONDITION_MAT
必要링크数 = 最低링크数
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 스노우 페어리
ELSE
	PRINT
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,4103) 
	RETURN RESULT
ENDIF


