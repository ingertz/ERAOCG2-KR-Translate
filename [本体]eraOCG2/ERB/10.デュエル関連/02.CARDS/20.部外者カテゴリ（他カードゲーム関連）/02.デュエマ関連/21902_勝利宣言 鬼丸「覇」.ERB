CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21902)
	IF RESULT == 0
PRINTL 가칭코 저지!
		TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:0"))
		PRINTW
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")}, "レベル"
		듀얼리스트レベル = RESULT
		TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
		PRINTW
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_덱:0")}, "レベル"
		対面者レベル = RESULT

		CALL SHUFFLE(듀얼리스트)
		CALL SHUFFLE(対面者)
		SETCOLOR C_YELLOW
		PRINTL
		PRINTFORMW {듀얼리스트レベル} VS {対面者レベル}
		PRINTL
		IF 듀얼리스트レベル >= 対面者レベル
			IF 듀얼리스트 == "자신"
				PRINTW VICTORY！ 
			ELSE
				PRINTW LOSE…
			ENDIF
		ELSE
			IF 듀얼리스트 == "자신"
				PRINTW LOSE… 
			ELSE
				PRINTW VICTORY！ 
			ENDIF
		ENDIF
		RESETCOLOR

		IF 듀얼리스트レベル >= 対面者レベル
			CALL SET_PLAYER_INFO(対面者,"ドロースキップ", 1)
			CALL SET_PLAYER_INFO(対面者,"メインスキップ", 1)
			CALL SET_PLAYER_INFO(対面者,"バトルスキップ２", 1)
			PRINTL
			SETCOLOR C_RED
			IF RAND:2 == 0
				PRINTW 『ビクトリ-ラッシュゥ！！』
			ELSE
				PRINTW 『デュエルは頭脳の격투技！ 覇ァ！！』
			ENDIF
			RESETCOLOR
		ENDIF

	ENDIF
ENDIF

