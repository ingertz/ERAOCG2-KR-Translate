ENDSELECT


@CARD_35661(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 지속마법
	CASE "分割"
		RETURN 크로스기어
ENDSELECT

RETURN 0

