PRINTL 손패, 덱, 묘지, 제외 상태, EX덱에서 「돌스자크」 몬스터를 4체까지 특수 소환한다.
PRINTL 그 후, 다음 상대 메인 페이즈 1을 스킵한다.

@CARDCAN_73990(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73990)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン終了時
	SIF 발동済_D1(듀얼리스트,73990)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 4
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과範囲제외 = 1
효과条件カテゴリ = 돌스자크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
효과条件カテゴリ = 마도구
	효과条件종류 = 마법全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK

	RETURN 1
ENDIF




@CARDEFFECT_73990(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 효과先





IF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73990,20)
	IF RESULT == 0
		PRINTL
		SETCOLOR C_BLUE
		PRINTW 『開け、無月の門99！！』
		RESETCOLOR
		REPEAT 4
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과範囲덱 = 1
			효과範囲EX덱 = 1
			효과範囲제외 = 1
			효과条件任意 = 1
효과条件カテゴリ = 돌스자크
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		REND
		PRINTL
		SETCOLOR C_BLUE
		PRINTW 『月下卍壊 ガ リュミ-ズ 卍！！』
		RESETCOLOR
		CALL SET_PLAYER_INFO(듀얼리스트,"メインスキップ", 1, 1)
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73990)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "卍 新세괴 卍")
	CALL SET_CAT_SOGAI_INFO(듀얼리스트,"마도구")
ELSEIF 효과後強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73990)
	IF RESULT == 0
	CALL FULLRESET
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
	ENDIF
ENDIF
