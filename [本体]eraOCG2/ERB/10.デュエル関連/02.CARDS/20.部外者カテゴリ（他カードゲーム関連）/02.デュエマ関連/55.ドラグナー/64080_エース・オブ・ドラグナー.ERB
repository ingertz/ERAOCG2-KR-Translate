@CARDNAME_64080,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 에이스 오브 드래그너
	CASE "略称"
RESULTS = 선발독주의 용패
	CASE "カテゴリ"
RESULTS:0 = 드래그너
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_64080(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_64080(종류)
#DIM DYNAMIC 종류
PRINTL 자신 필드는 「S무투 레이스, 『듀얼 마스터즈』」가 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(0,攻撃後誘発)
PRINTL ①: 자신의 몬스터가 공격한 데미지 스텝 종료 시에 발동할 수 있다.
PRINTL 그 카드를 패로 되돌린다.
CALLFORM CARD_ABLE(2,攻撃時誘発)
PRINTL ②: 자신의 「드래그너」 몬스터의 공격 선언 시에 발동할 수 있다.
PRINTL 덱에서 드래곤족 몬스터 1장을 고르고, 덱의 맨 위에 둔다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ③: 자신의 「드래그너」 몬스터는 전투 내성을 얻는다.



@CARDCAN_64080(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64080)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_2(듀얼리스트,64080)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
	SIF !MATCH(RESULTS, "드래그너")
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_64080(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カード


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64080)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64080)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,"필드",戦闘カード,손패行き)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64080,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 드래곤족
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_ADD_DECK_SPC(듀얼리스트,"덱",選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "武闘レ-ス『DM』")
	CALL FULLRESET
	효과条件カテゴリ = 드래그너
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
ENDIF
