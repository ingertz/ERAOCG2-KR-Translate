@CARDCAN_50985(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50985)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	IF ゾーン == "마함"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,50984,"마함")
		SIF RESULT == 1
			RETURN 0
		SIF 戦闘場所(듀얼리스트) == 5
			RETURN 0
		TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
		SIF !MATCH(RESULTS, "커맨드")
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "필드"
		SIF 발동済_1(듀얼리스트,50985)
			RETURN 0
		SIF 戦闘場所(듀얼리스트) != 場所
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSE
		RETURN 0
	ENDIF

ELSEIF 종류 == 他효과起動
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 묘지
	효과条件표시 = 表側표시
	효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:装備先")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50985(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT



IF 종류 == 攻撃時誘発
	IF ゾーン == "마함"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50985)
		IF RESULT == 0
			PRINTFORMW 『커맨드』の戦意に呼応し、드래그하트웨폰が변형をはじめた！！
			PRINTFORML 『猛烈将龍 ガイバ-ン　龍　解　！！』
			CALL RESETCONDITION
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF

	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50985,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지",50985)
		ENDIF
	ENDIF

ELSEIF 종류 == 他효과起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50985,11)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:装備先")
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지",50985)
	ENDIF
ENDIF
