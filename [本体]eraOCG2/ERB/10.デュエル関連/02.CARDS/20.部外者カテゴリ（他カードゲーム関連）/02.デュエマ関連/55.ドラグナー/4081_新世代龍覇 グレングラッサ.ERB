@CARDNAME_4081,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 신세대 용패 글렌그라사
	CASE "略称"
RESULTS = 글렌그라사
	CASE "カテゴリ"
RESULTS:0 = 드래그너
RESULTS:1 = 커맨드
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_4081(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RESULT:1 = 드래곤족
		RETURN 전사족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1700
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

