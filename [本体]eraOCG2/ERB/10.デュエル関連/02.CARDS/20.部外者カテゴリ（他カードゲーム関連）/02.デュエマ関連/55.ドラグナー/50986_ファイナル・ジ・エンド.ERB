@CARDCAN_50986(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50986)
SIF RESULT == 1
	RETURN 0

IF 종류 == 他효과起動
	SIF 발동済_1(듀얼리스트,50986)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 드래그너
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
			RETURN 0
		SIF 装備先 == 5
			RETURN 0
	ELSEIF ゾーン == "필드"
	ELSE
		RETURN 0
	ENDIF

	RETURN 1

ELSEIF 종류 == 지속효과
	IF ゾーン == "마함"
		SIF 装備先 == 5
			RETURN 0
	ELSEIF ゾーン == "필드"
	ELSE
		RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
			RETURN 0
		SIF 装備先 == 5
			RETURN 0
		SIF GETVAR(@"%装備者%_戦闘カード") != 装備先
			RETURN 0
		TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "속성"
		SIF RESULT != 어둠속성
			RETURN 0

	ELSEIF ゾーン == "필드"
		SIF 戦闘場所(듀얼리스트) != 場所
			RETURN 0
	ELSE
		RETURN 0
	ENDIF

	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件他所 = 1
	효과条件カテゴリ = 드래그하트
	효과条件종류 = 초차원
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,50986,"마함")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50986(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 破壊カード
CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 他효과起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50986,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 드래그너
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF	

ELSEIF 종류 == 攻守変動
	IF ゾーン == "마함"
		TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "속성"
		SIF RESULT == 화염속성
			CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,500)
	ELSEIF ゾーン == "필드"	
		CALL FULLRESET
		CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
	ENDIF
ELSEIF 종류 == 지속효과
	IF ゾーン == "마함"
		TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "속성"
		SIF RESULT == 빛속성
			CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"攻誘")
	ELSEIF ゾーン == "필드"	
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	破壊カード = 戦闘場所(듀얼리스트,1)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",破壊カード,"終戦",破壊行き,1)
	
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50986)
	IF RESULT == 0
		PRINTFORMW 他の드래그하트に共鳴し、드래그하트웨폰が변형をはじめた！！
		PRINTFORML 『終わりの天魔龍 ファイナル ジ エンド　龍　解　！！』
		CALL RESETCONDITION
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF