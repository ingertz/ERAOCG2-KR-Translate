CALLFORM CARD_ABLE(2,필드起動)
PRINTL ②: 자신 메인 페이즈에 발동할 수 있다.
PRINTL 자신의 패/필드에서 미확인족 융합 몬스터에 의해 정해진 융합 소재 몬스터를 소재로 하여,
PRINTL 그 융합 몬스터 1장을 융합 소환한다.
PRINTL 그때 2번째 융합 소재는 「기성체 데스타클」이어야 한다.

@CARDCAN_2316(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2316)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,2316)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,2316)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件종족 = 미확인족
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2316(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2316,1)
	IF RESULT == 0
		CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",3)
		IF RESULT == 0
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",700,1)
			CALL FULLRESET

			효과範囲손패 = 1
			효과条件종류 = モン全般
효과条件固名前 = 기성체 데스타클
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
PRINTL 패의 몬스터를 데스타클로 바꾸겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
					SIF RESULT == 9999
						RETURN
					PRINTFORML {RESULT}
					CALL CARD_SELECT(듀얼리스트,RESULT)
					選択カード = RESULT
					PRINTFORML {選択カード}
					選択カード_ID = GETVAR(@"%듀얼리스트%_손패:選択カード")
					PRINTFORML {選択カード_ID}
					TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
					選択カード名前 = %RESULTS%
					PRINTFORML %選択カード名前%に花弁のような寄生生物がにじり寄る……。
					PRINTL
					CALL CARD_RECONSTRUCT(듀얼리스트,"손패",選択カード,2316)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2316,2)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材範囲손패 = 1
	
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 융합
		효과条件종족 = 미확인족
		효과条件소환可 = 1
		強制素材場所２ = 지정場所(場所,ゾーン)
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			;카드의 条件を読み込む：
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			;素材処理を読み込む
			CALL FUSSUMMON(듀얼리스트, 選択カード)
		ENDIF
	ENDIF
ENDIF


