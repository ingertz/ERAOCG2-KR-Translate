@CARD_12305(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1300
	CASE "守備力"
		RETURN 300
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_12305(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 묘지에 레벨 7 전사족 빛속성 몬스터가 존재할 경우,
PRINTL 이 카드는 패에서 특수 소환할 수 있다.
PRINTL 그 후, 덱에서 「받아 이어진 일섬」 1장을 패에 넣을 수 있다.
CALLFORM CARD_ABLE(2,소환時,특수소환時)
PRINTL ②: 이 카드가 소환 / 특수 소환했을 경우에 발동할 수 있다.
PRINTL 이 카드의 공격력은 턴 종료시까지 300 업한다.
PRINTL 그 후, 자신 묘지의 전사족 빛속성 「레전드」 몬스터 1장을 패에 넣을 수 있다.
PRINTL 넣었을 경우, 이 턴, 자신은 빛속성 「레전드」 몬스터로밖에 공격할 수 없다.


@CARDCAN_12305(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12305)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,12305)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,12305,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件속성 = 빛속성
	효과条件レベル = 7
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;とりあえずチェックだけ
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 레전드 슬래시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,12305)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_12305(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12305,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
효과条件名前 = 레전드 슬래시
			효과条件任意 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12305,2)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",300)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 전사족
		효과条件カテゴリ = 레전드
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			攻撃可能속성:0 = 빛속성
			CALL CARD_ATK_RESTRICTION(듀얼리스트,"레전드")
		ENDIF
	ENDIF
ENDIF
