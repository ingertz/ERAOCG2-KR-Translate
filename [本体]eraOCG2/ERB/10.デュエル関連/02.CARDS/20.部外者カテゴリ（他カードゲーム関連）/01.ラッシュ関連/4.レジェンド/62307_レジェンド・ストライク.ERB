@CARD_EXPLANATION_62307(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: 자신의 덱 / 묘지의 레벨 4 이하의 빛 속성 「레전드」 몬스터 1장을 특수 소환한다.
PRINTL 이 효과로 「레전드 매지션」을 특수 소환했을 경우,
PRINTL 추가로 상대 필드의 마법 / 함정 카드 1장을 파괴할 수 있다.
CALLFORM CARD_ABLE(2,ターン開始時)
PRINTL ②: 자신의 턴 개시시에 이 카드가 묘지에 존재할 경우에 발동할 수 있다.
PRINTL 묘지에서 이 카드와 마법사족 빛 속성 「레전드」 몬스터 1장을 덱 맨 아래로 되돌리고, 자신은 1장 드로우한다.


@CARDCAN_62307(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62307)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62307)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	CALLFORM 효과条件レベル_ADV(4,"以下")
	효과条件カテゴリ = 레전드
	효과条件속성 = 빛속성
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF 발동済_2(듀얼리스트,72160)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 마법사족
	효과条件カテゴリ = 레전드
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_62307(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID



IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62307,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 레전드
		CALLFORM 효과条件レベル_ADV(4,"以下")
		효과条件속성 = 빛속성
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		IF 選択カード_ID == 2307
			CALL FULLRESET
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == ターン開始時	
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62307,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 마법사족
		효과条件カテゴリ = 레전드
		효과条件行先플래그 = 덱行き
		효과条件속성 = 빛속성
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ENDIF
