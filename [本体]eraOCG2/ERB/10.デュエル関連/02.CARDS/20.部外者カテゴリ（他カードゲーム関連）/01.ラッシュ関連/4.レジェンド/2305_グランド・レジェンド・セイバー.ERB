@CARDCAN_2305(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2305)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,2305)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2305,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 빛속성
		효과条件カテゴリ = 레전드
		효과条件レベル = 7
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 레전드
			CALLFORM 효과条件レベル_ADV(7,"以外")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				RETURN 0
			ELSE
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件固カテゴリ = 레전드
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT == 1
					RETURN 0
			ENDIF
		ELSE
			RETURN 0
		ENDIF
	ENDIF
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "묘지"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2305(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2305,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류:0 = 24
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 레전드
	효과条件속성 = 빛속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
	CALL FULLRESET
	효과条件カテゴリ = 레전드
	효과条件속성 = 빛속성
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐",3)	
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",1)	
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 레전드
	효과条件속성 = 빛속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,250)
ENDIF
