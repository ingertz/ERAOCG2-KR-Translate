	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
효과条件カテゴリ = 플라즈마틱 모델
		효과条件종류 = モン全般
효과条件固名前 = ＰＭ 레노아르
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",4)
	ENDIF

ELSEIF 종류 == R素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2375,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
효과条件カテゴリ = 플라즈마틱 모델
		효과条件종류 = モン全般
효과条件固名前 = ＰＭ 레노아르
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF


