@CARDCAN_2363(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2363)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,2363)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2363,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種EX덱
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 엑스큐티
	효과条件固名前 = 엑스큐티 플라메
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1

	RETURN 0

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,2363)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種EX덱
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL 효과条件レベル_ADV(7, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	SIF 条件달성 == 0
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_2363(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC ダメージ


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2363,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			ダメージ = モンスター数(듀얼리스트) + モンスター数(対面者)
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",(ダメージ * 600),1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦無",1,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2363,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		CALLFORM SS소환可能レベル_ADV(6, "以下")
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
