@CARD_EXPLANATION_2323(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(10,필드起動)
PRINTL ①: 자신 필드의 빛 속성 마법사족 앞면 표시 몬스터 3장을 묘지로 보내고 발동할 수 있다.
PRINTL 자신 묘지의 빛 속성 마법사족 공격력 2500 이하 몬스터 1장을 특수 소환한다.
PRINTL 그 후, 자신 묘지의 「카리스 마장 데스 완드」 1장을 자신 마법 & 함정 존에 세트할 수 있다.



@CARDCAN_2323(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2323)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,,"묘지",1)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件표시 = 表側표시
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2323(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2323,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 빛속성
		효과条件종족 = 마법사족
		효과条件표시 = 表側표시
		효과条件複数 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성 = 빛속성
			효과条件종족 = 마법사족
			효과条件攻撃力 = 2500
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
효과条件名前 = 카리스 마법 지팡이 데스 완드
				효과条件任意 = 1
				CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"裏側표시")
			ENDIF
		ENDIF
	ENDIF
ENDIF
