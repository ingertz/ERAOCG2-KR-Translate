@CARDSUMMON_42372(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 참모의 플렉토클라임
ELSEIF EX参照 >= 10
素材条件名前 = 피들 바드
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,42372) 
	RETURN RESULT
ENDIF

@CARDCAN_42372(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,42372)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 바람속성
	효과条件종족 = 사이킥족
	CALLFORM 효과条件レベル_ADV(8,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離
	SIF 발동済_2(듀얼리스트,42372)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 바람속성
	효과条件종족 = 사이킥족
	효과条件固名前 = 선자 참주의 플렉토클라이브
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_42372(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 繰り返し횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42372,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 마함全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT != 9999
			繰り返し횟수 ++
			選択カード = RESULT
			CALL FULLRESET
			효과条件종류 = 마함全般
			효과条件他所 = 1
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,選択カード)
			SIF RESULT != 9999
				繰り返し횟수 ++

			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성 = 바람속성
			효과条件종족 = 사이킥족
			CALLFORM 효과条件レベル_ADV(8,"以下")
			효과条件任意 = 1
			효과条件複数 = 100 - 繰り返し횟수
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		ENDIF
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42372,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 바람속성
		효과条件종족 = 사이킥족
		효과条件固名前 = 선자 참주의 플렉토클라이브
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
