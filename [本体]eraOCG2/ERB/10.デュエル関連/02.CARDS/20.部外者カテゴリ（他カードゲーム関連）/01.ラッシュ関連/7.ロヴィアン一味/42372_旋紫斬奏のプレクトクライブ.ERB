	CASE "カテゴリ"
RESULTS:0 = 없음
ENDSELECT


@CARD_42372(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 융합
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 사이킥족 
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
ENDSELECT
RETURN 0

@CARD_EXPLANATION_42372(종류)
