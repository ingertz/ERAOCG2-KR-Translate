#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 풍채의 예언 문구
ELSEIF EX参照 >= 10
素材条件名前 = 피들바두르
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,42373) 
	RETURN RESULT
ENDIF

@CARDCAN_42373(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,42373)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離
	SIF 발동済_2(듀얼리스트,42373)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_42373(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC ダメージ修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42373,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		IF RESULT == 1
			SIF 듀얼리스트 == "자신"
PRINTL 상대 묘지의 몬스터를 덱으로 되돌리시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				FOR カウンタ,0,紙束最大値
					SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
						CONTINUE
					CALL CARD_DISPOSE(対面者,"묘지",カウンタ,덱行き)
				NEXT
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",1200)
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42373,2)
	IF RESULT == 0
		ダメージ修正 = (손패数(듀얼리스트) + 손패数(対面者)) * 200
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正,1)
	ENDIF
ENDIF
