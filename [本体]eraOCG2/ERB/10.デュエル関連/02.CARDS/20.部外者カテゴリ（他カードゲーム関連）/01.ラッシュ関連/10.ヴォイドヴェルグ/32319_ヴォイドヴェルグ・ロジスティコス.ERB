	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32319,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
효과条件カテゴリ = 보이드베르그
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 보이드베르그 로지스티코스
			효과추가종류 = 効追除処
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
