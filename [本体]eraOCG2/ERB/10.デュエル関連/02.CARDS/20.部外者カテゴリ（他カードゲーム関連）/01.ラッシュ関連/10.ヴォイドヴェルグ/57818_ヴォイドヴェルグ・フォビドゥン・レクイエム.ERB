@CARDCAN_57818(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57818)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,57818)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
효과条件名前 = 보이드베르그 레퀴엠
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	효과範囲필드 = 1
	효과条件종류 = モン全般
효과条件名前 = 보이드베르그 페일라이더
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,57818)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	RETURN 1
ENDIF

@CARDEFFECT_57818(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성, 2
#DIM DYNAMIC 除去횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57818)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = モン全般
효과条件名前 = 보이드베르그 레퀴엠
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET

		효과範囲필드 = 1
		효과条件종류 = モン全般
효과条件名前 = 보이드베르그 페일라이더
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 条件달성:0 == 1 && 条件달성:1 == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",場所)
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57818, 1)
	IF RESULT == 0
		CALL FULLRESET

		CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",3)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",900)
		CALL FULLRESET

		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET

		효과範囲묘지 = 1
		효과条件속성 = 어둠속성
		효과条件종족 = 미확인족
		CALL 효과条件レベル_ADV(8, "以上")
		효과条件固名前起動 = 1
		효과条件CNT = 1
		효과条件限界値 = 3
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT > 0
			条件달성:1 = 1
			除去횟수 = RESULT
		IF 条件달성:0 == 1 && 条件달성:1 == 1
PRINTL 상대 필드의 카드를 파괴하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과条件複数 = 100 - 除去횟수
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57818, 2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")

		CALL FULLRESET
		효과範囲묘지 = 1
효과条件名前 = 몬스터를 특수 소환하시겠습니까?
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			PRINTL 몬스터를 특수소환しますか？
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF


