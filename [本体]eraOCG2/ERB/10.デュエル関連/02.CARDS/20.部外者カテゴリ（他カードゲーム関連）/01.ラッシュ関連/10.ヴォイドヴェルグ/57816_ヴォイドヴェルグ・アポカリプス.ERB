			효과条件속성 = 어둠속성
			효과条件종류 = モン全般
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT == 1
				RETURN 1
			ENDIF
		ENDIF
	ENDIF
	RETURN 0

ELSEIF 종류 == 필드起動 && ターンプレイヤー == 듀얼리스트
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57816,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",1000)
			CALL FULLRESET
PRINTL 자신 묘지에서 「보이드베르그」 카드 또는 「블랙홀」을 패에 추가하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				효과範囲묘지 = 1
				효과条件スーパー名前 = 블랙홀
효과条件カテゴリ = 보이드베르그
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 && ターンプレイヤー != 듀얼리스트
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57816,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
효과条件名前 = 블랙홀
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF