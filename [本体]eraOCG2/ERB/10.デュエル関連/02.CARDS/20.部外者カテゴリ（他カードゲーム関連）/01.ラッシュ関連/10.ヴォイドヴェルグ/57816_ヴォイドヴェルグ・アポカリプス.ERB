	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57816)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
PRINTL 아포칼립스의 대체 효과를 사용하시겠습니까?
