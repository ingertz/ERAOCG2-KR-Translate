@CARDCAN_2395(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2395)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,2395)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2395,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 2
		RETURN 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 꿈속
	효과条件固名前 = 꿈속의 람빌리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0

	FOR カウンタ,1,21
		;リセット
		条件달성:0 = 0
		;손패チェック
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件종족 = カウンタ
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 ++
		;상대チェック
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件종족 = カウンタ
		CALLFORM 효과条件レベル_ADV(5,"以上")
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 ++
		;両方OKだったらOK
		SIF 条件달성:0 == 2
			条件달성:1 ++
	NEXT
	;全部ダメなら불가
	SIF 条件달성:1 == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2395(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード종족

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2395,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2395)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		SIF 듀얼리스트 != "자신"
			효과条件종족 = 곤충족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"종족"
			選択カード종족 = RESULT
			CALL FULLRESET
			효과条件종족 = 選択カード종족
			효과条件표시 = 表側표시
			CALLFORM 효과条件レベル_ADV(5,"以上")
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件悪Ｃ所持 = 999
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"種",곤충족)
ENDIF

