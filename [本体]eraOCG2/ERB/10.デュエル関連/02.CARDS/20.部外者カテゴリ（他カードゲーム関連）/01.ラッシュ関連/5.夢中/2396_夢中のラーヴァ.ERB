@CARDSUMMON_2396(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
CALLFORM 素材条件レベル_ADV(6,"以下")
素材条件종족 = 곤충족

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,2396) 
	RETURN RESULT
ENDIF

@CARDCAN_2396(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,2396)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 꿈속
	효과条件종류 = モン全般
	효과条件固名前 = 꿈속의 유충
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 꿈속
	효과条件종류 = モン全般
	효과条件固名前 = 꿈속의 유충
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2396(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2396,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 꿈속
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		TRYCALLFORM CARDNAME_{RESULT:1},"名前"
		選択カード名前 = %RESULTS%

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 꿈속
		효과条件固名前:0 = 꿈속의 라바
		효과条件固名前:1 = %選択カード名前%
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件종족 = 곤충족
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,800)
	CALL FULLRESET
	효과条件悪Ｃ所持 = 999
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"種",곤충족)

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
ENDIF
