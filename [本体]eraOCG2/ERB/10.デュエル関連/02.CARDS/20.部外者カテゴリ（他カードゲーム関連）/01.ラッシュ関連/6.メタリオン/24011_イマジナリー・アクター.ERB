@CARD_EXPLANATION_24011(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드는 일반 몬스터이다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,필드起動)
PRINTL ①: 이 카드가 앞면 표시로 존재하는 한 자신 메인 페이즈에 1번만, 이 카드는 「각성」할 수 있다.
PRINTL (「각성」은 1턴에 1번밖에 할 수 없다.)
PRINTL 「각성」했을 경우, 덱에서 「융합」 1장 또는 「이매지너리」 몬스터 1장을 패에 추가할 수 있다.
CALLFORM CARD_ABLE(2,F素材時효과)
PRINTL ②: 이 카드가 융합 소환의 소재가 되었을 경우에 발동할 수 있다.
PRINTL 자신의 손패, 덱, 필드의 몬스터를 융합 소재로, 「메탈리온」 융합 몬스터 1장을 융합 소환한다.

@CARDCAN_24011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24011)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 && GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
	SIF 발동済_1(듀얼리스트,覚醒발동)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;とりあえずチェックだけ
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件スーパー名前 = 융합
	효과条件カテゴリ = 이매지너리
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == F素材時효과
	SIF 발동済_2(듀얼리스트,24011)
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	素材範囲덱 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件カテゴリ = 메탈리온
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_24011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択종족
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 && GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件スーパー名前 = 융합
		효과条件カテゴリ = 이매지너리
		효과条件종류 = モン全般
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == F素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24011,2)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材範囲손패 = 1
		素材範囲덱 = 1
		CALL FULLRESET
		효과条件종류 = 융합
		효과条件カテゴリ = 메탈리온
		효과条件소환可 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL FUSSUMMON(듀얼리스트, 選択カード)
		ENDIF
	ENDIF
ENDIF
