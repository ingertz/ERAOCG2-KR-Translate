@CARDCAN_23013(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23013)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,23013)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23013,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 메탈리온
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;とりあえずチェックだけ
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 이매지너리
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == F素材時효과
	SIF 발동済_2(듀얼리스트,23013)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻紋章起動
	RETURN 1
ENDIF


@CARDEFFECT_23013(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択종족
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23013,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 메탈리온
		효과条件종류 = 융합
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			選択カード_ID = RESULT:99
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件任意 = 1
			효과条件名前:0 = ダミ- 
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,0)
			효과条件名前:1 = %素材条件名前:0%
			효과条件名前:2 = %素材条件名前:1%
			효과条件名前:3 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,10)
			효과条件名前:4 = %素材条件名前:0%
			효과条件名前:5 = %素材条件名前:1%
			효과条件名前:6 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,11)
			효과条件名前:7 = %素材条件名前:0%
			효과条件名前:8 = %素材条件名前:1%
			효과条件名前:9 = %素材条件名前:2%
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

		ENDIF
	ENDIF

ELSEIF 종류 == F素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23013,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,23013,攻紋章予約)
	ENDIF

ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	효과条件종류 = 융합
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,1000)
ENDIF
