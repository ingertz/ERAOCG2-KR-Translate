@CARDCAN_21238(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21238)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL FULLRESET
효과条件固名前 = 슬레이브 가이아수라
	효과範囲필드 = 1
	; 효과条件以攻撃力 = 2001
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	
ENDIF

@CARDEFFECT_21238(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21238,0)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一破",2,1)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21238,0)
	IF RESULT == 0
		CALL FULLRESET
효과条件固名前 = 슬레이브 가이아수라
		효과範囲필드 = 1
		효과条件표시 = 表側표시
		; 효과条件以攻撃力 = 2001
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",-2000)

			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
			; まだ減少適用前なので減算攻撃力と減算値で判断
			IF GETVAR(@"%듀얼리스트%_MZ_攻:選択カード") - 2000 < 0
				CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF