対面者 = %RESULTS%

IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,173631,20)
	IF RESULT == 0
		SETCOLOR C_RED
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML 光も闇も食らう無の滅龍が、咎人の時をも断罪する……！
		PRINTL
		PRINTFORML %듀얼리스트%는추가ターンを得ました。
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
		PRINTFORMW 
		CALL FULLRESET
		CALL SET_PLAYER_INFO(듀얼리스트,"ターンスキップ",1,1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")

	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"単攻")
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,173631,3)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL FULLRESET
			효과条件他所 = 1
			효과範囲마함 = 1
			효과範囲필드 = 1
			효과条件行先플래그 = 破壊行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
			ENDIF
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
			ENDIF		
		ENDIF
	ENDIF
ENDIF
