@CARDCAN_73631(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73631)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	CALL 효과条件レベル_ADV(9, "以上")
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF GETVAR(@"%듀얼리스트%_MZ_星:装備先") < 10
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF GETVAR(@"%듀얼리스트%_필드:装備先") != 21236
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 装備先
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73631(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 装備先
#DIM DYNAMIC 選択カード

#DIMS DYNAMIC 표시形式
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 所有先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73631)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			CALL 효과条件レベル_ADV(9, "以上")
			효과条件표시 = 表側표시
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,1000,1000)
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"対耐")
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73631,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,"필드",装備先)
		IF RESULT == 1
			SIF モンスター数(듀얼리스트) >= 5
				RETURN 0
			IF 듀얼리스트 == "자신"
				所有先 = 1
			ELSE
				所有先 = 2
			ENDIF
			TRYCALLFORM CARD_UI(173631);　カード生成からくるUI（受け渡し必要：듀얼리스트情報のみ）
			WAIT

			SETVAR @"%듀얼리스트%_モン出現数", GETVAR(@"%듀얼리스트%_モン出現数") + 1
			IF 듀얼리스트 == "자신"
PRINTL 【표시 형식을 선택해주세요】
				PRINTL 
PRINTL [0] 공격 표시
PRINTL [1] 수비 표시
				PRINTL 
				BINPUT
				IF RESULT == 0
					표시形式 = 攻撃표시
				ELSE
					표시形式 = 守備표시
				ENDIF
			ELSEIF 듀얼리스트 == "상대"
				표시形式 = 攻撃표시
			ENDIF

			カード소환先 = 現필드(듀얼리스트)
			SETVAR @"%듀얼리스트%_MZ_所有:カード소환先 ", 1
			SETVAR @"%듀얼리스트%_MZ_戦:カード소환先 ", 1
			個IDカウンタ ++
			SETVAR @"%듀얼리스트%_MZ_個ID:カード소환先", 個IDカウンタ
			IF 표시形式 == "守備표시"
				SETVAR @"%듀얼리스트%_MZ_表:カード소환先 ", 2
			ELSEIF 표시形式 == "裏側표시"
				SETVAR @"%듀얼리스트%_MZ_表:カード소환先 ", 3
			ELSE 
				SETVAR @"%듀얼리스트%_MZ_表:カード소환先 ", 1
			ENDIF
			SETVAR @"%듀얼리스트%_MZ_戦無:カード소환先", 1
			SETVAR @"%듀얼리스트%_필드:カード소환先 ", 173631
			IF 듀얼리스트 == "상대"
				CALL KOJO_MESSAGE_SEND("DUEL",OPPOSER,2,173631,10)
			ENDIF
			CALLFORM CARDNAME_{173631}, "名前"
			PRINTFORML %듀얼리스트%는 %RESULTS%を通常소환しました。
			PRINTFORMW
			;0から4のまでのフィールドを確認し、ステータス変動を確認する
			CALL CARD_LOADUP
			CALL CARD_SUMACT(듀얼리스트,"通常",カード소환先,173631,듀얼리스트,"生産")
			IF GETVAR(@"%듀얼리스트%_필드:カード소환先") == 173631
				CALLFORM CARD_STANBY(173631,듀얼리스트,소환時,"필드",カード소환先)
			ENDIF
			CALL CARD_SUMRESERV(듀얼리스트,"通常",カード소환先,173631,"生産")

			CALL FULLRESET
효과条件名前 = 심판의 신검 리 제네시스
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "묘지",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
효과条件名前 = 단죄의 멸룡 저지먼트 드라고니스 Lv4
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"묘지")
			ENDIF
		ENDIF
	ENDIF
ENDIF
