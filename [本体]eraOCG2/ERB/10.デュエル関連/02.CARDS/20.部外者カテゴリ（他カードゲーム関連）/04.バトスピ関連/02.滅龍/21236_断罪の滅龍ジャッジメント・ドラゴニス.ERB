PRINTL 그 카드를 파괴하고, 이 턴 동안, 자신 필드의 화염 속성 몬스터 전부는 공격력이 500 올린다.

@CARDCAN_21236(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21236)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF 발동済_3(듀얼리스트,21236)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	IF ターンプレイヤー != 듀얼리스트
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		CALL FULLRESET
		효과条件他所 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0	
	ENDIF	
	RETURN 1
ELSEIF 종류 == 攻紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_21236(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21236,0)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"破耐",2,1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21236,3)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL FULLRESET
			효과条件他所 = 1
			효과範囲마함 = 1
			효과範囲필드 = 1
			효과条件行先플래그 = 破壊行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL CARD_RESERV(듀얼리스트,21236,攻紋章予約)
			ENDIF
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			IF RESULT == 1
				CALL CARD_RESERV(듀얼리스트,21236,攻紋章予約)
			ENDIF		
		ENDIF
	ENDIF
ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	효과条件속성 = 화염속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ENDIF
