@CARDCAN_21239(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21239)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,21239)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21239,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	CALLFORM 효과条件レベル_ADV(5,"以上")
효과条件カテゴリ = 멸룡
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,21239)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻紋章起動
	RETURN 1
ENDIF


@CARDEFFECT_21239(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21239,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		CALLFORM 효과条件レベル_ADV(5,"以上")
효과条件カテゴリ = 멸룡
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL FULLRESET
			SIF 종류 == 묘지起動
				효과추가종류:0 = 効追除処
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

			CALL CARD_SS_RESTRICTION(듀얼리스트,"滅龍")
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21239,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,21239,攻紋章予約)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無",1)
	ENDIF
ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	CALLFORM 효과条件レベル_ADV(5,"以上")
효과条件カテゴリ = 멸룡
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"一星",3)
ENDIF

