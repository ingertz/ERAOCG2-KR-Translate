@CARDNAME_72889,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 검형 병장「블래스터 블레이드」
	CASE "略称"
RESULTS = 블블(검)
	CASE "カテゴリ"
RESULTS:0 = 성검
RESULTS:1 = 블래스터 블레이드
RESULTS:4 = 뱅가드
ENDSELECT


@CARD_72889(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 装備마법
	CASE "単一存在"
		RETURN 1
ENDSELECT

RETURN 0

