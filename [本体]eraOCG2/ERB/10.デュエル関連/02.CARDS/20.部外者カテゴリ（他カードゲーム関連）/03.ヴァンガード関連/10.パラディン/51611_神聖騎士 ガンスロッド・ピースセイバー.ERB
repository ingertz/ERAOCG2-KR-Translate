@CARDCAN_51611(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51611)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,51611)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 永攻紋章起動
	RETURN 1
ELSEIF 종류 == 永紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_51611(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC モンスター数
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611,1)
	IF RESULT == 0
	CALL CARD_GENERATE_HAND(듀얼리스트,151611)
		IF 마함数(듀얼리스트) < 5
			CALL FULLRESET
효과条件名前 = 성검 피스 세이버
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件固定 = 場所
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"손패")
			ENDIF
		ELSE	
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611,11)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		CALL CARD_RESERV(듀얼리스트,51611,永攻紋章予約)
		;효과발동횟수を기록
		CALL CARD_EFFECT_D1USE(듀얼리스트,51611)
		CALL CARD_RESERV(듀얼리스트,51611,永紋章予約)
	ENDIF
ELSEIF 종류 == 永攻紋章起動
	CALL FULLRESET
	효과条件カテゴリ:0 = 로열 팔라딘
	효과条件カテゴリ:1 = 성기사
	攻撃力修正 = 700 * (FINDELEMENT(자신_발동済D1,51611) + 1)
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",0,攻撃力修正,攻撃力修正)
ELSEIF 종류 == 永紋章起動
	CALL FULLRESET
	효과条件カテゴリ = 블래스터 블레이드
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF



