@CARD_24165(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RESULT:1 = 기계족
		RETURN 야수족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 2000
	CASE "소환不可"
		RETURN 1
	CASE "レア度"
		RETURN SPR
ENDSELECT

RETURN 0

