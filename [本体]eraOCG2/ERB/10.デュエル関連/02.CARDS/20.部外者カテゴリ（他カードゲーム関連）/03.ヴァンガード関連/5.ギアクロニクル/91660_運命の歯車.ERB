@CARD_EXPLANATION_91660(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 ②③의 효과는 1턴에 각각 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 자신의 「십이지각수」 몬스터는 대상 내성을 얻는다.
PRINTL 제외 상태인 「십이지각수」 카드가 6종류 이상일 경우, 추가로 파괴 내성을 얻는다.
CALLFORM CARD_ABLE(1,마함起動 ,フリー誘発)
PRINTL ②: 자신의 손패를 1장 제외하고 발동할 수 있다.
PRINTL 제외 상태인 「십이지각수」 몬스터 1장을 고르고 패에 넣는다.
CALLFORM CARD_ABLE(2,제외時)
PRINTL ③: 이 카드가 제외되었을 경우에 발동할 수 있다.
PRINTL 덱에서 「운명의 톱니바퀴」 이외의 「십이지각수」 카드 1장을 패에 넣는다.

@CARDCAN_91660(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91660)
SIF RESULT == 1
	RETURN 0



IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF 발동済_1(듀얼리스트,91660)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 십이지 각수
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_2(듀얼리스트,91660)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 십이지 각수
	효과条件固名前 = 운명의 톱니바퀴
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_91660(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 제외数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91660,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件カテゴリ = 십이지 각수
			효과条件종류 = モン全般
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)		
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91660)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 십이지 각수
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	제외数 = RESULT
	IF 제외数 >= 6
		CALL FULLRESET
		효과条件カテゴリ = 십이지 각수
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	ELSE
		CALL FULLRESET
		효과条件カテゴリ = 십이지 각수
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91660,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 십이지 각수
		효과条件固名前 = 운명의 톱니바퀴
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
