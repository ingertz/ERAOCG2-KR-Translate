@CARDCAN_44047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,44047)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,50091)
 		RETURN 0
	SIF ゾーン != "EX덱"
		 RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
 	SIF ターンプレイヤー != 듀얼리스트
 		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 루아드
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 초차원
효과条件カテゴリ = 뱅가드
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT == 1
		RETURN 0
	SIF 발동済_2(듀얼리스트,4047) == 0 && 발동済_2(듀얼리스트,14047) == 0 
		RETURN 0
 	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,44047)
 		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件名前 = 심연을 들여다보는 용황 루아드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル = 3
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_44047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 의식X
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
 	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50091,1)
 	IF RESULT == 0
	CALL FULLRESET
효과条件カテゴリ = 루아드
	효과条件行先플래그 = 消滅行き
	효과条件任意 = 1
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			選択カードID = RESULT:1
			CALL CARD_LOADUP
			PRINTFORML
			PRINTFORML
			PRINTFORML 超越《ストライド》、ジェネレーション！
			CALL PRINT_STATE_DUEL(選択カードID)
			CALL FULLRESET
			CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所,"攻撃표시")
			SETVAR @"%듀얼리스트%_MZ_変化元ID:カード소환先", 選択カードID
		ELSE
			RETURN 0
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"不材")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44047,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
효과条件名前 = 심연을 들여다보는 용황 루아드
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件他所 = 1
			효과範囲필드 = 1
			효과条件行先플래그 = 破壊行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件속성 = 어둠속성
				효과条件レベル = 3
				효과条件複数 = 98
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		
				CALL FULLRESET
				효과条件任意 = 1
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지",44047)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 어둠속성
	효과条件レベル = 3
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	의식X = RESULT / 4
	IF 의식X > 0
		攻撃力修正 = 의식X * 1000
		CALL FULLRESET
		효과条件종류 = モン全般
		CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正)
	ENDIF
ENDIF