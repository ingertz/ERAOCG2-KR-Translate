	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 雄性
	CASE "특수不可"
		RETURN 1
	CASE "レア度"
		RETURN ULR

ENDSELECT

RETURN 0


