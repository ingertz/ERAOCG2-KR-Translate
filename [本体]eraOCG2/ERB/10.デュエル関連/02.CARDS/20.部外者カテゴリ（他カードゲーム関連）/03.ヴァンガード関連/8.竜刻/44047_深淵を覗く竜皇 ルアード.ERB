@CARD_44047(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"

		RETURN 초차원
	CASE "속성"
		RETURN 어둠속성
