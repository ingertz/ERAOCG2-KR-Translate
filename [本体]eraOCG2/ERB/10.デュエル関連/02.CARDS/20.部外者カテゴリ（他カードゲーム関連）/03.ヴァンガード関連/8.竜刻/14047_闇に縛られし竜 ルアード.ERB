PRINTL 그 후, 상대 필드의 몬스터 1장을 파괴할 수 있다.

@CARDCAN_14047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동不可,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,14047)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,14047)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件カテゴリ = 룡각
효과条件固名前 = 어둠에 속박된 용 루아드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,14047)
		발동不可:0 = 1
	SIF 발동済_3(듀얼리스트,14047)
		발동不可:1 = 1
	SIF ターン数 <= 1
		발동不可:0 = 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件レベル = 3
	효과条件속성 = 어둠속성
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 4
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル = 3
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:1 = 1
	SIF 발동不可:0 == 1 && 발동不可:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_14047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동不可,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14047,1)
	IF RESULT == 0
		CALL FULLRESET
효과条件カテゴリ = 룡각
효과条件固名前 = 어둠에 속박된 용 루아드
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件行先플래그 = 破壊行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			SS소환可能속성 = 어둠속성
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14047)
	IF RESULT == 0
		SIF 발동済_2(듀얼리스트,14047)
			발동不可:0 = 1
		SIF 발동済_3(듀얼리스트,14047)
			발동不可:1 = 1
		SIF ターン数 <= 1
			발동不可:0 = 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件レベル = 3
		효과条件속성 = 어둠속성
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT < 4
			발동不可:0 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル = 3
		효과条件속성 = 어둠속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동不可:1 = 1

		IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
			PRINTL
			IF 발동不可:0 != 1
PRINTL [0] - ●이 턴, 코스트 없이 "초월"할 수 있다.
			ELSE
				SETCOLOR C_GRAY
PRINTL [X] - 발동 조건을 만족하지 않습니다!
				RESETCOLOR
			ENDIF
			IF 발동不可:1 != 1
PRINTL [1] - ●레벨 3의 몬스터를 특수 소환한다.
			ELSE
				SETCOLOR C_GRAY
PRINTL [X] - 발동 조건을 만족하지 않습니다!
				RESETCOLOR
			ENDIF
			BINPUT
		ELSE
			IF 발동不可:0 != 1
				RESULT = 0
			ELSEIF 발동不可:1 != 1
				RESULT = 1
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14047,2)
			IF RESULT == 0
				CALL FULLRESET
				효과条件レベル = 3
				효과条件속성 = 어둠속성
				효과条件行先플래그 = 덱行き
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			ENDIF

		ELSEIF RESULT == 1
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14047,3)
			IF RESULT == 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件レベル = 3
				효과条件속성 = 어둠속성
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과条件任意 = 1
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지",14047)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF