@CARDCAN_4266(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 발동不可,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4266)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 발동済_1(듀얼리스트,4266)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件カテゴリ = 네오 넥타르
	효과条件종류 = 초차원
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 네오 넥타르
	효과条件종류:0 = 효과モン
	효과条件종류:1 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件カテゴリ = 네오 넥타르
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:1 = 1
	SIF 발동不可:0 == 1 && 발동不可:1 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターン数 < 4
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターン数 < 4
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	IF !MATCH(RESULTS,"네오 넥타르")
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_4266(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"不材")
ELSEIF 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4266,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
효과条件カテゴリ = 네오 넥타르
		효과条件종류 = 초차원
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
효과条件カテゴリ = 네오 넥타르
			효과条件종류:0 = 효과モン
			효과条件종류:1 = 링크
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{選択カード}")},"名前"
효과条件名前 = 네오 넥타르
				효과範囲덱 = 1
				효과範囲EX덱 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
			ENDIF
		
			CALL FULLRESET
			효과条件종족 = 식물족
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 네오 넥타르
				효과条件종류 = モン全般
				CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,選択カード,(1 + 2 + 4),4266)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,1000)
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化",3,1)
ENDIF

