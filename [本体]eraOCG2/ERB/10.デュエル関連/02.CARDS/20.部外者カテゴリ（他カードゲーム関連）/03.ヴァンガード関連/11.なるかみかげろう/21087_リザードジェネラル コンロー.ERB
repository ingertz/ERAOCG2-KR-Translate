CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ①: "리자드 제너럴 콘로" 이외의 "카게로" 카드가 자신의 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,소환時,특수소환時)
PRINTL ②: 이 카드가 소환 / 특수 소환했을 경우에, EX덱의 "오버로드" 몬스터 1장을 상대에게 보여주고 발동할 수 있다.
PRINTL 덱에서 "오버로드" 마법 / 함정 카드 1장을 패에 추가한다.


@CARDCAN_21087(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21087)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,21087)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21087,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 카게로
	효과条件固名前 = 리자드 제너럴 콘로
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般+H")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,21087)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 오버로드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 오버로드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21087(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21087,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21087,2)
	CALL FULLRESET
	효과条件カテゴリ = 오버로드
	CALL CARD_CHOOSE_BASIC(듀얼리스트, "EX덱",ゾーン,場所)	
	IF RESULT != 9999
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 오버로드
		효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

