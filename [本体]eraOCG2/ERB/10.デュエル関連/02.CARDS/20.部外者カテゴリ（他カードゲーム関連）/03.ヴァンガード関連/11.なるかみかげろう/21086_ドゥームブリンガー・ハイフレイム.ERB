@CARDCAN_21086(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21086)
SIF RESULT == 1
	RETURN 0

IF 종류 == 묘지起動
	SIF 발동済_D1(듀얼리스트,21086)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 카게로
	효과条件固名前 = 둠브링거 하이프레임
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,21086)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21086,"덱")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 화염속성
	효과条件固名前 = 둠브링거 하이프레임
	CALL 효과条件レベル_ADV(3, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21086(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 묘지起動
CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21086,20)
	IF RESULT == 0
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	CALL FULLRESET
	효과条件カテゴリ = 카게로
	효과条件固名前 = 둠브링거 하이프레임
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件複数 = 5
	효과条件行先플래그 = 덱行き
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARDDRAW_BASIC(듀얼리스트,2)
		ENDIF
	ENDIF

ELSEIF 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21086,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 화염속성
		효과条件固名前 = 둠브링거 하이프레임
		CALL 효과条件レベル_ADV(3, "以下")
		효과추가종류 = 効追無効
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		SS소환可能속성 = 화염속성
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF


