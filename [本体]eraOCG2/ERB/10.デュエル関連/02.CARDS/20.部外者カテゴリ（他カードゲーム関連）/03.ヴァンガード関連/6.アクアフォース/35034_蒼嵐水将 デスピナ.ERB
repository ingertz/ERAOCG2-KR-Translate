@CARDCAN_35034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 最大レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,35034)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,35034)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF ターン中攻撃횟수 < 4
		RETURN 0
 	SIF バトルフェイズ != 1
 		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 메일스트롬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_3(듀얼리스트,35034)
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊","リリース")
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件カテゴリ = 바다
	효과条件종류 = フィールド
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	SIF メインフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_35034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 最大レベル
#DIM DYNAMIC 제외数
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,35034,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
효과条件カテゴリ = 메일스트롬
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:選択カード"))
		ENDIF
	ENDIF
ELSEIF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,35034)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL CARD_RESERV(듀얼리스트,35034,短紋章予約)
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,35034,3)
	IF RESULT == 0
		CALL FULLRESET
효과条件カテゴリ = 바다
		효과条件종류 = フィールド
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
효과条件カテゴリ = 창람
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐")
ENDIF
