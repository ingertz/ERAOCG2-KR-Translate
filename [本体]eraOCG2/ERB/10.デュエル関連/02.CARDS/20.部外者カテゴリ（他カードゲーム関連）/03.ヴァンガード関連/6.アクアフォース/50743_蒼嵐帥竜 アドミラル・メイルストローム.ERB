@CARDCAN_50743(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50743)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,50743)
 		RETURN 0
	SIF ゾーン != "EX덱"
		 RETURN 0
 	SIF バトルフェイズ != 1
 		RETURN 0
 	SIF ターンプレイヤー != 듀얼리스트
 		RETURN 0
	SIF ターン中攻撃횟수 < 4
		 RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		 RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 메일스트롬
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 초차원
	효과条件カテゴリ = 뱅가드
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT == 1
		RETURN 0
 	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF 발동済_2(듀얼리스트,50743)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_50743(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
 	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50743,1)
 	IF RESULT == 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件行先플래그 = 제외行き
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
		CALL FULLRESET
		효과条件カテゴリ = 메일스트롬
		효과条件行先플래그 = 消滅行き
		효과条件任意 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				選択カードID = RESULT:1
				CALL CARD_LOADUP
				PRINTFORML
				PRINTFORML
				PRINTFORML 超越《ストライド》、ジェネレ-ション！
				CALL PRINT_STATE_DUEL(カードID)
				CALL FULLRESET
				CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所,"攻撃표시")
				SETVAR @"%듀얼리스트%_MZ_変化元ID:カード소환先", 選択カードID
			ELSE
				RETURN 0
			ENDIF
		ELSE
			RETURN 0
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50743,2)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		CALL FULLRESET
		효과条件任意 = 1
		효과条件複数 = 97
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ENDIF



