@CARDCAN_36151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36151)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_1(듀얼리스트,36151)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件カード数

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件표시 = 3
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"攻避",3)

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 裏側표시
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	条件カード数 = RESULT

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT <= 0  && 条件カード数 >= 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"直攻")
		CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ半化",1,1)
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36151,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
효과条件名前 = 데스티니 딜러
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 링크 조커
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"裏側守備표시")
		ENDIF
	ENDIF
ENDIF

