@CARDCAN_24090(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24090)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24090)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件スーパーカテゴリ = 노바 그래플러
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 기계족
	효과条件속성 = 땅속성
	효과条件レベル = 4
	효과条件スーパーカテゴリ = 노바 그래플러
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_2(듀얼리스트,24090)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	IF !MATCH(RESULTS,"노바 그래플러")
		RETURN 0
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_24090(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24090,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件スーパーカテゴリ = 노바 그래플러
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件종족 = 기계족
			효과条件속성 = 땅속성
			효과条件レベル = 4
			효과条件スーパーカテゴリ = 노바 그래플러
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,5)
			
			IF モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件속성 = 땅속성
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"속성효과無効",땅속성)
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24090,2)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 메차바토라
		CALL CARD_ADD_BASIC(듀얼리스트,"제외",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",500)
ENDIF


