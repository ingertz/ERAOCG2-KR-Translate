CALLFORM CARD_ABLE(0,지속효과)
PRINTL ③: 자신 메인 페이즈 1 동안, 자신 필드의 기계족 땅 속성 몬스터는 완전 내성을 얻는다.



@CARDCAN_71640(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71640)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,71640)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_71640(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71640,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 노바 그래플러
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件속성 = 땅속성
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
	IF メインフェイズ == 1 && ターンプレイヤー == 듀얼리스트
		CALL FULLRESET
		효과条件종족 = 기계족
		효과条件속성 = 땅속성
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐")
	ENDIF
ENDIF

