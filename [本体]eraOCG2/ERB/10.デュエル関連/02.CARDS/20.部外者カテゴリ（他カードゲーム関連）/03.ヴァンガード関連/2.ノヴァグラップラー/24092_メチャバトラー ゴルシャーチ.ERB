@CARDNAME_24092,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 메카배틀러 고르샤치
	CASE "略称"
RESULTS = 고르샤치
	CASE "カテゴリ"
RESULTS:0 = 노바 그래플러
RESULTS:4 = 뱅가드
ENDSELECT


@CARD_24092(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1500
ENDSELECT

RETURN 0

@CARD_EXPLANATION_24092(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 이 카드와, 몬스터 1장 또는 "노바 그래플러" 카드 1장을 패에서 버리고 발동할 수 있다.
PRINTL 덱에서 "메카배틀러 고르샤치" 이외의 레벨 4의 기계족 땅 속성 몬스터 1장을 패에 넣는다.
PRINTL 그 후, 자신 묘지에서 땅 속성 몬스터 1장을 고르고 특수 소환할 수 있다.
PRINTL 이 턴, 자신은 땅 속성 이외의 몬스터의 효과를 발동할 수 없다.
CALLFORM CARD_ABLE(2,필드起動)
PRINTL ②: 자신 필드의 다른 레벨 4의 "노바 그래플러" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터의 공격 가능 횟수를 1회 늘린다.
CALLFORM CARD_ABLE(0,攻撃時強制誘発)
PRINTL ③: 자신의 "노바 그래플러" 몬스터가 공격 선언할 때마다,
PRINTL 이 카드의 공격력은 턴 종료시까지 500 포인트 올린다.


@CARDCAN_24092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24092)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24092)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件スーパーカテゴリ = 노바 그래플러
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 기계족
	효과条件속성 = 땅속성
	효과条件レベル = 4
	효과条件固名前 = 메카배틀러 고르샤치
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,24092)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	효과条件종류 = レベル持ち
	효과条件カテゴリ = 노바 그래플러
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	IF !MATCH(RESULTS,"노바 그래플러")
		RETURN 0
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_24092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24092,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件スーパーカテゴリ = 노바 그래플러
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 기계족
			효과条件속성 = 땅속성
			효과条件レベル = 4
			효과条件固名前 = 메카배틀러 고르샤치
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			
			IF モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件속성 = 땅속성
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"속성효과無効",땅속성)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24092,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件レベル = 4
		효과条件종류 = レベル持ち
		효과条件他所 = 1
		효과条件カテゴリ = 노바 그래플러
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",RESULT,"戦",1)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",500)
ENDIF


