@CARD_2675(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 야수족
	;レベル目安、子供はレベル２、学生３、成人４、大人なお姉さんは５くらいをイメ-ジ
	CASE "レベル"
		RETURN 2
	;체력を10で割った数字を攻撃力に、기력を10で割った数字を守備力に
	CASE "攻撃力"
		RETURN 50
	CASE "守備力"
		RETURN 200
	CASE "성별"
		RETURN 牝性
	CASE "듀얼리스트"
		RETURN 1
ENDSELECT
RETURN 0

