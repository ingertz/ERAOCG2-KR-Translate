@CARD_EXPLANATION_64821(종류)
#DIM DYNAMIC 종류
CALLFORM CARD_ABLE(1,마함起動, 손패起動)

PRINTL ①: 자신 필드에 「헌터」 카드가 존재할 경우 발동할 수 있다.
PRINTL 손패 묘지에서 「헌터」 몬스터를 1체 선택하여, 그 카드를 특수 소환한다.
PRINTL 자신 몬스터 존에 존재하는 카드는 모두, 턴 종료 시까지 일시적 파괴 내성을 얻는다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ②: 이 카드가 묘지에 존재하고, 마법 / 함정 이외의 「헌터」 카드가 파괴되었을 경우.
PRINTL 묘지의 이 카드를 제외하고 발동할 수 있다.
PRINTL 이렇게 파괴된 마법 / 함정 이외의 「헌터」 카드를 1장 패에 추가한다.

@CARDCAN_64821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64821)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,64821)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 헌터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,64821)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"묘지")
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 헌터
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF



@CARDEFFECT_64821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 回復量
#DIM DYNAMIC 所得カード_ID,100

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64821,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		PRINTFORMW 匂いに目覚めさせられ……この瞬間だけ、헌터達は「モンスター」となった。
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 헌터		
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一破")
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64821,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과条件カテゴリ = 헌터
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般",0,1)
		FOR カウンタ,1,20
;			PRINTFORML カウンタB:{RESULT:カウンタ}
			所得カード_ID:カウンタ = RESULT:カウンタ
		NEXT

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 999999
		FOR カウンタ,1,10
;			PRINTFORML カウンタC:{RESULT:カウンタ}
			효과条件ID:カウンタ = 所得カード_ID:カウンタ
		NEXT
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
