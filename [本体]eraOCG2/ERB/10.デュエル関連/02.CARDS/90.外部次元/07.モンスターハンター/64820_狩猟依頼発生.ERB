		CALL FULLRESET
		효과条件カテゴリ = 헌터
		효과条件固名前 = 헌터 퀘스트
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64820,2)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 헌터 퀘스트
		효과추가종류 = 500
		CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"裏側표시")
	ENDIF
ENDIF
