@CARDCAN_5511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,5511)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,5511)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,5511,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 守備全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般",2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_5511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5511,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 守備全般
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")

		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5511,11)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲덱 = 1
효과条件カテゴリ = 홍마관
효과条件固名前 = 홍마관의 메이드 사쿠야
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1

			CALL YN_CHOICE(듀얼리스트,"●덱에서 このカード名 이외의 「紅魔館」카드를 １장을 손패に加える。","●덱外から「幻世　ザ・ワールド」１장을 손패に加える。")
			IF RESULT == はい
				CALL FULLRESET
				효과範囲덱 = 1
효과条件カテゴリ = 홍마관
효과条件固名前 = 홍마관의 메이드 사쿠야
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ELSE
				CALL CARD_GENERATE_HAND(듀얼리스트,205511)
			ENDIF
		ELSE
			CALL CARD_GENERATE_HAND(듀얼리스트,205511)
		ENDIF
	ENDIF
ENDIF


