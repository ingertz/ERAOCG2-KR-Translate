@CARDCAN_4620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4620)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4620,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件レベル = 4
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,5)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4620,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
		選択カード_ID = RESULT:2
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件ID = 選択カード_ID
		효과추가종류 = 効追無効
		CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所,"守備표시")
		IF バトルフェイズ == 1
PRINTL 이 카드를 패로 되돌리시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
				CALL FULLRESET
				효과範囲손패 = 1
				효과条件攻撃力 = 1800
				CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所,"攻撃표시")	
			ENDIF
		ENDIF
	ENDIF
ENDIF

