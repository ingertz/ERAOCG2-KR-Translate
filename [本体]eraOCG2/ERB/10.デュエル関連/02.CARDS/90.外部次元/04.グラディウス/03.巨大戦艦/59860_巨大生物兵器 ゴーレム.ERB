@CARDCAN_59860(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59860)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時強制 || 종류 == 특수소환時強制 || 종류 == EX소환時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_戦闘カード") != 場所
		RETURN 0
	SIF GETVAR(@"%対面者%_戦闘カード") == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件속성 = 빛속성
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("속성")
	SIF RESULT != 빛속성
		RETURN 0
	RETURN 1

ELSEIF 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59860(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 조교대상名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時強制 || 종류 == 특수소환時強制 || 종류 == EX소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",3)

ELSEIF 종류 == 攻撃後強制誘発
	IF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 1
		CALL FLASH(1)
		INPUTMOUSEKEY 30
		CALL FLASH(2)
		SETCOLOR C_YELLOW
		PRINTW 《巨大生物兵器　ゴ-レム》　轟沈！
		RESETCOLOR
		CALL CARD_RECONSTRUCT(듀얼리스트,"필드",場所,152360)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,完全묘지行き)
	ELSE
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",-1)
		PRINTFORMW ゴ-レムのシ-ルドが１つ剥がれた！（残り{GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所")}枚）
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59860,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
		選択カード_ID = 効後_효과ID:(処理中番号 - 1)
		CALL CARD_EROTICS(選択カード_ID)
		조교대상 = RESULT
		IF 조교대상 != -1
			PRINTFORMW %CALLNAME:조교대상%는ゴ-レムの出した光線に撃ち抜かれ、一瞬だけその動きを止めた。
			CALL EROTIC_MOVE("절정光線",조교대상)
		ENDIF
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59860)
	IF RESULT == 0
		조교대상 = 直前戦闘破壊ID(듀얼리스트,1)
		CALLFORM CARDNAME_{조교대상}("名前")
		조교대상名前 = %RESULTS%
		CALL FULLRESET
		효과範囲상대묘지 = 1
		효과条件名前 = %조교대상名前%
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,59860)
		PRINTFORMW ゴ-レムは倒れている%조교대상名前%を자신의 中に取り込んだ！
	ENDIF

ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
			CONTINUE
			
		CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORMW ゴ-レムに取り込まれた %CALLNAME:조교대상%는くぐもった喘ぎ声を漏らしている。
			CALL EROTIC_MOVE("生体パ-ツ",조교대상)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1)
		ENDIF
	NEXT

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59860)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF カウンタ == 場所
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,10)
		NEXT
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		SETCOLOR C_YELLOW
		PRINTW ゴ-レムは味方を喰らい、自らの糧とした！
		RESETCOLOR
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
ENDIF


