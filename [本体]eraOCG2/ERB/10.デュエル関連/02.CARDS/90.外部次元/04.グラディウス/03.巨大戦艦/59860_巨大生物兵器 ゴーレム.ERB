RESULTS:1 = 거대 전함
RESULTS:2 = E.R.A
ENDSELECT


@CARD_59860(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 초차원
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 1800
	CASE "특수불가"
		RETURN 1
ENDSELECT
RETURN 0

