@CARDCAN_24800(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,2


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24800)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,24800,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF 발동済_1(듀얼리스트,24800)
		효과使用불가:0 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공전투기 빅 바이퍼
	효과条件名前:1 = 초시공전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1

	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공전투기 빅 바이퍼
	효과条件名前:1 = 초시공전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ENDIF


@CARDEFFECT_24800(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,2
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24800)
		효과使用불가:0 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공전투기 빅 바이퍼
	효과条件名前:1 = 초시공전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1

	IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
		IF 듀얼리스트 == "자신"
PRINTL 이 카드를 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ELSEIF 효과使用불가:0 == 1
		RESULT = はい
	ENDIF

	;특수소환、ターン１なし
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24800)
		IF RESULT == 0
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF

	;サーチ、ターン１あり
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24800,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 시공전투기
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT == 1
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == バトル開始時強制
	SETCOLOR C_YELLOW
	PRINTL
PRINTL 옵션 어웨이큰!
	RESETCOLOR
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공전투기 빅 바이퍼
	효과条件名前:1 = 초시공전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	IF RESULT != 9999
		選択カード = RESULT
		CALL FULLRESET
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:選択カード") + 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"攻固",攻撃力修正)
	ENDIF

ELSEIF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ENDIF


