#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 시공전투기
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	CALL FULLRESET
	효과条件固名前 = 배리어
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")

ELSEIF 종류 == 攻撃後強制誘発
	;参考：마법の筒
	減少量 = GETVAR(@"%対面者%_MZ_攻:(%対面者%_戦闘カード)")
	;参考：ゾンバイア
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",-減少量)
ENDIF

