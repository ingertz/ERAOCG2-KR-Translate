PRINTL ●자신 몬스터 존의 「시공전투기」 카드의 수까지,
PRINTL 　상대 필드의 카드를 선택하여 파괴한다.


@CARDCAN_72480(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72480)
SIF RESULT == 1
	RETURN 0

;汎用処理
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공전투기 빅 바이퍼
	효과条件名前:1 = 초시공전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_72480(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72480)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前:0 = 초시공전투기 빅 바이퍼
		효과条件名前:1 = 초시공전투기 빅토리 바이퍼
		효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT

		IF 듀얼리스트 == "자신"
			PRINTL 
			SETCOLOR C_YELLOW
PRINTL POWERCAPCELL AWAKEN
			PRINTW SELECT CUSTOM
			RESETCOLOR
			PRINTL
PRINTL [0] - POWER UP
			IF モンスター数(듀얼리스트) >= 5
PRINTL No. EMPTY
PRINTL No. EMPTY
			ELSE
PRINTL [1] - OPTION
PRINTL [2] - ？
			ENDIF
			IF モンスター数(対面者) <= 0 && 마함数(対面者) <= 0
PRINTL NO TARGET
			ELSE
PRINTL [3] - MISSILE
			ENDIF
			BINPUT
		ELSE
			IF モンスター数(듀얼리스트) < 5
				SELECTCASE RAND:5
					CASE 1
						RESULT = 2
					CASEELSE
						RESULT = 1
				ENDSELECT
			ELSEIF モンスター数(対面者) > 0 || 마함数(対面者) > 0
				RESULT = 3
			ELSE
				RESULT = 0
			ENDIF
		ENDIF

		IF RESULT == 0
			SETCOLOR C_YELLOW
			PRINTW POWER UP！
			RESETCOLOR
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",1200)
		ELSEIF RESULT == 1
			SETCOLOR C_YELLOW
			PRINTW GET OPTION！
			RESETCOLOR
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,24800)
		ELSEIF RESULT == 2
			SETCOLOR C_YELLOW
			PRINTW GET BARRIER！
			RESETCOLOR
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,172480,"守備표시")
		ELSEIF RESULT == 3

			IF 듀얼리스트 == "자신"
				SETCOLOR C_YELLOW
PRINTL TARGET LOCK……
				RESETCOLOR
			ENDIF
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 시공전투기
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			破壊횟수 = RESULT
			IF 듀얼리스트 == "자신"
				PRINTL
				PRINT 　＞＞＞
				PRINTBUTTON @"【FIRE！】",1
PRINTL ＜＜＜
				BINPUT
			ENDIF
			CALL FULLRESET
			효과条件任意 = 1
			효과条件複数 = 100 - 破壊횟수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF



