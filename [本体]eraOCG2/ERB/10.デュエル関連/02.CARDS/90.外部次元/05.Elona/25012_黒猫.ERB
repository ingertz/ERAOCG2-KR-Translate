@CARDCAN_25012(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25012)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	SIF 발동済_1(듀얼리스트,25012)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25012,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,25012)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
효과条件名前 = 행운의 에헤카틀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_25012(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 裏表選択
#DIM DYNAMIC 듀얼리스트ダイス結果
#DIM DYNAMIC 対面者ダイス結果
#DIMS DYNAMIC 勝者
#DIMS DYNAMIC 敗者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25012,1)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			CALL YN_CHOICE(듀얼리스트,"●表","●裏")
			裏表選択 = RESULT
		ELSE
			裏表選択 = RAND:2
			IF RESULT == 0
				PRINTW 상대は表を選択しました
			ELSEIF RESULT == 1
				PRINTW 상대は裏を選択しました
			ENDIF
		ENDIF

		CALL COIN_TOSS(1)

		;成功
		IF (裏表選択 == 0 && RESULT == 1) || (裏表選択 == 1 && RESULT:1 == 1)
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		;失敗
		ELSE
			PRINTW 검은 고양이はあくびをしている。
		ENDIF
	ENDIF

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25012,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
효과条件名前 = 행운의 에헤카틀
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == ターン開始時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25012)
	IF RESULT == 0
		$RE_ROLL
		CALL DICE_ROLL(듀얼리스트,1)
		듀얼리스트ダイス結果 = RESULT
		CALL DICE_ROLL(対面者,1)
		対面者ダイス結果 = RESULT

		IF 듀얼리스트ダイス結果 > 対面者ダイス結果
			PRINTFORMW %듀얼리스트%の勝ち！
			勝者 = %듀얼리스트%
			敗者 = %対面者%
		ELSEIF 듀얼리스트ダイス結果 < 対面者ダイス結果
			PRINTFORMW %対面者%の勝ち！
			勝者 = %対面者%
			敗者 = %듀얼리스트%
		ELSE
			PRINTW 引き分け！　もう１回！
			GOTO RE_ROLL
		ENDIF

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件複数 = 95
		CALL CARD_SP_SUMMON_ADV(勝者,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과추가종류:0 = 効追無効
		효과추가종류:1 = 効追永材
		효과条件複数 = 95
		CALL CARD_SP_SUMMON_ADV(敗者,ゾーン,場所)

		IF 敗者 == 듀얼리스트 && 듀얼리스트ダイス結果 <= 3
			PRINTFORMW %듀얼리스트%는검은 고양이の腹の亀裂から蛆虫が湧き出るのを見た。
			SELECTCASE 듀얼리스트ダイス結果
				CASE 1
					CALL SET_PLAYER_INFO(듀얼리스트,"モン효과無効",1,1)
				CASE 2
					CALL SET_PLAYER_INFO(듀얼리스트,"魔無効",1,1)
				CASE 3
					CALL SET_PLAYER_INFO(듀얼리스트,"함정無効",1,1)
			ENDSELECT

		ELSEIF 敗者 == 対面者 && 対面者ダイス結果 <= 3
			PRINTFORMW %対面者%는검은 고양이の腹の亀裂から蛆虫が湧き出るのを見た。
			SELECTCASE 対面者ダイス結果
				CASE 1
					CALL SET_PLAYER_INFO(対面者,"モン효과無効",1,1)
				CASE 2
					CALL SET_PLAYER_INFO(対面者,"魔無効",1,1)
				CASE 3
					CALL SET_PLAYER_INFO(対面者,"함정無効",1,1)
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
