@CARDSUMMON_54551(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 5

;1体目の条件
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件속성 = 빛속성
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,54551) 
	RETURN RESULT
ENDIF

@CARDCAN_54551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54551)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,54551)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = レベル持ち
	CALLFORM 효과条件レベル_ADV(5,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 싱크로
	효과条件속성 = 빛속성
	효과条件レベル = 10
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_54551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードレベル
#DIM DYNAMIC 宣言レベル

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54551,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = レベル持ち
		CALLFORM 효과条件レベル_ADV(5,"以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		EX소환可能종류 = 싱크로
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54551,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = レベル持ち
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"選択")
		IF RESULT == 1
			CALL CARD_SELECT(듀얼리스트,RESULT:1)
			選択カード = RESULT
			選択カードレベル = GETVAR(@"%대상者（CS）%_MZ_星:選択カード")

			IF 듀얼리스트 == "자신"
PRINTL [레벨을 선언해 주세요]
				PRINTL
				SIF 選択カードレベル != 1
					PRINT [1]　
				SIF 選択カードレベル != 2
					PRINT [2]　
				SIF 選択カードレベル != 3
					PRINT [3]　
				SIF 選択カードレベル != 4
					PRINT [4]　
				SIF 選択カードレベル != 5
PRINTL [5]
				BINPUT
				宣言レベル = RESULT
			ELSE
				IF 選択カードレベル != 5
					宣言レベル = 5
				ELSE
					WHILE 宣言レベル == 選択カードレベル || 宣言レベル == 0
						宣言レベル = RAND:4 + 1
					WEND
				ENDIF
			ENDIF

			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード,"永星",宣言レベル,1)
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 싱크로
	효과条件レベル = 10
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
ENDIF
