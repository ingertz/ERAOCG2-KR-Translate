@CARDCAN_4803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC ドロー枚数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4803)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 필드→戦離 || 종류 == 제외時
	RETURN 1
ENDIF


@CARDEFFECT_4803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ドロー枚数
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4803)
	IF RESULT == 0
		SETCOLOR C_GOLD
		PRINTW 「フハハハハハハハハ！」
		RESETCOLOR
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両마함全体",場所,"묘지")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"連戦")
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"イルヴァ")
	CALL SET_FIELD_MAGIC_INFO(対面者,"イルヴァ")
ELSEIF 종류 == 戦闘→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 필드→戦離 || 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4803)
	IF RESULT == 0
		SETCOLOR C_GOLD
		PRINTW 「逝け！逝け！　フハハハッ！」
		RESETCOLOR
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"묘지")
		IF  손패数(듀얼리스트) < 5
			ドロー枚数 = 5 - 손패数(듀얼리스트)
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)
		ENDIF
		IF 손패数(対面者) < 5
			ドロー枚数 = 5 - 손패数(対面者)
			CALL CARDDRAW_BASIC(対面者,ドロー枚数)
		ENDIF
	ENDIF
ENDIF

