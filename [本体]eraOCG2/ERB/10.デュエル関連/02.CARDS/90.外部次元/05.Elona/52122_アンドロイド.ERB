@CARDCAN_52122(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52122)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	IF 듀얼리스트 != ""
		SIF GETVAR(@"ライフ_%듀얼리스트%") >= (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") * 2000)
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,52122)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 엑시즈
	효과条件속성 = 어둠속성
	효과条件レベル = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"戦闘", "直接戦闘")
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_52122(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 素材数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52122)
	IF RESULT == 0
		$INPUT_LOOP
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件任意 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			条件달성 ++
			IF 듀얼리스트 == "자신"
PRINTL 패를 버리시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				SIF GETVAR(@"ライフ_%듀얼리스트%") <= (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") * 2000)
					RESULT = 0
			ENDIF
			SIF RESULT == 0
				GOTO INPUT_LOOP
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",条件달성)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52122,2)
	IF RESULT == 0
		素材数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-素材数)

		CALL FULLRESET
		효과条件종류 = 엑시즈
		효과条件속성 = 어둠속성
		효과条件レベル = 10
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL RESETCONDITION_MAT
			必要素材数 = 1
			重ねてＸ = 1
			素材条件固定 = 場所
			TRYCALLFORM XYZSUMMON(듀얼리스트,選択カード)

			IF (5 - 素材数) > 0
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(5 - 素材数) * 2000)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == ライフ変強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52122)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 엑시즈
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT

			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			효과条件종족 = 기계족
			효과条件표시 = 表側표시
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",RESULT)
		ENDIF
	ENDIF
ENDIF
