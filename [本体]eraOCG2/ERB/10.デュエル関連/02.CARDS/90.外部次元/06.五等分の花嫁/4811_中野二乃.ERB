@CARDCAN_4811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4811)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF 발동済_1(듀얼리스트,4811)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4811,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지  || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 손패→묘지
	SIF 발동済_2(듀얼리스트,4811)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 나카노 미쿠
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_4811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4811,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		SIF ターンプレイヤー != 듀얼리스트
			CALL COVER_ATTACK(듀얼리스트,カード소환先)
	ENDIF
ELSEIF 종류 == 필드→묘지  || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4811,2)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 나카노 니노
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = 나카노 미쿠
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF