PRINTL 상대 필드의 공격표시 몬스터 전부를 뒷면 수비표시로 하여 배틀 페이즈를 종료한다.


@CARDCAN_4760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4760)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,4760)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4753,"묘지")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件固名前 = 봄버 걸 아쿠아
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과破壊",2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_2(듀얼리스트,4760)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF 발동済_3(듀얼리스트,4760)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲마함 = 1
	효과範囲손패 = 1
	효과条件カテゴリ = 보머
	효과条件종류 = 마법全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 4
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量



IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4760,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所,"守備표시")
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,104759,"守備표시",1)
	ENDIF
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4760,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,104760,"守備표시")
	ENDIF
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4760,3)
	IF RESULT == 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無",1)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 보머
		효과条件カテゴリ:1 = 블로커
		효과条件複数 = 4
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			バトル強制終了 = 1
			CALL FULLRESET
			효과条件표시 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
		ENDIF
	ENDIF
ENDIF


