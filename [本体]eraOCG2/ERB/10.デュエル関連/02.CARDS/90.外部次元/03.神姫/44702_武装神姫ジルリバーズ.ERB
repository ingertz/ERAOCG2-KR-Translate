@CARDSUMMON_44702(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

RETURN 0


@CARDCAN_44702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,44702)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,44702)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 신희 리버스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "EX덱"
		RETURN 0
	SIF 발동済_2(듀얼리스트,44702)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")},"종류"
	SIF RESULT == 초차원
		RETURN 0
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")},"名前"
	SIF RESULTS != "신희ジルリバ-ズ"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時 || 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_44702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カード추가先
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 選択カードID


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44702,1)
	IF RESULT == 0
		選択カードID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所")

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 選択カードID
		효과条件行先플래그 = 消滅行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)

		カード추가先 = 現EX山札数("자신")
		CALL CARD_RECONSTRUCT(듀얼리스트,"EX덱",カード추가先,44702)
		PRINTFORMW ジルリバ-ズは武装をパ-ジした！

		CALL CARD_RECONSTRUCT(듀얼리스트,"필드",場所,選択カードID)
		CALL FULLRESET
		효과条件カテゴリ = 신희
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",1000)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44702,2)
	IF RESULT == 0
		CALL INVASION(듀얼리스트,ゾーン,場所,1)
	ENDIF
ELSEIF 종류 == 특수소환時 || 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化", 3 ,1)
ENDIF