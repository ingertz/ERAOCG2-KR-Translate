@CARDCAN_64702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件チェック,5

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64702)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	IF 종류 == 손패起動
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 신희
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件チェック:0 = 1
		
		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = 신희 질리버스
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1 || 발동済_1(듀얼리스트,64702)
			条件チェック:1 = 1

		IF 条件チェック:0 == 1 && 条件チェック:1 == 1
			RETURN 0
		ENDIF
	ELSEIF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 신희
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF

	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_64702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備마법数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 破壊カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 条件チェック,5

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 종류 == 손패起動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件チェック:0 = 1
	
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 신희 질리버스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 || 발동済_1(듀얼리스트,64702)
		条件チェック:1 = 1

	IF 条件チェック:0 != 1 && 条件チェック:1 != 1
PRINTL 어떤 효과를 발동하시겠습니까?
		CALL YN_CHOICE(듀얼리스트,"この카드를 装備する","덱에서 「ジルリバ-ズ」を손패に加える")
	ELSEIF 条件チェック:0 != 1 && 条件チェック:1 == 1
		RESULT = 0
	ELSE
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64702)
		IF RESULT == 0
			;패에서 발동後、마법トラップ 존에 カード이동
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 신희
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64702,1)
		IF RESULT == 0
			CALL FULLRESET
효과条件名前 = 신희 질리버스
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64702)
	IF RESULT == 0
		;패에서 발동後、마법トラップ 존에 カード이동
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 신희
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종류 = 装備마법
	효과条件CNT = 1		
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	装備마법数 = RESULT

	攻撃力修正 = 1000 + RESULT*500

	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,攻撃力修正)
ENDIF

