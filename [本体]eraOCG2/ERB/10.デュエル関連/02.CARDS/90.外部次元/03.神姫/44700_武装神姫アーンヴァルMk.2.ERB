@CARDSUMMON_44700(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

RETURN 0


@CARDCAN_44700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,44700)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,44700)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 신희 아른발 Mk.2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "EX덱"
		RETURN 0
	SIF 발동済_2(듀얼리스트,44700)
		RETURN 0

	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")},"종류"
	SIF RESULT == 초차원
		RETURN 0
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")},"名前"
	SIF RESULTS != "신희ア-ンヴァルMk.2"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時強制
	SIF 발동済_3(듀얼리스트,44700)
		RETURN 0
	
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_44700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カード추가先
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 無効化횟수
#DIM DYNAMIC 選択カードID


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44700,1)
	IF RESULT == 0
		選択カードID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所")

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 選択カードID
		효과条件行先플래그 = 消滅行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)

		カード추가先 = 現EX山札数("자신")
		CALL CARD_RECONSTRUCT(듀얼리스트,"EX덱",カード추가先,44700)

		PRINTFORMW ア-ンヴァルは武装をパ-ジした！
		CALL CARD_RECONSTRUCT(듀얼리스트,"필드",場所,選択カードID)
		
		CALL CARDDRAW_BASIC(듀얼리스트,1)

	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44700,2)
	IF RESULT == 0
		CALL INVASION(듀얼리스트,ゾーン,場所,1)
	ENDIF
ELSEIF 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44700,3)
	IF RESULT == 0
		無効化횟수 = 손패数(듀얼리스트)
		SIF 無効化횟수 >= 10
			無効化횟수 = 10 
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件複数 = 100 - 無効化횟수
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"지속無効")
	ENDIF
ENDIF