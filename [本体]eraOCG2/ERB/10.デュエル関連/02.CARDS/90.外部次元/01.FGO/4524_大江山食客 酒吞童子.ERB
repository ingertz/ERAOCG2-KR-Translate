@CARDCAN_4524(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과先
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,4524)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4524,"묘지")
	SIF RESULT == 1
		RETURN 0
	효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
	SIF 효과先 == 5
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_攻:효과先") >= 2000
		RETURN 1
	SIF GETVAR(@"%対面者%_MZ_星:효과先") >= 7
		RETURN 1
	RETURN 0
ELSEIF 종류 == ターン開始時予約
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4524)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF



RETURN 0
@CARDEFFECT_4524(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4524,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4524,2)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 24
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"無効",99999)
		IF 듀얼리스트 == "자신"
			SIF OPPOSER != -1
				CALL DRUNKEN(TARGET,424)
		ELSE
			CALL DRUNKEN(MASTER,424)
		ENDIF
		
		CALL CARD_RESERV(듀얼리스트,4524,短紋章予約)
		SIF ターンプレイヤー == 듀얼리스트
			CALL CARD_RESERV(듀얼리스트,4524,スタン予約)
	ENDIF
ELSEIF 종류 == ターン開始時予約
	CALL CARD_RESERV(듀얼리스트,4524,短紋章予約)
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂")
		CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発情")
	SIF メインフェイズ == 1 && メインフェイズ２ != 1
		CALL SET_PLAYER_INFO(듀얼리스트,"마함無効",3,1)
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
효과条件名前 = 대강산 식객 주탄동자
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,800)
	CALL FULLRESET
효과条件名前 = 대강산 식객 주탄동자
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,800)
ENDIF
