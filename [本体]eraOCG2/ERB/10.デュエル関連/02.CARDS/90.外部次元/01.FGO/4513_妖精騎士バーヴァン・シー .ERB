@CARDCAN_4513(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4513)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4513)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1113,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종족:0 = 마법사족
	효과条件종족:1 = 천사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4513(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード




IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4513,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件行先플래그 = 破壊行き
		효과条件종족 = 천사족
		효과条件他所 = 1
		효과条件固名前 = 요정기사 바반 시
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,カード소환先)	
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4513,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"選択")
			IF RESULT == 1
				選択カード = RESULT:1
				CALL CARD_SELECT(듀얼리스트,選択カード)
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"戦耐",2,上書きモード) 
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"永攻",-9999) 
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"表",1,上書きモード) 
			ENDIF
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"除処",2) 
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",1) 
		ENDIF

	ENDIF
ENDIF


