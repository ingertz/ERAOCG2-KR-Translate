@CARDCAN_4535(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4535)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,4535)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4535(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 変化元_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4535,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 융합
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			CALL FULLRESET
			효과条件名前:0 = ダミ-
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,0)
			효과条件名前:1 = %素材条件名前:0%
			효과条件名前:2 = %素材条件名前:1%
			효과条件名前:3 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,10)
			효과条件名前:4 = %素材条件名前:0%
			효과条件名前:5 = %素材条件名前:1%
			효과条件名前:6 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,11)
			효과条件名前:7 = %素材条件名前:0%
			효과条件名前:8 = %素材条件名前:1%
			효과条件名前:9 = %素材条件名前:2%
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT == 1
				変化元_ID = RESULT:1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",変化元_ID,1)
				TRYCALLFORM CARD_{変化元_ID}, "攻撃力"
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",RESULT/2)
				TRYCALLFORM CARD_{変化元_ID}, "守備力"
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一守",RESULT/2)

			ENDIF
		ENDIF
	ENDIF
ENDIF

