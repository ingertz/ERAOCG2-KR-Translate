@CARDCAN_4530(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4530)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4530)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4530,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル開始時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_3(듀얼리스트,4530)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 5
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4530,"묘지")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_性:戦闘場所(듀얼리스트,1)") == 牝性
		RETURN 1
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)},"성별"
	SIF !GROUPMATCH(RESULT,牝性,ふたなり)
		RETURN 0
	RETURN 1
ENDIF

