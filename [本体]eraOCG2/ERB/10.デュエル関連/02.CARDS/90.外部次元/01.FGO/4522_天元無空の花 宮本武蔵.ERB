@CARDCAN_4522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4522)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_4522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 대상モンスター_ID,5
#DIM DYNAMIC 화염起動
#DIM DYNAMIC 물起動
#DIM DYNAMIC 바람起動
#DIM DYNAMIC 땅起動

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL FULLRESET
효과範囲묘지 = 1
효과条件속성 = 화염속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	화염起動 = 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件속성 = 물속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	물起動 = 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件속성 = 바람속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	바람起動 = 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件속성 = 땅속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	땅起動 = 1



IF 종류 == 攻守変動
	IF 화염起動 == 1
			CALL FULLRESET
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,1000)
	ENDIF

	IF 화염起動 == 1 && 물起動 == 1 && 바람起動 == 1 && 땅起動 == 1 
		CALL FULLRESET
		CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,1000)
	ENDIF

ELSEIF 종류 == 지속효과
	IF 바람起動 == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	ENDIF

	IF 땅起動 == 1
		CALL FULLRESET
		 CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦阻")
	ENDIF

	IF 물起動 == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",1)
	ENDIF

	IF 화염起動 == 1 && 물起動 == 1 && 바람起動 == 1 && 땅起動 == 1 
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦阻")
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"追戦",1)
	ENDIF
ENDIF
