@CARD_4522(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 싱크로
	CASE "속성"
		RESULT:1 = 땅속성
		RESULT:2 = 물속성
		RESULT:3 = 바람속성
		RETURN 화염속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2600
	CASE "守備力"
		RETURN 2300
	CASE "성별"
		RETURN 牝性
ENDSELECT
RETURN 0

