@CARDCAN_4529(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4529)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF モンスター数(듀얼리스트) > 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件召種 = 召種全특수
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4529(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	RETURN 1
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 0
		CALL FULLRESET
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,1400)
	ENDIF
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_召種:{カウンタ}") == 召種通常
			CONTINUE
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",カウンタ,GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")/2)
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_召種:{カウンタ}") == 召種通常
			CONTINUE
		CALL STATCHANGE_BASIC(対面者,"自身",カウンタ,GETVAR(@"%対面者%_MZ_攻:カウンタ")/2)
	NEXT
ELSEIF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"SS阻害状態",3,2)
ELSEIF 종류 == 常在無効
	IF GETVAR(@"%듀얼리스트%_MZ_召種:場所") == 召種通常
		CALL FULLRESET
		효과条件召種 = 召種全특수
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"無効",0,4529)
		CALL FULLRESET
		효과条件召種 = 召種全특수
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効",0,4529)
	ELSE
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"無効",0,4529)
	ENDIF
ENDIF
