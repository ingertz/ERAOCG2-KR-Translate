@CARDCAN_4526(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4526)
SIF RESULT == 1
	RETURN 0

IF 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4526)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4526(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 見せた枚数

IF 종류 == 常在無効
	IF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 2
		CALL FULLRESET
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所") - 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"発無")

		CALL FULLRESET
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所") - 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発無",0,4526)
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4526,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件複数 = 97
		효과条件종류 = 마법全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF 選択カード != 9999
			見せた枚数 = RESULT:100
			IF 見せた枚数 >= 1
				CALL FULLRESET
				CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",400)
			ENDIF
			IF 見せた枚数 >= 2
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",99999)
			ENDIF
			IF 見せた枚数 >= 3
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF

