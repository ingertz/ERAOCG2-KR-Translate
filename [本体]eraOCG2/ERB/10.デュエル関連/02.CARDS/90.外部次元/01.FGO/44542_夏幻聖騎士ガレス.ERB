@CARDSUMMON_44542(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 5
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件성별 = 牝性
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件종족 = 전사족
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,44542) 
	RETURN RESULT
ENDIF

@CARDCAN_44542(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,44542)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 성검
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;追記
ELSEIF 종류 == S素材時효과
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 성기사
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_44542(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード

IF 종류 == 지속효과
	IF GETVARS(@"%듀얼리스트%_フィールド名") == "바다"
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	ELSE
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"一破")
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44542,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_BASIC(듀얼리스트,"마함",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件종류 = 装備마법
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件固定 = 場所
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"손패")
			ENDIF
		ENDIF
	ENDIF
;追記
ELSEIF 종류 == S素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44542,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 성기사
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ENDIF
