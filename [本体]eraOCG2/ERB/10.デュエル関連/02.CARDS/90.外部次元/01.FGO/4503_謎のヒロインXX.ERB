@CARDCAN_4503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件속성 = 빛속성
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_4503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備마법数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 판정
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4503,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件종족 = 전사족
		효과条件속성 = 빛속성
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4503)
	IF RESULT == 0
		選択カード = 戦闘場所(듀얼리스트,1)
		PRINTFORMW 「これは……！」
		PRINTFORMW SAVER CLASS CHECKER Ver.0.4！
		PRINTFORMW CHECK START!
		IF GETVAR(@"%듀얼리스트%_MZ_種:選択カード") == 전사족
			판정 = 1
			PRINTFORMW ATTRIBUTE ..... Check！！
			GOTO SKIPHANTEI
		ELSE
			PRINTFORMW ATTRIBUTE ..... NG！
		ENDIF
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:選択カード")}, "名前"
		IF STRFIND(RESULTS, "剣")  != -1
			판정 = 1
			PRINTFORMW SWORD ..... Check！！
			GOTO SKIPHANTEI
		ELSE
			PRINTFORMW SWORD ..... NG！
		ENDIF

		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:選択カード")}, "名前"
		IF STRFIND(RESULTS, "기사")  != -1
			판정 = 1
			PRINTFORMW KNIGHT ..... Check！！
			GOTO SKIPHANTEI
		ELSE
			PRINTFORMW KNIGHT ..... NG！
		ENDIF

		$SKIPHANTEI
		IF 판정 == 1
			PRINTFORMW CHECK DONE! SAVOR!
			PRINTFORMW 「セイバ-死すべし！　とぉ-ぅ！！」
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"제외")
		ELSE
			PRINTFORMW CHECK NG NOT SAVOR....
			PRINTFORMW 「ええっ！？もう攻撃しましたよ！？」
		ENDIF
	ENDIF
ENDIF