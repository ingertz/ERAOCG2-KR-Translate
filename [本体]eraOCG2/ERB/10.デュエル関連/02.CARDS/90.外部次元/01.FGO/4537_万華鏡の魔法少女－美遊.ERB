PRINTL 이 카드를 패/묘지에서 특수 소환한다.
PRINTL 자신 필드에 「카레이도 라이너」 몬스터가 존재하지 않을 경우,
PRINTL 이 효과로 특수 소환한 이 카드는 효과가 무효가 되고, 필드를 벗어났을 경우에 제외된다.


@CARDCAN_4537(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4537)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,4537)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,4537)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4537,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 마법사족
	효과条件속성 = 빛속성
	효과条件レベル = 4
	효과条件성별 = 牝性
	효과条件固名前 = 카레이도 라이너－미유
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4537(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 変化元_ID
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4537,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 융합
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			CALL FULLRESET
			효과条件名前:0 = ダミ-
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,0)
			효과条件名前:1 = %素材条件名前:0%
			효과条件名前:2 = %素材条件名前:1%
			효과条件名前:3 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,10)
			효과条件名前:4 = %素材条件名前:0%
			효과条件名前:5 = %素材条件名前:1%
			효과条件名前:6 = %素材条件名前:2%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,11)
			효과条件名前:7 = %素材条件名前:0%
			효과条件名前:8 = %素材条件名前:1%
			효과条件名前:9 = %素材条件名前:2%
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT == 1
				変化元_ID = RESULT:1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",変化元_ID,1)

			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4537,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 카레이도 라이너
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과추가종류:0 = 1
			효과추가종류:1 = 2
		ENDIF
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
	ENDIF
ENDIF

