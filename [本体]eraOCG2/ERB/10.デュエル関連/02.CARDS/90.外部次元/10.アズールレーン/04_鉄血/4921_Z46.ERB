@CARDCAN_4921(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4921)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4921)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件固名前 = 구축함 Ｚ４６
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 철혈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,4921)
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 묘지数(듀얼리스트) < 2
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4921,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4921(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カード名
#DIM DYNAMIC 選択효과

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4921,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件固名前 = 구축함 Ｚ４６
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カードID = RESULT:1
		IF RESULT == 1
			CALL FULLRESET
			효과条件固名前 = 구축함 Ｚ４６
			효과条件固ID = 選択カードID
			효과条件カテゴリ = 철혈
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4921,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件他所 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과추가종류:1 = 効追除処
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				IF 듀얼리스트 == "자신"
					CALL YN_CHOICE(듀얼리스트,"●이 카드의 レベルを７にする。","●이 카드의 レベルを１０にする。")
					選択효과 = RESULT
				ELSEIF 듀얼리스트 == "상대"
					選択효과 = いいえ
				ENDIF
				IF 選択효과 == はい
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永星",3)
				ELSE
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永星",6)
				ENDIF
			ENDIF
		ENDIF
		CALL CARD_SS_RESTRICTION(듀얼리스트,"철혈")
	ENDIF
ENDIF