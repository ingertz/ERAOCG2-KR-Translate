@CARDCAN_84846(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,84846)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,84846)
		RETURN 0	
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 철혈
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,-1,"묘지")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,84846)
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 철혈
	CALLFORM 효과条件レベル_ADV(10, "以上")
	효과条件종류 = 엑시즈
	효과条件Ｘ素所持 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_84846(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID

#DIM DYNAMIC 제외数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84846,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 링크以外
		효과条件カテゴリ = 철혈
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		選択カードID = RESULT:99	
		IF 選択カード != 9999
			; PRINTFORML 選択カードID：{選択カードID}/설정レベル：{설정レベル}
			CALL FULLRESET
			효과範囲묘지 = 1
			CALLFORM CARD_{選択カードID}("レベル")
			효과条件レベル = RESULT
			효과条件カテゴリ = 철혈
			효과条件固ID = 選択カードID
			효과条件複数 = 任意の数
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			제외数 = RESULT:2
			IF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件ID = 選択カードID
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				選択カードID = RESULT:1
				CALLFORM CARD_{選択カードID}("종류")
				IF RESULT == 엑시즈
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"Ｘ",제외数)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84846,2)
	IF RESULT == 0
		PRINTFORML Ｘ소재를 １개 제거할Ｘ몬스터를 選択してください。
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 철혈
		CALLFORM 효과条件レベル_ADV(10, "以上")
		효과条件종류 = 엑시즈
		효과条件Ｘ素所持 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",-1)
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 비추는 여러 상의 심연
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF

