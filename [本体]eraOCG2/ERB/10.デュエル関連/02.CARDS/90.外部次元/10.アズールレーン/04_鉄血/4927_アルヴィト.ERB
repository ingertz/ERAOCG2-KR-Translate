@CARDCAN_4927(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4927)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4927)
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件固名前 = 순양전함 알비트
	효과条件종류 = モン全般
	효과条件カテゴリ = 철혈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,-1,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == X素材時효과
	SIF 발동済_2(듀얼리스트,4927)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 철혈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 철혈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4927(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC 選択효과
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4927,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件固名前 = 순양전함 알비트
		효과条件종류 = モン全般
		효과条件カテゴリ = 철혈
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カードID = RESULT:99
			CALLFORM CARDNAME_{選択カードID}("名前")
			選択カード名 = %RESULTS%
			CALL YN_CHOICE(듀얼리스트,"●손패のこの카드를 守備표시で특수소환し、상대に見せた「철혈」몬스터를 묘지へ送る。","●상대に見せた「철혈」몬스터를 守備표시で특수소환し、손패のこの카드를 묘지へ送る。")
			選択효과 = RESULT
			IF 選択효과 == はい
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所,"守備표시")
				CALL FULLRESET
				효과範囲손패 = 1
효과条件名前 = %選択カード名前%
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			ELSEIF 選択효과 == いいえ
				CALL FULLRESET
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
				CALL FULLRESET
				효과範囲손패 = 1
효과条件名前 = %選択カード名前%
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4927,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 철혈
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
