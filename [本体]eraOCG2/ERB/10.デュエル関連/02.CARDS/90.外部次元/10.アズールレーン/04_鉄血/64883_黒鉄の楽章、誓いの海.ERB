@CARDCAN_64883(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数

#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64883)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 벽람항로
	CALLFORM 효과条件レベル_ADV(7, "以下")
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && !효과발동済(듀얼리스트,場所,ゾーン)
		条件Ａ = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 철혈
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && !발동済_1(듀얼리스트,64883)
		条件Ｂ = 1
	SIF 条件Ａ == 0 && 条件Ｂ == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_64883(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC 選択효과

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 벽람항로
	CALLFORM 효과条件レベル_ADV(7, "以下")
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && !효과발동済(듀얼리스트,64883)
		条件Ａ = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 철혈
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && !발동済_1(듀얼리스트,64883)
		条件Ｂ = 1
	IF 条件Ａ == 1 && 条件Ｂ == 1
		CALL YN_CHOICE(듀얼리스트,"①자신필드의 レベル７이하의 非ＥＸ「벽람항로」モンスター１体のレベルを３上げる。","②덱에서 「철혈」마법カード１体を손패に加える。")
		選択효과 = RESULT
	ELSEIF 条件Ｂ == 1
		選択효과 = いいえ
	ENDIF
	IF 選択효과 == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64883,10)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 벽람항로
			CALLFORM 효과条件レベル_ADV(7, "以下")
			효과条件종류 = EX以外全般
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永星",3)
			ENDIF
		ENDIF
	ELSEIF 選択효과 == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64883,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 철혈
			효과条件종류 = 마법全般
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
	
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64883)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "바다")
ENDIF