	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4946,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 중앵(AL)
		효과条件종류 = 함정全般
