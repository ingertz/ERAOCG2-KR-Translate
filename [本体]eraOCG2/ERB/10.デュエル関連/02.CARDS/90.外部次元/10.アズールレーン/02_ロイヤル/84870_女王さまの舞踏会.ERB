@CARDCAN_84870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 陛下攻撃力

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,84870)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,84870)
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 전함 퀸 엘리자베스
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	陛下攻撃力 = RESULT:3
	SIF RESULT < 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件攻撃力 = 陛下攻撃力
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件固名前 = 전함 퀸 엘리자베스
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 마함起動
	CALL FULLRESET
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_84870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

#DIM DYNAMIC 陛下攻撃力
#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC 選択효과

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84870,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 전함 퀸 엘리자베스
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			陛下攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:RESULT")
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件攻撃力 = 陛下攻撃力
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件Ａ = 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件以攻撃力 = 陛下攻撃力 + 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件固名前 = 전함 퀸 엘리자베스
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT == 1
					条件Ｂ = 1
			ENDIF
			IF 条件Ａ == 1 && 条件Ｂ == 1
				CALL YN_CHOICE(듀얼리스트,"●상대場の、대상のカードより공격력이低いモンスター１体を耐性無視で묘지送り","●自場の대상のカード 이외의 カード１장을 손패に戻し、대상のカードより공격력이高い상대場のモンスター１体の攻撃力をターン終了時まで半分にする")
				選択효과 = RESULT
			ELSEIF 条件Ｂ == 1 && 条件Ａ == 1
				選択효과 = いいえ
			ELSEIF 条件Ａ == 1 && 条件Ｂ == 1
				選択효과 = はい
			ENDIF
			IF 選択효과 == はい
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과条件攻撃力 = 陛下攻撃力
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF 選択효과 == いいえ
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件固名前 = 전함 퀸 엘리자베스
				CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"손패")
				IF RESULT == 1
					CALL FULLRESET
					효과範囲상대필드 = 1
					효과条件以攻撃力 = 陛下攻撃力 + 1
					효과추가종류 = 2
					CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"一攻DOWN")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84870)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固名前 = 전함 퀸 엘리자베스
	효과条件カテゴリ = 로열(AL)
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	陛下攻撃力 = RESULT * 200
	IF 陛下攻撃力 > 0
		CALL FULLRESET
효과条件名前 = 전함 퀸 엘리자베스
		CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,陛下攻撃力)
	ENDIF
ENDIF
