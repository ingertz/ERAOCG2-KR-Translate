@CARDCAN_64863(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64863)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || (종류 == フリー誘発 && GROUPMATCH(ゾーン,"마함","손패"))
	SIF 발동済_1(듀얼리스트,64863)
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0		
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ:0 = Sniper
	효과条件カテゴリ:1 = Caster
	효과条件カテゴリ:2 = Medic
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 오퍼레이터
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 2
		RETURN 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 2
		RETURN 1
	RETURN 0

ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	SIF 발동済_2(듀얼리스트,64863)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_64863(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC NPC用レベル制限
#DIM DYNAMIC コストライフ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || (종류 == フリー誘発 && GROUPMATCH(ゾーン,"마함","손패"))
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64863,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		NPC用レベル制限 = GETVAR(@"ライフ_%듀얼리스트%") / 300
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ:0 = Sniper
		효과条件カテゴリ:1 = Caster
		효과条件カテゴリ:2 = Medic
		SIF 듀얼리스트 != "자신"
			CALLFORM 효과条件レベル_ADV(NPC用レベル制限,"以下")
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"レベル"
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",RESULT*300)
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64863,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲마함 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ:0 = Sniper
			효과条件カテゴリ:1 = Caster
			효과条件カテゴリ:2 = Medic
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
	ENDIF
ENDIF