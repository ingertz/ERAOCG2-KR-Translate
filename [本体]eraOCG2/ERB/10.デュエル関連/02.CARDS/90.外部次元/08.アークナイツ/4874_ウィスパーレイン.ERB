PRINTL 그 몬스터의 레벨에 따라 이하의 효과를 적용한다.
PRINTL ●레벨 4 이하: 패에 넣거나 특수 소환한다.
PRINTL ●레벨 5 이상: 패에 넣는다.
CALLFORM CARD_ABLE(0,ターン開始時強制,バトル開始時強制,ターン終了時強制,バトル終了時強制)
PRINTL ③: 페이즈가 바뀔 때마다,
PRINTL 자신 필드의 「오퍼레이터」에 있는 마력 카운터, 개별 카운터 이외의 카운터를 1개씩 제거한다.

@CARDCAN_4874(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4874)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4874)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1800
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
효과条件名前 = 속삭임 비
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 필드起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	SIF 발동済_2(듀얼리스트,4874)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 오퍼레이터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制 || 종류 == ターン終了時強制 || 종류 == バトル開始時強制 || 종류 == バトル終了時強制
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4874(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4874,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1800)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4874,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 오퍼레이터
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			選択カード_ID = RESULT:99
			TRYCALLFORM CARD_{選択カード_ID},"レベル"

			IF RESULT <= 4
				CALL CARD_SS_CHECK(듀얼리스트,選択カード_ID,"묘지")
				IF RESULT == 1
					CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,손패行き)
				ELSE
					SIF 듀얼리스트 == "자신"
PRINTL 몬스터를 특수 소환하시겠습니까?
					CALL YN_CHOICE(듀얼리스트)
					IF RESULT == 0
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
					ELSEIF RESULT == 1
						CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,손패行き)
					ENDIF
				ENDIF

			ELSEIF RESULT >= 5
				CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,손패行き)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == ターン開始時強制 || 종류 == ターン終了時強制 || 종류 == バトル開始時強制 || 종류 == バトル終了時強制
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") < 1
			CONTINUE
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"悪Ｃ",-1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"薬Ｃ",-1)
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") < 1
			CONTINUE
		CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"悪Ｃ",-1)
		;CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"薬Ｃ",-1)
	NEXT
ENDIF
