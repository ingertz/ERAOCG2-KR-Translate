		CALL YN_CHOICE(듀얼리스트,"②：レンズを配置する","④：「フルパノラマ촬영」")
	ELSEIF 발동불가:0 == 0
		RESULT = 0
	ELSEIF 발동불가:1 == 0
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4869,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,104869)
		ENDIF
	
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4869,4)
		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",-3)
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			SELECTCASE RAND:4
				CASE 0
					PRINTFORML 「촬영-！」
				CASE 1
