			ENDSELECT
			PRINTL
			CUSTOMDRAWLINE ―
			WAIT
			CALL CARD_RESERV(듀얼리스트,4869,短紋章予約)
			CALL CARD_RESERV(듀얼리스트,4869,攻紋章予約)
		ENDIF
	ENDIF

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
효과条件名前 = 렌즈
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"条達",3)

ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
효과条件名前 = 렌즈
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,2000)
