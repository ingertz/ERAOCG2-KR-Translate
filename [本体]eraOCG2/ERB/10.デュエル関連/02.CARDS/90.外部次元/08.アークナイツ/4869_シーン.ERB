@CARDCAN_4869(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4869)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4869)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 900
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
효과条件名前 = 씬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制 || 종류 == ターン終了時強制 || 종류 == バトル開始時強制 || 종류 == バトル終了時強制
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 3
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 3
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 필드起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	SIF 발동済_2(듀얼리스트,4869)
		발동불가:0 = 1
	IF ターンプレイヤー == 듀얼리스트
		SIF メインフェイズ != 1
			발동불가:0 = 1
	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF バトルフェイズ != 1
			발동불가:0 = 1
	ENDIF
	CALL CARD_SS_CHECK(듀얼리스트,104869,"")
	SIF RESULT == 1
		발동불가:0 = 1
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 500
		발동불가:0 = 1

	SIF 발동済_4(듀얼리스트,4869)
		발동불가:1 = 1
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 3
			발동불가:1 = 1
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 3
			발동불가:1 = 1
	ENDIF
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ELSEIF 종류 == 攻紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_4869(듀얼리스트,종류,ゾーン,場所)
