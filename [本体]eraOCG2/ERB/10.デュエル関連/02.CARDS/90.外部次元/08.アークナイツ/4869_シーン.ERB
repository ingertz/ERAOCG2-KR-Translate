	CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",1)

ELSEIF 종류 == 마함起動 || 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,4869)
		발동불가:0 = 1
	IF ターンプレイヤー == 듀얼리스트
		SIF メインフェイズ != 1
			발동불가:0 = 1
	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF バトルフェイズ != 1
			발동불가:0 = 1
	ENDIF
