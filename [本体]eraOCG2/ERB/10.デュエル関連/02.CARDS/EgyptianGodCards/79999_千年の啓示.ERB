@CARDCAN_79999(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79999)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	IF ターンプレイヤー == 듀얼리스트
		SIF 발동済_1(듀얼리스트,79999)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF 손패数(듀얼리스트) <= 0
			RETURN 0
		IF 듀얼리스트 == "상대"
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 삼환신
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
효과条件名前 = 죽은 자의 소생
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		RETURN 1
	ELSEIF ターンプレイヤー == 対面者
		SIF 발동済_2(듀얼리스트,79999)
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 죽은 자의 소생
		효과条件표시 = 0
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79999(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79999)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL CARD_EFFECT_USE(듀얼리스트,79999,1)
			CALL FULLRESET
			IF 듀얼리스트 == "상대"
				효과範囲묘지 = 1
				효과条件カテゴリ = 삼환신
				효과条件종류 = モン全般
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT != 1
					CALL FULLRESET
					효과条件カテゴリ = 삼환신
					효과条件종류 = モン全般
				ENDIF
			ENDIF
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 삼환신
				효과条件종류 = モン全般
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲덱 = 1
					효과範囲묘지 = 1
효과条件名前 = 죽은 자의 소생
					CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ELSEIF ターンプレイヤー == 対面者
			CALL CARD_EFFECT_USE(듀얼리스트,79999,2)
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
효과条件名前 = 죽은 자의 소생
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARDEFFECT_70001(듀얼리스트,마함起動,"효과処理")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79999)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF