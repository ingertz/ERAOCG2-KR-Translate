@CARDCAN_33201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33201)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,33201)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,33201,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
효과条件カテゴリ = 전뇌계
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件カテゴリ = 전뇌계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_33201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 選択カード名前

#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC モン選択
#DIM DYNAMIC 마법選択
#DIM DYNAMIC 함정選択


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33201,1)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
효과条件カテゴリ = 전뇌계
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン, 場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			CALL RESETCONDITION
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)

			CALL CARD_SELECT(듀얼리스트,選択カード)
			TRYCALLFORM CARD_{GETVAR(@"%대상者（CS）%_%参照先（CS）%:{選択カード（CS）}")}, "종류"
			IF INRANGE(RESULT, 0, 10) 
				モン選択 ++
			ELSEIF INRANGE(RESULT, 20, 29) 
				마법選択 ++
			ELSEIF INRANGE(RESULT, 30, 39) 
				함정選択 ++
			ENDIF

			CALL FULLRESET
효과条件カテゴリ = 전뇌계
			효과条件종류:0 = 999
			SIF モン選択 == 0
				효과条件종류:1 = 효과モン
			IF 마법選択 == 0
				효과条件종류:2 = 通常마법
				효과条件종류:3 = 지속마법
			ENDIF
			SIF 함정選択 == 0
				효과条件종류:4 = 지속함정
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			選択カード名前 = RESULT:1

			IF RESULT == 1
				TRYCALLFORM CARD_{選択カード_ID}, "종류"
				IF INRANGE(RESULT, 0, 10) 
					モン選択 ++
				ELSEIF INRANGE(RESULT, 20, 29) 
					마법選択 ++
				ELSEIF INRANGE(RESULT, 30, 39) 
					함정選択 ++
				ENDIF
				CALL FULLRESET
효과条件カテゴリ = 전뇌계
				효과条件종류:0 = 999
				SIF モン選択 == 0
					효과条件종류:1 = 효과モン
				IF 마법選択 == 0
					효과条件종류:2 = 通常마법
					효과条件종류:3 = 지속마법
				ENDIF
				SIF 함정選択 == 0
					효과条件종류:4 = 지속함정
효과条件固名前 = 전뇌계린－린린
				효과条件任意 = 1
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF

		CALLFORM SS소환可能レベル_ADV(3, "以上")
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
