@CARDNAME_33201,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 전뇌계린－린린
	CASE "略称"
RESULTS = 전뇌 리리
	CASE "カテゴリ"
RESULTS:0 = 전뇌계
ENDSELECT


@CARD_33201(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 600
ENDSELECT

RETURN 0

