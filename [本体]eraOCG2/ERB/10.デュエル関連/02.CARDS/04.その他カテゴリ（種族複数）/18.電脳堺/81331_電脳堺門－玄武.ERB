@CARDCAN_81331(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81331)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		RETURN 1
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		SIF ゾーン != "마함"
			RETURN 0
		SIF 발동済_1(듀얼리스트,81331)
			RETURN 0
		SIF バトルフェイズ != 1
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,81331)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,81331)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件カテゴリ = 전뇌계
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_81331(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		;カード발동＆설치まで
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81331)
		IF RESULT == 0
		ENDIF
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81331,1)
		IF RESULT == 0
			CALL FULLRESET
			효과추가종류 = 3
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81331,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲묘지 = 1
		효과추가종류 = 効追無効
효과条件カテゴリ = 전뇌계
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
