@CARD_EXPLANATION_72371(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(1,마함起動 ,손패起動 ,フリー誘発)
PRINTL ①: 상대 필드에 카드가 존재할 경우에 발동할 수 있다.
PRINTL 「이담의 인법첩」 이외의 「인법」 마법 / 함정 카드 및 「닌자」 몬스터를 각각 1장까지,
PRINTL 자신 덱/묘지에서 선택하여 자신 필드에 세트한다 (덱/묘지에서 각각 1장까지만 세트할 수 있다).
CALLFORM CARD_ABLE(2,필드→묘지 ,破壊→묘지 ,戦闘→묘지)
PRINTL ②: 세트된 이 카드가 묘지로 보내졌을 경우, 필드의 앞면 표시 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 뒷면 수비 표시로 한다.


@CARDCAN_72371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72371)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,72371)
		RETURN 0
	SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5 && 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 닌자
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 인법
	효과条件固名前 = 이담의 인법첩
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,72371)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_72371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 덱불가
#DIM DYNAMIC 묘지불가

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72371,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 마함全般
		효과条件カテゴリ = 인법
		효과条件固名前 = 이담의 인법첩
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 닌자
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 条件달성:0 == 1
			SIF 듀얼리스트 == "자신"
PRINTL 인법을 묘지에서 세트하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		
		IF RESULT == はい
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = 마함全般
			효과条件カテゴリ = 인법
			효과条件固名前 = 이담의 인법첩
			효과条件任意 = 1
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
			SIF RESULT == 1
				묘지불가 = 1
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = 마함全般
			효과条件カテゴリ = 인법
			효과条件固名前 = 이담의 인법첩
			효과条件任意 = 1
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
			SIF RESULT == 1
				덱불가 = 1
		ENDIF
		
		IF 条件달성:1 == 1 && 덱불가 == 1
			;덱だめだから묘지から
			RESULT = 0
		ELSEIF 条件달성:1 != 1 && 덱불가 == 1
			PRINTW 묘지に닌자がいないので終了します
			RETURN 0
		ELSEIF 묘지불가 == 0
			RESULT = 1
		ENDIF

		;묘지
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 닌자
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"裏側守備표시")
		;덱
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 닌자
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"裏側守備표시")
		ENDIF
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72371,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"표시변경")
	ENDIF
ENDIF

