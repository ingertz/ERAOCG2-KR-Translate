@CARDSUMMON_2301(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 카가 닌자 에트랑제
ELSEIF EX参照 >= 10
	素材条件종족 = 식물족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,2301) 
	RETURN RESULT
ENDIF



@CARDCAN_2301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2301)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF メインフェイズ == 1
		SIF 발동済_1(듀얼리스트,2301)
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件종족 = 식물족
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF バトルフェイズ == 1
		SIF 발동済_2(듀얼리스트,2301)
			RETURN 0
		RETURN 1
	ENDIF
ENDIF




@CARDEFFECT_2301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動 || 종류 == フリー誘発
	IF メインフェイズ == 1	
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2301,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲손패 = 1
			효과条件종족 = 식물족
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ELSEIF バトルフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2301,2)
		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",-730000)
			CALL FULLRESET
			CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"一攻",-730000)
		ENDIF
	ENDIF
ENDIF



