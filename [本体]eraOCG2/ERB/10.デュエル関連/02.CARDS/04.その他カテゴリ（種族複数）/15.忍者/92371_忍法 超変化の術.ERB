@CARDCAN_92371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92371)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 닌자
	효과条件종류 = レベル持ち
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件종류 = レベル持ち
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件종족:0 = 드래곤족
	효과条件종족:1 = 비늘야수족
	효과条件종족:2 = 바다생물족
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF



@CARDEFFECT_92371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ニンジャ
#DIM DYNAMIC モータル
#DIM DYNAMIC ジツ・レベル
#DIM DYNAMIC セット先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92371)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 닌자
		효과条件종류 = レベル持ち
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			ニンジャ = RESULT:1
			TRYCALLFORM CARD_{ニンジャ},"レベル"
			ジツ・レベル = RESULT
			;PRINTFORMW ジツ・レベルは{ジツ・レベル}

			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件표시 = 表側표시
			효과条件종류 = レベル持ち
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				モータル = RESULT:1
				TRYCALLFORM CARD_{モータル},"レベル"
				ジツ・レベル += RESULT
				;PRINTFORMW ジツ・レベルは{ジツ・レベル}

				セット先 = 場所
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과条件종족:0 = 드래곤족
				효과条件종족:1 = 비늘야수족
				효과条件종족:2 = 바다생물족
;				효과추가종류 = 50 + セット先
				CALL 효과条件レベル_ADV(ジツ・レベル,"以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
