@CARDCAN_25070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25070)
SIF RESULT == 1
	RETURN 0

;参考：ポプルス
IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,25070)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25070,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 짐승 닌자 - 맥
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,25070)
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 인법
	효과条件カテゴリ:1 = 닌자
	효과条件固名前 = 짐승의 닌자－바쿠
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_2(듀얼리스트,25070)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25070,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 3
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 인법
	효과条件カテゴリ:1 = 닌자
	효과条件固名前 = 짐승의 닌자－바쿠
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25070,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패", 場所)
	ENDIF

ELSEIF 종류 == 특수소환時 || 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25070,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 인법
		효과条件カテゴリ:1 = 닌자
		효과条件固名前 = 짐승의 닌자－바쿠
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
