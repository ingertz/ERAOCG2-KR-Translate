@CARDCAN_1272(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1272)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1272)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件固名前 = 총의 닌자－화광
	효과条件カテゴリ = 닌자
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_1(듀얼리스트,1272)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 3
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件固名前 = 총의 닌자－화광
	효과条件カテゴリ = 닌자
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,1272)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1272,"묘지",1)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件スーパーカテゴリ = 닌자
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 닌자
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && モンスター数(듀얼리스트) < 5
		条件달성 ++
	SIF 条件달성 == 0
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1272(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1272,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件固名前 = 총의 닌자－화광
		효과条件カテゴリ = 닌자
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"裏側守備표시")
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1272,2)
	IF RESULT == 0
		条件달성:0 = 0
		条件달성:1 = 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件スーパーカテゴリ = 닌자
		효과条件표시 = 裏側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1

		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 닌자
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1
		SIF モンスター数(듀얼리스트) >= 5
			条件달성:1 = 0

		IF 条件달성:0 == 1 && 条件달성:1 == 1
			SIF 듀얼리스트 == "자신"
PRINTL 마법 & 함정 존의 카드를 되돌리겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSEIF 条件달성:1 == 0
			RESULT = いいえ
		ELSEIF 条件달성:0 == 0 && 条件달성:1 == 1
			RESULT = はい
		ENDIF

		IF RESULT == はい
			CALL FULLRESET
			효과条件カテゴリ = 닌자
			효과条件표시 = 表側표시
			효과条件行先플래그 = 손패行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所,"裏側守備표시")
			ENDIF

		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과条件スーパーカテゴリ = 닌자
			효과条件표시 = 裏側표시
			효과条件行先플래그 = 손패行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所,"裏側守備표시")
			ENDIF
		ENDIF
	ENDIF
	RETURN 0
ENDIF