@CARDCAN_38191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38191)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,38191)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	;필드에 ガニ股드래곤
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 명해합룡-메멘토랄 테크트리카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,38191)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,38191)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메멘토
	효과条件固名前 = 메멘토 고블린
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF


@CARDEFFECT_38191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38191,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;T1紋章（短紋章발동）
		CALL CARD_RESERV(듀얼리스트,38191,短紋章予約)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38191,2)
	IF RESULT == 0
		;参考：S.P.E.C.T.R.A.
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 메멘토
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 메멘토
			효과条件固名前 = 메멘토 고블린
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				選択カード_ID = RESULT:1
				TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
				選択カード名前 = %RESULTS%
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 메멘토
				효과条件固名前:0 = 메멘토 고블린
				효과条件固名前:1 = %選択カード名前%
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 短紋章起動
	;参考：選律の바르모니카
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件カテゴリ = 메멘토
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",1)
ENDIF


