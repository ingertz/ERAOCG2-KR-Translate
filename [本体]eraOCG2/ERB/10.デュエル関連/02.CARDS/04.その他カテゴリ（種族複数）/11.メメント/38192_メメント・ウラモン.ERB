@CARDCAN_38192(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38192)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,38192)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 메멘토
	효과条件固名前 = 메멘토 우라몬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,38192)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,38192)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38192,"묘지")
	SIF RESULT == 1
		RETURN 0
	TRYCALLFORM CARDNAME_{処理中_효과ID},"カテゴリ"
	SIF !GROUPMATCH(RESULTS,"메멘토")
		RETURN 0
	TRYCALLFORM CARD_{処理中_효과ID},"종류"
	SIF RESULT > モン全般
		RETURN 0
	RETURN 1
ENDIF

