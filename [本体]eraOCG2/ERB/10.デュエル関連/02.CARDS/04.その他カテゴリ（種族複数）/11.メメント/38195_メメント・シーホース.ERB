@CARDCAN_38195(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38195)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,38195)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38195,ゾーン)
	SIF RESULT == 1
		RETURN 0
	;参考：歌姫ク-プレ
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固カテゴリ = 메멘토
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,38195)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메멘토
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38195(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前,5
#DIM DYNAMIC 選択횟수
#DIM DYNAMIC 묘지送りレベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38195,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38195,2)
	IF RESULT == 0
		;参考：ガイザ-
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 메멘토
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		;参考：スポ-ア
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}, "レベル"
			選択レベル = RESULT
			選択횟수 = 0
			;選択レベルが０じゃないなら繰り返す
			WHILE 選択レベル > 0
				CALL FULLRESET
				효과条件종류 = モン全般
				효과条件カテゴリ = 메멘토
				효과範囲덱 = 1
				;とりあえず５回まで
				SIF 選択횟수 > 0
					효과条件固名前:0 = %選択カード名前:0%
				SIF 選択횟수 > 1
					효과条件固名前:1 = %選択カード名前:1%
				SIF 選択횟수 > 2
					효과条件固名前:2 = %選択カード名前:2%
				SIF 選択횟수 > 3
					효과条件固名前:3 = %選択カード名前:3%
				SIF 選択횟수 > 4
					효과条件固名前:4 = %選択カード名前:4%
				효과条件任意 = 1
				CALL 효과条件レベル_ADV(選択レベル, "以下")
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					;ID취득
					選択カード_ID = RESULT:1
					;レベル취득
					CALLFORM CARD_{RESULT:1}, "レベル"
					묘지送りレベル = RESULT
					;名前취득
					TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
					;5
					SIF 選択횟수 == 4
						選択カード名前:4 = %RESULTS%
					;4
					SIF 選択횟수 == 3
						選択カード名前:3 = %RESULTS%
					;3
					SIF 選択횟수 == 2
						選択カード名前:2 = %RESULTS%
					;2
					SIF 選択횟수 == 1
						選択カード名前:1 = %RESULTS%
					;1
					SIF 選択횟수 == 0
						選択カード名前:0 = %RESULTS%

					選択횟수 += 1
					;残りレベル計算
					選択レベル -= 묘지送りレベル
					;PRINTFORML 残り{選択レベル}

				ELSE
					;選べなかったら終わり
					BREAK
				ENDIF
			WEND
		ENDIF
	ENDIF
ENDIF


