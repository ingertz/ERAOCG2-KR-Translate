@CARD_93891(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_93891(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 공격 가능한 상대 몬스터는, 자신 필드에 「메멘토」 몬스터가 존재하는 한,
PRINTL 그 중 공격력이 가장 높은 몬스터를 공격해야만 한다.
CALLFORM CARD_ABLE(0,발동誘発)
PRINTL ②: 상대가 필드의 몬스터의 효과를 발동했을 때,
PRINTL 자신 필드의 「명해합룡－메멘토랄 텍토리카」 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터의 공격력 / 수비력을 1000 내리고, 그 발동한 효과를 무효로 한다.


@CARDCAN_93891(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93891)
SIF RESULT == 1
	RETURN 0


IF 종류 == 발동誘発
	;参考：비틀트루퍼スケイル 보머
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 명해합룡－메멘트럴 텍트리카
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,93891)
	SIF RESULT:3 < 1000
		RETURN 0
	SIF RESULT:4 < 1000
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93891(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力판정
#DIM DYNAMIC 攻撃誘導者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93891)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 명해합룡－메멘트럴 텍트리카
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",-1000)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永守",-1000)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0

ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93891)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 메멘토
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,93891)
	IF RESULT == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂",0,93891)
	ENDIF

	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
		SIF !MATCH(RESULTS,"메멘토")
			CONTINUE
		IF 攻撃力판정 < GETVAR(@"%듀얼리스트%_MZ_攻:{カウンタ}")
			攻撃力판정 = GETVAR(@"%듀얼리스트%_MZ_攻:{カウンタ}")
			攻撃誘導者 = カウンタ
		ENDIF
	NEXT
	IF 攻撃力판정 > 0
		CALL FULLRESET
		효과条件カテゴリ = 메멘토
		효과条件以攻撃力 = 攻撃力판정
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻誘")
	ENDIF
ENDIF
