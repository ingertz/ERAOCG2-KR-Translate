	CASE "略称"
RESULTS = 더스크 유토피아
	CASE "カテゴリ"
RESULTS:0 = HERO
RESULTS:1 = D-HERO
ENDSELECT


@CARD_58545(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 3000
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

