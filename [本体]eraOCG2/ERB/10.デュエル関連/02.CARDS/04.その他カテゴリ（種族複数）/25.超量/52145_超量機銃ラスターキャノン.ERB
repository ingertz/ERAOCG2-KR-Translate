#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 条件달성,3
#DIM DYNAMIC 条件속성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	FOR カウンタ,52140,52145
		CALL FULLRESET
		효과条件カテゴリ = 초량
		효과条件ID = カウンタ
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件ID = カウンタ
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		条件달성:0 = 1
	NEXT
	SIF 条件달성:0 != 1
		발동불가:0 = 1

	SIF 발동済_3(듀얼리스트,52145)
		발동불가:1 = 1
	FOR カウンタ,1,8
		CALL FULLRESET
		효과条件속성 = カウンタ
		효과条件종류 = 엑시즈
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 초량
		효과条件속성 = カウンタ
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		条件달성:1 = 1
	NEXT
	SIF 条件달성:1 != 1
		발동불가:1 = 1
	
	IF 발동불가:0 != 1 && 발동불가:1 != 1
			RESULT = 0
			条件달성:2 = 1
PRINTL 「진초량기신왕 블래스터 마그나」의 ②③의 효과를 사용할 수 있습니다
			PRINTW ②의 효과から確認が入ります
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
PRINTL ②의 효과입니다
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52145)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
		SIF 条件달성:2 == 1
			GOTO INPUT_LOOP
	
	ELSEIF RESULT == 1
		$INPUT_LOOP
PRINTL ③의 효과입니다
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52145,3)
		IF RESULT == 0
			FOR カウンタ,1,8
				CALL FULLRESET
				효과条件속성 = カウンタ
				효과条件종류 = 엑시즈
				CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
				SIF RESULT != 1
					CONTINUE
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 초량
				효과条件속성 = カウンタ
				효과条件소환可 = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT != 1
					CONTINUE
				条件속성 = カウンタ
				BREAK
			NEXT
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 초량
			효과条件속성 = 条件속성
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
ENDIF


