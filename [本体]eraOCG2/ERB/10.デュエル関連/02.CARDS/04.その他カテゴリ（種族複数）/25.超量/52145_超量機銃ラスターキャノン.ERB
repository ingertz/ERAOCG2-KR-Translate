@CARDCAN_52145(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52145)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	FOR カウンタ,52140,52145
		CALL FULLRESET
		효과条件カテゴリ = 초량
		효과条件ID = カウンタ
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件ID = カウンタ
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		条件달성:0 = 1
	NEXT
	SIF 条件달성:0 != 1
		발동불가:0 = 1
	CALL CARD_DRAW_CHECK

	SIF 발동済_3(듀얼리스트,52145)
		발동불가:1 = 1
	FOR カウンタ,1,8
		CALL FULLRESET
		효과条件속성 = カウンタ
		효과条件종류 = 엑시즈
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 초량
		효과条件속성 = カウンタ
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		条件달성:1 = 1
	NEXT
	SIF 条件달성:1 != 1
		발동불가:1 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:場所") != 召種EX덱
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52145(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
