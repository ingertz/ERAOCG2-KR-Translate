@CARDCAN_29036(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29036)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	CALLFORM 효과条件レベル_ADV(1,"以外")
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF 발동済_2(듀얼리스트,29036)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초량
	효과条件소환可 = 2
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29036(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 選択カードレベル
#DIM DYNAMIC 選択カード,3
#DIMS DYNAMIC 選択カード名前,3
#DIM DYNAMIC ランダム選択SS
#DIM DYNAMIC ランダム選択GY,3

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	CALLFORM 효과条件レベル_ADV(1,"以外")
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF 발동済_2(듀얼리스트,29036)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초량
	효과条件소환可 = 2
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		발동불가:1 = 1
	
	IF 발동불가:0 != 1 && 발동불가:1 != 1
		CALL YN_CHOICE(듀얼리스트,"①：「초량」とレベルを同じにする。","②：덱에서 「초량」を呼ぶ。")
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29036,10)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 초량
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				選択カードレベル = GETVAR(@"%듀얼리스트%_MZ_星:RESULT")
				CALL FULLRESET
				CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永星",選択カードレベル,1)
			ENDIF
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29036,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과条件カテゴリ = 초량
			효과条件소환可 = 1
			효과条件複数 = 3
			효과条件固名前選択 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT != 9999
				選択カード:0 = RESULT:0
				選択カード:1 = RESULT:1
				選択カード:2 = RESULT:2

				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:0)")},"名前"
				選択カード名前:0 = %RESULTS%
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:1)")},"名前"
				選択カード名前:1 = %RESULTS%
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:2)")},"名前"
				選択カード名前:2 = %RESULTS%

				ランダム選択SS = RAND:3
				
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"덱",(選択カード:ランダム選択SS))

				SIF ランダム選択SS != 0
					ランダム選択GY:0 = 0
				SIF ランダム選択SS != 1
					ランダム選択GY:0 = 1
				SIF ランダム選択SS != 2
					ランダム選択GY:0 = 2
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件名前 = %選択カード名前:(ランダム選択GY:0)%
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

				SIF ランダム選択SS != 0 && ランダム選択GY:0 != 0
					ランダム選択GY:1 = 0
				SIF ランダム選択SS != 1 && ランダム選択GY:0 != 1
					ランダム選択GY:1 = 1
				SIF ランダム選択SS != 2 && ランダム選択GY:0 != 2
					ランダム選択GY:1 = 2
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件名前 = %選択カード名前:(ランダム選択GY:1)%
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
