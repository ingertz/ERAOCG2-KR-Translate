@CARDSUMMON_58533(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

SIF 효과条件어둠융합 == 0
	RETURN 0
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = E-HERO
ELSEIF EX参照 >= 10
	CALLFORM 素材条件レベル_ADV(5,"以上")
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58533)
	RETURN RESULT
ENDIF



@CARDCAN_58533(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58533)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,58533)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
	효과条件표시 = 10
	효과範囲상대필드 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;CARD_ABLE用
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_58533(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ修正

IF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	IF ターンプレイヤー != 듀얼리스트 && バトルフェイズ == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表",1,58533)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂",3,58533)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58533,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		효과条件표시 = 10
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"永攻",500)
		CALL FULLRESET
		CALL CARD_ATK_RESTRICTION(듀얼리스트,"HERO")
	ENDIF
ENDIF

