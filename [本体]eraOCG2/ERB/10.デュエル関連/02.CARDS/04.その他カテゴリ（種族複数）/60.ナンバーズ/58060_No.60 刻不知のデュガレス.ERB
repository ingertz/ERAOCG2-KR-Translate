	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58060,1,X消費2)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			PRINTL [1] - ●자신은 ２장ドローする。その後、자신의 패를 １장選んで捨てる。
			PRINTL [2] - ●자신의 묘지からモンスター１体を守備표시で특수소환する。
			PRINTL [3] - ●자신 필드의 モンスター１体の攻撃力をターン終了時まで倍にする。
			PRINTL 
			BINPUT
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			CALL CARDDRAW_BASIC(듀얼리스트,2)
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			CALL SET_PLAYER_INFO(듀얼리스트,"ドロースキップ", 1)
		ELSEIF RESULT == 2
			CALL FULLRESET
			효과範囲묘지 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
			CALL SET_PLAYER_INFO(듀얼리스트,"メインスキップ", 1)
		ELSEIF RESULT == 3
			CALL FULLRESET
			효과範囲필드 = 1
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:選択カード"))
			ENDIF
			CALL SET_PLAYER_INFO(듀얼리스트,"バトルスキップ２", 1)
		ENDIF
	ENDIF
