@CARDCAN_58097(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58097)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,58097)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 넘버즈
	효과条件종족 = 드래곤족
	효과条件固名前起動 = 1
	효과条件固名前 = No.97 용영신 드래그라비온
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,58097)
	SIF RESULT <= 1
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 넘버즈
	효과条件종족 = 드래곤족
	효과条件固名前 = No.97 용영신 드래그라비온
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_58097(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 下敷き名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58097,1,X消費1)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 넘버즈
		효과条件종족 = 드래곤족
		효과条件固名前 = No.97 용영신 드래그라비온
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			TRYCALLFORM CARDNAME_{RESULT:1},"名前"
			下敷き名前 = %RESULTS%
			CALL FULLRESET
			효과条件カテゴリ = 넘버즈
			효과条件종족 = 드래곤족
			효과条件固名前:0 = No.97 용영신 드래그라비온
			효과条件固名前:1 = %下敷き名前%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL RESETCONDITION_MAT(1)
				必要素材数 = 1
				重ねてＸ = 1
				素材条件固定 = カード소환先
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カード)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"単攻",1,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF