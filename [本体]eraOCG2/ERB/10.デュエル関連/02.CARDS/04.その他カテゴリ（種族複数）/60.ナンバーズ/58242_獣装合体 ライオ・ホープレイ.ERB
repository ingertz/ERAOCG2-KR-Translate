	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ:0 = 웨폰
		효과条件カテゴリ:1 = 제알 웨폰
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,58242)
	ENDIF

ELSEIF 종류 == フリー誘発
	$INPUT_EFFECT_2
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58242,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과추가종류 = 12
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"지속無効")
	ENDIF
ENDIF