@CARDCAN_24121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24121)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,24121,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 젠마이
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24121)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24121,10)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"●이 카드의 レベルをターン終了時まで１つ上げる。","●이 카드의 レベルをターン終了時まで１つ下げる。")
		IF RESULT == はい
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",1)
		ELSE
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",-1)
		ENDIF
	ENDIF
ENDIF

