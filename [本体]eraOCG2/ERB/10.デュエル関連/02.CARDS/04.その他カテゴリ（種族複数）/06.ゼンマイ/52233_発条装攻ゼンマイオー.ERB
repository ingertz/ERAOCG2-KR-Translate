@CARDCAN_52233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52233)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,52233)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,52233)
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 젠마이
	효과条件固名前 = 태엽 장갑 젠마이오
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 젠마이
	효과条件종류 = 엑시즈
	효과条件レベル:0 = 3
	효과条件レベル:1 = 4
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 효과발동済(듀얼리스트,場所,ゾーン) == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		SIF 발동済_3(듀얼리스트,52233)
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 0
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 젠마이
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_52233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52233,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 젠마이
		효과条件固名前 = 태엽 장갑 젠마이오
		효과条件複数 = 2
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		IF RESULT == 1
			CALL RESETCONDITION_MAT
			必要素材数 = 1
			素材条件カテゴリ = 젠마이
			素材条件종류 = 엑시즈
			素材条件レベル:0 = 3
			素材条件レベル:1 = 4
			重ねてＸ = 1
			TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	IF 효과발동済(듀얼리스트,場所,ゾーン) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52233,10,X消費1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52233,3,X消費2)
		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"終処",破壊行き,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1400)
		ENDIF
	ENDIF
ENDIF




