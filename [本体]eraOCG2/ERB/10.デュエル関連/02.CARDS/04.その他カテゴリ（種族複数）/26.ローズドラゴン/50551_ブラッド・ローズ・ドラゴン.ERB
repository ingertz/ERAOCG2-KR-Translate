@CARDSUMMON_50551(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 10
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50551) 
	RETURN RESULT
ENDIF


@CARDCAN_50551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50551)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,50551)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
효과条件名前 = 블랙 로즈 드래곤
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50551)
	IF RESULT == 0
		FOR カウンタ, 98, -1, -1
			SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"묘지",カウンタ,1)
		NEXT
		FOR カウンタ, 98, -1, -1
			SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"묘지",カウンタ,1)
		NEXT

		CALL FULLRESET
		효과範囲제외 = 1
		효과条件スーパー名前 = ブラック 로즈 드래곤
		효과条件종류 = 싱크로
		효과条件종족 = 식물족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 이 카드 이외의 서로의 필드의 카드를 전부 파괴하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL FULLRESET
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50551,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",1)
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
효과条件名前 = 블랙 로즈 드래곤
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
	RETURN 0
ENDIF



