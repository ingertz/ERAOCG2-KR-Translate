PRINTL 그 몬스터와는 원래 속성이 다른 "VS" 몬스터를 2체까지 패에서 효과를 무효로 하여 특수 소환한다 (동명 카드는 1장까지).
PRINTL 그 후, 대상의 자신 몬스터 및 이 효과로 특수 소환한 몬스터의 수까지,
PRINTL 상대 필드의 카드를 골라 주인의 패로 되돌릴 수 있다.
PRINTL 이 효과로 특수 소환한 몬스터는 엔드 페이즈에 주인의 패로 되돌아간다.


@CARDCAN_93831(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93831)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,93831)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 뱅키시 소울
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 뱅키시 소울
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93831(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択속성
#DIM DYNAMIC バウンス枚数
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93831,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 뱅키시 소울
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:RESULT")},"속성"
			選択속성 = RESULT

			CALL FULLRESET
			효과条件カテゴリ = 뱅키시 소울
			CALLFORM 효과条件속성_ADV(選択속성,"以外")
			효과추가종류:0 = 1
			효과추가종류:1 = 10 + 손패行き
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				バウンス枚数 = 2
			TRYCALLFORM CARDNAME_{RESULT:1},"名前"
			選択カード名前 = %RESULTS%
			IF 選択カード名前 != "" && モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과条件カテゴリ = 뱅키시 소울
				효과条件固名前 = %選択カード名前%
				CALLFORM 효과条件속성_ADV(選択속성,"以外")
				효과추가종류:0 = 1
				효과추가종류:1 = 10 + 손패行き
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				SIF RESULT == 1
					バウンス枚数 = 3
			ENDIF

			CALL FULLRESET
			효과条件任意 = 1
			효과条件複数 = 100 - バウンス枚数
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
		ENDIF
	ENDIF
ENDIF
