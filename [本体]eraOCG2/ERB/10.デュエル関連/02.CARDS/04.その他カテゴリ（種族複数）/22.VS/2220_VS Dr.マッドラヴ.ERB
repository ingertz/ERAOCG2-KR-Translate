@CARDEFFECT_2220_2(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 守備力판정
#DIM DYNAMIC 설정場所

VARSET 守備力판정, -1
VARSET 설정場所, -1


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

FOR カウンタ,0,5
	SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
		CONTINUE
	SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
		CONTINUE
	IF 守備力판정 < GETVAR(@"%対面者%_MZ_守:カウンタ")
		守備力판정 = GETVAR(@"%対面者%_MZ_守:カウンタ")
		설정場所 = カウンタ
	ENDIF
NEXT
IF 설정場所 >= 0
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",설정場所,"손패")
ENDIF
RETURN

