@CARD_EXPLANATION_93830(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①: 패의 어둠/땅/화염 속성 몬스터를 각각 1체까지 상대에게 보여주고 발동할 수 있다.
PRINTL 보여준 몬스터의 수에 따라 이하의 효과를 각각 적용한다.
PRINTL ● 1체 이상: 상대에게 400 데미지를 준다.
PRINTL 그 후, 패에서 「VS」 몬스터 1장을 특수 소환할 수 있다.
PRINTL ● 2체 이상: 상대에게 600 데미지를 준다.
PRINTL 이 턴, 자신 필드의 「VS」 몬스터는 상대 효과로는 파괴되지 않는다.
PRINTL ● 3체: 상대에게 800 데미지를 준다.
PRINTL 그 후, 「VS」 몬스터 이외의 필드의 몬스터를 전부 파괴할 수 있다.

@CARDCAN_93830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93830)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,93830)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성:0 = 화염속성
	효과条件속성:1 = 땅속성
	효과条件속성:2 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF



@CARDEFFECT_93830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ソウルパワー

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93830,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 화염속성
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 9999
			ソウルパワー ++
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 땅속성
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 9999
			ソウルパワー ++
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 어둠속성
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 9999
			ソウルパワー ++
		
		IF ソウルパワー >= 1
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",400,1)
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 뱅키시 소울
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL CARD_SS_CHECK(듀얼리스트,0,"손패")
				IF RESULT != 1
					CALL FULLRESET
					효과範囲손패 = 1
					효과条件カテゴリ = 뱅키시 소울
					효과条件任意 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF

		IF ソウルパワー >= 2
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",600,1)
			;T1紋章（短紋章발동）
			CALL CARD_RESERV(듀얼리스트,93830,短紋章予約)
		ENDIF

		IF ソウルパワー >= 3
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
			SIF 듀얼리스트 == "자신"
PRINTL 필드의 몬스터를 파괴하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0
			CALL FULLRESET
			효과条件固カテゴリ = 뱅키시 소울
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
		ENDIF
	ENDIF

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件カテゴリ = 뱅키시 소울
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
ENDIF
