@CARDCAN_73830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73830)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,73830)
		RETURN 0


	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성:0 = 화염속성
	효과条件속성:1 = 땅속성
	효과条件속성:2 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0


	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 뱅키시 소울
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF


@CARDEFFECT_73830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択속성
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73830,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件속성:0 = 화염속성
		효과条件속성:1 = 땅속성
		효과条件속성:2 = 어둠속성
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:選択カード")},"名前"
			選択カード名前 = %RESULTS%
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:選択カード")},"속성"
			選択속성 = RESULT

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件속성 = 選択속성
			효과条件カテゴリ = 뱅키시 소울
			효과条件固名前 = %選択カード名前%
			효과추가종류 = 10 + 손패行き
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
	ENDIF
ENDIF

