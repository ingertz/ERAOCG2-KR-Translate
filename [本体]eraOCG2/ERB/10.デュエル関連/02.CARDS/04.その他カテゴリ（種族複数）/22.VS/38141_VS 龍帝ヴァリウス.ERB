@CARDCAN_38141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38141)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,38141)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38141,"손패",1)
	SIF RESULT == 1
		RETURN 
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 뱅키시 소울
	CALLFORM 효과条件종족_ADV(드래곤족,"以外")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,38141)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 땅속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_38141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38141,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 뱅키시 소울
		CALLFORM 효과条件종족_ADV(드래곤족,"以外")
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38141,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 땅속성
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999

			CALL FULLRESET
			효과範囲손패 = 1
			효과条件속성 = 화염속성
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 ++
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件속성 = 어둠속성
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 ++
			CALL FULLRESET
			IF 듀얼리스트 == "자신"
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件他所 = 1
			ENDIF
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 ++

			IF 条件달성 >= 3
				CALL FULLRESET
				효과条件속성 = 화염속성
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
				IF RESULT != 9999
					CALL FULLRESET
					효과条件속성 = 어둠속성
					효과条件任意 = 1
					CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
					IF RESULT != 9999
						CALL CARDEFFECT_38141_2(듀얼리스트,종류,ゾーン,場所)
					ELSE
						CALL CARDEFFECT_38141_1(듀얼리스트,종류,ゾーン,場所)
					ENDIF
				ELSE
					CALL CARDEFFECT_38141_1(듀얼리스트,종류,ゾーン,場所)	
				ENDIF
			ELSE
				CALL CARDEFFECT_38141_1(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF


