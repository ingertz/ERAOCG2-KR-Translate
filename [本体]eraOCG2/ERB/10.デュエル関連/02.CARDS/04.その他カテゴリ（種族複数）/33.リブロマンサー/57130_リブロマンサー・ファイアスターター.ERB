@CARDCAN_57130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57130)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 3000
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF 종류 == フリー誘発
		SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 3000
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,57130)
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 3000
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 리브로맨서
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件名前 = 리브로맨서 파이어스타터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 손패選択
#DIM 選択カード
#DIM 選択カード_ID
#DIM 소환カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")

ELSEIF 종류 == 발동強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",200)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",200)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57130,1)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 3000
			条件달성 = 1

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件名前 = 리브로맨서 파이어스타터
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT < 2
			CALL FULLRESET
			효과条件カテゴリ = 리브로맨서
			효과条件固名前 = 리브로맨서 파이어스타터
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과条件カテゴリ = 리브로맨서
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
		IF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			효과範囲손패 = 1
			효과条件特不無視 = 1
			효과条件名前 = 리브로맨서 파이어스타터
			효과추가종류:0 = 52
			효과추가종류:1 = 53
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,場所)
			IF 条件달성 == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ENDIF