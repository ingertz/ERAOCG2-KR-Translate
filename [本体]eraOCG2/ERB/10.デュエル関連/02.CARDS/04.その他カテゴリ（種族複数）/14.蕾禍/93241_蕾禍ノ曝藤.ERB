@CARDCAN_93241(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93241)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_2(듀얼리스트,93241)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,93241,"마함")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3 && GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	;参考：ホ-ルティア
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3 && RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時
	SIF 발동済_1(듀얼리스트,93241)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종족:0 = 곤충족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 비늘야수족
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93241(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 특수발동

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動
	;参考：GWC-06
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			PRINTFORML 묘지のモンスター１体を제외して발동しますか？
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == 0
				특수발동 = 1
			ELSE
				RETURN 0
			ENDIF
		ENDIF
	ENDIF

	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93241,2)
	IF RESULT == 0
		IF 특수발동 == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = モン全般
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 뇌화
		효과条件종류 = 링크
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대묘지 = 1
			효과条件行先플래그 = 제외行き
			효과条件任意 = 1
			효과条件複数 = 98
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93241,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종족:0 = 곤충족
		효과条件종족:1 = 식물족
		효과条件종족:2 = 비늘야수족
		효과条件종류 = モン全般
		효과条件複数 = 2
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
효과条件名前 = 뇌화의 폭등
			CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF
