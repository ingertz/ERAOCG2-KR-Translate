@CARDCAN_30430(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,30430)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,30430)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,30430,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종족:0 = 곤충족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 비늘야수족
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,30430)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == L素材時효과
	SIF 발동済_2(듀얼리스트,30430)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0

	CALL FULLRESET
	효과条件カテゴリ = 뇌화
	효과条件종류 = 링크
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족:0 = 곤충족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 비늘야수족
	효과条件固名前 = 뇌화의 화살촉하늘소
	효과条件종류 = レベル持ち
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,30430)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_30430(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30430,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件종족:0 = 곤충족
		효과条件종족:1 = 식물족
		효과条件종족:2 = 비늘야수족
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	ENDIF

ELSEIF 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30430,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족:0 = 곤충족
		효과条件종족:1 = 식물족
		효과条件종족:2 = 비늘야수족
		효과条件固名前 = 뇌화의 화살촉하늘소
		효과条件종류 = レベル持ち
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF			
ENDIF


