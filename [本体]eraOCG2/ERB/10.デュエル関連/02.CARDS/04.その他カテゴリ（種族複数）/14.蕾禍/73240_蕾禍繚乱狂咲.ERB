@CARDNAME_73240,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 뇌화요란광소
	CASE "略称"
		RESULTS = 뇌화요란광소
	CASE "カテゴリ"
		RESULTS:0 = 뇌화
ENDSELECT


@CARD_73240(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_73240(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ②의 효과는 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①：필드의 곤충족 식물족 비늘야수족 몬스터의 공격력 / 수비력은 ３００올리고、
PRINTL それ 이외의 필드의 몬스터의 공격력 / 수비력은 ３００ 내린다。
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②：이하의 효과에서 １개를 선택해서 발동할 수 있다。
PRINTL ●덱에서 "뇌화" 몬스터 １장을 패에 넣는다。
PRINTL 그 후、자신의 패를 １장 고르고 버린다。
PRINTL ●자신의 패 / 묘지 / 제외 상태인 Ｌ몬스터 이외의 「뇌화" 몬스터 １장을 수비 표시로 특수 소환한다。


@CARDCAN_73240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73240)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,73240)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 뇌화
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:0 ++

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 뇌화
	효과条件종류 = 링크以外
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:1 ++
	
	SIF 条件달성:0 > 0 && 条件달성:1 > 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73240,1)
	IF RESULT == 0
		条件달성:0 = 0
		条件달성:1 = 0

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 뇌화
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 뇌화
		효과条件종류 = 효과モン
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 条件달성:0 == 1 && 条件달성:1 == 1
			PRINTL 효과를 선택해주세요。
			CALL YN_CHOICE(듀얼리스트,"●덱에서 「뇌화」 몬스터 １장을 패에 넣는다","●「뇌화」 몬스터 １장을 수비 표시로 특수 소환한다")
		ELSEIF 条件달성:0 == 1 && 条件달성:1 == 0
			RESULT = 0
		ELSEIF 条件달성:0 == 0 && 条件달성:1 == 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 뇌화
			효과条件종류 = モン全般
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲손패 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = 뇌화
			효과条件종류 = 링크以外
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73240)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件종족:0 = 곤충족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 비늘야수족
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,600,600)
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,600,600,73240)

	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,-300,-300)
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-300,-300,73240)
ENDIF
