@CARD_EXPLANATION_73850(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명은 룰 상 "페어리" 카드로서도 취급한다.
PRINTL 자신 필드는 "정령의 세계"가 된다.
PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없으며, 이 카드명의 ②③의 효과는
PRINTL 자신 필드에 레벨 7 이상의 드래곤족 빛 속성 싱크로 몬스터가 존재할 경우에만 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: 이 카드의 발동 시의 효과 처리로서,
PRINTL 덱에서 "페어리" 몬스터 1장을 패에 넣을 수 있다.
CALLFORM CARD_ABLE(2,효과後強制誘発)
;PRINTL ②：モンスターが攻撃표시で특수소환される度に발동する。
;PRINTL 그 몬스터를 守備표시にする。
PRINTL ②: 상대가 몬스터를 특수 소환할 때마다,
PRINTL 상대 필드의 특수 소환된 몬스터를 전부 수비 표시로 한다.
CALLFORM CARD_ABLE(3,ターン終了時強制)
PRINTL ③: 자신·상대의 엔드 페이즈에 발동한다.
PRINTL 턴 플레이어의 필드의 공격 표시 몬스터를 전부 파괴한다.


@CARDCAN_73850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73850)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,73850)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;サーチ条件確認(なくてもいいので両方RETURN 1)
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 페어리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 1
	RETURN 1
ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 싱크로
	효과条件속성 = 빛속성
	효과条件종족 = 드래곤족
	CALL 효과条件レベル_ADV(7, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 싱크로
	효과条件속성 = 빛속성
	효과条件종족 = 드래곤족
	CALL 효과条件レベル_ADV(7, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73850,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 페어리
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 효과後強制誘発
	CALL FULLRESET
	효과条件召種 = 召種全특수
	;CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"表",2)
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表",2)
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "정령の世界")
ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73850,3)
	IF RESULT == 0
		IF ターンプレイヤー == "자신"
			;자신ターンの場合、자신 필드의 攻撃표시몬스터를 全て破壊
			CALL FULLRESET
			효과条件표시 = 攻撃표시
			CALL CARD_REMOVAL_BASIC(対面者,"필드全体",場所,"묘지")
		ELSE
			;상대ターンの場合、상대 필드의 攻撃표시몬스터를 全て破壊
			CALL FULLRESET
			효과条件표시 = 攻撃표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF


