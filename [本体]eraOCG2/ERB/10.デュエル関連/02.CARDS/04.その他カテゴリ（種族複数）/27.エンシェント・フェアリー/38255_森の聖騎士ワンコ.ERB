@CARDCAN_38255(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과발동플래그 = 0

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38255)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,38255)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 現山札数(듀얼리스트) <= 0
		RETURN 0
	;フィールド、묘지に序章が存在するかチェック
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲묘지 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		;「여행길의 효광」がある場合は１ドローも選べる
		;덱内の上記カードもなくドローもできない場合に발동불가
		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과발동플래그 |= 1
		;ドロー효과仮置き
		SIF GETVAR(@"%듀얼리스트%_ドロー불가") >= 1
			효과발동플래그 |= 2
		SIF (효과발동플래그 & 1) && (효과발동플래그 & 2)
			RETURN 0
		CALL CARD_DRAW_CHECK
	ENDIF
	RETURN 1
ELSEIF 종류 == 戦闘→묘지
	;SIF 발동済_3(듀얼리스트,38255)
	;	RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종류 = モン全般
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件종류 = フィールド
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38255(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前,5
#DIM DYNAMIC 選択횟수
#DIM DYNAMIC 選択結果

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38255,1)
	IF RESULT == 0
		;フィールド、묘지に序章が存在するかチェック
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲묘지 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			;존재하지 않는 경우は選択肢で「はい扱い」
			選択結果 = はい
		ELSE
			;「FairyTale 序章 여행길의 효광」が덱にない場合も選択肢で「いいえ扱い」
			CALL FULLRESET
			효과範囲덱 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 1
				
				CUSTOMDRAWLINE -
PRINTL 덱에 "FairyTale 서장 여행길의 효광"이 없으므로, 드로우합니다.
				CUSTOMDRAWLINE -
				PRINTW 
				選択結果 = いいえ
			ELSE
				IF 듀얼리스트 == "상대"
					;상대の場合は選択肢を省略して「いいえ」扱いにする（ドローをする）
					選択結果 = いいえ
				ELSE
					;存在する場合は１ドローするか「FairyTale 序章 여행길의 효광」を손패に加えるか選択
PRINTL "FairyTale 서장 여행길의 효광"을 패에 추가하시겠습니까?
					CALL YN_CHOICE(듀얼리스트)
					選択結果 = RESULT
				ENDIF
			ENDIF
		ENDIF
		IF 選択結果 == はい
			;選択結果が「はい」の場合はフィールド마법をサーチする。
			CALL FULLRESET
			효과範囲덱 = 1
효과条件名前 = FairyTale 서장 여행길의 효광
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			;「いいえ」の場合は１ドロー
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38255,2)
	IF RESULT == 0
		;상대 필드의 表側표시のモンスター１体の攻撃力を５００ダウン
		CALL FULLRESET
		;효과範囲상대필드 = 1
		효과条件종류 = モン全般
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "상대필드",ゾーン,場所)	
		選択カード = RESULT
		SIF 選択カード != 9999
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"永攻",-500)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
ENDIF


