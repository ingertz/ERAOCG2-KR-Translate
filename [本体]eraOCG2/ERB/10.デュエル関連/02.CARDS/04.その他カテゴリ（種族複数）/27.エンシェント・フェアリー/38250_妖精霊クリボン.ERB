@CARDCAN_38250(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38250)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,38250)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38250,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	효과条件종족:0 = 야수족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 천사족
	효과条件スーパー名前 = エンシェント 페어리 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF 발동済_2(듀얼리스트,38250)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과")
		RETURN 0
	TRYCALLFORM CARD_{破壊대상ID}("종류")
	SIF RESULT >= 10
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID}("カテゴリ")
	SIF !MATCH(RESULTS:0,"페어리") && !MATCH(RESULTS:1,"페어리") && !MATCH(RESULTS:2,"페어리") && !MATCH(RESULTS:3,"페어리")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38250(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前,5
#DIM DYNAMIC 選択횟수
#DIM DYNAMIC 묘지送りレベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38250,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 効追永Ｔ
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38250)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,3)
		;身代わり효과が１体だけだったので、破耐を付与する処理で全体保護
		CALL FULLRESET
		효과条件カテゴリ = 페어리
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",1)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF


