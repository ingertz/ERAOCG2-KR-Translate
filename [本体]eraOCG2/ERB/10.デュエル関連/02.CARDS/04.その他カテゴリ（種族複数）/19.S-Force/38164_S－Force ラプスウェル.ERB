PRINTL 자신 필드의 「S－Force」 몬스터의 수만큼 상대 몬스터를 고르고,
PRINTL 그 카드들을 모두 파괴한다.

@CARDCAN_38164(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38164)
SIF RESULT == 1
	RETURN 0

IF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,38164)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = S－Force
	효과条件固名前 = S－Force 라프스웰
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,38164)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前:0 = S－Force 레트로 액티브
	효과条件名前:1 = S－Force 체이스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = S－Force
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38164(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC リピート数

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38164,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前:0 = S－Force 레트로 액티브
		효과条件名前:1 = S－Force 체이스
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 묘지의 S－Force 효과 대용 카드를 제외합니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = 1
		ENDIF
		
		IF RESULT == 0
			CALL FULLRESET
			효과条件名前:0 = S－Force 레트로 액티브
			효과条件名前:1 = S－Force 체이스
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード)
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件カテゴリ = S－Force
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				リピート数 = RESULT
				CALL FULLRESET
				효과条件複数 = 100 - リピート数
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
			ENDIF
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ = S－Force
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード,1)
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件カテゴリ = S－Force
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				リピート数 = RESULT
				CALL FULLRESET
				효과条件複数 = 100 - リピート数
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")

			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38164,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = S－Force
		효과条件固名前 = S－Force 라프스웰
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

