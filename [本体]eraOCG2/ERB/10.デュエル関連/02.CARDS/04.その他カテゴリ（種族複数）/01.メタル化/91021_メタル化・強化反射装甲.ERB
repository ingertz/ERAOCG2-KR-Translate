@CARDCAN_91021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91021)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,91021)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") != 28023
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_無効:カウンタ") != 0
				CONTINUE
			条件달성 ++
		NEXT
		SIF 条件달성 == 0
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 10
	효과条件종족 = 악마족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = メタル デビルゾアX
		효과条件소환可 = 2
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 10
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = レッドアイズ ブラックフルメタルドラゴン
		효과条件소환可 = 2
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 10
	효과条件종족 = 전사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = メタルフレイム ソ-ドマン
		효과条件소환可 = 2
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 10
	효과条件名前 = メタル イリュ-ジョニスト
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_91021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 存在確認악마
#DIM DYNAMIC 存在確認ドラゴン
#DIM DYNAMIC 存在確認전사
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード종족
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91021)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		;효과条件カテゴリ = 메탈화 강화반사장갑
		;CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = メタル デビルゾアX
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			存在確認악마 = 1
		ENDIF
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		;효과条件カテゴリ = 메탈화 강화반사장갑
		;CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = レッドアイズ ブラックフルメタルドラゴン
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			存在確認ドラゴン = 1
		ENDIF
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		;효과条件カテゴリ = 메탈화 강화반사장갑
		;CALL 효과条件レベル_ADV(6,"以上")
		효과条件名前 = メタルフレイム ソ-ドマン
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			存在確認전사 = 1
		ENDIF
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 10
		효과条件スーパー名前 = メタル イリュ-ジョニスト
		효과条件종족:0 = -1
		SIF 存在確認악마 == 1
			효과条件종족:0 = 악마족
		SIF 存在確認ドラゴン == 1
			효과条件종족:1 = 드래곤족
		SIF 存在確認전사 == 1
			효과条件종족:2 = 전사족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			;TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			;SIF RESULTS == メタル イリュ-ジョニスト
			SIF 選択カード_ID == 20024
				条件달성 = 1
			TRYCALLFORM CARD_{選択カード_ID},"종족"
			選択カード종족 = RESULT

			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 메탈화 강화반사장갑
			CALL 효과条件レベル_ADV(6,"以上")
			효과条件종족 = 기계족
			IF 条件달성 != 1
				SIF 選択カード종족 == 악마족
					효과条件名前 = メタル デビルゾアX
				SIF 選択カード종족 == 드래곤족
					효과条件名前 = レッドアイズ ブラックフルメタルドラゴン
				SIF 選択カード종족 == 전사족
					효과条件名前 = メタルフレイム ソ-ドマン
			ENDIF
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				;CALL CARD_EQUIP_MONSTER(듀얼리스트,カード소환先,"마함",場所)

				SETVAR @"%듀얼리스트%_魔_装:場所", カード소환先
				SETVAR @"%듀얼리스트%_魔_表:場所", 1
				SETVAR @"%듀얼리스트%_装備成功_保", 1
			ENDIF
		ENDIF

	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,400,400)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"破耐")
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"対耐")
ENDIF
