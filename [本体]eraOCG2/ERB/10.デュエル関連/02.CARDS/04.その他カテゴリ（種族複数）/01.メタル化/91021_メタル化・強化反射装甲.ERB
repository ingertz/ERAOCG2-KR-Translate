	CASE "名前"
		RESULTS = 메탈화 강화반사장갑
	CASE "略称"
		RESULTS = 강화반사장갑
	CASE "カテゴリ"
		RESULTS:0 = 메탈화
		RESULTS:1 = 메탈화 강화반사장갑
ENDSELECT


