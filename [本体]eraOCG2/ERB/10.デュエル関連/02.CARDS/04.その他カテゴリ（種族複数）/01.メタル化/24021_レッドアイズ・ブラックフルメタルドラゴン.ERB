@CARD_EXPLANATION_24021(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드는 일반 소환할 수 없으며, 레벨 5 이상의 드래곤족 몬스터를 릴리스하고 발동한 "메탈화 강화반사장갑"의 효과로 특수 소환할 수 있다.
PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 패의 이 카드를 상대에게 보여주고 발동할 수 있다.
PRINTL 덱에서 "메탈화" 함정 카드 1장을 자신 필드에 세트하고, 이 카드를 덱으로 되돌린다.
CALLFORM CARD_ABLE(2,발동誘発)
PRINTL ②: 상대가 효과를 발동했을 때에 발동할 수 있다. 그 발동을 무효로 한다.
PRINTL 그 후, 상대 필드의 공격 표시 몬스터 1장의 원래 공격력만큼의 데미지를 상대에게 줄 수 있다.

@CARDCAN_24021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24021)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24021)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메탈화
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,24021)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード_ID



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24021,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 메탈화
		효과条件종류 = 함정全般
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
		CALL SHUFFLE(듀얼리스트)
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24021,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 10
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件표시 = 10
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード_ID = RESULT:99
			IF 選択カード_ID > 0
				TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",RESULT,1)
			ENDIF
		ENDIF
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

