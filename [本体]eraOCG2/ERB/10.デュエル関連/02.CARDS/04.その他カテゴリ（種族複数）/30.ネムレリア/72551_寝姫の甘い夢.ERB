#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 스위트 드림스 네무렐리아
	CASE "略称"
		RESULTS = 침희의 달콤한꿈
	CASE "カテゴリ"
		RESULTS:0 = 네무렐리아
ENDSELECT


@CARD_72551(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 通常마법
ENDSELECT

RETURN 0

