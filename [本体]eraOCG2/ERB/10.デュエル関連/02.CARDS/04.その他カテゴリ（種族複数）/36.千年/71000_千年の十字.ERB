@CARDCAN_71000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71000)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 엑조디아
	효과条件종류 = モン全般
	효과条件표시 = 10
	CALLFORM 효과条件レベル_ADV(3,"以下")
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,50000)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件名前 = 환상의 소환신 엑조디아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_71000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC EX参照
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択済カード


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71000,20)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 엑조디아
		효과条件종류 = モン全般
		효과条件표시 = 10
		CALLFORM 효과条件レベル_ADV(3,"以下")
		효과条件固名前選択 = 1
		효과条件複数 = 5
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件名前 = 환상의 소환신 엑조디아
			효과条件特不無視 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				FOR カウンタ,0,5
					VARSET RESULT
					VARSET RESULTS
					SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
					SIF MATCH(RESULTS,"천년")
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
					SIF MATCH(RESULTS,"밀레니엄")
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
					IF MATCH(RESULTS,"엑조디아")
						TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "レベル"
						SIF RESULT >= 10
							CONTINUE
					ENDIF
					SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 裏側守備표시
						CONTINUE
					CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,덱行き)
				NEXT
				FOR カウンタ,0,5
					VARSET RESULT
					VARSET RESULTS
					SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
						CONTINUE
					TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "종류"
					SIF RESULT > 10
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "カテゴリ"
					SIF MATCH(RESULTS,"천년")
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "カテゴリ"
					SIF MATCH(RESULTS,"밀레니엄")
						CONTINUE
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "カテゴリ"
					IF MATCH(RESULTS,"엑조디아")
						TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "レベル"
						SIF RESULT >= 10
							CONTINUE
					ENDIF
					SIF GETVAR(@"%듀얼리스트%_魔_表:カウンタ") != 1
						CONTINUE
					CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,덱行き)
				NEXT
				CALL SET_PLAYER_INFO(듀얼리스트,"NS制限",2)
				CALL SET_PLAYER_INFO(듀얼리스트,"SS制限",2)
			ENDIF
		ENDIF
	ENDIF
ENDIF


