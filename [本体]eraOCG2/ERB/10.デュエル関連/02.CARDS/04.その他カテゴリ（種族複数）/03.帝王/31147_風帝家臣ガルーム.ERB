PRINTL 그 후, 덱에서 바람 속성 「제」 몬스터 1장을 패에 더할 수 있다.
PRINTL 이 턴에, 자신은 EX덱에서 몬스터를 특수 소환할 수 없다.
CALLFORM CARD_ABLE(2,필드→묘지)
PRINTL ②: 이 카드가 어드밴스 소환을 위해 릴리스되었을 경우에 발동할 수 있다.
PRINTL 덱에서 이 카드명 이외의 「가신」 몬스터 1장을 패에 더한다.

@CARDSUMMON_AA_31147


@CARDCAN_31147(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31147)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,31147)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 필드→묘지
	SIF 발동済_2(듀얼리스트,31147)
		RETURN 0
	CALL FULLRESET
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"通常소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 가신
	효과条件固名前 = 바람 제 가신 갈-룸
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_31147(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31147,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件召種 = 召種通常
		CALLFORM 효과条件レベル_ADV(5,"以上")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_SUMMON_SHORI(듀얼리스트,場所,"攻撃표시",1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永星",2)

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件속성 = 바람속성
			효과条件カテゴリ = 제
			효과条件任意 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF

ELSEIF 종류 == 필드→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31147,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 가신
		효과条件固名前 = 바람 제 가신 갈-룸
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
