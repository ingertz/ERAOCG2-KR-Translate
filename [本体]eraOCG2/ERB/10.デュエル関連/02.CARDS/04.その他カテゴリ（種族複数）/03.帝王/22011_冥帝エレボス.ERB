@CARDCAN_22011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,22011)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 제왕
	효과条件종류 = 마함全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_2(듀얼리스트,22011)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 제왕
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_22011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22011)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 제왕
		효과条件종류 = 마함全般
		효과条件複数 = 2
		효과条件固名前選択 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF 손패数(対面者) > 0 && 듀얼리스트 == "자신"
PRINTL 상대의 패를 되돌립니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				IF モンスター数(対面者) < 1 && 마함数(対面者) < 1
					RESULT = はい
				ELSE
					RESULT = いいえ
				ENDIF
			ENDIF

			IF RESULT == はい
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"덱")
			ELSEIF RESULT == いいえ
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과範囲상대묘지 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22011,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 제왕
		효과条件종류 = 마함全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 제
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
			
			CALL FULLRESET
			CALLFORM 효과条件レベル_ADV(5,"以上")
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				選択カード_ID = RESULT:99
				TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
				SIF MATCH(RESULTS,"제")
					条件달성 ++
				TRYCALLFORM CARD_{選択カード_ID},"レベル"
				SIF RESULT >= 8
					条件달성 ++

				IF 条件달성 == 2
					TRYCALLFORM CARD_{選択カード_ID},"レベル"
					IF RESULT == 10
						CALL MIKADO_ADVANCE_RELEASE_LV10(듀얼리스트,종류,ゾーン,場所)
					ELSE
						CALL MIKADO_ADVANCE_RELEASE(듀얼리스트,종류,ゾーン,場所)
					ENDIF
				ELSE
					CALL FULLRESET
					효과範囲필드 = 1
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
				SIF RESULT == 1
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
			ENDIF
		ENDIF
	ENDIF
ENDIF
