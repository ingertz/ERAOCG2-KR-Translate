@CARDCAN_31141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31141)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 選択カード持主
#DIM DYNAMIC 反復횟수
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31141)
	IF RESULT == 0
		条件달성 = 1
		CALL FULLRESET
		효과条件속성 = 어둠속성
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース")
		SIF RESULT == 1
			条件달성:0 = 2
		FOR カウンタ,0,条件달성:0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"選択")
			IF RESULT:1 != 9999
				選択カード = RESULT:1
				選択カード_ID = RESULT:99
				TRYCALLFORM CARD_{選択カード_ID},"종류"
				SIF RESULT <= モン全般
					条件달성:1 ++
				TRYCALLFORM CARD_{選択カード_ID},"속성"
				SIF !MATCH(RESULT,어둠속성)
					条件달성:1 ++

				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				CALL CARD_DISPOSE(대상者（CS）,参照先（CS）,選択カード,제외行き)
				IF RESULT == 1
					CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000,1)
					SIF 条件달성:1 != 2
						CONTINUE
					選択カード持主 = 대상者（CS）
					
					TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
					選択カード名前 = %RESULTS%
					SIF 選択カード名前 == ""
						CONTINUE
					CALL FULLRESET
					IF 選択カード持主 == 듀얼리스트
						효과範囲손패 = 1
						효과範囲덱 = 1
						효과範囲EX덱 = 1
						효과範囲묘지 = 1
					ELSE
						효과範囲상대손패 = 1
						효과範囲상대덱 = 1
						효과範囲상대EX덱 = 1
						효과範囲상대묘지 = 1
					ENDIF
효과条件名前 = %選択カード名前%
					효과条件CNT = 1
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					反復횟수 = RESULT
					REPEAT 反復횟수
						CALL FULLRESET
						IF 選択カード持主 == 듀얼리스트
							효과範囲손패 = 1
							효과範囲덱 = 1
							효과範囲EX덱 = 1
							효과範囲묘지 = 1
						ELSE
							효과範囲상대손패 = 1
							효과範囲상대덱 = 1
							효과範囲상대EX덱 = 1
							효과範囲상대묘지 = 1
						ENDIF
효과条件名前 = %選択カード名前%
						효과条件行先플래그 = 제외行き
						CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
					REND
				ENDIF
			ENDIF
		NEXT
	ENDIF
ENDIF
