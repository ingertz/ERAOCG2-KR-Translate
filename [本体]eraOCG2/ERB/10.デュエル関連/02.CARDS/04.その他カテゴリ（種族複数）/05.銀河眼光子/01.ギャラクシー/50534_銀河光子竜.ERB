@CARDCAN_50534(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50534)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,50534)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ:0 = 포톤
	효과条件カテゴリ:1 = 갤럭시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_3(듀얼리스트,50534)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件속성 = 빛속성
	효과条件종류 = レベル持ち
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50534(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	효과条件他所 = 1
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50534,2,X消費1)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"손패に加える","묘지へ送る")
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ:0 = 포톤
			효과条件カテゴリ:1 = 갤럭시
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ:0 = 포톤
			효과条件カテゴリ:1 = 갤럭시
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50534,3)
	IF RESULT == 0
		효과条件속성 = 빛속성
		효과条件종류 = レベル持ち
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL YN_CHOICE(듀얼리스트,"レベル４にする","レベル８にする")
			IF RESULT == 0
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",4,1)
			ELSEIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",8,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF
