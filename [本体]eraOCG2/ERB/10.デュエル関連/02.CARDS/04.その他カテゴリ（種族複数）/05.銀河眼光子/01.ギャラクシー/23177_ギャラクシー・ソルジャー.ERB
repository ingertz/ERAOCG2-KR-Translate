	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 0
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

