@CARDCAN_50535(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50535)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時 
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 表側표시
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,50535)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 엑시즈
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50535(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC このカード
#DIM DYNAMIC X素材数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50535)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件他所 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"지속無効")
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50535,2,X消費1)
	IF RESULT == 0
		このカード = 場所
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF カウンタ == このカード
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:カウンタ") <= -1
				CONTINUE
			X素材数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:カウンタ") + 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"Ｘ",-X素材数)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",このカード,"Ｘ",X素材数)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_Ｘ:カウンタ") <= -1
				CONTINUE
			X素材数 = GETVAR(@"%対面者%_MZ_Ｘ:カウンタ") + 1
			CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"Ｘ",-X素材数)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",このカード,"Ｘ",X素材数)
		NEXT
		CALL FULLRESET
		X素材数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:このカード") + 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",このカード,"一攻",X素材数 * 500)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",このカード,"戦",X素材数)
	ENDIF
ENDIF
