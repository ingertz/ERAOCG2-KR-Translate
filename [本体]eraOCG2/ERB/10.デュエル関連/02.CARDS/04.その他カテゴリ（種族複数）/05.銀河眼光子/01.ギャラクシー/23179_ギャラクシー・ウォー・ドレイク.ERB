	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 1000
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

