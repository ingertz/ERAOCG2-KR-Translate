@CARDNAME_23198,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 갤럭시아이즈 클라우드래곤
	CASE "略称"
RESULTS = 은하안의 운룡
	CASE "カテゴリ"
RESULTS:0 = 갤럭시아이즈
RESULTS:1 = 갤럭시
ENDSELECT


@CARD_23198(参照先)
#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 300
	CASE "守備力"
		RETURN 250
ENDSELECT

RETURN 0

@CARD_EXPLANATION_23198(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①의 효과는 1턴에 1번밖에 사용할 수 없으며, ②의 효과는 듀얼 중에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,필드起動)
PRINTL ①: 이 카드를 릴리스하고 발동할 수 있다.
PRINTL 자신 패 / 묘지에서 이 카드명 이외의 「갤럭시아이즈」 몬스터 1장을 특수 소환한다.
CALLFORM CARD_ABLE(20,묘지起動)
PRINTL ②: 이 카드가 묘지에 존재할 경우 발동할 수 있다.
PRINTL 자신 필드의 「갤럭시아이즈」 엑시즈 몬스터 1장의 엑시즈 소재를 1개 늘린다.

@CARDCAN_23198(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23198)
SIF RESULT == 1
	RETURN 0



IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,23198)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 갤럭시 아이즈
	효과条件종류 = モン全般
	효과条件固名前 = 갤럭시아이즈 클라우드래곤
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_D1(듀얼리스트,23198)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 갤럭시 아이즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23198(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23198,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 갤럭시 아이즈
		효과条件종류 = モン全般
		효과条件固名前 = 갤럭시아이즈 클라우드래곤
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23198,20)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 갤럭시 아이즈
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
		ENDIF
	ENDIF
ENDIF

