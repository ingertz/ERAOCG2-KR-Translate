@CARDCAN_23194(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23194)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	효과条件종류 = レベル持ち
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 포톤
	효과条件종류 = レベル持ち
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF (RESULT != 1 || 발동済_2(듀얼리스트,23194)) && (발동済_3(듀얼리스트,23194) || モンスター数(듀얼리스트) >= 5)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23194(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23194)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 빛속성
		효과条件종류 = レベル持ち
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",選択レベル)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23194)
	IF RESULT == 0
		選択レベル = GETVAR(@"%듀얼리스트%_MZ_星:場所")
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 포톤
		효과条件종류 = レベル持ち
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && 발동済_2(듀얼리스트,23194) == 0
			IF 발동済_3(듀얼리스트,23194) == 0 && モンスター数(듀얼리스트) < 5
				CALL YN_CHOICE(듀얼리스트,"②他の「포톤」몬스터의 レベルを変化させる","③「サテライト トークン」を生成する")
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23194,2)
			CALL FULLRESET
			효과条件カテゴリ = 포톤
			효과条件종류 = レベル持ち
			효과条件他所 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			SIF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永星",選択レベル,1)
		ELSEIF RESULT == 1
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23194,3)
			CALL FULLRESET
			효과추가종류 = 140 + 選択レベル
			CALL CARD_GENERATE(듀얼리스트,123194)
		ENDIF
	ENDIF
ENDIF


