@CARDCAN_1491(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1491)
SIF RESULT == 1
	RETURN 0
IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1491)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1491)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스파이랄－댄디
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 손패
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_1491(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択효과
#DIM DYNAMIC 選択カード

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1491,1)
	IF RESULT == 0
		IF GETVAR(@"%対面者%_덱:0") != -1
			IF 듀얼리스트 == "자신"
				PRINTFORML [1] - 몬스터 카드 
				PRINTFORML [2] - 마법カード
				PRINTFORML [3] -  함정 카드 
				BINPUT
			ELSE
				RESULT = RAND:3 + 1
			ENDIF
			選択효과 = RESULT

			TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
			PRINTW
			CALLFORM CARD_{GETVAR(@"%対面者%_덱:0")}, "종류"
			IF RESULT < 10 && 選択효과 == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ELSEIF RESULT > 30 && 選択효과 == 3
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ELSEIF INRANGE(RESULT,20,29) && 選択효과 == 2
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ELSE
				RETURN 0
			ENDIF
		ELSE
			RETURN 0
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1491,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 스파이랄－댄디
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)

		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"손패")
	ENDIF	
ELSEIF 종류 == 지속효과
	SETVAR @"%듀얼리스트%_MZ_改名:場所", "SPYGAL－ミスティ"
ENDIF
