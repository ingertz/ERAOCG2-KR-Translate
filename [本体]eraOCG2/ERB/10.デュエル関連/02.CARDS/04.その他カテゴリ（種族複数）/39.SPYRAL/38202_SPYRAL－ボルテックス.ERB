@CARDCAN_38202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38202)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 스파이랄
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 스파이랄－댄디
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択효과
#DIM DYNAMIC カウンタ
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38202)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 스파이랄
		효과条件複数 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38202,10)
	IF RESULT == 0
		IF GETVAR(@"%対面者%_덱:0") != -1
			IF 듀얼리스트 == "자신"
				PRINTFORML [1] - 몬스터 카드 
				PRINTFORML [2] - 마법カード
				PRINTFORML [3] -  함정 카드 
				BINPUT
			ELSE
				RESULT = RAND:3 + 1
			ENDIF
			選択효과 = RESULT
			TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
			PRINTW
			CALLFORM CARD_{GETVAR(@"%対面者%_덱:0")}, "종류"
			IF RESULT < 10 && 選択효과 == 1
			ELSEIF RESULT > 30 && 選択효과 == 3
			ELSEIF INRANGE(RESULT,20,29) && 選択효과 == 2
			ELSE
				RETURN 0
			ENDIF
		ELSE
			PRINTFORMW 상대の덱がありません。
			RETURN 0
		ENDIF
		CALL FULLRESET
		효과条件複数 = 98
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38202)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,破壊行き)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,破壊行き)
		NEXT
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 스파이랄－댄디
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF