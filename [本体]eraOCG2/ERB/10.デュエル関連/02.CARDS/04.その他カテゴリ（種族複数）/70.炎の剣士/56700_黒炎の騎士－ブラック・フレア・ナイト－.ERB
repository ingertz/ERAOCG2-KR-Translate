@CARDSUMMON_56700(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前:0 = 블랙 매지션
	素材条件名前:1 = 룡기사블랙 매지션
ELSEIF EX参照 >= 10
素材条件名前 = 화염의 검사
	;素材条件名前:1 = 화염의 검사－투기화염참검
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,56700) 
	RETURN RESULT
ENDIF

@CARDCAN_56700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56700)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_SS_CHECK(듀얼리스트,7056700,"")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

