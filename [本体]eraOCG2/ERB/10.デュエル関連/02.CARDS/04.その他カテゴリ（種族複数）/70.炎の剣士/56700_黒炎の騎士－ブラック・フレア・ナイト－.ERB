	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_7056700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力상승
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 対戦カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時強制誘発
	戦闘カード = 戦闘場所(듀얼리스트)
	対戦カード = 戦闘場所(듀얼리스트,1)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",GETVAR(@"%対面者%_MZ_攻:対戦カード"))
ELSEIF 종류 == ターン終了時強制
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,消滅行き)
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
PRINTL 몬스터를 특수 소환하시겠습니까?
	CALL YN_CHOICE(듀얼리스트)
	IF RESULT == はい
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前:0 = 블랙 매지션
		효과条件名前:1 = 룡기사블랙 매지션
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 화염의 검사
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF