@CARDCAN_1400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1400)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,1400)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,1400)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1	
ENDIF

@CARDEFFECT_1400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC 破壊数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1400,1,X消費1)
	IF RESULT == 0
		REPEAT 3
			VARSET RESULTS
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")}, "カテゴリ"
			SIF MATCH(RESULTS, "라이트로드")
				ドロー枚数 ++
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0)
		REND
		SIF ドロー枚数
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1400,2)
	IF RESULT == 0
		REPEAT 3
			SIF GETVAR(@"%듀얼리스트%_덱:0") == -1
				BREAK
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")}, "カテゴリ"
			SIF MATCH(RESULTS, "라이트로드")
				破壊数 ++
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0)
		REND
		CALL FULLRESET
		효과条件任意 = 1
		효과条件複数 = 100 - 破壊数
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ENDIF