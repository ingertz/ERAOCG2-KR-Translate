	CASE "略称"
RESULTS = 발람니엘
	CASE "カテゴリ"
RESULTS:0 = 누벨즈
ENDSELECT


@CARD_51584(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1850
ENDSELECT

RETURN 0
