@CARDCAN_75152(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75152)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF

	SIF 발동済_1(듀얼리스트,75152)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 누벨즈
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 성과사
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	IF !GROUPMATCH(ゾーン,"필드","묘지","제외")
		SIF !GROUPMATCH(ゾーン,"손패","마함","덱")
		RETURN 0
	ENDIF

	SIF 발동済_1(듀얼리스트,75152)
		RETURN 1
	RETURN 0

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,75152)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_75152(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ランダム
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 攻撃力修正 

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75152,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ:0 = 누벨즈
		효과条件カテゴリ:1 = 성과사
		효과条件分割 = 펜듈럼
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		TRYCALLFORM CARDNAME_{RESULT:1}, "名前"
		選択カード名前 = %RESULTS%
		PRINTFORML 自場소환カード名:%選択カード名前%

		CALL FULLRESET
		효과条件カテゴリ:0 = 누벨즈
		효과条件カテゴリ:1 = 성과사
		효과条件分割 = 펜듈럼
		효과条件固名前 = %選択カード名前%
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,0,0,1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件固カテゴリ:0 = 누벨즈
	효과条件固カテゴリ:1 = 성과사
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"不材")
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75152,2)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;상대分のカード의 발동処理
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT

		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件カテゴリ = 레시피
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			攻撃力修正 = RESULT * 200
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",攻撃力修正)
		ENDIF
	ENDIF
ENDIF