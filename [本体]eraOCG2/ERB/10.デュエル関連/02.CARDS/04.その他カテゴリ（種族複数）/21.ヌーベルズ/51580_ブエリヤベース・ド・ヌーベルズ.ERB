@CARDNAME_51580,参照先
;ココで지정카드의 名前、略称を返す予定
;#FUNCTIONS
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 부야베스 드 누벨즈
	CASE "略称"
RESULTS = 부야베스
	CASE "カテゴリ"
RESULTS:0 = 누벨즈
ENDSELECT


@CARD_51580(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 400
	CASE "守備力"
		RETURN 1850
ENDSELECT

RETURN 0
