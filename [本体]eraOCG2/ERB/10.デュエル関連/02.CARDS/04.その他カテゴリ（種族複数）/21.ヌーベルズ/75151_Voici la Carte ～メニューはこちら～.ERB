@CARDCAN_75151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75151)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,75151)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前起動 = 1
	효과条件カテゴリ = 누벨즈
	효과条件종류 = モン全般
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_75151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ランダム
#DIM DYNAMIC 설정종족
#DIMS DYNAMIC 選択カード名,5
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75151,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件固名前選択 = 1
		효과条件カテゴリ = 누벨즈
		효과条件複数 = 2
		효과範囲덱 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)

		選択カード:0 = RESULT:0
		選択カード:1 = RESULT:1
		IF 選択カード:0 != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:0)")}, "名前"
			選択カード名:0 = %RESULTS%

			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:1)")}, "名前"
			選択カード名:1 = %RESULTS%

			PRINTFORML 상대の손패に加えさせる카드를 選んでください
			CALL YN_CHOICE(対面者,選択カード名:0,選択カード名:1)
			選択カード = 選択カード:RESULT

			CALL FULLRESET
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:選択カード")}, "종족"
			설정종족 = RESULT
			CALL CARD_ADD(듀얼리스트, "덱", "손패", 選択カード)

			IF 설정종족 == 야수족
				CALL FULLRESET
				효과範囲덱 = 1
				효과範囲묘지 = 1
				효과条件任意 = 1
효과条件名前 = 생선 레시피 ～생선 요리의 레시피～
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

			ELSEIF 설정종족 == 전사족
				CALL FULLRESET
				효과範囲덱 = 1
				효과範囲묘지 = 1
				효과条件任意 = 1
효과条件名前 = 고기 레시피 ～고기 요리의 레시피～
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
