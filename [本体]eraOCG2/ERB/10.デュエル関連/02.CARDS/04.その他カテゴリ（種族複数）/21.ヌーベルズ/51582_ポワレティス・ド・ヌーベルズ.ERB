PRINTL 자신 필드의 「누벨즈」 몬스터 1장과 자신 / 상대 필드의 공격 표시 몬스터 1장을 릴리스하고,
PRINTL 패 / 덱에서 레벨 4 또는 5의 「누벨즈」 의식 몬스터 1장을 특수 소환한다.


@CARDCAN_51582(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51582)
SIF RESULT == 1
	RETURN 0


IF 종류 == 특수소환時 || 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,51582)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,51582)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 의식마법
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 1
	효과条件カテゴリ = 누벨즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT <= 1
			RETURN 0
	ELSE
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
    ENDIF

    CALL FULLRESET
    효과範囲손패 = 1
    효과範囲덱 = 1
	효과条件カテゴリ = 누벨즈
	효과条件종류 = 의식
	효과条件レベル:0 = 4
	효과条件レベル:1 = 5
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0		
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,51582)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 1
	효과条件カテゴリ = 누벨즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT <= 1
			RETURN 0
	ELSE
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
    ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 누벨즈
	효과条件종류 = 의식
	효과条件レベル:0 = 4
	효과条件レベル:1 = 5
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0	
	RETURN 1
ENDIF

@CARDEFFECT_51582(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51582,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ELSEIF 종류 == 효과後誘発 || 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51582,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
	    효과条件カテゴリ = 누벨즈
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과条件표시 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"リリース")
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과条件カテゴリ = 누벨즈
			효과条件종류 = 의식
			효과条件レベル:0 = 4
			효과条件レベル:1 = 5
			효과条件特不無視 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF