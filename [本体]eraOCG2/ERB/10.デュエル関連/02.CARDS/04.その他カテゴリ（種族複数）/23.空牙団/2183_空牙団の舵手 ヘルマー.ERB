	CASE "名前"
RESULTS = 공아단의 조타수 헬마
	CASE "略称"
RESULTS = 조타수 헬마
	CASE "カテゴリ"
RESULTS:0 = 공아단
ENDSELECT


@CARD_2183(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 3
