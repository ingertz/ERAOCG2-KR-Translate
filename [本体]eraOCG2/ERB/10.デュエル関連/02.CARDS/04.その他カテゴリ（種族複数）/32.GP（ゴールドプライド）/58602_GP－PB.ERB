@CARDSUMMON_58602(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
素材条件名前 = GP－RB
ELSEIF EX参照 >= 10
	素材条件カテゴリ = 골드 프라이드
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58602) 
	RETURN RESULT
ENDIF



@CARDCAN_58602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58602)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,58602)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,58602) == 0
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF




@CARDEFFECT_58602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == EX소환時
	SIF GETVAR(@"ライフ_%듀얼리스트%") < GETVAR(@"ライフ_%対面者%") 
		효과無効不能 = 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58602,1)
	IF RESULT == 0
		REPEAT 2
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件표시 = 表側표시
			CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,58602)
		REND
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_DISPOSE(듀얼리스트,"필드",場所,덱行き)
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件名前 = GP－RB
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF




