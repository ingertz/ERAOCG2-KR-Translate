CALL CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①: 이 카드의 발동시 효과 처리로서, 이하의 효과를 적용할 수 있다.
PRINTL ●덱에서 "GP" 몬스터 1장을 패에 더하고, 자신은 그 몬스터의 공격력만큼의 LP를 잃는다.
CALL CARD_ABLE(2,효과後誘発)
PRINTL ②: 자신 필드의 앞면 표시의 "GP" 엑스트라 몬스터가 엑스트라 덱으로 되돌아갔을 경우에 발동할 수 있다.
PRINTL 자신은 1장 드로우한다.


@CARDCAN_73811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73811)
SIF RESULT == 1
	RETURN 0



IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,73811)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1


ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_2(듀얼리스트,73811)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 골드 프라이드
	효과条件종류 = EXモン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과山送")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73811,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 골드 프라이드
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		TRYCALLFORM CARD_{RESULT:1}, "攻撃力"
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",RESULT)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73811,2)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF
