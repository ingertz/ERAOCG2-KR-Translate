@CARDCAN_1363(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 효과先
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1363)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時強制
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 고스트릭
	효과条件他所 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1363)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1363(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC リピート횟수
IF 종류 == 소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",3,1)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
		
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1363,2)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",3,1)
		CALL FULLRESET
		효과条件カテゴリ = 고스트릭
		SIF モンスター数(듀얼리스트) != 5
			효과条件종류 = モン全般
		IF 마함数(듀얼리스트) != 5
			효과条件スーパー종류 = 마함全般
			효과条件スーパーカテゴリ = 고스트릭
		ENDIF
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:選択カード")}("종류")
			IF RESULT >= 通常마법
				CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,4,1)
			ELSEIF RESULT < モン全般
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 選択カード,"裏側守備표시")
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件표시 = 裏側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		リピート횟수 = RESULT
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件複数 = 100 - リピート횟수
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")
	ENDIF
ENDIF

