@CARDCAN_1359(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 효과先
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1359)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時強制
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 고스트릭
	효과条件他所 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1357)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_1359(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",3,1)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1359,2)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",3,1)
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")}, "カテゴリ"
		SIF MATCH(RESULTS, "고스트릭")
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:1")}, "カテゴリ"
		SIF MATCH(RESULTS, "고스트릭")
			条件달성 = 1
		CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",2)
		IF 条件달성 == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")

			CALL FULLRESET
			효과条件종류 = 마함全般
			효과条件カテゴリ = 고스트릭
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

