@CARD_EXPLANATION_78020(종류)
#DIM DYNAMIC 종류

CALL CARD_ABLE(0,마함起動 ,손패起動 ,フリー誘発)
PRINTL ①：자신 필드의 "HERO" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터의 속성을 확인하고, 묘지로 보낸다.
PRINTL 이 효과로 그 몬스터가 필드에서 벗어났을 경우,
PRINTL 추가로 같은 속성을 갖는 "M HERO" 몬스터 1장을 EX덱에서 특수 소환한다.

@CARDCAN_78020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78020)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = M HERO
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = HERO
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC 묘지送カード,10
#DIM DYNAMIC 손패묘지送カード,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件속성,7
#DIM DYNAMIC 選択속성
;융합소환
VARSET 묘지送カード, 35
VARSET 손패묘지送カード, 35

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78020)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		효과条件カテゴリ = HERO
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:RESULT")},"속성"
			選択속성 = RESULT
			CALL CARD_DISPOSE(듀얼리스트,"필드",RESULT)
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件속성 = 選択속성
			효과条件カテゴリ = M HERO
			효과条件特不無視 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF		
ENDIF
