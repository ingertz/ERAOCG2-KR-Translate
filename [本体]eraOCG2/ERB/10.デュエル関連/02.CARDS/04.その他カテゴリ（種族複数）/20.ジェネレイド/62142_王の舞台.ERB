@CARDNAME_62203,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 제네레이드 스테이지
	CASE "略称"
RESULTS = 왕의 무대
	CASE "カテゴリ"
RESULTS:0 = 제네레이드
ENDSELECT


@CARD_62203(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_62203(종류)
#DIM DYNAMIC 종류

