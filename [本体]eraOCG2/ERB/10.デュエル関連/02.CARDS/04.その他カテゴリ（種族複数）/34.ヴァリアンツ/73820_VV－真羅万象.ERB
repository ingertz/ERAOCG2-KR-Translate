@CARDNAME_73820,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 밸리언츠-월드－진라반상
	CASE "略称"
RESULTS = VV－진라반상
	CASE "カテゴリ"
RESULTS:0 = 밸리언츠
ENDSELECT


@CARD_73820(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_73820(종류)
#DIM DYNAMIC 종류
PRINTL 자신 필드는 「VV－진라반상」이 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
PRINTL ①：이 카드의 발동 시의 효과 처리로서, 덱 묘지에서
PRINTL 이 카드명 이외의 「밸리언츠」 필드 마법 1장을 상대의 필드 존에 앞면 표시로 놓는다.
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②：서로의 필드에 필드 마법이 존재할 경우, 자신의 마법 & 함정 존의 몬스터 카드 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 카드를 특수 소환한다.
PRINTL 그 후, 필드의 이 카드명 이외의 「밸리언츠」 필드 마법을 선택하고, 그 효과를 발동할 수 있다.


@CARDCAN_73820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73820)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,73820)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件종류 = フィールド
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件표시 = 表側표시
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 他효과起動
	RETURN 1
ENDIF

@CARDEFFECT_73820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73820,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 밸리언츠
		효과条件종류 = フィールド
		효과条件固名前 = 밸리언츠-월드－진라반상
		효과条件任意 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대마함",ゾーン,場所)
		選択カード = RESULT
		IF RESULT != 9999
			選択カード_ID = GETVAR(@"%対面者%_마함:選択カード")
			CALLFORM CARD_STANBY(選択カード_ID,듀얼리스트,他효과起動,"마함",場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73820)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件종류 = フィールド
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 밸리언츠
		효과条件종류 = フィールド
		효과条件固名前 = 밸리언츠-월드－진라반상
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",2)
	ENDIF
ELSEIF 종류 == 他효과起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73820)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "VV－진라반상")
ENDIF
