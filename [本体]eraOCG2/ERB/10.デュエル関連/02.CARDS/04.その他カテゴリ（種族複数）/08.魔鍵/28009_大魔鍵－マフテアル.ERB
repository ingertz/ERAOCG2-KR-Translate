VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 대마건－마프테알
	CASE "略称"
RESULTS = 마프테알
	CASE "カテゴリ"
RESULTS:0 = 마건
ENDSELECT


@CARD_28009(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 1600
	CASE "튜너"
		RETURN 1
ENDSELECT

RETURN 0

