@CARDSUMMON_55504(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 8
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件カテゴリ = 마건
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件종류 = 通常モン
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,55504) 
	RETURN RESULT
ENDIF


@CARDCAN_55504(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55504)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,55504)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마건
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_3(듀얼리스트,55504)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	FOR カウンタ,1,8
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = カウンタ
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과条件속성 = カウンタ
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般",1)
		SIF RESULT != 1
			CONTINUE
		条件달성 = 1
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_55504(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"効済",1)
	IF 戦闘場所(듀얼리스트,1) != 5
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"直無",1)
	ENDIF
	
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55504,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 마건
		효과条件종류 = 마함全般
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55504,3)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"묘지")
	ENDIF
ENDIF



