@CARDCAN_61046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61046)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 通常モン
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	CALL RESETAREA_MAT
	素材範囲손패 = 1
	素材範囲필드 = 1
	SIF 条件달성 == 1
		素材範囲덱 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件종류:0 = 의식
	효과条件종류:1 = 융합
	효과条件カテゴリ = 마건
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード종류
#DIM DYNAMIC 選択カードID

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61046)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 通常モン
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1
			
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		SIF 条件달성 == 1
			素材範囲덱 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
		효과条件종류:0 = 의식
		효과条件종류:1 = 융합
		효과条件カテゴリ = 마건
		효과条件소환可 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カードID = RESULT:99
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			TRYCALLFORM CARD_{選択カードID},"종류"
			選択カード종류 = RESULT

			TRYCALLFORM CARDSUMMON_{選択カードID}(듀얼리스트,選択カード)
			IF 選択カード종류 == 융합
				CALL FUSSUMMON(듀얼리스트,選択カード)
			ELSEIF 選択カード종류 == 의식
				TRYCALLFORM RITSUMMON(듀얼리스트,選択カード,"손패")
			ENDIF
		ENDIF
	ENDIF		
ENDIF
