	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25351,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
효과条件名前 = 스크랩
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

