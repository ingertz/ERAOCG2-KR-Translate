@CARD_EXPLANATION_72751(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,소환強制誘発)
PRINTL ①: "파괴수" 몬스터가 소환 / 특수 소환될 때마다 발동한다.
PRINTL 이 카드에 파괴수 카운터를 1개 올린다(최대 3개까지).
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②: 1턴에 1번, 필드의 "파괴수" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 파괴하고, 그 후, 그 컨트롤러의 필드에 "파괴수" 몬스터 1장을 자신의 덱에서 특수 소환한다.
PRINTL 상대의 몬스터를 파괴했을 경우, 특수 소환할 수 있는 "파괴수" 몬스터는 레벨 7 이상이 된다.
CALLFORM CARD_ABLE(2,ターン終了時)
PRINTL ③: 자신 엔드 페이즈에 이 카드의 파괴수 카운터가 2개 이상 있을 때 발동할 수 있다.
PRINTL 덱에서 "파괴수의 출현기록" 이외의 "파괴수" 마법 / 함정 카드 1장을 패에 넣는다.


@CARDCAN_72751(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72751)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,72751)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 파괴수
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件カテゴリ = 파괴수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 最終소환決者 != 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	CALLFORM CARDNAME_{最終소환ID}("カテゴリ") 
	SIF !MATCH(RESULTS, "파괴수")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_2(듀얼리스트,72751)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 2
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 파괴수
	효과条件종류 = 마함全般
	효과条件固名前 = 파괴수의 출현기록
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72751(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72751,1)
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件カテゴリ = 파괴수
	CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	選択カード = RESULT
	IF 選択カード != 9999
		CALL CARD_SELECT(듀얼리스트,選択カード)
		CALL CARD_DISPOSE(대상者（CS）,参照先（CS）,選択カード（CS）,묘지行き)
		IF 本参照先（CS） == "필드" 
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 파괴수
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF 本参照先（CS） == "상대필드" 
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 파괴수
			CALL 효과条件レベル_ADV(7, "以上")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,,1)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72751)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 소환強制誘発
	PRINTFORML 파괴수의 출현기록『{場所}』に카운터が乗りました。
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72751,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 파괴수
		효과条件종류 = 마함全般
		효과条件固名前 = 파괴수의 출현기록
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

