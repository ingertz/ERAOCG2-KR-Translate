@CARDNAME_58572,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = X•HERO 원더 드라이버
	CASE "略称"
RESULTS = W 드라이버
	CASE "カテゴリ"
RESULTS:0 = HERO
RESULTS:1 = X•HERO
ENDSELECT


@CARD_58572(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 1900
	CASE "守備力"
		RETURN 1200
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0
