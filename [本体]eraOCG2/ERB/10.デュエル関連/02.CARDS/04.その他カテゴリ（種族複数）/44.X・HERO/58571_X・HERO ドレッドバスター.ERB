#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = X•HERO 드레드버스터
	CASE "略称"
RESULTS = 드레드버스터
	CASE "カテゴリ"
RESULTS:0 = HERO
RESULTS:1 = X•HERO
ENDSELECT


@CARD_58571(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 3
