#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要링크数 = 3
素材条件カテゴリ = HERO

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,58571) 
	RETURN RESULT
ENDIF

