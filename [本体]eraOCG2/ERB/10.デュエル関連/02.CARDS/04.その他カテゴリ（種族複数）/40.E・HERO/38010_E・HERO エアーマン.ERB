@CARDEFFECT_38010(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件合致数
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38010)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			PRINTL 
			CALL YN_CHOICE(듀얼리스트,"●덱에서 「HERO」モンスター１体を손패に加える。","●このカード 이외의 자신 필드의 「HERO」몬스터의 数まで、상대 필드의 마법 / 함정카드를 選んで破壊する。")
		ELSE
			RESULT = はい
		ENDIF
		
		IF RESULT == はい
			CALL FULLRESET
			효과条件カテゴリ = HERO
			효과条件종류 = モン全般
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = HERO
			효과条件CNT = 1
			효과条件他所 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			条件合致数 = RESULT
			FOR カウンタ,0,条件合致数
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
			NEXT
		ENDIF
	ENDIF
ENDIF
