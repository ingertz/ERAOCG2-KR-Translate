@CARDCAN_38021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38021)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,38021)
			RETURN 0
		SIF 戦闘場所(듀얼리스트) == 5
			RETURN 0
		CALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
		SIF !MATCH(RESULTS, "HERO")
			RETURN 0
		RETURN 1

	ELSEIF ゾーン == "필드" 
		SIF 발동済_2(듀얼리스트,38021)
			RETURN 0
		SIF 戦闘場所(듀얼리스트) != 場所
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = HERO
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1

	ELSE
		RETURN 0
	ENDIF
ENDIF

@CARDEFFECT_38021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力상승
#DIM DYNAMIC 戦闘カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発 && ゾーン == "손패"
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38021,1)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一攻",2500)
	ENDIF

ELSEIF 종류 == 攻撃時誘発 && ゾーン == "필드" 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38021,2)
	IF RESULT == 0	
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = E•HERO
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}("攻撃力")
			攻撃力상승 = RESULT
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力상승)
		ENDIF
	ENDIF
ENDIF


