@CARDSUMMON_58514(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
素材条件名前 = E•HERO 네오스
ELSEIF EX参照 >= 10
	素材条件レベル = 10
	素材条件종족 = 악마족
	素材条件カテゴリ = 유벨
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58514) 
	RETURN RESULT
ENDIF



@CARDCAN_58514(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58514)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_3(듀얼리스트,58514)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件名前 = E•HERO 네오스
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58514(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ量
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 対戦カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
ELSEIF 종류 == 攻撃時強制誘発
	PRINTFORML
	PRINTFORML 【네오스 ワイズマン의 효과！】
	PRINTFORML
	対戦カード = 戦闘場所(듀얼리스트,1)
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",GETVAR(@"%対面者%_MZ_攻:対戦カード"),1)
	CALL LIFE_CHANGE(듀얼리스트,"増加","효과",GETVAR(@"%対面者%_MZ_守:対戦カード"))
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58514,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = E•HERO 네오스
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
