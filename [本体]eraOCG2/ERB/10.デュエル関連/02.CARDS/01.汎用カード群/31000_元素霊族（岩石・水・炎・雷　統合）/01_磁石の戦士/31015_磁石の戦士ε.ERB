@CARDCAN_31015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31015)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,31015)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마그넷 워리어
	효과条件固名前 = 마그넷 워리어ε
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 取込カード略称
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 取込カードID
#DIMS DYNAMIC 取込カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31015,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 마그넷 워리어
		효과条件固名前 = 마그넷 워리어ε
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			取込カードID = RESULT:1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",取込カードID,上書きモード)
			CALLFORM CARDNAME_{取込カードID}("略称")
			取込カード略称 = %RESULTS%

			TRYCALLFORM CARDNAME_{取込カードID}, "名前"
			取込カード名前 = %RESULTS%

			PRINTFORMW 마그넷 워리어εは%取込カード略称%にその姿を変えた！
			IF モンスター数(듀얼리스트) <= 4
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件任意 = 1
				효과条件固名前 = %取込カード名前%
				효과条件カテゴリ = 마그넷 워리어
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF


