	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55511,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 마그넷 워리어 마그넷 발키리온
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
