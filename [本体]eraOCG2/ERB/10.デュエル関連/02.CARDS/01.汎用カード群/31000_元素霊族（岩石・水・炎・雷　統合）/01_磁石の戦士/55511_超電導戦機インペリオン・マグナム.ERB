				CALL CARD_SP_SUMMON(듀얼리스트, "EX덱", 場所)	
			ENDIF
		ENDIF
	ENDIF


ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55511,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
	ENDIF

