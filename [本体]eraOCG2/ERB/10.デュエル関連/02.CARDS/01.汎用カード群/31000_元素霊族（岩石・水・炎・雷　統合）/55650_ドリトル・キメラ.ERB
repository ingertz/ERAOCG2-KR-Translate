@CARDCAN_55650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55650)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,55650)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_55650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正



IF 종류 == 攻守変動
	CALL FULLRESET
	효과条件속성 = 화염속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500,500)
	CALL FULLRESET
	효과条件속성 = 물속성
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-400,-400,55650)
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55650,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 화염속성
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ENDIF