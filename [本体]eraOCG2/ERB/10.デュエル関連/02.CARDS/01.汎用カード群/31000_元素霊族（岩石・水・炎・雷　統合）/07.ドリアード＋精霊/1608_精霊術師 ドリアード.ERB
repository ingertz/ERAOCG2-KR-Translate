@CARD_1608(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RESULT:1 = 땅속성
		RESULT:2 = 물속성
		RESULT:3 = 바람속성
		RESULT:4 = 화염속성
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250420
ENDSELECT

RETURN 0
