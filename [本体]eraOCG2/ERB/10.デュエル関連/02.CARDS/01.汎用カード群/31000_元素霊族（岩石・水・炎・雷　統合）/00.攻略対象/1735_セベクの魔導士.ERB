@CARDCAN_1735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1735)
SIF RESULT == 1
	RETURN 0

IF 종류 == ライフ変強制誘発
	SIF 발동済_1(듀얼리스트,1735)
		RETURN 0	
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"直接戦闘","戦闘")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,1735)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_回復者") != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == ライフ変強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1735,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",ダメージ受値)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1735,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000)
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000,1)
	ENDIF
ENDIF
