	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1667,2)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲제외 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		;ssされた時、自身は제외されてない
		攻撃力修正 = (RESULT - 1) * 100
		CALL FULLRESET
		효과範囲제외 = 1
효과条件名前 = 헬플레임 밴시
		효과추가종류 = 100000 + 攻撃力修正
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF