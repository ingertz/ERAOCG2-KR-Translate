	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1667,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件속성 = 화염속성
		효과条件종족 = 원소정령족
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
