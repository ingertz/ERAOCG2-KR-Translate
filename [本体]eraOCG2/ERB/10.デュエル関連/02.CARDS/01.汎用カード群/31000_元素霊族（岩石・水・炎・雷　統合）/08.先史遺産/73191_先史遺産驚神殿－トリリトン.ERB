@CARDCAN_73191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동不可,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73191)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,73191)
		발동不可:0 = 1
	SIF モンスター数(듀얼리스트) >= 5
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固カテゴリ = 오파츠
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
효과条件カテゴリ = 오파츠
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:0 = 1
	
	SIF 발동済_2(듀얼리스트,73191)
		발동不可:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 오파츠
	효과条件종류 = 엑시즈
	효과条件スーパーカテゴリ = 넘버즈
	효과条件スーパー종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:1 = 1
	
	SIF 발동不可:0 == 1 && 발동不可:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동不可,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,73191)
		발동不可:0 = 1
	SIF モンスター数(듀얼리스트) >= 5
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固カテゴリ = 오파츠
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
효과条件カテゴリ = 오파츠
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:0 = 1
	
	SIF 발동済_2(듀얼리스트,73191)
		발동不可:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 오파츠
	효과条件종류 = 엑시즈
	효과条件スーパーカテゴリ = 넘버즈
	효과条件スーパー종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:1 = 1
	
	IF 발동不可:0 != 1 && 발동不可:1 != 1
		CALL YN_CHOICE(듀얼리스트,"①：패에서 「오파츠」몬스터를 リリースなしで소환する。","②：자신의 「오파츠」「넘버즈」ＸのＸ소재를 増やす。")
	ELSEIF 발동不可:0 != 1
		RESULT = 0
	ELSEIF 발동不可:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73191,1)
		IF RESULT == 0
			CALL FULLRESET
효과条件カテゴリ = 오파츠
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
			ENDIF
		ENDIF
	
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73191,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲필드 = 1
효과条件カテゴリ = 오파츠
			효과条件종류 = 엑시즈
			효과条件スーパーカテゴリ = 넘버즈
			효과条件スーパー종류 = 엑시즈
			CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"Ｘ",1)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73191)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF