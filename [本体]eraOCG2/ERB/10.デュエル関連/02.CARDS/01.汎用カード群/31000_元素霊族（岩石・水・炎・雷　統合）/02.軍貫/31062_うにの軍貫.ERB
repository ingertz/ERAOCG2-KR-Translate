@CARDCAN_31062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31062)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,31062)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,31062,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件他所 = 1
	효과条件カテゴリ = 군관
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,31062)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 샤리 군관
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31062,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 군관
		효과条件他所 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "손패",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)	

			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:選択カード")}, "カテゴリ"
			IF RESULTS == "샤리 군관" && モンスター数(듀얼리스트) != 5
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 選択カード)

			ELSEIF RESULTS == "샤리 군관" && モンスター数(듀얼리스트) >= 5
PRINTL 앗! 상대는 놓여진 초밥에 전혀 손을 대지 않고 있다!
				PRINTW 今はこのしゃりを出すべき時ではありません。

			ELSE
				CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード,2)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31062,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 군관
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			IF GETVAR(@"%듀얼리스트%_MZ_星:選択カード") == 5
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",4,1)
			ELSE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",5,1)
			ENDIF
			CALL FULLRESET
			효과条件カテゴリ = 샤리 군관
			효과条件任意 = 1
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



