PRINTL 덱에서 땅 속성 원소정령족 몬스터 1장을 묘지로 보낸다.

@CARDCAN_73141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73141)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 원소정령족
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_1(듀얼리스트,73141)
		RETURN 0
	CALL FULLRESET
	효과条件종족 = 원소정령족
	효과条件종류 = 싱크로
	효과条件속성 = 바람속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 땅속성
	효과条件종류 = 원소정령족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_73141(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73141)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 원소정령족
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		IF RESULT == 1
			TRYCALLFORM CARDNAME_{RESULT:1},"カテゴリ"
			IF RESULTS == "아다마시아"
				CALL FULLRESET
				효과条件종류 = 원소정령족
				CALL 효과条件レベル_ADV(4,"以下")
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_ADD_DECK_SPC(듀얼리스트,"덱",選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73141,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 땅속성
		효과条件종류 = 원소정령족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
