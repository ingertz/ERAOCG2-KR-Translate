@CARDCAN_31100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31100)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 발동済_1(듀얼리스트,31100)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,31100,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%対面者%_モン出現数") < 5
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_31100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力手渡

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31100,2)
	IF RESULT == 0

		CALL FULLRESET
		효과추가종류 = 40
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"リリース")
		攻撃力手渡 = RESULT:2

		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)

		CALL FULLRESET
		효과추가종류:0 = 攻撃力手渡 + 100000
		효과추가종류:1 = 攻撃力手渡 + 150000
		CALL CARD_GENERATE(対面者,131100)
	ENDIF
ENDIF


