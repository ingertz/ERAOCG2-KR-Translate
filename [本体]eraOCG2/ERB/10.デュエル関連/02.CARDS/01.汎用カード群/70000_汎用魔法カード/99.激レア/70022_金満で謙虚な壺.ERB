@CARDCAN_70022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70022)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,70022)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 現EX山札数(듀얼리스트) < 3
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 枚数倍化
#DIM DYNAMIC ランダム제외

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70022,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT >= 6
PRINTL 몇 장을 제외합니까?
			CALL YN_CHOICE(듀얼리스트,"6枚","3枚")
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			枚数倍化 = 2
		ELSEIF RESULT == 1
			枚数倍化 = 1
		ENDIF
		CALL FULLRESET
		효과条件複数 = 3 * 枚数倍化
		효과条件行先플래그 = 消滅行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		IF RESULT == 1	
			CALL FULLRESET
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,(3 * 枚数倍化))
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"ドロー불가",1)
		CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ半化",1)
	ENDIF
ENDIF

