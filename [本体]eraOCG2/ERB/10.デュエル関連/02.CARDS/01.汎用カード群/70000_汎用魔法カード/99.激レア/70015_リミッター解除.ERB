@CARDCAN_70015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70015)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	IF 듀얼리스트 != "자신"
		SIF バトルフェイズ != 1
			RETURN 0
	ENDIF
	
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 기계족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	SETCOLOR C_RED
	ALIGNMENT CENTER
	CUSTOMDRAWLINE ╱
	CUSTOMDRAWLINE ╲
PRINTL 경고 경고 경고 경고 경고 경고 경고 경고 경고
	CUSTOMDRAWLINE ╱
	CUSTOMDRAWLINE ╲
	ALIGNMENT LEFT
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70015)
	RESETCOLOR
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_種:{カウンタ}") != 기계족
				CONTINUE
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ"))
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"終処",破壊行き)
		NEXT
	ENDIF
ENDIF