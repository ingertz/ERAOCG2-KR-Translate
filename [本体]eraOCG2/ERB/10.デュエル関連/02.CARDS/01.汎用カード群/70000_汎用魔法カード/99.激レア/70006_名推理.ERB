PRINTL ①: 상대는 1~12까지의 임의의 레벨을 선언한다.
PRINTL 몬스터 카드가 나올 때까지 덱 위에서 카드를 넘겨,
PRINTL 그 몬스터의 레벨이 선언된 몬스터의 레벨과 같은 경우, 또는 그 몬스터가 특수 소환할 수 없는 경우,
PRINTL 넘긴 카드를 전부 묘지로 보낸다.
PRINTL 다를 경우, 그 몬스터를 특수 소환하고, 나머지 넘긴 카드를 전부 묘지로 보낸다.

@CARDCAN_70006(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70006)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_70006(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 묘지送り枚数
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70006)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		IF 듀얼리스트 != "자신"
			PRINT [1]　
			PRINT [2]　
			PRINT [3]　
			PRINT [4]　
			PRINT [5]　
PRINTL [6]
			PRINT [7]　
			PRINT [8]　
			PRINT [9]　
			PRINT [10]　
			PRINT [11]　
PRINTL [12]
			BINPUT
			選択レベル = RESULT
		ELSE
			選択レベル = 2
		ENDIF
		PRINTL
		PRINTFORMW {選択レベル}が宣言されました
		PRINTL
		;ル-プ開始だ-っGO-っ
		$INPUT_LOOP
		FOR カウンタ,0,紙束最大値
			;存在しないところまで着たのでNG、묘지送りも行われない。
			IF GETVAR(@"%듀얼리스트%_덱:カウンタ") <= -1
				PRINTFORML 処理を終了します。
				BREAK
			ENDIF
			;情報표시
			TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:カウンタ"))
			PRINTW 
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:カウンタ")}, "종류"
			IF RESULT <= 10
				;의식はダメ
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:カウンタ")}, "종류"
				IF RESULT == 의식
					PRINTW 특수소환できないため묘지へ送られます。
					묘지送り枚数 = カウンタ + 1
					BREAK
				ENDIF
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:カウンタ")}, "특수불가"
				IF RESULT == 1
					PRINTW 특수소환できないため묘지へ送られます。
					묘지送り枚数 = カウンタ + 1
					BREAK
				ENDIF
				;특수소환できなかったらダメ！死刑！
				CALL CARD_SS_CHECK(듀얼리스트,GETVAR(@"%듀얼리스트%_덱:カウンタ"),"덱")
				IF RESULT == 1
					PRINTW 특수소환できないため묘지へ送られます。
					묘지送り枚数 = カウンタ + 1
					BREAK
				ENDIF
				;レベル同じだったらダメ！死刑！
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:カウンタ")}, "レベル"
				PRINTFORML 宣言したレベル　　：{選択レベル}
				PRINTFORMW 몬스터의 レベル：{RESULT}
				PRINTL
				IF RESULT == 選択レベル
					PRINTW 推理が当たったため묘지へ送られます。
					묘지送り枚数 = カウンタ + 1
					BREAK
				ENDIF

				;オ-ルオッケ-、もっと犯罪していこうな！
				PRINTW 推理が外れたため특수소환します。
				묘지送り枚数 = カウンタ
				SIF 묘지送り枚数 >= 1
					CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",묘지送り枚数)

				CALL FULLRESET
				효과範囲덱 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"",1)
				RETURN 0
			ENDIF
		NEXT

		IF 묘지送り枚数 >= 1
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",묘지送り枚数)
		ENDIF
	ENDIF
ENDIF
