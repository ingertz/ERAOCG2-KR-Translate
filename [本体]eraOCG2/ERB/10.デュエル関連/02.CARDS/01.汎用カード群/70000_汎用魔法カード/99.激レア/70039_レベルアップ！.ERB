@CARDCAN_70039(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 取込カードID

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70039)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = Lv
	효과条件固名前:0 = 알루어 퀸 LV7
	효과条件固名前:1 = 호루스의 흑염룡ＬＶ.８
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70039(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 소환カード
#DIM DYNAMIC 取込カードID
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 取込カード名称

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70039)
	IF RESULT == 0
		;通常마법汎用발동後묘지送り処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = Lv
		효과条件固カテゴリ = 究極体

		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		取込カードID = GETVAR(@"%듀얼리스트%_필드:選択カード")
		IF 選択カード != 9999
			CALLFORM CARDNAME_{取込カードID}("略称")
			取込カード名称 = %RESULTS%
			PRINTFORMW %取込カード名称%는진화する！
			TRYCALLFORM CARDNAME_{取込カードID}, "カテゴリ"	
			IF MATCH(RESULTS, "OVER")
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永星",2)
			ELSE
				CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード)
				取込カードID = 取込カードID + 100000
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,取込カードID)
            ENDIF
		ENDIF
	ENDIF
ENDIF
