@CARDNAME_76000,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 수호자의 힘
	CASE "略称"
		RESULTS = 수호자의 힘
	CASE "カテゴリ"
		RESULTS:0 = 수호자의 힘
		RESULTS:1 = 마력카운터
ENDSELECT


@CARD_76000(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 装備마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_76000(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,攻撃時強制誘発)
PRINTL ①：장착 몬스터가 공격 선언 시에 발동한다。
PRINTL 이 카드에 마력 카운터를 1개 둔다。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②：장착 몬스터의 공격력 / 수비력은 이 카드의 마력 카운터의 수× 500 올린다。
CALLFORM CARD_ABLE(0,身代효과)
PRINTL ③：장착 몬스터가 전투 / 효과로 파괴될 경우、
PRINTL 대신에 이 카드의 마력 카운터를 1개 없앨 수가 있다。
PRINTL 

@CARDCAN_76000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,76000)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%装備者%_戦闘カード") != 装備先
		RETURN 0
	SIF GETVAR(@"%装備者%_필드:装備先") == -1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_魔Ｃ:場所") < 1
		RETURN 0

	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 装備先
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_76000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード




IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,76000)
	IF RESULT == 0
		;패에서 발동 후、마법トラップ존에 カード이동
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"魔Ｃ",1)
ELSEIF 종류 == 攻守変動
	攻撃力修正 = 500 * GETVAR(@"%듀얼리스트%_魔_魔Ｃ:場所")
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,攻撃力修正,攻撃力修正)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,76000)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"魔Ｃ",-1)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
