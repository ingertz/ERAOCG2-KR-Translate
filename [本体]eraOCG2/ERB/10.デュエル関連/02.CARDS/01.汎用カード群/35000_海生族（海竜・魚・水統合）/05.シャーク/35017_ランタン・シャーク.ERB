@CARD_35017(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 4
	CASE "Xレベル"
		RESULT:1 = 5
		RETURN 3
	CASE "攻撃力"
		RETURN 1100
	CASE "守備力"
		RETURN 800
ENDSELECT

RETURN 0

