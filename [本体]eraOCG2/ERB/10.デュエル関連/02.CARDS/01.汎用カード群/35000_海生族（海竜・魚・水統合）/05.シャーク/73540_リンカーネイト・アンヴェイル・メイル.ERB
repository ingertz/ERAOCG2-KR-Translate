@CARDCAN_73540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73540)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT
IF (종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1) || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%装備者%_MZ_戦済:装備先") == 0
		RETURN 0

	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	CALL 素材条件レベル_ADV(5,"以上")
	素材条件속성 = 물속성
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,73540)
		RETURN 0
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1

	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "종류"
	SIF RESULT != 엑시즈
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 装備先
#DIM DYNAMIC 攻撃力상승

IF (종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1) || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73540)
	IF RESULT == 0
		;通常마법汎用処理
		CALL FULLRESET
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			素材条件속성 = 물속성
			효과条件종류 = 엑시즈	
			CALL 효과条件レベル_ADV(5,"以上")
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カードB = RESULT
			IF 選択カードB != 9999
				CALL RESETCONDITION_MAT
				必要素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 選択カード
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードB)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73540,1)
	IF RESULT == 0
		;패에서 발동後、마법トラップ 존에 カード이동
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73540)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,73540)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
효과条件名前 = 리인카네이트 언베일 메일
	CALL CARD_CHOOSE_BASIC(듀얼리스트, "묘지",ゾーン,場所)	
	選択カード = RESULT
	IF 選択カード != 9999
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 엑시즈
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"묘지")
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"対耐")
ENDIF

