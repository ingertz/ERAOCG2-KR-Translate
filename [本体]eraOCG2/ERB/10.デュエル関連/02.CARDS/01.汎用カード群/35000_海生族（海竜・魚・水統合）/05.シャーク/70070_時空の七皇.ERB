@CARDCAN_70070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70070)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,70070)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 오버핸드 레드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_70070(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 설정종족
#DIM DYNAMIC 설정속성

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70070,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과条件カテゴリ = 오버핸드 레드
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99

			TRYCALLFORM CARD_{選択カード_ID}, "レベル"
			설정レベル = RESULT

			TRYCALLFORM CARD_{選択カード_ID}, "종족"
			설정종족 = RESULT
			TRYCALLFORM CARD_{選択カード_ID}, "속성"
			설정속성 = RESULT

			CALL FULLRESET
			효과条件レベル = 설정レベル
			효과条件スーパーレベル = 설정レベル
			효과条件종족 = 설정종족
			효과条件スーパー속성 = 설정속성
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_ADD_DECK_SPC(듀얼리스트,"손패",選択カード)
				ENDIF
				EX소환可能종류 = 엑시즈
				CALL CARD_EX_RESTRICTION(듀얼리스트)

			ENDIF
		ENDIF
	ENDIF
ENDIF
