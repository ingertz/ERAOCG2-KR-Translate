	CASE "カテゴリ"
RESULTS:0 = 샤크
ENDSELECT

@CARD_35015(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 5
	CASE "Xレベル"
		RESULT:1 = 4
		RETURN 3
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 500
ENDSELECT

RETURN 0

