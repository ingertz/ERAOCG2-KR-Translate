#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 2000
ENDSELECT

RETURN 0

