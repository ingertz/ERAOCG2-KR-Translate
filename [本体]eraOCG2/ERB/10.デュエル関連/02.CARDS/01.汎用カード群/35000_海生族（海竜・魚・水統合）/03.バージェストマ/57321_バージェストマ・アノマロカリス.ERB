@CARDCAN_57321(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57321)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,57321)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 現山札数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과破壊")
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース")
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패墓送")
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57321(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC リピート횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57321,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57321,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 버제스토마 아노말로카리스
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		リピート횟수 = RESULT

		REPEAT リピート횟수
			TRYCALLFORM CARD_UI(GETVAR(@"%듀얼리스트%_덱:0"))
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")}, "종류"
			IF RESULT == 通常함정 || RESULT == 지속함정
				CALL CARD_ADD(듀얼리스트,"덱","손패",0)
			ELSE
				CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",1)
			ENDIF
		REND
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
ENDIF