@CARDCAN_51600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51600)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,51600)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= 0
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%装備者%_필드:装備先") == -1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 常在無効
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%装備者%_필드:装備先") == -1
		RETURN 0
	SIF 装備先 != 戦闘場所(듀얼리스트)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51600,1,X消費2)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ELSEIF 종류 == 지속효과
	IF ゾーン == "필드"
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")
	ELSEIF ゾーン == "마함"
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"戦阻")
		TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "종류"
		IF RESULT == 엑시즈
			CALL FULLRESET
			CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"対耐")
		ENDIF
	ENDIF
ELSEIF 종류 == 常在無効
	CALL FULLRESET
;	효과元カードID = 51600
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効",0,51600)
ENDIF
