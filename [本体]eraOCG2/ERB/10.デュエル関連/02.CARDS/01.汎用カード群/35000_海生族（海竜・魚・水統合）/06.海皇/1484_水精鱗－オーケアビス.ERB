@CARDCAN_1484(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1484)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,1484)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 머메일
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 머메일
	CALLFORM 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1484(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정レベル
IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1484,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 머메일
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)		
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1}, "レベル"
			설정レベル = RESULT
			WHILE 설정レベル >= 1
				IF 설정レベル <= 4
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 머메일
					CALLFORM 효과条件レベル_ADV(설정レベル, "以下")
					효과条件任意 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
					SIF RESULT == 0
						BREAK
					TRYCALLFORM CARD_{RESULT:1}, "レベル"
					설정レベル -= RESULT
				ELSE
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 머메일
					CALLFORM 효과条件レベル_ADV(4, "以下")
					효과条件任意 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
					SIF RESULT == 0
						BREAK
					TRYCALLFORM CARD_{RESULT:1}, "レベル"
					설정レベル -= RESULT
				ENDIF
			WEND
		ENDIF
	ENDIF
ENDIF

