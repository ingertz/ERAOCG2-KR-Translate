@CARDCAN_57551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57551)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,57551)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF メインフェイズ == 1
		SIF 발동済_2(듀얼리스트,57551)
			RETURN 0
		SIF 종류 == フリー誘発
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_제외NG置換")
			RETURN 0
		RETURN 1

	ELSEIF バトルフェイズ == 1
		SIF 발동済_3(듀얼리스트,57551)
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 링크
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		IF 듀얼리스트 != "자신"
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		RETURN 1
	ENDIF

	RETURN 0
ENDIF

@CARDEFFECT_57551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 자신モンスター名前,5
#DIMS DYNAMIC 상대モンスター名前,5
#DIM DYNAMIC 자신コントロール,5
#DIM DYNAMIC 상대コントロール,5
#DIMS DYNAMIC 표시形式選択
#DIM DYNAMIC リピート횟수
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57551)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 링크
		효과条件レベル = 4
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_EX_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	IF メインフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57551,2)
		IF RESULT == 0
			;名前取りつつ제외
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"名前"
				자신モンスター名前:カウンタ = %RESULTS%
				;元々の持ち主が상대だったら反転플래그にする
;				PRINTFORMW 所持:{カウンタ}:{GETVAR(@"%듀얼리스트%_MZ_所有:カウンタ")}
				SIF GETVAR(@"%듀얼리스트%_MZ_所有:カウンタ") == 2
					자신コントロール:カウンタ = 1
				CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,제외行き)
			NEXT
			FOR カウンタ,0,5
				SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
					CONTINUE
				SIF GETVAR(@"%対面者%_MZ_モ耐:カウンタ") >= 1
					CONTINUE
				SIF GETVAR(@"%対面者%_MZ_無差耐:カウンタ") >= 1
					CONTINUE
				;元々の持ち主が상대だったら反転플래그にする
;				PRINTFORMW 所持:{カウンタ}:{GETVAR(@"%対面者%_MZ_所有:カウンタ")}
				SIF GETVAR(@"%対面者%_MZ_所有:カウンタ") == 2
					상대コントロール:カウンタ = 1
				TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")},"名前"
				상대モンスター名前:カウンタ = %RESULTS%
				CALL CARD_DISPOSE(対面者,"필드",カウンタ,제외行き)
			NEXT

			;帰還
			FOR カウンタ,0,5
				;念のため空白
				표시形式選択 = ""
				;名前無かったらおわり
				SIF 자신モンスター名前:カウンタ == ""
					CONTINUE
				IF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주세요.
					PRINTFORML モンスター名：%자신モンスター名前:カウンタ%
					PRINTL
PRINTL [0] - 공격 표시
PRINTL [1] - 수비 표시
PRINTL [2] - 뒷면 수비 표시
					BINPUT
					IF RESULT == 0
						표시形式選択 = 攻撃표시
					ELSEIF RESULT == 1
						표시形式選択 = 守備표시
					ELSEIF RESULT == 2
						표시形式選択 = 裏側守備표시
					ENDIF
				ENDIF
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲상대제외 = 1
효과条件名前 = %자신モンスター名前:カウンタ%
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,표시形式選択,,(자신コントロール:カウンタ))
			NEXT

			FOR カウンタ,0,5
				;念のため空白
				표시形式選択 = ""
				;名前無かったらおわり
				SIF 상대モンスター名前:カウンタ == ""
					CONTINUE
				IF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주세요.
					PRINTFORML モンスター名：%상대モンスター名前:カウンタ%
					PRINTL
PRINTL [0] - 공격 표시
PRINTL [1] - 수비 표시
PRINTL [2] - 뒷면 수비 표시
					BINPUT
					IF RESULT == 0
						표시形式選択 = 攻撃표시
					ELSEIF RESULT == 1
						표시形式選択 = 守備표시
					ELSEIF RESULT == 2
						표시形式選択 = 裏側守備표시
					ENDIF
				ELSE
					표시形式選択 = 裏側守備표시
				ENDIF
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲상대제외 = 1
효과条件名前 = %상대モンスター名前:カウンタ%
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,표시形式選択,,(상대コントロール:カウンタ))
			NEXT
		ENDIF

	ELSEIF バトルフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57551,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종류 = 링크
			효과条件他所 = 1
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			リピート횟수 = RESULT
			CALL FULLRESET
			효과条件複数 = 100 - リピート횟수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF


