@CARDCAN_57700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57700)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL CARD_SS_CHECK(듀얼리스트,57700,"제외")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57700)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"제외")
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57700)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,57700)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = 최후의 고티스
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

ELSEIF 종류 == 攻守変動
	攻撃力修正 = 500 * (제외数(듀얼리스트) + 제외数(対面者))
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ENDIF




