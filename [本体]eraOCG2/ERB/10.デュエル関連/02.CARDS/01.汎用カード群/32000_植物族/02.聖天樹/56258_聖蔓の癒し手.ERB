@CARDCAN_56258(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56258)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = 생아발론
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"直接戦闘","戦闘")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_56258(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 回復量
#DIM DYNAMIC 選択カード

IF 종류 == 지속효과
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56258)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 링크
		효과条件カテゴリ = 생아발론
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			回復量 = GETVAR(@"%듀얼리스트%_MZ_星:選択カード") * 300
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",回復量)
		ENDIF
	ENDIF
ELSEIF 종류 == ライフ変強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56258)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",600)
	ENDIF
ENDIF
