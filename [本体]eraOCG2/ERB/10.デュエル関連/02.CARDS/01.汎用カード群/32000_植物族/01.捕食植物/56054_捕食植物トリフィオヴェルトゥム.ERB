@CARDSUMMON_56054(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 3
素材条件종류 = トークン以外
素材条件속성 = 어둠속성

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,56054) 
	RETURN RESULT
ENDIF


@CARDCAN_56054(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56054)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0	
	RETURN 1
ELSEIF 종류 == 소환誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,56054)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:場所") != 召種EX덱
		RETURN 0
	SIF 最終소환決者 == 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	SIF 最終소환出処 != "EX덱"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_3(듀얼리스트,56054)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,56054,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件悪Ｃ所持 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_56054(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 攻守変動
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_悪Ｃ:カウンタ") == 0
			CONTINUE
		CALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}("攻撃力")
		攻撃力修正 = RESULT
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF カウンタ == 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:カウンタ") == 0
			CONTINUE
		CALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}("攻撃力")
		攻撃力修正 = RESULT
	NEXT
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 소환誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56054,2)
	IF RESULT == 0
		효과先 = 最終소환場所
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",最終소환場所,"完全묘지")
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56054,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所, "守備표시")
	ENDIF
ENDIF




