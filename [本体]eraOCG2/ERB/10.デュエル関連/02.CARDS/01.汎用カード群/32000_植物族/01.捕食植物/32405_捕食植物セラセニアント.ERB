PRINTL 덱에서 "프레데터 플랜츠 세라세니안트" 이외의 "프레데터" 카드 1장을 패에 넣는다.


@CARDCAN_32405(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,32405)
SIF RESULT == 1
	RETURN 0


IF 종류 == 攻撃時誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦闘→묘지
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_1(듀얼리스트,32405)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 프레데터 플랜츠
	효과条件固名前 = 프레데터 플랜츠 세라세니안트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_32405(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32405)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		CALL COVER_ATTACK(듀얼리스트,カード소환先)
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32405)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		SIF 발동済_1(듀얼리스트,32405)
			GOTO AFTER_EFFECT
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	$AFTER_EFFECT
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32405,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 프레데터 플랜츠
		효과条件固名前 = 프레데터 플랜츠 세라세니안트
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF



