@CARDCAN_29171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29171)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,29171)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	;参考：入るべからず
	CALL FULLRESET
	효과条件カテゴリ = 천후
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과墓送")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 천후
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 제외時
	
	RETURN 1
	
ELSEIF 종류 == ターン開始時予約
	CALL CARD_SS_CHECK(듀얼리스트,29171,"제외")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 천후アリ,5


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29171,1)
	IF RESULT == 0
		REPEAT 2
			천후アリ:0 = 0
			천후アリ:1 = 0
			천후アリ:2 = 0
			천후アリ:3 = 0
			천후アリ:4 = 0

			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 눈의 천후모양
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				천후アリ:0 = 1
			ENDIF
			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 비의 천후모양
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				천후アリ:1 = 1
			ENDIF
			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 흐림의 천후모양
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				천후アリ:2 = 1
			ENDIF
			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 무지개의 천후모양
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				천후アリ:3 = 1
			ENDIF
			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 번개의 천후모양
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				천후アリ:4 = 1
			ENDIF

			SIF 마함数(듀얼리스트) >= 5
				BREAK
			CALL FULLRESET
			SIF 천후アリ:0 > 0
				효과条件固名前:0 = 눈의 천후모양
			SIF 천후アリ:1 > 0
				효과条件固名前:1 = 비의 천후모양
			SIF 천후アリ:2 > 0
				효과条件固名前:2 = 흐린 천후모양
			SIF 천후アリ:3 > 0
				효과条件固名前:3 = 무지개 천후모양
			SIF 천후アリ:4 > 0
				효과条件固名前:4 = 번개의 천후모양
			효과条件カテゴリ = 천후
			효과条件종류:0 = 지속마법
			효과条件종류:1 = 지속함정
			효과条件任意 = 1
			CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"表側표시")
		REND
	ENDIF
	
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29171)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,29171,スタン予約)
	ENDIF

ELSEIF 종류 == ターン開始時予約
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = 흐림 후 위협
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF

