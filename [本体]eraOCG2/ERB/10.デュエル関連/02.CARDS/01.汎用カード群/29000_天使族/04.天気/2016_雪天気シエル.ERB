@CARDCAN_2016(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2016)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	SIF 발동済_1(듀얼리스트,2016)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 천후
	효과条件종류:0 = 지속마법
	효과条件종류:1 = 지속함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1

ELSEIF 종류 == 제외時
	
	RETURN 1
	
ELSEIF 종류 == ターン開始時予約
	CALL CARD_SS_CHECK(듀얼리스트,2016,"제외")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2016(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 천후アリ,5


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2016,1)
	IF RESULT == 0
		천후アリ:0 = 0
		천후アリ:1 = 0
		천후アリ:2 = 0
		천후アリ:3 = 0
		천후アリ:4 = 0

		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 눈의 천후모양
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			천후アリ:0 = 1
		ENDIF
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 비의 천후모양
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			천후アリ:1 = 1
		ENDIF
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 흐림의 천후모양
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			천후アリ:2 = 1
		ENDIF
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 무지개의 천후모양
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			천후アリ:3 = 1
		ENDIF
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 번개의 천후모양
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			천후アリ:4 = 1
		ENDIF

		효과条件固名前:0 = null
		CALL FULLRESET
		SIF 천후アリ:0 > 0
			효과条件固名前:1 = 눈의 천후모양
		SIF 천후アリ:1 > 0
			효과条件固名前:2 = 비의 천후모양
		SIF 천후アリ:2 > 0
			효과条件固名前:3 = 흐린 천후모양
		SIF 천후アリ:3 > 0
			효과条件固名前:4 = 무지개 천후모양
		SIF 천후アリ:4 > 0
			효과条件固名前:5 = 번개의 천후모양
		효과条件カテゴリ = 천후
		효과条件종류:0 = 지속마법
		효과条件종류:1 = 지속함정
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
	ENDIF
	
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2016)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,2016,スタン予約)
	ENDIF

ELSEIF 종류 == ターン開始時予約
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = 설천후 시엘
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF

