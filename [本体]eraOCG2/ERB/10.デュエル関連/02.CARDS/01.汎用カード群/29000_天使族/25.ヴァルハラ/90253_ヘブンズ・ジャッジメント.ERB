PRINTL 추가로 파괴한 몬스터의 원래 공격력만큼의 데미지를 상대에게 준다.


@CARDCAN_92963(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92963)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,92963)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92963(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 상대レベル
#DIM DYNAMIC 상대攻撃力

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92963,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件표시 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			상대レベル = GETVAR(@"%対面者%_MZ_星:選択カード")
			상대攻撃力 = GETVAR(@"%対面者%_MZ_攻:選択カード")
			CALL FULLRESET
			CALL 효과条件レベル_ADV(상대レベル, "以上")
			효과範囲덱 = 1
			효과条件종족 = 천사족
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALLFORM CARD_{RESULT:1}("攻撃力")
				IF RESULT >= 상대攻撃力
					CALL FULLRESET
					효과範囲마함 = 1
					효과範囲묘지 = 1
효과条件名前 = 신의 거성－발할라
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					IF RESULT == 1
						CALL FULLRESET
						CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"묘지")
						CALL LIFE_CHANGE(듀얼리스트,"減少","효과",상대攻撃力,1)
					ENDIF
				ELSE
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"묘지")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
