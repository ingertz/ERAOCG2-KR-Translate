@CARDCAN_81471(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81471)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件レベル = 7
	효과条件종족 = 드래곤족
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 ++
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件レベル = 7
	효과条件종족 = 드래곤족
	효과条件속성 = 빛속성
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:1 ++

	SIF 발동済_1(듀얼리스트,81471)
		条件달성:0 = 0
	SIF 발동済_2(듀얼리스트,81471)
		条件달성:1 = 0
	
	SIF 条件달성:0 == 0 && 条件달성:1 == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_81471(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || 종류 == フリー誘発
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件レベル = 7
	효과条件종족 = 드래곤족
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 ++
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件レベル = 7
	효과条件종족 = 드래곤족
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:1 ++

	CALL CARD_SS_CHECK(듀얼리스트,81471,"손패")
	SIF RESULT == 1
		条件달성:1 = 0

	SIF 발동済_1(듀얼리스트,81471)
		条件달성:0 = 0
	SIF 발동済_2(듀얼리스트,81471)
		条件달성:1 = 0
	
	IF 条件달성:0 != 0 && 条件달성:1 != 0
		CALL YN_CHOICE(듀얼리스트,"●자신 필드의 드래곤족 빛속성 レベル７モンスター１体を選び、패로 되돌린다。","●패에서 드래곤족 빛속성 レベル７モンスター１体を특수소환する。")
	ELSEIF 条件달성:0 != 0
		RESULT = 0
	ELSEIF 条件달성:1 != 0
		RESULT = 1
	ENDIF
	
	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81471,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件レベル = 7
			효과条件종족 = 드래곤족
			효과条件속성 = 빛속성
			효과条件行先플래그 = 손패行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81471,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件レベル = 7
			효과条件종족 = 드래곤족
			효과条件속성 = 빛속성
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81471)
	IF RESULT == 0
	ENDIF
ENDIF
