@CARDCAN_29050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29050)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	SIF 발동済_1(듀얼리스트,29050)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,29050,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 천사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_29050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC リリース数

IF 종류 == 손패起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29050,1)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			PRINTFORML 몬스터를 何体リリースしますか？
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 천사족
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT >= 1
PRINTL [1] - 1체
			SIF RESULT >= 2
PRINTL [2] - 2체
			SIF RESULT >= 3
PRINTL [3] - 3체
			BINPUT
			リリース数 = RESULT
		ELSE
			IF モンスター数(듀얼리스트) == 1
				リリース数 = 1
			ELSEIF モンスター数(듀얼리스트) == 2
				リリース数 = 2
			ELSEIF モンスター数(듀얼리스트) >= 3
				リリース数 = 3
			ENDIF
		ENDIF
		CALL FULLRESET
		효과条件複数 = リリース数
		효과条件종족 = 천사족
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			IF リリース数 >= 2
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			ENDIF
			IF リリース数 >= 3
				CALL CARDDRAW_BASIC(듀얼리스트,2)
			ENDIF
			IF 종류 == フリー誘発
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲묘지 = 1
효과条件名前 = 트리아스 히에라르키아
				효과추가종류 = 効追除処
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ELSE
				CALL FULLRESET
				효과추가종류 = 効追除処
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF



