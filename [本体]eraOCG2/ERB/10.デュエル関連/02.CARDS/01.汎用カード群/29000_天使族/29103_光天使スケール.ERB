PRINTL 그 몬스터는 이하의 효과를 얻는다.
PRINTL ● 상대 필드에 패에서 특수 소환된 몬스터가 존재하고, 이 카드가 X 소재를 가지고 있을 경우,
PRINTL 자신, 상대 턴에 발동할 수 있다.
PRINTL 카드를 2장 드로우한다.
PRINTL 이 효과는 필드에 있는 한 1번밖에 사용할 수 없으며, 1턴에 1번밖에 사용할 수 없다.

@CARDCAN_29103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29103)
SIF RESULT == 1
	RETURN 0


IF 종류 == 특수소환時
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 홀리 라이트닝
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == X素材時효과
	SIF 발동済_1(듀얼리스트,29103)
		RETURN 0
	RETURN 1

;――――――――――――――――――――――――付与효과――――――――――――――――――――――――

ELSEIF 종류 == 필드起動付与
	SIF 발동済_2(듀얼리스트,29103)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種손패
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29103,0)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 홀리 라이트닝
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件속성 = 빛속성
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		EX소환可能속성 = 빛속성
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29103,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_GRANT_SPECIAL(듀얼리스트,選択カード,29103)
		ENDIF
	ENDIF
;――――――――――――――――――――――――付与효과――――――――――――――――――――――――
ELSEIF 종류 == 필드起動付与
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29103,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARDDRAW_BASIC(듀얼리스트,2)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"특수状態",0,1)
	ENDIF
ENDIF