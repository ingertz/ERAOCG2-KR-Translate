@CARDSUMMON_42351(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 4

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 다이스
	素材条件종류 = 링크
ELSE
	PRINT
ENDIF


IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,42351) 
	RETURN RESULT
ENDIF


@CARDCAN_42351(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42351)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_42351(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果,5
#DIM DYNAMIC サイコロ合計
#DIM DYNAMIC 攻撃力修正,5
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42351)
	IF RESULT == 0
		FOR カウンタ,0,2
			CALL DICE_ROLL(듀얼리스트,1)
			サイコロ結果:カウンタ = RESULT
		NEXT
		サイコロ合計 = サイコロ結果:0 + サイコロ結果:1
		PRINTFORMW 出た目は……{サイコロ結果:0}と{サイコロ結果:1}で{サイコロ合計}だ！
		SELECTCASE サイコロ合計
		CASE 7,11
			PRINTFORMW 「はいは-い♪　だいば～くは～～～ッツ！！！」
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")

			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
		CASEELSE
			攻撃力修正 = サイコロ合計 * 100
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)
		ENDSELECT

		IF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 6000
			PRINTFORMW 「あっやばっ、ためすぎちゃっ……わ～～～～！？」
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 다이스
			효과条件固名前 = 다이스 마이트 갬 파이어 랩스
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)		
		ENDIF
	ENDIF
ENDIF



