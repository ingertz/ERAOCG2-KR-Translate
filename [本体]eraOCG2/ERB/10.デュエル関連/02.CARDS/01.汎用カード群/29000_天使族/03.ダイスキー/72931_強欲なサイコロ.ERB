@CARDCAN_72931(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72931)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72931)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_72931(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果
#DIM DYNAMIC 攻撃力修正


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;EX덱에서 直出し
;参考：마법族の里、フラワリング エトワ-ル、해피 チャネラ-

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72931,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL DICE_ROLL(듀얼리스트,1)
		サイコロ結果 = RESULT
		PRINTFORMW 出た目は……{サイコロ結果}だ！

		IF サイコロ結果 == 1
		PRINTFORMW 回収효과だ！
			CALL FULLRESET
			효과条件カテゴリ = 다이스
			효과条件固名前 = 욕망의 주사위
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ELSEIF サイコロ結果 == 3 || サイコロ結果 == 2
			PRINTFORMW １장ル-ティングだ！
			CALL CARDDRAW_BASIC(듀얼리스트,1)
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ELSEIF サイコロ結果 == 4 || サイコロ結果 == 5
			PRINTFORMW １장ドローだ！
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ELSEIF サイコロ結果 == 6
			PRINTFORMW ２장ドローだ！！！
			CALL CARDDRAW_BASIC(듀얼리스트,2)
		ENDIF 
	ENDIF
ENDIF




