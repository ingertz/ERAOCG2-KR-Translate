@CARDCAN_72930(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72930)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72930)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_72930(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC サイコロ結果,5
#DIM DYNAMIC 攻撃力修正,5
#DIM DYNAMIC サイコロ合計

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72930,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL DICE_ROLL(듀얼리스트,2)
			サイコロ結果:カウンタ = RESULT
			サイコロ合計 = RESULT:1
			SELECTCASE サイコロ合計
			CASE 7
				IF 듀얼리스트 == "자신"
					PRINTL [0] - ●상대 필드의 카드를 全て묘지へ送る。
					PRINTL [1] - ●손패または자신 상대の묘지からモンスター１体を選んで자신 필드에 특수소환する。
					PRINTL [2] - ●자신은 덱에서 ３장ドローし、その後패를 ２장選んで捨てる。
					PRINTL 
					BINPUT
				ELSE
					RESULT = 2
				ENDIF
				IF RESULT == 0
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"リリース")
				ELSEIF RESULT == 1
					CALL FULLRESET
					효과範囲묘지 = 1
					효과範囲손패 = 1
					효과範囲상대묘지 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ELSEIF RESULT == 2
					CALL CARDDRAW_BASIC(듀얼리스트,3)
					CALL FULLRESET
					효과条件複数 = 2
					CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
				ENDIF

			CASEELSE
				CALL FULLRESET
효과条件名前 = 슈퍼 럭키 노바
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)	
			ENDSELECT
		ENDIF
	ENDIF
ENDIF