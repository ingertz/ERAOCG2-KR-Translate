@CARDCAN_42350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42350)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,42350)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 천사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"다이스目",5)
	SIF RESULT == 1
		条件달성 = 1
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"다이스目",6)
	SIF RESULT == 1
		条件달성 = 1
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_42350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果
#DIM DYNAMIC 攻撃力修正,5
#DIM DYNAMIC 選択カード
#DIM DYNAMIC サイコロ횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42350,1)
	IF RESULT == 0
		PRINTFORMW 2회 연속으로 다이스 롤!!
		REPEAT 2
			CALL DICE_ROLL(듀얼리스트,1)
			サイコロ結果 = RESULT
			PRINTFORMW 出た目は……{サイコロ結果}だ！
			攻撃力修正 = サイコロ結果 * 300
			PRINTFORMW チロリの攻撃力は{攻撃力修正}アップ！
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)
		REND
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 링크
	효과条件종족 = 천사족
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42350)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 다이스
		효과条件소환可 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF




