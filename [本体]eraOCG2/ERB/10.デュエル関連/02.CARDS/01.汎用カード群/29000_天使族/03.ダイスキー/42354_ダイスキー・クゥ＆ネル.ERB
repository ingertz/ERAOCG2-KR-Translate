@CARDCAN_42354(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42354)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,42354)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,42354)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,42354,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"다이스目",5)
	SIF RESULT == 1
		条件달성 = 1
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"다이스目",6)
	SIF RESULT == 1
		条件달성 = 1
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_42354(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42354,1)
	IF RESULT == 0
		CALL DICE_ROLL(듀얼리스트,1)
		サイコロ結果 = RESULT
		PRINTFORMW 出た目は……{サイコロ結果}だ！
		IF サイコロ結果 == 6
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"덱")
		ENDIF
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 다이스
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42354,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF



