@CARDCAN_2225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2225)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 퓨어리
	효과条件종류 = 速攻마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,2225)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF
@CARDEFFECT_2225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2225)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 퓨어리
		효과条件종류 = 마함全般
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,3)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2225,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 퓨어리
		효과条件종류 = 速攻마법
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			選択カードID = RESULT:1
			TRYCALLFORM CARDNAME_{選択カードID},"名前"
			選択カード名前 = %RESULTS%
			SELECTCASE 選択カード名前
			CASE "퓨어리 행복메모리"
				選択カード名前 = 에퓨어리 하피니스
			CASE "퓨어리 슬리피메모리"
				選択カード名前 = 에퓨어리 누아르
			CASE "퓨어리 딜리셔스메모리"
				選択カード名前 = 에퓨어리 플럼프
			CASE "퓨어리 프리티메모리"
				選択カード名前 = 에퓨어리 뷰티
			ENDSELECT
			CALL FULLRESET
			효과条件名前 = %選択カード名前%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL RESETCONDITION_MAT
				必要素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 場所
				효과추가종류:0 = 効追Ｘ素 + 1
				효과추가종류:1 = 効追条達
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
