@CARDCAN_1233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1233)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,1233)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 트릭스터 라이트 스테이지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과
	SIF 발동済_2(듀얼리스트,1233)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ数



IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1233,1)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 트릭스터 라이트 스테이지
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",場所)
	ENDIF
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1233,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대손패 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		ダメージ数 = RESULT * 200
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ数,1)
	ENDIF
ENDIF

