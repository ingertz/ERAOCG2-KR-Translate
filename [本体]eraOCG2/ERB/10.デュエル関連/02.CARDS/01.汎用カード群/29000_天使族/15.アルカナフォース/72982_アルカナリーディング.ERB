@CARDCAN_72982(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72982)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72982)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,72982)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 아르카나 포스
	효과条件종류 = モン全般
	효과条件固名前:0 = 아르카나 포스 EX－빛의 지배자
	효과条件固名前:1 = 아르카나 포스 EX─더 다크 룰러
	IF モンスター数(듀얼리스트) >= 5
		CALLFORM 효과条件レベル_ADV(5,"以上")
	ELSEIF モンスター数(듀얼리스트) < 1
		CALLFORM 효과条件レベル_ADV(4,"以下")
	ELSEIF モンスター数(듀얼리스트) < 2
		CALLFORM 효과条件レベル_ADV(6,"以下")
	ENDIF
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

