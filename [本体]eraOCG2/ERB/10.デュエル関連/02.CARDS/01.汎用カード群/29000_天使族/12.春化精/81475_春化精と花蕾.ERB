@CARDCAN_81475(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81475)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,81475)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 땅속성
	효과条件召種 = 召種묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	SIF 듀얼리스트 == "자신"
		효과範囲상대마함 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_81475(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 畜生共
#DIM DYNAMIC 害獣
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81475,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 땅속성
		효과条件召種 = 召種묘지
		효과条件CNT = 1
		효과条件固名前起動 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		畜生共 = RESULT

		REPEAT 畜生共
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
			SIF RESULT != 1
				BREAK
			害獣 ++
		REND

		SIF 害獣 < 1
			RETURN 0
		REPEAT 害獣
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件속성 = 땅속성
			효과条件行先플래그 = 손패行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		REND
	ENDIF
ENDIF

