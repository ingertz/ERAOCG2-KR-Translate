@CARDCAN_1475(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1475)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		SIF 종류 == フリー誘発
			RETURN 0
		SIF 발동済_1(듀얼리스트,1475)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF モンスター数(듀얼리스트) >= 5
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF 발동済_2(듀얼리스트,1475)
			RETURN 0
		SIF ゾーン != "필드"
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 땅속성
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 땅속성
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1475(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

IF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1475,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		ENDIF

	ELSEIF ターンプレイヤー != 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1475,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성 = 땅속성
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1475,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"属",땅속성)
ENDIF
