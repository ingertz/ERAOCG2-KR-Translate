@CARDCAN_50562(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50562)
SIF RESULT == 1
	RETURN 0


IF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 != 듀얼리스트
		RETURN 0
	SIF ダメージ増減 != "減少"
		RETURN 0
	SIF ダメージ종류 != "효과"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,50562)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_50562(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 与ダメージ
#DIM DYNAMIC 消費カウンタ



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == ライフ変強制誘発
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"悪Ｃ",1)
	PRINTFORML
	PRINTFORMW 黒날개がダメージを受け止めました。
	PRINTFORML
	CALL LIFE_CHANGE(듀얼리스트,"増加","효과",ダメージ受値)
ELSEIF 종류 == 攻守変動
	攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:場所") * 700
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,-攻撃力修正)

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50562,3)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:カウンタ") == 0
				CONTINUE
			消費カウンタ += GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:カウンタ")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"悪Ｃ",0,1)
		NEXT
		与ダメージ = 消費カウンタ * 700
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과", 与ダメージ,1)
	ENDIF
ENDIF

