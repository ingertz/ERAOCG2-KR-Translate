@CARDCAN_21050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21050)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"戦闘ダメージ")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21050,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量 
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21050)
	IF RESULT == 0
		ダメージ量 = GETVAR(@"%듀얼리스트%_変動値")
PRINTL 상대 라이프에 데미지를 주겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == はい
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
		ELSEIF RESULT == いいえ
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",ダメージ量)
		ENDIF
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ENDIF