@CARDCAN_72134(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72134)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72134)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件スーパーカテゴリ = 푸른 눈의
	효과条件スーパー종류 = モン全般
	효과条件カテゴリ = 푸른 눈의 백룡
	효과条件종류 = 마함全般
	효과条件固名前 = 빙고 머신 고! 고!
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72134(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,5

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72134,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件スーパーカテゴリ = 푸른 눈의
		효과条件スーパー종류 = モン全般
		효과条件カテゴリ = 푸른 눈의 백룡
		효과条件종류 = 마함全般
		효과条件固名前 = 빙고 머신 고! 고!
		효과条件複数 = 3
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "덱",ゾーン,場所)
		IF RESULT != 9999
			選択カード:0 = RESULT:0
			選択カード:1 = RESULT:1
			選択カード:2 = RESULT:2
			IF 選択カード != 9999
PRINTL 얼티밋 빙고 스타트!
				CALL CARD_ADD(듀얼리스트, "덱", "손패", 選択カード:(RAND:3))
			ENDIF
		ENDIF
	ENDIF
ENDIF
