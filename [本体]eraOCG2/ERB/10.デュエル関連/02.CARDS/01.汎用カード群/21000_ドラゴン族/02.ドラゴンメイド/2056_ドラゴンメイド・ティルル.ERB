@CARDNAME_2056,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드 티루루
	CASE "略称"
		RESULTS = 티루루
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
ENDSELECT


@CARD_2056(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 1700
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0
@CARD_EXPLANATION_2056(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번 밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：이 카드가 일반 일반 소환 / 특수 소환했을 경우에 발동할 수 있다.
PRINTL 덱에서「드래곤메이드 티루루」이외의「드래곤메이드" 몬스터 1장을 패에 넣는다
PRINTL 그후, 패에서「드래곤메이드" 몬스터 1장을 선택해 묘지로 보낸다.
CALLFORM CARD_ABLE(2,バトル開始時)
PRINTL ②：자신 / 상대의 배틀 페이즈 개시시에 발동할 수 있다.
PRINTL 이 카드를 패에 넣고, 패 / 묘지에서 레벨 7 이상의「드래곤메이드」1장을 골라 특수 소환한다.


@CARDCAN_2056(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2056)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,2056)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 드래곤메이드
	효과条件종류 = モン全般
	효과条件固名前 = 드래곤메이드 티루루
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,2056)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 드래곤메이드
	CALL 효과条件レベル_ADV(7, "以上")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2056(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2056,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 드래곤메이드
		효과条件종류 = モン全般
		효과条件固名前 = 드래곤메이드 티루루
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ = 드래곤메이드
			효과条件종류 = モン全般
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2056,2)
	IF RESULT == 0	
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,3)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		CALL 효과条件レベル_ADV(7, "以上")
		효과条件カテゴリ = 드래곤메이드
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

