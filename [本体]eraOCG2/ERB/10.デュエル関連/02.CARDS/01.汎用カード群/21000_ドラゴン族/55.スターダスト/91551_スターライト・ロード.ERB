@CARD_EXPLANATION_91551(종류)
#DIM DYNAMIC 종류
CALLFORM CARD_ABLE(0,발동誘発)
PRINTL ①: 자신 필드에 카드가 2장 이상 존재하고, 상대의 마법 / 함정 / 몬스터의 효과가 발동했을 때 발동할 수 있다.
PRINTL 자신 필드의 카드는 이 페이즈 중, 파괴 내성을 얻는다.
PRINTL 그 후, 「스타더스트 드래곤」 1장을 EX덱에서 특수 소환할 수 있다.

@CARDCAN_91551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91551)
SIF RESULT == 1
	RETURN 0
IF 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件名前 = 스타더스트 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_91551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5

#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91551)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件표시 = 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",5)
		CALL FULLRESET
		효과条件표시 = 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐",5)

		CALL FULLRESET
		효과範囲EX덱 = 1
효과条件名前 = 스타더스트 드래곤
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

