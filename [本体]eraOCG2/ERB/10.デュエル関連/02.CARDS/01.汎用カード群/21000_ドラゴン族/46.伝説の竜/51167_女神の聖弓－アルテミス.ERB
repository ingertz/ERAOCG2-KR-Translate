@CARDCAN_51167(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51167)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,51167)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,51167)
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,51167,ゾーン)
	SIF RESULT == 1 && 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51167(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51167,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
		CALL YN_CHOICE(듀얼리스트,"攻撃力２５００アップ","２回攻撃を与える")
		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",2500)
		ELSEIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",1)
		ENDIF
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51167,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 전사족
		효과条件複数 = 2
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
PRINTL 장착 가능한 몬스터가 존재합니다. 이 카드를 장착하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RESULT = いいえ
			ENDIF
			IF RESULT == はい
				CALL FULLRESET
				CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カード,ゾーン,場所)
			ELSEIF RESULT == いいえ				
				CALL FULLRESET
				효과条件特不無視 = 1
				CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
