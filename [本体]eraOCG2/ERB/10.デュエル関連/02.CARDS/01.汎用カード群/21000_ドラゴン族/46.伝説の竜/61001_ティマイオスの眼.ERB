PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: 자신 패 / 필드의 「블랙 매지션」 또는 「블랙 매지션 걸」 1장을 융합 소재로서 묘지로 보내고,
PRINTL 그 카드명이 융합 소재로서 기재되어 있는 융합 몬스터 1장을 EX덱에서 융합 소환한다.





@CARDCAN_61001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61001)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,61001)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,0,"EX덱",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲손패 = 1
	효과条件名前:0 = 블랙 매지션 걸
	효과条件名前:1 = 블랙 매지션
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 素材モンスター


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61001,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;EX덱確認
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲손패 = 1
		효과条件名前:0 = 블랙 매지션
		효과条件名前:1 = 블랙 매지션 걸
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			TRYCALLFORM CARDNAME_{RESULT:1}, "カテゴリ"
			素材モンスター = %RESULTS:0%
			CALL FULLRESET
			효과条件종류 = 융합
			효과条件カテゴリ = %素材モンスター%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과条件特不無視 = 1
				CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 選択カード)
				リザルト：FUS소환 = 1
			ENDIF
		ENDIF
	ENDIF
ENDIF
