@CARDCAN_321190(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,321190)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0

	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 1000
		발동불가:0 = 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:0 = 1
	SIF 손패数(듀얼리스트) < 1
		발동불가:0 = 1
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 10000
		발동불가:1 = 1
	SIF 발동済_1(듀얼리스트,321190)
		발동불가:1 = 1
	SIF メインフェイズ != 1
		발동불가:1 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:1 = 1
	SIF 종류 == フリー誘発
		발동불가:1 = 1
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
효과条件名前 = 암드 드래곤 LV3
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_321190(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,2

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 1000
		발동불가:0 = 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:0 = 1
	SIF 손패数(듀얼리스트) < 1
		발동불가:0 = 1
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 10000
		발동불가:1 = 1
	SIF 발동済_1(듀얼리스트,321190)
		발동불가:1 = 1
	SIF メインフェイズ != 1
		발동불가:1 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:1 = 1
	SIF 종류 == フリー誘発
		발동불가:1 = 1
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1

	IF 발동불가:0 != 1 && 발동불가:1 != 1
		IF 듀얼리스트 == "자신"
			CALL YN_CHOICE(듀얼리스트,"千：サンダ- ブレイク","万：サンダ- ボルト")
		ELSE
			RESULT = 1
		ENDIF
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,321190,10)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件他所 = 1
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"選択")
				SIF RESULT != 1
					RETURN 0
				CALL CARD_SELECT(듀얼리스트,RESULT:1)
				CALL CARD_DISPOSE(대상者（CS）,参照先（CS）,RESULT,破壊行き)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
			ENDIF
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,321190,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 10
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 100
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,321190,0)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
효과条件名前 = 암드 드래곤 LV3
		효과추가종류:0 = 効追戦耐
		효과추가종류:1 = 効追破耐
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성 = 빛속성
			효과条件종류 = モン全般
			효과条件スーパーカテゴリ = 암드 드래곤
			효과条件複数 = 97
			효과条件固名前選択 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

