	素材条件종류 = 융합
ELSEIF EX参照 == 10
	素材条件종류 = 싱크로
ELSEIF EX参照 == 11
	素材条件종류 = 엑시즈
ELSEIF EX参照 == 12
	素材条件分割 = 펜듈럼
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50990) 
	RETURN RESULT
ENDIF



@CARDEFFECT_50990(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50990)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 지속효과
	IF ゾーン == "필드"
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	ELSE
		CALL FULLRESET
		효과条件종류:0 = 융합
		효과条件종류:1 = 싱크로
		효과条件종류:2 = 엑시즈
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発無")
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50990)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ:0 = 펜듈럼 드래곤
		효과条件カテゴリ:1 = 엑시즈 드래곤
		효과条件カテゴリ:2 = 싱크로 드래곤
		효과条件カテゴリ:3 = 융합 드래곤
		효과条件カテゴリ:4 = 패왕권룡
		효과条件任意 = 1
		효과条件複数 = 98
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50990)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
효과条件名前 = 패왕룡 자크
		효과条件속성 = 어둠속성
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50990,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
	ENDIF
ENDIF
