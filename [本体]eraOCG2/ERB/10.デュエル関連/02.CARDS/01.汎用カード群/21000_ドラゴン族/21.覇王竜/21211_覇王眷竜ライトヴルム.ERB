@CARDCAN_21211(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21211)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,21211)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	IF ゾーン == "EX덱"
		SIF 발동済_1(듀얼리스트,21211)
			RETURN 0
		CALL FULLRESET
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF 발동済_3(듀얼리스트,21211)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,21211,ゾーン)
		SIF RESULT == 1
			RETURN 0

		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 패왕룡 자크
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件固名前 = 패왕룡 자크
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_21211(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 설정속성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21211)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21211,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ:0 = 패왕문
		효과条件カテゴリ:1 = 패왕권룡
		효과条件종류 = EX以外全般
		효과条件分割 = 펜듈럼
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류:0 = 싱크로
		효과条件종류:1 = 엑시즈
		효과条件カテゴリ = 패왕권룡
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && 듀얼리스트 == "자신"
PRINTL 싱크로 또는 엑시즈 소환을 실행합니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0
		ENDIF

		CALL FULLRESET
		효과条件종류:0 = 싱크로
		효과条件종류:1 = 엑시즈
		효과条件カテゴリ = 패왕권룡
		효과条件소환可 = 1
		효과条件任意 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{RESULT:99}("종류")
			IF RESULT == 싱크로
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")}(듀얼리스트,選択カード)
				CALL SYNSUMMON(듀얼리스트, 選択カード)
			ELSEIF RESULT == 엑시즈
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")}(듀얼리스트,選択カード)
				CALL XYZSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ENDIF

	ENDIF
ELSEIF 종류 == 효과後誘発
	IF ゾーン == "EX덱"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21211,1)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所, 손패行き)

		ENDIF
	ELSEIF ゾーン == "마함"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21211,3)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所)
			CALL FULLRESET
			효과条件分割 = 펜듈럼
			효과条件固名前 = 패왕권룡 라이트브룸
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
				설정속성 = GETVAR(@"%듀얼리스트%_MZ_属:選択カード")
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永星",설정レベル,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永属",설정속성,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF