PRINTL ●패에서 드래곤족 화염 속성 몬스터 1장을 특수 소환한다.

@CARDCAN_73620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73620)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,73620)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 드래곤족
	효과条件속성 = 화염속성
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_73620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73620,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF バトルフェイズ == 1
PRINTL 배틀 페이즈에 발동했습니다. 양쪽의 효과를 사용하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == はい
				カウンタ = 2
		ENDIF
		IF カウンタ != 2
			CALL YN_CHOICE(듀얼리스트,"●덱에서 レベル４이하의 드래곤족 화염속성モンスター１体を손패に加える。","●패에서 드래곤족 화염속성モンスター１体を특수소환する。")
			カウンタ = RESULT
		ENDIF
		IF カウンタ != 1
			CALL FULLRESET
			효과条件종족 = 드래곤족
			효과条件속성 = 화염속성
			CALL 효과条件レベル_ADV(4, "以下")
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
		IF カウンタ != 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종족 = 드래곤족
			효과条件속성 = 화염속성
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
