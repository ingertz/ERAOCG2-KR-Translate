@CARDCAN_50835(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 素材数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50835)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	SIF 素材数 < 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	SIF 素材数 < 3
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	SIF 素材数 < 4
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_50835(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正



IF 종류 == 攻守変動
	CALL FULLRESET
	효과条件표시 = 表側표시
	효과条件他所 = 1
	;CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻",300)
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,300,300)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50835,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50835)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,4)
		;うららとかで止められたらおわり
		SIF 손패数(듀얼리스트) < 4
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件複数 = 3
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF






