@CARDCAN_72121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72121)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72121)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 의식
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1


	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT >= 2
		CALL FULLRESET
		효과範囲필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件カテゴリ = 오드아이즈
			CALL 효과条件レベル_ADV(7, "以上")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 = 1
		ENDIF
	ENDIF
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_72121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72121,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종족 = 드래곤족
		효과条件종류 = 의식
		효과条件소환可 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT >= 2
				条件달성 += 1
			CALL FULLRESET
			효과範囲필드 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				条件달성 += 1


			IF 条件달성 >= 2
PRINTL EX덱의 특정 카드를 묘지로 보냅니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RESULT = いいえ
			ENDIF
			IF RESULT == いいえ
				CALL RESETAREA_MAT
				CALL CARD_SELECT(듀얼리스트,選択カード)
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:{選択カード（CS）}")}(듀얼리스트,選択カード)
				素材範囲필드 = 1
				素材範囲손패 = 1
				TRYCALLFORM RITSUMMON(듀얼리스트,選択カード（CS）,参照先（CS）)
			ELSEIF RESULT == はい
				CALL RESETAREA_MAT
				CALL CARD_SELECT(듀얼리스트,選択カード)
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:{選択カード（CS）}")}(듀얼리스트,選択カード)
				必要レベル数 = 1
				素材範囲EX덱 = 1
				素材条件カテゴリ = 오드아이즈
				CALLFORM 素材条件レベル_ADV(7, "以上")
				TRYCALLFORM RITSUMMON(듀얼리스트,選択カード（CS）,参照先（CS）)
			ENDIF
		ENDIF
	ENDIF
ENDIF