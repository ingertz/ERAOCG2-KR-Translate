@CARDCAN_21360(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
 
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21360)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,21360)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(対面者) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,21360)
		RETURN 0
	IF ゾーン == "손패"
		CALL CARD_SS_CHECK(듀얼리스트,21360,"손패")
		SIF RESULT == 1
			RETURN 0
	ELSEIF ゾーン == "묘지"
		CALL CARD_SS_CHECK(듀얼리스트,21360,"묘지")
		SIF RESULT == 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과条件종류 = モン全般
	SIF GETVARS(@"%듀얼리스트%_フィールド名") != "암흑世界" && GETVARS(@"%対面者%_フィールド名") != "암흑世界"
		효과条件속성 = 어둠속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21360(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21360,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 어둠속성
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"덱")
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21360,2)
	IF RESULT == 0
		CALL FULLRESET
		IF ゾーン == "손패"
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ELSEIF ゾーン == "묘지"
			CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
ENDIF

