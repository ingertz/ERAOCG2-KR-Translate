@CARDSUMMON_50502(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 99
素材条件数自由 = 1
素材条件素材数起動 = 1

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 原石
ELSEIF EX参照 >= 10
	素材条件종류 = 通常モン
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50502) 
	RETURN RESULT
ENDIF


@CARDCAN_50502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件合致数

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50502)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") <= 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동強制誘発 ;발동した효과를 無効にするので
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	条件合致数 = RESULT
	CALL FULLRESET
	효과範囲필드 = 1
	CALLFORM 효과条件レベル_ADV(条件合致数,"以下")
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 戦闘→묘지 || 종류 == 戦破壊→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 通常モン
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_50502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード


IF 종류 == 攻守変動
	素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所") - 1
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,素材数*1000)
ELSEIF 종류 == 발동強制誘発
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効2",場所,"無効")
ELSEIF 종류 == 필드→묘지 || 종류 == 戦闘→묘지 || 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50502)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 通常モン
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF
ENDIF

