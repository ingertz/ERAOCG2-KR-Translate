@CARDNAME_30300,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = B F－독침의 니들
	CASE "略称"
RESULTS = B F 니들
	CASE "カテゴリ"
RESULTS:0 = 비 포스
ENDSELECT


@CARD_30300(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 곤충족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 400
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 牝性
	CASE "튜너"
		RETURN 1

ENDSELECT

RETURN 0

