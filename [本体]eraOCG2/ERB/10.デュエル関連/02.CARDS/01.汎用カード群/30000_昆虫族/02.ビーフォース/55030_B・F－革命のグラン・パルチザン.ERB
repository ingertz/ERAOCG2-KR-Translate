@CARDSUMMON_55030(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 12
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,55030) 
	RETURN RESULT
ENDIF


@CARDCAN_55030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55030)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_3(듀얼리스트,55030)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_55030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 破壊횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종족 = 곤충족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 200
	CALL FULLRESET
	효과条件종류 = 싱크로
	효과条件종족 = 곤충족
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正)
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55030,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
효과条件名前 = B F－혁명의 그랑 파르티잔
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件종족 = 곤충족
		효과条件CNT = 1
		효과条件限界値 = 10
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		破壊횟수 = RESULT

		CALL FULLRESET
		효과추가종류 = 3
		효과条件複数 = 100 - 破壊횟수
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지",500)
	ENDIF
ENDIF


