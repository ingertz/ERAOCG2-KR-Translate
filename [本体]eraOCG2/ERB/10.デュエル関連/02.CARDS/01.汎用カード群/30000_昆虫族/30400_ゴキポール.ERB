@CARDCAN_30400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,30400)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,30400)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 곤충족
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_30400(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID

IF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,30400,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 곤충족
		효과条件レベル = 4
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID}, "종류"
			IF RESULT == 通常モン
				CALL FULLRESET
				효과範囲손패 = 1
				효과条件종류 = 通常モン
				효과条件종족 = 곤충족
				효과条件レベル = 4
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				CALL FULLRESET
				효과条件任意 = 1
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ENDIF
