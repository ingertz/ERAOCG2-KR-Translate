@CARDCAN_90110(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,90110)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,90110)
		RETURN 0
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		효과条件종류 = 通常함정
		효과条件固名前 = 트랜잭션 롤백
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,90110)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "묘지"
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 通常함정
		효과条件固名前 = 트랜잭션 롤백
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,90110)
		SIF RESULT != 1
			RETURN 0
		SIF GETVAR(@"ライフ_%듀얼리스트%") <= 4000
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_90110(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,90110,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		
		IF ゾーン == "마함"
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(GETVAR(@"ライフ_%듀얼리스트%")  / 2))
			CALL FULLRESET
			효과条件종류 = 通常함정
			효과条件固名前 = 트랜잭션 롤백
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대묘지",ゾーン,場所)
			IF RESULT != 9999
				CALLFORM CARDEFFECT_{GETVAR(@"%対面者%_묘지:RESULT")}(듀얼리스트,마함起動,"효과処理")
			ENDIF

		ELSEIF ゾーン == "묘지"
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",4000)
			CALL FULLRESET
			효과条件종류 = 通常함정
			효과条件固名前 = 트랜잭션 롤백
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT != 9999
				CALLFORM CARDEFFECT_{GETVAR(@"%듀얼리스트%_묘지:RESULT")}(듀얼리스트,마함起動,"효과処理")
			ENDIF
		ENDIF
	ENDIF
ENDIF
