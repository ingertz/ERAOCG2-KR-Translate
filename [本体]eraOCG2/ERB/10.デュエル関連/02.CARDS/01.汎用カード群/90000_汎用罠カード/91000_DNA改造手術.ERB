	설정종족 = GETVAR(@"%듀얼리스트%_魔_汎数:場所")
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"種",설정종족)
	CALL FULLRESET
;	효과元カードID = 91000
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"種",설정종족,91000)
