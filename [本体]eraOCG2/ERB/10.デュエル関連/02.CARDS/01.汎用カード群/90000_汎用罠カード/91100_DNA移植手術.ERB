@CARDCAN_91100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91100)
SIF RESULT == 1
	RETURN 0



IF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_91100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정속성
#DIM DYNAMIC 選択효과
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91100)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
			PRINT [01] - 빛속성　
			PRINT [02] - 어둠속성　
PRINTL [03] - 땅속성
			PRINT [04] - 물속성　　　
			PRINT [05] - 화염속성　　　
PRINTL [06] - 바람속성
PRINTL [07] - 신속성
			BINPUT
		ELSE
			RESULT = 1
		ENDIF
		選択효과 = RESULT
		IF RESULT == 1
RESULTS =(빛)
		ELSEIF RESULT == 2
RESULTS =(어둠)
		ELSEIF RESULT == 3
RESULTS =(땅)
		ELSEIF RESULT == 4
RESULTS =(물)
		ELSEIF RESULT == 5
RESULTS =(화염)
		ELSEIF RESULT == 6
RESULTS =(바람)
		ELSEIF RESULT == 7
RESULTS =(신)
		ENDIF
		PRINTFORML %RESULTS%속성が選ばれました。
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"汎数",選択효과)
	ENDIF
ELSEIF 종류 == 攻守変動
	설정속성 = GETVAR(@"%듀얼리스트%_魔_汎数:場所")
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"属",설정속성)
	CALL FULLRESET
;	효과元カードID = 91000
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"属",설정속성,91100)
ENDIF
