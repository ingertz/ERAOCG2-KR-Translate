@CARD_EXPLANATION_91045(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드에 몬스터가 존재하지 않을 경우, 이 카드는 패에서 발동할 수 있다.
PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 １번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(2,마함起動,손패起動,フリー誘発)
PRINTL ①：필드의 몬스터 １장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 주인의 덱으로 되돌리고, 「듀얼리스트」 일반 몬스터 １장을 자신의 패 / 덱 / 묘지에서 특수 소환한다.

CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ②：자신의 필드 / 묘지에 「듀얼리스트」 일반 몬스터가 존재하고, 상대의 효과가 발동했을 경우에 발동할 수 있다.
PRINTL 묘지의 이 카드를 자신 필드에 세트하고, 자신은 덱에서 １장 드로우한다.


@CARDCAN_91045(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91045)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		CALL FULLRESET
		효과範囲필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF

	SIF 발동済_2(듀얼리스트,91045)
		RETURN 0
	SIF モンスター数(듀얼리스트) < 1 && モンスター数(対面者) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件カテゴリ = 듀얼리스트
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,91045)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件カテゴリ = 듀얼리스트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(対面者,"효과발동")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF


@CARDEFFECT_91045(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91045,2)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF モンスター数(듀얼리스트) >= 5
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"덱")
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종류 = 通常モン
			효과条件カテゴリ = 듀얼리스트
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91045,1)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 라이즈 오브 듀얼리스트
		CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"裏側표시")
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF

