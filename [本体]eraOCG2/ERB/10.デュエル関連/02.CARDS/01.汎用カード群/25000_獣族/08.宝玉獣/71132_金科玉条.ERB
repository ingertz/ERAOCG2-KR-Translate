@CARDCAN_71132(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71132)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,71132)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
		SIF 마함数(듀얼리스트) >= 4
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 마함数(듀얼리스트) >= 3
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 보옥수
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71132(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID,10


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71132,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 보옥수
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		SIF RESULT == 1
			選択カード_ID:0 = RESULT:1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 보옥수
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		SIF RESULT == 1
			選択カード_ID:1 = RESULT:1

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 보옥수
		효과条件固ID:0 = 選択カード_ID:0
		효과条件固ID:1 = 選択カード_ID:1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件固定 = カード소환先
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
			;SIF RESULT == 1
			;	CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"束縛",10 + カード설치先,1)
		ENDIF
	ENDIF
ENDIF