@CARDCAN_25033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25033)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_25033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 보옥수
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,400,400)
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-400,-400,25033)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25033)
	IF RESULT == 0
		IF 破壊종류 == "戦闘"
			CALL CARD_FIN_ID_SET(듀얼리스트,25033,"戦闘破壊")
		ELSE
			CALL CARD_FIN_ID_SET(듀얼리스트,25033,"효과破壊")
		ENDIF
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,마함行き)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
