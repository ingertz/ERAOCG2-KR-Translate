@CARDCAN_25034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25034)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	SIF !MATCH(RESULTS,"보옥수")
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_25034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ:0 = 보옥수
	효과条件カテゴリ:1 = 보옥
	효과条件カテゴリ:2 = 궁극보옥신
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	CALL FULLRESET
	효과条件カテゴリ:0 = 보옥수
	효과条件カテゴリ:1 = 보옥
	효과条件カテゴリ:2 = 궁극보옥신
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25034,10)
	IF RESULT == 0
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25034)
	IF RESULT == 0
		IF 破壊종류 == "戦闘"
			CALL CARD_FIN_ID_SET(듀얼리스트,25034,"戦闘破壊")
		ELSE
			CALL CARD_FIN_ID_SET(듀얼리스트,25034,"효과破壊")
		ENDIF
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,마함行き)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
