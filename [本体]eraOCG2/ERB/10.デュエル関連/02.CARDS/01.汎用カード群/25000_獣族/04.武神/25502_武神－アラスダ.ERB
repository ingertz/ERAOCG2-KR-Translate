@CARDCAN_25502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25502)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_SS_CHECK(듀얼리스트,25502,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 무신
		효과条件カテゴリ:1 = 무신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과除送")
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
효과条件名前 = 무신－아라스다
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
		RETURN 1
		
	ELSEIF ゾーン == "필드"
		SIF 발동済_1(듀얼리스트,25502)
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 무신
		효과条件カテゴリ:1 = 무신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득")
		SIF RESULT != 1
			RETURN 0
		CALL CARD_DRAW_CHECK
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

@CARDEFFECT_25502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25502)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所,"守備표시")
		ENDIF

	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25502,1)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

