@CARDCAN_52534(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,13

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52534)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,52534)
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
	CALL AHASHIMA_CHECK(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,52534)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_52534(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードレベル
#DIMS DYNAMIC 選択カード名前A
#DIMS DYNAMIC 選択カード名前B
#DIM DYNAMIC 選択カードA
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 条件달성,13
#DIMS DYNAMIC 出処A
#DIMS DYNAMIC 出処B

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52534,1)
	IF RESULT == 0
		;FULLRESET入ってるから大丈夫と信じたい…
		CALL AHASHIMA_CHECK(듀얼리스트,종류,ゾーン,場所,1)
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = レベル持ち
		효과条件소환可 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カードA = RESULT
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:選択カードA")},"レベル"
			選択カードレベル = RESULT
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:選択カードA")},"名前"
			選択カード名前A = %RESULTS%
			出処A = %参照先（CS）%

			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종류 = レベル持ち
			효과条件固名前 = %選択カード名前A%
			효과条件レベル = 選択カードレベル
			효과条件소환可 = 1
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				CALL CARD_SELECT(듀얼리스트,RESULT)
				選択カードB = RESULT
				出処B = %参照先（CS）%
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:選択カードB")},"名前"
				選択カード名前B = %RESULTS%

				CALL FULLRESET
효과条件名前 = %選択カード名前A%
				효과추가종류 = 効追無効
				CALL CARD_SP_SUMMON(듀얼리스트,出処A,選択カードA)

				CALL FULLRESET
효과条件名前 = %選択カード名前B%
				효과추가종류 = 効追無効
				CALL CARD_SP_SUMMON(듀얼리스트,出処B,選択カードB)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52534,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"不材",3,1)
ENDIF

