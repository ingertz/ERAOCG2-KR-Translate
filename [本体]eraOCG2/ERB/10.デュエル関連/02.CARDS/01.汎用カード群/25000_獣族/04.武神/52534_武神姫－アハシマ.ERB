@AHASHIMA_CHECK(듀얼리스트,종류,ゾーン,場所,モード選択)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC モード選択
#DIM DYNAMIC 효과条件レベル설정,99

;FORには人類の英知が詰まっているよ！
FOR カウンタ,1,12
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = レベル持ち
	;重要なのはここ！
	효과条件レベル = カウンタ
	;レベルを카운터で囲もう！
	효과条件固名前起動 = 1
	효과条件CNT = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT >= 2
		IF モード選択 == 0
				RETURN 1
		ELSEIF モード選択 == 1
			효과条件レベル설정:カウンタ = カウンタ
		ENDIF
	ENDIF
NEXT

;ここでめんどくさい処理飛ばして一気に효과条件レベルを설정している
IF モード選択 == 1
	CALL FULLRESET
	효과条件レベル:0 = 99
	FOR カウンタ,1,12
		SIF 효과条件レベル설정:カウンタ >= 1
			효과条件レベル:カウンタ = 효과条件レベル설정:カウンタ
	NEXT
ENDIF

RETURN 0
