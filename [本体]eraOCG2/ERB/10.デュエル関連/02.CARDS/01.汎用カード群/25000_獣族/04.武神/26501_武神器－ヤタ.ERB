@CARDCAN_26501(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26501)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,26501)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
	SIF RESULTS != "무신"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 제외時
	SIF 발동済_1(듀얼리스트,26501)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 무신
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF


@CARDEFFECT_26501(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26501,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,효과묘지行き)
		ダメージ量 = GETVAR(@"%対面者%_MZ_攻:(%対面者%_戦闘カード)") / 2
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF

ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26501,1)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,26501)
	ENDIF

ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 무신
	CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 무신
	효과条件カテゴリ:1 = 무신기
	효과条件行先플래그 = 덱行き
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
ENDIF
