	CASE "略称"
RESULTS = 무신제 카구츠치
	CASE "カテゴリ"
RESULTS:0 = 무신
ENDSELECT


@CARD_52531(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 엑시즈
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2000
	CASE "単一存在"
		RETURN 1
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

