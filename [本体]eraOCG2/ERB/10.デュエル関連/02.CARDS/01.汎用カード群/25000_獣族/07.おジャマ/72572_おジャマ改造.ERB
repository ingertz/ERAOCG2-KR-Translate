PRINTL ②: 묘지의 이 카드를 제외하고, 자신의 제외되어 있는 "방해꾼" 몬스터 3장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 덱으로 되돌리고 셔플하고, 자신은 1장 드로우한다.

@CARDCAN_72572(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72572)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 방해꾼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 기계족
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 방해꾼
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_72572(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 제외枚数
#DIMS DYNAMIC 選択カード名前,2

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72572)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件속성 = 빛속성
		효과条件종족 = 기계족
		효과条件종류 = 융합
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			選択カード_ID = RESULT:99
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲필드 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 방해꾼
			효과条件複数 = 97
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				제외枚数 = RESULT:2

				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과範囲묘지 = 1
				효과条件名前:0 = ダミ- 
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,0)
				효과条件名前:1 = %素材条件名前:0%
				효과条件名前:2 = %素材条件名前:1%
				효과条件名前:3 = %素材条件名前:2%
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,10)
				효과条件名前:4 = %素材条件名前:0%
				효과条件名前:5 = %素材条件名前:1%
				효과条件名前:6 = %素材条件名前:2%
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,11)
				효과条件名前:7 = %素材条件名前:0%
				효과条件名前:8 = %素材条件名前:1%
				효과条件名前:9 = %素材条件名前:2%

				효과条件複数 = 100 - 제외枚数
				효과条件固名前選択 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72572)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = 방해꾼
		효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		효과条件複数 = 3
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SHUFFLE(듀얼리스트)
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ENDIF
