@CARDCAN_25655(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 대상あり

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25655)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_1(듀얼리스트,25655)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_25655(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25655,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		CALL CARDDRAW_BASIC(対面者,1)

		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARDNAME_{RESULT:1},"カテゴリ"
			SIF MATCH(RESULTS,"방해꾼")
				条件달성 = 1
		ENDIF

		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		IF 条件달성 == 1

			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件표시 = 表側표시
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				CALL CARD_SELECT(듀얼리스트,RESULT)
				選択カード = RESULT
				CALL FULLRESET
				CALL RESRICT_FIELD(듀얼리스트,参照先（CS）,選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
