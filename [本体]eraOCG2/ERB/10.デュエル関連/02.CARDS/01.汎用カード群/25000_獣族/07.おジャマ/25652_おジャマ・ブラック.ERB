@CARDCAN_25652(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 대상あり

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25652)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_D1(듀얼리스트,25650)
		RETURN 0
	SIF 발동済_D1(듀얼리스트,25651)
		RETURN 0
	SIF 발동済_D1(듀얼리스트,25652)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 방해꾼 옐로
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 방해꾼 그린
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

