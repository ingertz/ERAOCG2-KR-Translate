@CARDCAN_52551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52551)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,52551)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件固名前 = 블랙 쉽
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	
	FOR カウンタ,3,7
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = カウンタ
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 ++
	NEXT
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 초차원
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カード_ID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件달성,5
#DIM DYNAMIC リピート횟수

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52551,1)
	IF RESULT == 0
		REPEAT 2
			CALL FULLRESET
			효과条件종류:0 = 의식
			효과条件종류:1 = 융합
			효과条件종류:2 = 싱크로
			효과条件종류:3 = 엑시즈
			효과条件종류:4 = 초차원
			SIF リピート횟수 != 0
				효과条件固名前 = %選択カード名前%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			SIF RESULT == 9999
				BREAK
			カード_ID = RESULT:99
			TRYCALLFORM CARD_{カード_ID},"종류"
			IF RESULT == 의식
				条件달성:0 ++
			ELSEIF RESULT == 융합
				条件달성:1 ++
			ELSEIF RESULT == 싱크로
				条件달성:2 ++
			ELSEIF RESULT == 엑시즈
				条件달성:3 ++
			ELSEIF RESULT == 초차원
				条件달성:4 ++
			ENDIF
			TRYCALLFORM CARDNAME_{カード_ID},"名前"
			選択カード名前 = %RESULTS%
			リピート횟수 ++
		REND
		SIF リピート횟수 == 0
			RETURN 0
		;의식
		IF 条件달성:0 != 0
			CALL CARDDRAW_BASIC(듀얼리스트,2)
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		;융합
		IF 条件달성:1 != 0
			CALL FULLRESET
			효과範囲묘지 = 1
			CALL 효과条件レベル_ADV(4,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		;싱크로
		IF 条件달성:2 != 0
			CALL FULLRESET
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
					CONTINUE
				SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
					CONTINUE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"永攻",700)
			NEXT
		ENDIF
		;엑시즈
		IF 条件달성:3 != 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"永攻DOWN",700)
		ENDIF
		;초차원
		IF 条件달성:4 != 0
			CALL FULLRESET
			효과条件종류 = 초차원
			CALL 효과条件レベル_ADV(5, "以下")
			CALL DIMSUMMON(듀얼리스트,ゾーン,場所,(2 + 4 + 8))
		ENDIF
	ENDIF
ENDIF