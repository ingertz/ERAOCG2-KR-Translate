@CARDCAN_25105(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25105)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発 
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,25105)
		RETURN 0
	;소환時誘発、奈落から
	SIF FINAL_SUMMON_TARGET(듀얼리스트,1) == 5 
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메르피
	효과条件固名前 = 메르피 왈라비
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,25101)
		RETURN 0
	;チョコマジから
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메르피
	효과条件固名前 = 메르피 왈라비
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_2(듀얼리스트,25105)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25105,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25105(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発 || 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25105,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,3)
PRINTL 몬스터를 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == はい
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 메르피
			효과条件固名前 = 메르피 왈라비
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			TRYCALLFORM CARDNAME_{RESULT:1},"名前"
			選択カード名前 = %RESULTS%
			
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 메르피
			효과条件固名前:0 = 메르피 왈라비
			효과条件固名前:1 = %選択カード名前%
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25105,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ENDIF

