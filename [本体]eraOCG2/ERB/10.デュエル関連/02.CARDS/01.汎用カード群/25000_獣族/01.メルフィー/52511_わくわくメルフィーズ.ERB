@CARDCAN_52511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52511)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		SIF 발동済_1(듀얼리스트,52511)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			RETURN 0
		SIF 종류 == フリー誘発
			RETURN 0
		RETURN 1
	ELSEIF ターンプレイヤー != 듀얼리스트
		;발동済みチェック
		SIF 발동済_2(듀얼리스트,52511)
			RETURN 0
		SIF ターンプレイヤー == 듀얼리스트
			RETURN 0
		RETURN 1
	ENDIF
ENDIF

@CARDEFFECT_52511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC X素材数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52511,1,X消費1)
		IF RESULT == 0
			;参考：고블린巣穴
			CALL FULLRESET
			효과条件カテゴリ = 메르피
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"直攻",1)
		ENDIF

	ELSEIF ターンプレイヤー != 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52511,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 야수족
			효과条件종류 = 엑시즈
			CALL CARD_CHOOSE_BASIC(듀얼리스트,ゾーン,場所)
			SIF RESULT == 9999
				RETURN 0
			選択カード = RESULT
			X素材数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:選択カード") + 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,選択カード,덱行き)

			;묘지に야수족いなかったらおわり
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 야수족
			CALL 효과条件レベル_ADV(2, "以下")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0

			;X素材数が１以上なかったらおわり
			SIF X素材数 < 1
				RETURN 0

PRINTL 몬스터를 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				SIF X素材数 >= 5
					X素材数 = 5
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件종족 = 야수족
				효과条件종류 = レベル持ち
				CALL 효과条件レベル_ADV(2, "以下")
				효과条件複数 = 100 - X素材数
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF

