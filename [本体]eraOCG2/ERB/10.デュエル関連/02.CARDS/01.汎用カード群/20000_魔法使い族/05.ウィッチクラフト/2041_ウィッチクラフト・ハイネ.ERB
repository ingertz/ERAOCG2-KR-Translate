@CARDCAN_2041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2041)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,2041)
		RETURN 0
	;위치크래프트モンスター側でWC지속마법の代替コスト효과를 対応
	;OR条件なのでどっちか満たしているのが確認できればよい
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = 지속마법
		효과条件표시 = 表側표시
		효과条件カテゴリ = 위치크래프트
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_2041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2041,1)
	IF RESULT == 0
		;先に지속마법を代替コストにするか聞く
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = 지속마법
		효과条件표시 = 表側표시
		효과条件カテゴリ = 위치크래프트
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			;손패に마법카드가 あるならどちらをコストにするか尋ねる
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종류 = 마법全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				;손패に마법カードもある
PRINTL 패의 마법 카드를 버리는 대신, 자신 필드의 '위치크래프트' 지속 마법을 묘지로 보내시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				;この分岐に入っている時点でWC지속마법はあるはずなので、손패の마법카드가 なければ強制的に지속마법を捨てることを考える
				RESULT = はい
			ENDIF	
			IF RESULT == はい
				CALL FULLRESET
				효과範囲마함 = 1
				효과条件カテゴリ = 위치크래프트
				효과条件종류 = 지속마법
				효과条件표시 = 表側표시
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ELSE
				;なぜか『はい』が0なので、捨てないなら戻り値がちゃんとFalseになるよう0にしておく。
				RESULT = 0
			ENDIF
		ENDIF
		IF RESULT !=1
			CALL FULLRESET
			효과条件종류 = 마법全般
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF	
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종족 = 마법사족
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF
