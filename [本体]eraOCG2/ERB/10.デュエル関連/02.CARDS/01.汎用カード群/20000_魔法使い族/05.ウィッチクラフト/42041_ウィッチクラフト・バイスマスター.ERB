@CARDSUMMON_42041(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 위치크래프트
ELSEIF EX参照 >= 10
	素材条件종족 = 마법사족
ENDIF

IF EX参照 == 1
	;PRINTL サモンまでは言ってるよ
	CALL FUSCAN(듀얼리스트,소환カード,42041) 
	RETURN RESULT
ENDIF

@CARDCAN_42041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 使用済み
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42041)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
		SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT == 1
		条件달성 = 1

	CALL FULLRESET
	효과条件종족 = 마법사족
	효과条件종류 = 융합以外
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT == 1
		条件달성 = 1

	SIF 条件달성 != 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 발동済_1(듀얼리스트,42041)
			효과使用불가:0 = 1
	ELSE
		효과使用불가:0 = 1
	ENDIF

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 위치크래프트
	CALL 효과条件レベル_ADV(6, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 발동済_2(듀얼리스트,42041)
			효과使用불가:1 = 1
	ELSE
		효과使用불가:1 = 1
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 마법全般
	효과条件カテゴリ = 위치크래프트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 발동済_3(듀얼리스트,42041)
			효과使用불가:2 = 1
	ELSE
		효과使用불가:2 = 1
	ENDIF

	;효과使用불가の全部が1 이외의 状態なら1を返す
	;발동済_2がONしているときかつほか의 효과が1と3의 효과が条件未달성である場合：
	;효과使用불가は:0から:2までが1なのでRETURN 0
	;발동済_2がONしているときかつほか의 효과が1だけ의 효과が条件未달성である場合：
	;효과使用불가は:0から:1までが1だが:2が0なのでRETURN 0
	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0
	RETURN 1

ENDIF


@CARDEFFECT_42041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択효과
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성,3
#DIM DYNAMIC 選択肢표시
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 && 발동済_1(듀얼리스트,42041) == 0
		選択肢표시 = 1
		条件달성:0 = 1
	ENDIF


	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 위치크래프트
	CALL 효과条件レベル_ADV(6, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 && 발동済_2(듀얼리스트,42041) == 0
		選択肢표시 = 1
		条件달성:1 = 1
	ENDIF

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 마법全般
	효과条件カテゴリ = 위치크래프트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 && 발동済_3(듀얼리스트,42041) == 0
		選択肢표시 = 1
		条件달성:2 = 1
	ENDIF

	IF 듀얼리스트 == "자신"
		IF 条件달성:0 == 1
PRINTL [0] - 필드의 카드 1장을 선택하고 파괴한다.
		ENDIF
		IF 条件달성:1 == 1
PRINTL [1] - 손패 덱에서 레벨 6 이하의 「위시크래프트」 몬스터 1장을 특수 소환한다.
		ENDIF
		IF 条件달성:2 == 1
PRINTL [2] - 자신의 묘지에서 「위시크래프트」 마법 / 함정 카드 1장을 선택하고 패에 넣는다.
		ENDIF
PRINTL [100] - 효과를 사용하지 않는다.
		BINPUT
		選択효과 = RESULT
	ELSEIF 듀얼리스트 == "상대"
		選択효과 = 100
		IF 条件달성:2 == 1
			VARSET 条件달성
			選択효과 = 2
		ENDIF
		IF 条件달성:1 == 1
			VARSET 条件달성
			選択효과 = 1
		ENDIF
		IF 条件달성:0 == 1
			選択효과 = 0
		ENDIF
	ENDIF
	IF 選択효과 == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42041,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ELSEIF 選択효과 == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42041,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과条件カテゴリ = 위치크래프트
			CALL 효과条件レベル_ADV(6, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ELSEIF 選択효과 == 2
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42041,3)
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = 마법全般
			효과条件カテゴリ = 위치크래프트
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

