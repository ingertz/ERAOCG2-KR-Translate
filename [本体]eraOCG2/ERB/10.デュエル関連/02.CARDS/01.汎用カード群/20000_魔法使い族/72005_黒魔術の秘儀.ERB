@CARD_EXPLANATION_72005(종류)
#DIM DYNAMIC 종류
CALLFORM CARD_ABLE(0,마함起動,손패起動,フリー誘発)
PRINTL ①: 이하의 효과 중에서 1가지를 선택하여 발동할 수 있다.
PRINTL ● 융합 몬스터 카드에 의해 결정된, 융합 소재 몬스터를 자신의 패 / 필드에서 묘지로 보내고,
PRINTL 「블랙 매지션」 또는 「블랙 매지션 걸」 융합 몬스터 1장을 EX덱에서 융합 소환한다.

PRINTL ● 레벨의 합계가 의식 소환하는 몬스터의 레벨 이상이 되도록 패 / 필드의 카드를 릴리스하고,
PRINTL 패에서 「블랙 매지션」 또는 「블랙 매지션 걸」 의식 몬스터 1장을 의식 소환한다.

@CARDCAN_72005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72005)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF


	CALL RESETAREA_MAT
	素材範囲손패 = 1
	素材範囲필드 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件カテゴリ:0 = 블랙 매지션
	효과条件カテゴリ:1 = 블랙 매지션 걸
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++

	CALL RESETAREA_MAT
	素材範囲손패 = 1
	素材範囲필드 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 의식
	효과条件カテゴリ:0 = 블랙 매지션
	효과条件カテゴリ:1 = 블랙 매지션 걸
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC 묘지送カード,10
#DIM DYNAMIC 손패묘지送カード,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 選択カード_ID
;융합소환
VARSET 묘지送カード, 35
VARSET 손패묘지送カード, 35

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72005)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = 의식
		효과条件カテゴリ:0 = 블랙 매지션
		효과条件カテゴリ:1 = 블랙 매지션 걸
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 의식 몬스터를 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL RESETAREA_MAT
			素材範囲손패 = 1
			素材範囲필드 = 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종류 = 의식
			효과条件カテゴリ:0 = 블랙 매지션
			효과条件カテゴリ:1 = 블랙 매지션 걸
			효과条件소환可 = 1
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			選択カード_ID = RESULT:99
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				CALL RESETAREA_MAT
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
				素材範囲필드 = 1
				素材範囲손패 = 1
				TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,"손패")
			ENDIF
		ELSEIF RESULT == いいえ
			CALL RESETAREA_MAT
			素材範囲손패 = 1
			素材範囲필드 = 1
			CALL FULLRESET
			효과条件종류 = 융합
			효과条件カテゴリ:0 = 블랙 매지션
			효과条件カテゴリ:1 = 블랙 매지션 걸
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL FUSSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ENDIF
	ENDIF		
ENDIF
