@CARDCAN_20550(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20550)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 마기스토스
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	IF RESULT != 1
		SIF 발동済_1(듀얼리스트,20550)
			RETURN 0
		SIF 마함数(듀얼리스트) == 5
			RETURN 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 마기스토스
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		SIF 발동済_2(듀얼리스트,20550)
			RETURN 0

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종족 = 마법사족
		효과条件レベル = 4
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF
@CARDEFFECT_20550(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20550,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 마기스토스
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所,20550)
			選択場所 = RESULT
			IF 選択場所 != 9999
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 마기스토스
				CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,選択場所,,20550)
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20550,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종족 = 마법사족
			효과条件レベル = 4
			효과추가종류 = 1			
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF