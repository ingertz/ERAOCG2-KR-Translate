@CARDSUMMON_50124(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 마기스토스
ELSEIF EX参照 >= 10
	素材条件종류:0 = 융합
	素材条件종류:1 = 싱크로
	素材条件종류:2 = 엑시즈
	素材条件종류:3 = 링크
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50124) 
	RETURN RESULT
ENDIF


@CARDCAN_50124(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50124)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,50124)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대필드 = 1
	효과条件종류:0 = 효과モン
	효과条件종류:1 = 의식
	효과条件종류:2 = 융합
	효과条件종류:3 = 싱크로
	효과条件종류:4 = 엑시즈
	효과条件종류:5 = 링크
	효과条件종류:6 = 초차원
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,50124)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件표시 = 10
	효과条件종류 = モン全般
	효과条件カテゴリ = 마기스토스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	
ENDIF

@CARDEFFECT_50124(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 破壊カード
#DIM DYNAMIC 選択カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50124,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대필드 = 1
		효과条件종류:0 = 효과モン
		효과条件종류:1 = 의식
		효과条件종류:2 = 융합
		효과条件종류:3 = 싱크로
		효과条件종류:4 = 엑시즈
		효과条件종류:5 = 링크
		효과条件종류:6 = 초차원
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,0,50124)
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50124,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件표시 = 10
		효과条件종류 = モン全般
		효과条件カテゴリ = 마기스토스
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ENDIF




