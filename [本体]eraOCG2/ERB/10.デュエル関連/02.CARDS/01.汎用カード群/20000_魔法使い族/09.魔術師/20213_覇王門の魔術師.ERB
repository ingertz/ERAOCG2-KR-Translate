@CARDCAN_21213(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,10
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21213)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF 마함数(듀얼리스트) >= 5
		효과使用불가:1 = 1
	SIF 발동済_1(듀얼리스트,21213)
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,21213)
		효과使用불가:2 = 1
	CALL CARD_SS_CHECK(듀얼리스트,21213,"손패")
	SIF RESULT == 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 패왕문
	효과条件固名前 = 패왕문의 마술사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ:0 = 펜듈럼 드래곤
	효과条件カテゴリ:1 = 엑시즈 드래곤
	효과条件カテゴリ:2 = 싱크로 드래곤
	효과条件カテゴリ:3 = 융합 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_3(듀얼리스트,21213)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_破耐:場所") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF 발동済_4(듀얼리스트,21213)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 패왕룡 자크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21213(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 효과使用불가,10
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%




IF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		효과使用불가:1 = 1
	SIF 발동済_1(듀얼리스트,21213)
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,21213)
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 패왕문
	효과条件固名前 = 패왕문의 마술사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ:0 = 펜듈럼 드래곤
	효과条件カテゴリ:1 = 엑시즈 드래곤
	효과条件カテゴリ:2 = 싱크로 드래곤
	효과条件カテゴリ:3 = 융합 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 지속마법으로 발동하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:2 == 1
		RESULT = はい
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ENDIF

	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21213,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21213,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ:0 = 펜듈럼 드래곤
			효과条件カテゴリ:1 = 엑시즈 드래곤
			효과条件カテゴリ:2 = 싱크로 드래곤
			효과条件カテゴリ:3 = 융합 드래곤		
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21213,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 패왕문
		효과条件分割 = 펜듈럼
		효과条件固名前 = 패왕문의 마술사
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21213,4)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 패왕룡 자크
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF