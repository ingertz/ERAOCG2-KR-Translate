#DIM DYNAMIC 조교대상
#DIM DYNAMIC 元参照先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,65100,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 알케믹 아틀리에 마법사
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL "알케믹 아틀리에 샤이니트"를 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL FULLRESET
			효과範囲EX덱 = 1
효과条件名前 = 알케믹 아틀리에 샤이니트
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲손패 = 1
			효과条件종족 = 마법사족
			효과条件レベル:0 = 1
			효과条件レベル:1 = 4
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
