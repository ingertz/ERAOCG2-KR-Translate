@CARDNAME_1005,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 초코 매지션 걸
	CASE "略称"
		RESULTS = 초코
	CASE "カテゴリ"
		RESULTS:0 = 매지션 걸
ENDSELECT


@CARD_1005(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 4
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_1005(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 1번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,필드起動)
PRINTL ①：패에서 마법사족 몬스터 １장을 버리고 발동할 수 있다。
PRINTL 자신은 덱에서 １장 드로우한다。
CALLFORM CARD_ABLE(2,攻撃時誘発)
PRINTL ②：이 카드가 공격 대상으로 선택된 경우、
PRINTL "초코 매지션 걸" 이외의 자신 묘지의 마법사족 몬스터 １장을 대상으로 하고 발동할 수 있다。
PRINTL 그 몬스터를 특수 소환한다。
PRINTL 그 후、공격 대상을 그 몬스터로 옮기고、공격 몬스터의 공격력을 절반으로 한다。


@CARDCAN_1005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1005)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,1005)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1005)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件종족 = 마법사족
	효과条件固名前 = 초코 매지션 걸
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

	CALL 対面者판정(듀얼리스트)
	対面者 = %RESULTS%


IF 종류 == 필드起動
	;카드 효과발동確認(改造の際一番右의 효과발동だけを변경してください)
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1005,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 마법사족
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			;ドローの動き
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1005,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 마법사족
		효과条件固名前 = 초코 매지션 걸
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF GETVAR(@"%듀얼리스트%_필드:カード소환先") > 0
			CALL COVER_ATTACK(듀얼리스트,カード소환先)
			選択カード = 戦闘場所(듀얼리스트,1)
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"一攻",- GETVAR(@"%対面者%_MZ_攻:選択カード") / 2)
		ENDIF
	ENDIF
ENDIF
