@CARDCAN_20281(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20281)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == リバース誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,20281)
		RETURN 0
	;フィールドに네크로벨리が存在するかどうかで確認範囲を変える。
	CALL FULLRESET
	효과範囲마함 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		;네크로벨리が존재하지 않는 경우=묘지から蘇生する효과のチェック
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 묘지기
		CALL 효과条件レベル_ADV(4, "以下")
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		;네크로벨리が存在する場合=손패 덱에서 특수소환する효과のチェック
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 묘지기
		CALL 효과条件レベル_ADV(4, "以下")
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == F素材時효과
	SIF 발동済_2(듀얼리스트,20281)
		RETURN 0
	SIF 現山札数(듀얼리스트) < 3
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_20281(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択結果


IF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == リバース誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20281,1)
	IF RESULT == 0
		;フィールドに네크로벨리が存在するかどうかで処理を変える。
		;발동時と효과処理時で네크로벨리の有無が変わってたら효과範囲も変わるのは仕様とする。
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			;네크로벨리が존재하지 않는 경우=묘지から蘇生する
			
			IF 듀얼리스트 == "자신"
PRINTL 특수 소환할 몬스터의 표시 형식을 선택해 주세요.
				CALL YN_CHOICE(듀얼리스트, "●表側攻撃표시で특수소환する。", "●裏側守備표시で특수소환する。")
				選択結果 = RESULT
			ELSE
				;CPUは表側攻撃표시で蘇生
				選択結果 = はい
			ENDIF
			
			IF 選択結果 == はい
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 묘지기
				CALL 효과条件レベル_ADV(4, "以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트, ゾーン, 場所, "表側攻撃표시")
			ELSE
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 묘지기
				CALL 효과条件レベル_ADV(4, "以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트, ゾーン, 場所, "裏側守備표시")
			ENDIF
		ELSE
			;네크로벨리が存在する場合=손패 덱에서 특수소환する
			
			IF 듀얼리스트 == "자신"
PRINTL 특수 소환할 몬스터의 표시 형식을 선택해 주세요.
				CALL YN_CHOICE(듀얼리스트, "●表側攻撃표시で특수소환する。", "●裏側守備표시で특수소환する。")
				選択結果 = RESULT
			ELSE
				;CPUは表側攻撃표시で특수소환
				選択結果 = はい
			ENDIF
			
			IF 選択結果 == はい
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과条件カテゴリ = 묘지기
				CALL 효과条件レベル_ADV(4, "以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트, ゾーン, 場所, "表側攻撃표시")
			ELSE
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과条件カテゴリ = 묘지기
				CALL 효과条件レベル_ADV(4, "以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트, ゾーン, 場所, "裏側守備표시")
			ENDIF
		ENDIF
		CALL CARD_EX_RESTRICTION(듀얼리스트,"묘지기")
	ENDIF
ELSEIF 종류 == F素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20281,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 묘지기
		효과条件カテゴリ:1 = 네크로벨리
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,3)
	ENDIF
ENDIF
