対面者 = %RESULTS%

IF 종류 == 발동強制誘発
	PRINTFORML 
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",1)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20171,10)
