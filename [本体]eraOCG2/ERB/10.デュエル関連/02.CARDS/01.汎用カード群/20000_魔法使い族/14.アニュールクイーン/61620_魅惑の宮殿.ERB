@CARD_EXPLANATION_61620(종류)
#DIM DYNAMIC 종류
#DIMS DYNAMIC 듀얼리스트

PRINTL 자신 필드는 「매혹의 궁전」이 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①：자신 필드의 마법사족 몬스터의 공격력 / 수비력은 500 올린다.
;PRINTL ②：자신 필드의 「매혹의여왕」효과モンスターは以下의 효과를 得る。
;PRINTL ●자신의 효과で카드를 装備しているこの카드를 묘지へ送って발동할 수 있다。
;PRINTL ゲ-ム外からレベルが２つ高い「매혹의여왕」モンスター１体を특수소환する。
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②：손패를 1장 묘지로 보내고 발동할 수 있다.
PRINTL 덱에서 「매혹의 여왕」 몬스터 1장을 선택하고, 패에 넣거나 상대 필드에 특수 소환한다.


@CARDCAN_61620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61620)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,61620)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 매혹의여왕
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_61620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 装備先


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61620,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		CALL YN_CHOICE(듀얼리스트,"손패に加える","상대 필드에 특수소환")
		IF RESULT == 0
			CALL FULLRESET
효과条件名前 = 매혹의 여왕
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
효과条件名前 = 매혹의 여왕
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "매혹の宮殿")
	CALL FULLRESET
	효과条件종족 = 마법사족
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500,500)
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61620)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF
