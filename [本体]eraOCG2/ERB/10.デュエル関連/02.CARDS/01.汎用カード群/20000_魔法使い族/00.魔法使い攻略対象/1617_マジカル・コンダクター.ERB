@CARDCAN_1617(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1617)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_魔Ｃ:場所") <= 0
		RETURN 0

	カウンタ数 = GETVAR(@"%듀얼리스트%_MZ_魔Ｃ:場所")
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件종족 = 마법사족
	CALLFORM 효과条件レベル_ADV(カウンタ数, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1617(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",2)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1617,10)
	IF RESULT == 0
		カウンタ数 = GETVAR(@"%듀얼리스트%_MZ_魔Ｃ:場所")
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종족 = 마법사족
		CALLFORM 효과条件レベル_ADV(カウンタ数, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",0,1)
	ENDIF
ENDIF


