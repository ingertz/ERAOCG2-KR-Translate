@CARDCAN_1632(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1632)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1632,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 신부 인형
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"Ｃドロー")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF 現山札数(듀얼리스트) <= 現山札数(対面者)
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_RESERV(듀얼리스트,1632)
	RETURN 0

ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF


@CARDEFFECT_1632(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1632)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == バトル開始時強制
	攻撃力修正 = 現山札数(듀얼리스트) - 現山札数(対面者)
	攻撃力修正 = 攻撃力修正 * 300
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)

ELSEIF 종류 == ターン終了時強制
	SETCOLOR 0,0,0
	CALL FULLRESET
	CALL CARD_GENERATE_DECK(듀얼리스트,101632)
	RESETCOLOR
	IF 現山札数(듀얼리스트) > 60
		PRINTW 덱에서 黒い何かがはみ出している……
		CALL SET_PLAYER_INFO(듀얼리스트,"ドロースキップ", 1)
	ENDIF

;ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
;	CALL CARD_RESERV(듀얼리스트,1632)

ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
효과条件名前 = 신부 인형
	CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	選択カード = RESULT
	IF 選択カード != 9999
		CALL CARD_ADD_DECK_SPC(듀얼리스트,"묘지",選択カード)
	ENDIF
ENDIF


