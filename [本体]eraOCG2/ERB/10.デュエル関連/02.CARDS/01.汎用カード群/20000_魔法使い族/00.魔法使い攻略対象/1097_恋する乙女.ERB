@CARDCAN_1097(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1097)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:{場所}") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 雄性
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件성별 = 雄性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1097(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 所有者
#DIM DYNAMIC 合計攻撃力
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")

	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT == 雄性
		CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")

ELSEIF 종류 == 攻撃後強制誘発
	選択カード = 戦闘場所(듀얼리스트,1)
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"強奪")
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		所有者 = 1
	ELSEIF 듀얼리스트 == "상대"
		所有者 = 2
	ENDIF
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_所有:{カウンタ}") == 所有者
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}("성별")
		SIF RESULT != 雄性
			CONTINUE
		合計攻撃力 += GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
	NEXT
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,合計攻撃力)
ENDIF
