@CARDCAN_1750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1750)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,1750)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,1750,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件종류 = フィールド
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般",2)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "필드"
		SIF 발동済_3(듀얼리스트,1750)
			RETURN 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲묘지 = 1
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과条件종류 = フィールド
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과範囲마함 = 1
효과条件名前 = 다원우주
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 설정カテゴリ,10
IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1750,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所, "攻撃표시")
		ENDIF
	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1750,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 10
			효과条件종류 = フィールド
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)	
			IF RESULT != 9999
				CALLFORM CARDNAME_{RESULT:99}("カテゴリ")
				FOR カウンタ,0,5
					SIF RESULTS:カウンタ != "なし"
						설정カテゴリ:(カウンタ + 1) = %RESULTS:カウンタ%
				NEXT
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲묘지 = 1
				효과条件カテゴリ:0 = ダミ-
				효과条件カテゴリ:1 = %설정カテゴリ:1%
				효과条件カテゴリ:2 = %설정カテゴリ:2%
				효과条件カテゴリ:3 = %설정カテゴリ:3%
				효과条件カテゴリ:4 = %설정カテゴリ:4%
				효과条件カテゴリ:5 = %설정カテゴリ:5%
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
ENDIF
