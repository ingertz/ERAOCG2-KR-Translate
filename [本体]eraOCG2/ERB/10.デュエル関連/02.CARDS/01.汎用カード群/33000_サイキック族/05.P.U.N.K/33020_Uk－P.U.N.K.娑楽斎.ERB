@CARDCAN_33020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33020)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 600
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		SIF 종류 == フリー誘発
			RETURN 0
		SIF 발동済_1(듀얼리스트,33020)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		CALL CARD_EX_CHECK(듀얼리스트,0)
		SIF RESULT == 1
			RETURN 0

		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材範囲손패 = 1
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 융합
		효과条件カテゴリ = P.U.N.K.
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

		RETURN 1
	ELSE
		SIF 발동済_1(듀얼리스트,33020)
			RETURN 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 싱크로
		효과条件カテゴリ = P.U.N.K.
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
ENDIF

@CARDEFFECT_33020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33020,1)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",600)
			CALL RESETAREA_MAT
			素材範囲필드 = 1
			素材範囲손패 = 1
			CALL FULLRESET
			효과条件종류 = 융합
			효과条件カテゴリ =	P.U.N.K.
			효과条件소환可 = 1	
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL FUSSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ELSE
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",600)
			;EX덱確認
			CALL FULLRESET
			효과条件종류 = 싱크로
			효과条件カテゴリ =	P.U.N.K.
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード= RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL SYNSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
