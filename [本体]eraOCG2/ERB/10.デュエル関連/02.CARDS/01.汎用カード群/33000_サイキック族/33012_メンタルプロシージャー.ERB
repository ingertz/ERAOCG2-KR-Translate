@CARDCAN_33012(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33012)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,33012)
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 2000
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 텔레포트
	효과条件종류:0 = 通常마법
	효과条件종류:1 = 速攻마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	IF 종류 == 특수소환時
		TRYCALLFORM CARD_{処理中_효과ID},"종류"
		SIF RESULT > モン全般
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 제외時
	SIF 발동済_1(듀얼리스트,33012)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,33012,"제외")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_33012(듀얼리스트,종류,ゾーン,場所)
