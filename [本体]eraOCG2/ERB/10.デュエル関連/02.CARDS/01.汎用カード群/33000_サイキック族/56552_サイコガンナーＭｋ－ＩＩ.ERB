@CARDCAN_56552(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56552)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0

	SIF 발동済_1(듀얼리스트,56552)
		발동불가:0 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:0 = 1
	SIF 종류 == フリー誘発
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲상대제외 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	SIF 발동済_2(듀얼리스트,56552)
		발동불가:1 = 1
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 제외
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_56552(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,56552)
		발동불가:0 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:0 = 1
	SIF 종류 == フリー誘発
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲상대제외 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	SIF 발동済_2(듀얼리스트,56552)
		발동불가:1 = 1
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1

	IF 발동불가:0 == 0 && 발동불가:1 == 0
		CALL YN_CHOICE(듀얼리스트,"①：제외 상태인 몬스터를 특수소환する","②：필드의 モンスター１体を제외한다")
	ELSEIF 발동불가:0 == 0
		RESULT = 0
	ELSEIF 발동불가:1 == 0
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56552,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲제외 = 1
			효과範囲상대제외 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56552,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = モン全般
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件표시 = 表側표시
				효과条件他所 = 1
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"제외")
				IF RESULT == 1
					選択カード_ID = RESULT:2
					TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
					CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF



