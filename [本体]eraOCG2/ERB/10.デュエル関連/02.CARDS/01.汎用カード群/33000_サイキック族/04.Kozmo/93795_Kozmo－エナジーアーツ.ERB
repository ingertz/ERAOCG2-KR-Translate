@CARDCAN_93795(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF 발동済_1(듀얼리스트,93795)
		RETURN 0
	CALL FULLRESET
	    효과範囲상대필드 = 1
	    효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	    SIF RESULT != 1
		    RETURN 0
	CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 코즈모
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")

	;自明だが判別用
	SIF ゾーン != "묘지"
		RETURN 0
	;既に使用してるなら
	SIF 발동済_2(듀얼리스트,93795)
		RETURN 0
	;제외が行えない상황なら当然ダメ
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	;코즈모카드가 ないとダメ
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 코즈모
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;앞면 표시인 카드 は2体必要
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93795)
SIF RESULT == 1
	RETURN 0

@CARDEFFECT_93795(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択フォース

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")

	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93795,1)
	IF RESULT == 0
	    CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 코즈모
		효과範囲필드 = 1
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
		    CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"제외")
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93795,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		選択カード = RESULT:1
		IF 選択カード != 9999
			攻撃力修正 = (GETVAR(@"%対面者%_MZ_攻:選択カード") / 2)
			CALL FULLRESET
			효과추가종류 = 2
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"永攻DOWN")

			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 코즈모
			효과条件표시 = 表側표시
			CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"永攻",攻撃力修正)
		ENDIF
	ENDIF
ENDIF

