@CARD_EXPLANATION_38354(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 이 카드는 상대의 효과의 대상이 되지 않는다.
CALLFORM CARD_ABLE(10,필드起動,フリー誘発)
PRINTL ②: 자신 상대 턴에 1번, 상대 필드의 앞면 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터의 효과를 턴 종료시까지 무효로 한다.
CALLFORM CARD_ABLE(0,破壊→묘지,戦闘→묘지)
PRINTL ③: 이 카드가 전투 효과로 파괴되어 묘지로 보내졌을 경우, 발동할 수 있다.
PRINTL 묘지의 이 카드를 제외하고, 덱에서 레벨 6 이하의 「코즈모」 몬스터 1장을 특수 소환한다.


@CARDCAN_38354(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0	
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
	    RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
    SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 코즈모
	CALL 효과条件レベル_ADV(6,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF	

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38354)
SIF RESULT == 1
	RETURN 0

@CARDEFFECT_38354(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38354,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
	ENDIF

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38354)
	IF RESULT == 0
	    CALL FULLRESET
효과条件名前 = 코즈모－포어러너
		효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 코즈모
		CALL 효과条件レベル_ADV(6,"以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF


