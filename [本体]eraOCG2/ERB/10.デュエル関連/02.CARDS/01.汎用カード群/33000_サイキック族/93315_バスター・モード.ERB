@CARDCAN_93315(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93315)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 스타더스트 드래곤
	효과条件名前:1 = 레드 데몬즈 드래곤
	효과条件名前:2 = 기간테크 파이터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93315(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 選択名前
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93315)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前:0 = 스타더스트 드래곤
		효과条件名前:1 = 레드 데몬즈 드래곤
		효과条件名前:2 = 기간테크 파이터
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARDNAME_{RESULT:1}("名前")
			選択名前 = %RESULTS%
			CALL FULLRESET
			효과範囲EX덱 = 1
			SIF 選択名前 == "스타더스트 드래곤"
효과条件名前 = 스타더스트 드래곤/버스터
			SIF 選択名前 == "레드 데몬즈 드래곤"
효과条件名前 = 레드 데몬즈 드래곤/버스터
			SIF 選択名前 == "기간테크 파이터"
효과条件名前 = 기간테크 파이터/버스터
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")		
		ENDIF
	ENDIF
ENDIF
