		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"덱")		
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 핸디 레이디
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件任意 = 1
			CALL 효과条件レベル_ADV(3, "以下")
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)				
		ENDIF		
	ENDIF
ENDIF
