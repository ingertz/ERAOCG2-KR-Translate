@CARDCAN_1455(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1455)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時 || 종류 == 특수소환時
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1455)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲상대제외 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_1455(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX소환時 || 종류 == 특수소환時 || 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1455)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(対面者,"덱",0,제외行き)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1455,2)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲상대제외 = 1
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 함정 카드를 묘지로 되돌리겠습니까?
PRINTL ●함정: 상대 필드의 앞면 표시의 카드 1장을 고르고 주인의 덱 맨 위로 되돌린다.
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲상대제외 = 1
				효과条件종류 = 함정全般
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과条件표시 = 表側표시
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
				ENDIF
			ENDIF
		ENDIF
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			RETURN 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲상대제외 = 1
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 마법 카드를 묘지로 되돌리겠습니까?
PRINTL ●마법: 자신은 덱에서 1장 드로우한다.
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲상대제외 = 1
				효과条件종류 = 마법全般
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL CARDDRAW_BASIC(듀얼리스트,1)
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
				ENDIF
			ENDIF
		ENDIF

		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			RETURN 0

		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲상대제외 = 1
		효과条件종류 = モン全般		
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 몬스터를 묘지로 되돌리겠습니까?
PRINTL ●몬스터: 이 카드를 엔드 페이즈까지 제외한다.
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과範囲제외 = 1
				효과範囲상대제외 = 1
				효과条件종류 = モン全般
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き,1)
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF