@CARDCAN_33005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33005)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,33005)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 세뇌－브레인 컨트롤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,33005)
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾種",4)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == S素材時효과
	SIF 발동済_3(듀얼리스트,33005)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,33005,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 5
		RETURN 0
	RETURN 1
ENDIF

