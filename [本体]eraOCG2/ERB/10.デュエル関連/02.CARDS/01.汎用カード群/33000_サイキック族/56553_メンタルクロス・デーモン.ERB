@CARDSUMMON_56553(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 8
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 사이킥족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,56553) 
	RETURN RESULT
ENDIF


@CARDCAN_56553(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56553)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF メインフェイズ == 1
		SIF 발동済_1(듀얼리스트,56553)
			RETURN 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件종족 = 사이킥족
		CALLFORM 효과条件レベル_ADV(7,"以下")
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ELSEIF バトルフェイズ == 1
		SIF 발동済_2(듀얼리스트,56553)
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		IF 듀얼리스트 != "자신"
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件以攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1 && GETVAR(@"%듀얼리스트%_MZ_戦:場所") != 0
				RETURN 0
			IF ターンプレイヤー != 듀얼리스트
				SIF 戦闘場所(듀얼리스트) != 場所
					RETURN 0
			ENDIF
		ENDIF
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_56553(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	IF メインフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56553,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件종족 = 사이킥족
			CALLFORM 효과条件レベル_ADV(7,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF

	ELSEIF バトルフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56553,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件他所 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARD_{RESULT:1},"攻撃力"
				攻撃力修正 = RESULT
				CALL LIFE_CHANGE(듀얼리스트,"増加","효과",攻撃力修正)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)
			ENDIF
		ENDIF
	ENDIF
ENDIF



