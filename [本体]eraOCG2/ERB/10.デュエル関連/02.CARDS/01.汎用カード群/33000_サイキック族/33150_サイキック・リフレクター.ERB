@CARDCAN_33150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33150)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,33150)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 버스터
	효과条件固名前 = 사이킥 리플렉터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,33150)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과条件표시 = 0
효과条件名前 = 버스터 모드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 버스터
	효과条件固名前 = 사이킥 리플렉터
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_33150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정レベル

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33150,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 버스터
		효과条件固名前 = 사이킥 리플렉터
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33150,2)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲마함 = 1
효과条件名前 = 버스터 모드
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 9999
			RETURN 0

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 버스터
		효과条件固名前 = 사이킥 리플렉터
;		효과추가종류 = 140 + 설정レベル
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF 듀얼리스트 == "자신"
				PRINTFORML レベルを上げる：
				PRINTFORML [0] [1] [2] [3] [4]
				BINPUT
				설정レベル = RESULT
			ELSEIF 듀얼리스트 == "상대"
				설정レベル = 3
			ENDIF
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永星",설정レベル)
		ENDIF
	ENDIF
ENDIF