@CARDSUMMON_53512(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 2
素材条件종족 = 비늘야수족

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,53512) 
	RETURN RESULT
ENDIF

@CARDCAN_53512(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,53512)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,53512)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	IF 듀얼리스트 != "자신" && ターンプレイヤー != 듀얼리스트
		SIF モンスター数(対面者) < 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,53512)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件悪Ｃ所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 비늘야수족
	효과条件종류 = 링크以外
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53512(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前,4
#DIM DYNAMIC 蘇生횟수
#DIM DYNAMIC 細胞散布횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53512,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"レベル"
			細胞散布횟수 = RESULT
			REPEAT 細胞散布횟수
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲상대필드 = 1
				효과条件표시 = 表側표시
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT != 9999
					CALL CARD_SELECT(듀얼리스트,RESULT)
					選択カード = RESULT
					CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード,"悪Ｃ",1) 
				ENDIF
			REND
		ENDIF
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53512,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件悪Ｃ所持 = 999
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		蘇生횟수 = RESULT
		REPEAT 蘇生횟수
			CALL FULLRESET
			효과条件종족 = 비늘야수족
			효과条件종류 = 링크以外
			SIF 選択カード名前:0 != ""
				효과条件固名前:0 = %選択カード名前:0%
			SIF 選択カード名前:1 != ""
				효과条件固名前:1 = %選択カード名前:1%
			SIF 選択カード名前:2 != ""
				효과条件固名前:2 = %選択カード名前:2%
			SIF 選択カード名前:3 != ""
				효과条件固名前:3 = %選択カード名前:3%
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				TRYCALLFORM CARDNAME_{RESULT:99},"名前"
				IF 選択カード名前:0 == ""
					選択カード名前:0 = %RESULTS%
				ELSEIF 選択カード名前:1 == ""
					選択カード名前:1 = %RESULTS%
				ELSEIF 選択カード名前:2 == ""
					選択カード名前:2 = %RESULTS%
				ELSEIF 選択カード名前:3 == ""
					選択カード名前:3 = %RESULTS%
				ENDIF
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
			ELSE
				BREAK
			ENDIF
			SIF モンスター数(듀얼리스트) >= 5
				BREAK
		REND
	ENDIF
ENDIF

