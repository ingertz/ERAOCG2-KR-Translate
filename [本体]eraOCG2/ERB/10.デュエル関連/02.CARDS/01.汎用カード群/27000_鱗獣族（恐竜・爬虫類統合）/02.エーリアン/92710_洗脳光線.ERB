@CARDCAN_92710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92710)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 
	SIF 발동済_1(듀얼리스트,92710)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件悪Ｃ所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92710)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件悪Ｃ所持 = 999
		효과추가종류:0 = 50 + 場所
		효과추가종류:1 = 695
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"装",コントロール先,1)
		TRYCALLFORM CARDNAME_{他参照選択カードID},"略称"
		PRINTL
		PRINTFORMW コズミックな怪しい光線を浴びた%RESULTS%는、ふらふらと光の下へと歩いていった……
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"悪Ｃ",-1)
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:装備先")},"略称"
	IF GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:装備先") < 1
		PRINTFORMW ハッと我に返った%RESULTS%는いそいそと자신의 持ち主の下へと帰っていった……
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_GET_CONTROL(対面者,装備先)
	ELSEIF GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:装備先") == 1
		PRINTFORMW %RESULTS%는訝しげな顔をしている……
	ELSE
		PRINTFORMW %RESULTS%는ぼ-っとしている……
	ENDIF
ENDIF

