@CARDNAME_22033,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 독의 마요괴－속경
	CASE "略称"
RESULTS = 마요괴－속경
	CASE "カテゴリ"
RESULTS:0 = 마요괴
ENDSELECT


@CARD_22033(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 언데드족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 2000
	CASE "튜너"
		RETURN 1
	CASE "성별"
		RETURN 雄性
	CASE "単一存在"
		RETURN 1
ENDSELECT
RETURN 0

@CARD_EXPLANATION_22033(종류)
#DIM DYNAMIC 종류

PRINTL ①：「독의 마요괴－속경」은 자신 필드에 1체밖에 앞면 표시로 존재할 수 없다.
CALLFORM CARD_ABLE(0,효과後誘発)
PRINTL ②：이 카드가 묘지에 존재하고, 「독의 마요괴－속경」 이외의
PRINTL 자신의 「마요괴」 몬스터가 전투 / 효과로 파괴되었을 경우에 발동할 수 있다.
PRINTL 이 카드를 특수 소환한다.
PRINTL 이 효과를 발동하는 턴, 자신은 「마요괴」 몬스터밖에 EX덱에서 특수 소환할 수 없다.


@CARDCAN_22033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,22033)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,22033,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 마요괴
	효과条件종류 = モン全般
	효과条件固名前 = 독의 마요괴－속경
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件固カテゴリ = 마요괴
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_22033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22033)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)

		CALL CARD_EX_RESTRICTION(듀얼리스트,"마요괴")
	ENDIF
ENDIF
