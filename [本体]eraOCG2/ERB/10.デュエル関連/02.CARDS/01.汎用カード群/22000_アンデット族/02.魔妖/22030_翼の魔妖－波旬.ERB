#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 언데드족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 600
	CASE "守備力"
		RETURN 400
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

