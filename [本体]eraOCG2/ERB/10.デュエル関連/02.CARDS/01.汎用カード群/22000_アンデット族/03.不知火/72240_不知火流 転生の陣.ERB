@CARD_EXPLANATION_72240(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「시라누이류 전생의 진」이 된다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ①: 1턴에 1번, 손패를 1장 묘지로 보내고, 이하의 효과 중에서 1개를 선택하여 발동할 수 있다.
PRINTL ●덱에서 수비력 0의 언데드족 몬스터 1장을 패에 넣는다.
PRINTL ●자신의 묘지의 수비력 0의 언데드족 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 특수 소환한다.
PRINTL ●제외되어 있는 자신의 수비력 0의 언데드족 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 묘지로 되돌린다.

@CARDCAN_72240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72240)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0	
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 언데드족
	효과条件固守備力 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 언데드족
	효과条件固守備力 = 0
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
	SIF RESULT != 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종족 = 언데드족
	효과条件固守備力 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
	SIF RESULT != 1
		발동불가:2 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성,3
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72240,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 언데드족
			효과条件固守備力 = 0
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
			SIF RESULT == 1
				条件달성:0 = 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 언데드족
			효과条件固守備力 = 0
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
			SIF RESULT == 1
				条件달성:1 = 1
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件종족 = 언데드족
			효과条件固守備力 = 0
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,72240)
			SIF RESULT == 1
				条件달성:2 = 1
			SIF モンスター数(듀얼리스트) >= 5
				条件달성:1 = 0

			IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
				PRINTL
				SIF 条件달성:0 == 1
PRINTL [0] - 덱에서 패에 넣는다
				SIF 条件달성:1 == 1
PRINTL [1] - 묘지에서 특수 소환한다
				SIF 条件달성:2 == 1
PRINTL [2] - 제외된 곳에서 묘지로 되돌린다
				BINPUT
			ELSE
				IF 条件달성:1 == 1
					RESULT = 1
				ELSEIF 条件달성:0 == 1
					RESULT = 0
				ELSE
					RESULT = 2
				ENDIF
			ENDIF

			IF RESULT == 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종족 = 언데드족
				효과条件守備力 = 1
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件종족 = 언데드족
				효과条件守備力 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF RESULT == 2
				CALL FULLRESET
				효과範囲제외 = 1
				효과条件종족 = 언데드족
				효과条件守備力 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72240)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "시라누이流전생之陣")

ENDIF
