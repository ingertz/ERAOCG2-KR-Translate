@CARDSUMMON_12033(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 7
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,12033) 
	RETURN RESULT
ENDIF


@CARDCAN_12033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12033)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	IF 듀얼리스트 != "자신"
		SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	SIF 듀얼리스트 != "자신"
		효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_12033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択종족
#DIM DYNAMIC 選択속성
#DIM DYNAMIC 選択종류
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12033,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		SIF 듀얼리스트 != "자신"
			효과条件他所 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"종족"
			選択종족 = RESULT
			TRYCALLFORM CARD_{選択カード_ID},"속성"
			選択속성 = RESULT
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			選択종류 = RESULT
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			選択カード名前 = %RESULTS%

			IF 選択カード名前 == "麗の마요괴－요호"
				SETCOLOR C_YELLOW
				PRINTW 요호の力が刀に宿る！
				RESETCOLOR
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"묘지")
				CALL FULLRESET
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1500)
			ELSE
				IF 選択종족 == 언데드족
					CALL FULLRESET
					CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",300)
				ENDIF
				IF 選択속성 == 화염속성
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"両마함単体",場所,"묘지")
				ENDIF
				IF 選択종류 == 싱크로
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF



