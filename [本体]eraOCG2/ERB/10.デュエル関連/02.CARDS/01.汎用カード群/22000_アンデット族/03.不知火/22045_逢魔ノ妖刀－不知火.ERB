@CARDNAME_22045,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 오마의 요도 - 시라누이
	CASE "略称"
RESULTS = 오마요도시라누이
	CASE "カテゴリ"
RESULTS:0 = 시라누이
RESULTS:1 = 요도-시라누이
ENDSELECT


@CARD_22045(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 언데드족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 0
	CASE "튜너"
		RETURN 1
ENDSELECT
RETURN 0

