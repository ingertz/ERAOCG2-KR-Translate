			TRYCALLFORM CARD_{GETVAR(@"%対面者%_묘지:選択カード")},"종류"
			選択カード종류 = RESULT
			IF 選択カード종류 <= モン全般
				IF モンスター数(듀얼리스트) >= 5
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
					PRINTW 場がいっぱいなので덱に戻します
					CALL CARD_DISPOSE(対面者,"묘지",選択カード,2)
					RETURN 0
				ENDIF
			ELSE
				IF 마함数(듀얼리스트) >= 5
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
					PRINTW 場がいっぱいなので덱に戻します
					CALL CARD_DISPOSE(対面者,"묘지",選択カード,2)
					RETURN 0
				ENDIF
			ENDIF
			IF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > 0
				IF 듀얼리스트 == "자신"
PRINTL 제거할 X 소재의 수를 선택해 주세요
					CALL YN_CHOICE(듀얼리스트,"●１つ：카드를 덱に戻す","●２つ：카드를 특수소환するかフィールドにセットする")
				ELSE
					RESULT = 1
				ENDIF
			ELSE
				RESULT = 0
			ENDIF

			IF RESULT == 0
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
				CALL CARD_DISPOSE(対面者,"묘지",選択カード,덱行き)
			ELSEIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-2)
				IF 選択カード종류 <= モン全般
					SIF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주세요
					CALL YN_CHOICE(듀얼리스트,"●表側표시","●裏側守備표시")
					IF RESULT == 0
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"상대묘지",選択カード)
					ELSEIF RESULT == 1
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"상대묘지",選択カード,"裏側守備표시")
					ENDIF
				ELSE
					CALL FULLRESET
효과条件名前 = %選択カード名前%
