	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51010,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대묘지",場所,51010)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_묘지:選択カード")},"名前"
