	素材条件カテゴリ = 뮤트리아
	CALLFORM 素材条件レベル_ADV(8, "以上")
ELSEIF EX参照 >= 10
	素材条件カテゴリ = 뮤트리아
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,57830) 
	RETURN RESULT
ENDIF



@CARDCAN_57830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57830)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,57830)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	TRYCALLFORM CARD_{効後_효과ID:(効後_カウンタ - 1)},"종류"
	IF RESULT <= 10
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF INRANGE(RESULT,20,29)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF RESULT >= 30
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,57830)
		RETURN 0

	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 뮤트리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	 SIF !MATCH(RESULTS,"뮤트리아")
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF




@CARDEFFECT_57830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57830,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		TRYCALLFORM CARD_{効後_효과ID:(処理中番号 - 1)},"종류"
		IF RESULT <= 10
			효과条件종류 = モン全般
		ELSEIF INRANGE(RESULT,20,29)
			효과条件종류 = 마법全般
		ELSEIF RESULT >= 30
			효과条件종류 = 함정全般
		ENDIF
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"제외")
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57830,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 뮤트리아
		효과条件複数 = 97
		효과条件固名前選択 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"제외",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57830)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF
