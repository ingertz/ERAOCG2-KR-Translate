@CARDSUMMON_57831(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

素材条件カテゴリ = 뮤트리아

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,57831) 
	RETURN RESULT
ENDIF



@CARDCAN_57831(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57831)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,57831)
		RETURN 0

	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,57831)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_3(듀얼리스트,57831)
		RETURN 0

	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 뮤트리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_57831(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57831,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57831,2)
	IF RESULT == 0
		TRYCALLFORM CARD_{効後_효과ID:(処理中番号 - 1)},"종류"
		IF RESULT <= 10
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐",1)
		ELSEIF INRANGE(RESULT,20,29)
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐",1)
		ELSEIF RESULT >= 30
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐",1)
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57831,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 뮤트리아
		CALL CARD_ADD_BASIC(듀얼리스트,"제외",ゾーン,場所)
	ENDIF
ENDIF
