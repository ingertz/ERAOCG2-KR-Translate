@CARDCAN_36020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36020)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,36020)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,36020,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 뮤트리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,36020)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲손패 = 1
	효과条件カテゴリ = 뮤트리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 뮤트리얼 비스트
	효과条件名前:1 = 뮤트리얼 미스트
	효과条件名前:2 = 뮤트리얼 암즈
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_36020(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36020,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36020,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 뮤트리아
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID}, "종류"
			IF INRANGE(RESULT,0,10)
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
효과条件名前 = 뮤트리얼 비스트
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				選択カード_ID = RESULT:1
				TRYCALLFORM CARD_{選択カード_ID}, "攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",RESULT)
			ELSEIF INRANGE(RESULT,20,29)
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
효과条件名前 = 뮤트리얼 미스트
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				選択カード_ID = RESULT:1
				TRYCALLFORM CARD_{選択カード_ID}, "攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",RESULT)
			ELSEIF INRANGE(RESULT,30,39)
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
효과条件名前 = 뮤트리얼 암즈
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				選択カード_ID = RESULT:1
				TRYCALLFORM CARD_{選択カード_ID}, "攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",RESULT)
			ENDIF
		ENDIF
	ENDIF
ENDIF
