@CARDCAN_24100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24100)
SIF RESULT == 1
	RETURN 0



IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,24100)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,24100,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件속성 = 땅속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == X素材時효과
	SIF 발동済_2(듀얼리스트,24100)
		RETURN 0
	RETURN 1

;――――――――――――――――――――――――付与효과――――――――――――――――――――――――

ELSEIF 종류 == 필드起動付与
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,24100)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24100,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 41
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24100,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_GRANT_SPECIAL(듀얼리스트,選択カード,24100)
		ENDIF
	ENDIF


;――――――――――――――――――――――――付与효과――――――――――――――――――――――――
ELSEIF 종류 == 필드起動付与
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24100,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"특수状態",0,1)
	ENDIF
ENDIF

