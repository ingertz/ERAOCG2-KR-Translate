@CARDNAME_24066,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 기믹 퍼핏－테러 베이비
	CASE "略称"
RESULTS = 테러 베이비
	CASE "カテゴリ"
RESULTS:0 = 기믹 퍼핏
ENDSELECT


@CARD_24066(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 0
ENDSELECT

RETURN 0

@CARD_EXPLANATION_24066(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(1,소환時)
PRINTL ①: 이 카드가 소환에 성공했을 때,
PRINTL 「기믹 퍼핏－테러 베이비」 이외의 자신의 묘지의 「기믹 퍼핏」 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 수비 표시로 특수 소환한다.
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②: 자신 필드 또는 묘지에 이 카드명 이외의 「기믹 퍼핏」 몬스터가 존재할 경우,
PRINTL 묘지의 이 카드를 제외하고 발동할 수 있다.
PRINTL 이 턴, 자신의 「기믹 퍼핏」 몬스터의 효과 발동에 대하여 상대는 마법 / 함정/몬스터의 효과를 발동할 수 없다.



@CARDCAN_24066(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24066)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 기믹 퍼핏
	효과条件종류 = モン全般
	효과条件固名前 = 기믹 퍼핏－테러 베이비
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 기믹 퍼핏
	효과条件종류 = モン全般
	효과条件固名前 = 기믹 퍼핏－테러 베이비
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_24066(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24066)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 기믹 퍼핏
		효과条件固名前 = 기믹 퍼핏－테러 베이비
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,"묘지",場所,24066)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL CARD_RESERV(듀얼리스트,24066,短紋章予約)

	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL SET_CAT_SOGAI_INFO(듀얼리스트,"기믹 퍼핏")
ENDIF

