@CARDCAN_75865(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75865)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,75865)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件종족 = 기계족
	효과条件カテゴリ = 사이버
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족:0 = 드래곤족
	효과条件종족:1 = 기계족
	효과条件속성 = 빛속성
	효과条件カテゴリ = 사이버
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종족:0 = 드래곤족
		효과条件종족:1 = 기계족
		효과条件속성 = 어둠속성
		효과条件カテゴリ = 사이버
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족:0 = 드래곤족
	효과条件종족:1 = 기계족
	효과条件속성 = 어둠속성
	효과条件カテゴリ = 사이버
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종족:0 = 드래곤족
		효과条件종족:1 = 기계족
		효과条件속성 = 빛속성
		효과条件カテゴリ = 사이버
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF



@CARDEFFECT_75865(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75865,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종족:0 = 드래곤족
		효과条件종족:1 = 기계족
		효과条件속성:0 = 빛속성
		효과条件속성:1 = 어둠속성
		효과条件カテゴリ = 사이버
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		IF RESULT == 1
			CALL FULLRESET
			TRYCALLFORM CARD_{選択カード_ID},"속성"
			IF RESULT == 빛속성
				효과条件속성 = 어둠속성
			ELSEIF RESULT == 어둠속성
				효과条件속성 = 빛속성
			ENDIF
			효과範囲덱 = 1
			효과条件종족:0 = 드래곤족
			효과条件종족:1 = 기계족
			효과条件カテゴリ = 사이버
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종족:0 = 드래곤족
				효과条件종족:1 = 기계족
				효과条件カテゴリ = 사이버
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲EX덱 = 1
					효과条件종류 = 융합
					효과条件종족:1 = 기계족
					효과条件カテゴリ = 사이버
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
		EX소환可能종족 = 기계족
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
