@CARDCAN_52004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52004)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件종족:0 = 기계족
	효과条件종족:1 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	SIF 종류 == リアクション효과 && オプション_主従 == 0
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_52004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備数
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 攻撃力修正

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52004,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件종족:0 = 기계족
		효과条件종족:1 = 드래곤족
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,(1 + 4),52004)
	ENDIF
ELSEIF 종류 == 攻守変動
	攻撃力修正 = 묘지数(듀얼리스트) * 100
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正,0)
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
			CONTINUE
			
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")},"성별"
		SIF RESULT != 牝性
			CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)

		조교대상 = RESULT
		IF RESULT != -1

			PRINTFORML 
			PRINTFORMW 囚われてしまった %CALLNAME:조교대상%는パ-ツ扱いされて力を吸い取られている。
			CALL EROTIC_MOVE("拘束晒し",조교대상,-1,150)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1,0,1)
		ENDIF
	NEXT
ENDIF

