@CARDCAN_72461(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72461)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72461)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件レベル = 4
	효과条件종족 = 기계족
	효과条件속성 = 빛속성
	효과条件分割 = 유니온
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,72461)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 기계족
	효과条件속성 = 빛속성
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件속성 = 빛속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件속성 = 빛속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件以攻撃力 = 3000
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 0
ENDIF



@CARDEFFECT_72461(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード攻撃力
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72461,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件レベル = 4
		효과条件종족 = 기계족
		효과条件속성 = 빛속성
		효과条件分割 = 유니온
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			選択カード名前 = %RESULTS%
			TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
			選択カード攻撃力 = RESULT

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 기계족
			효과条件속성 = 빛속성
			효과条件固名前 = %選択カード名前%
			효과条件固攻撃力 = 選択カード攻撃力
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72461,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件以攻撃力 = 3000
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			選択カード名前 = %RESULTS%
			CALL FULLRESET
효과条件名前 = %選択カード名前%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF RESULT != 9999
				TRYCALLFORM CARD_{選択カード_ID},"レベル"
				IF RESULT <= 4
					;何もしない
				ELSEIF RESULT >= 7
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件複数 = 2
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				ELSEIF RESULT >= 5
					CALL FULLRESET
					효과範囲필드 = 1
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
					SIF RESULT != 1
						RETURN 0
				ENDIF
				CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
			ENDIF
		ENDIF
	ENDIF
ENDIF

