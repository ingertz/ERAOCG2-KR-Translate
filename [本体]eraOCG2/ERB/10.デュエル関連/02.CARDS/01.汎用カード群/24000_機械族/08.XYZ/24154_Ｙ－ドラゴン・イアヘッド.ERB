@CARD_EXPLANATION_24154(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,특수소환時)
PRINTL ①: 이 카드가 특수 소환했을 경우에 발동할 수 있다.
PRINTL 자신 패 / 묘지에서 기계족 빛 속성 레벨 4 몬스터 1장을 이 카드에 장착한다.
PRINTL 이 턴, 자신은 빛 속성 몬스터밖에 EX덱에서 특수 소환할 수 없다.
PRINTL ②: 이하의 효과 중에서 1개를 선택하여 발동할 수 있다. 이 카드명의 이 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,필드起動)
PRINTL ●자신 필드의 기계족 몬스터 1장을 대상으로 하고, 필드의 이 카드를 장착한다.
PRINTL 그 몬스터가 전투 / 효과로 파괴될 경우, 대신에 이 카드를 파괴한다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ●장착 상태의 이 카드를 특수 소환한다.


@CARDCAN_24154(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24154)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,24154)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 기계족
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 
	SIF 발동済_1(듀얼리스트,24154)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL CARD_SS_CHECK(듀얼리스트,24154,"마함")
	SIF RESULT == 1
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 특수소환時
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종족 = 기계족
	효과条件속성 = 빛속성
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24154(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 종류 == 필드起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24154,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 기계족
		효과条件他所 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カード,"필드",場所,(4))
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24154,1)
	IF RESULT == 0
		CALL RESETCONDITION
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24154)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종족 = 기계족
		효과条件속성 = 빛속성
		효과条件レベル = 4
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,24154)
		EX소환可能속성 = 빛속성
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF

