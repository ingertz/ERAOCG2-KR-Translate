@CARDCAN_52355(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 使用済み
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52355)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,52355)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件ID = 52354
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件ID = 52351
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		SIF ゾーン != "필드"
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 종류 == フリー誘発
			RETURN 0
		SIF 효과발동済(듀얼리스트,場所,ゾーン)
			RETURN 0
		SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		RETURN 1

	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF ゾーン != "필드"
			RETURN 0
		SIF モンスター数(듀얼리스트) >= 4
			RETURN 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件ID = 52354
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件ID = 52351
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

@CARDEFFECT_52355(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 제외カードA
#DIM DYNAMIC 제외カードB
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 対戦カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52355)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件行先플래그 = 제외行き
		효과条件ID:0 = 52354
		효과条件ID:1 = 52351
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			제외カードA = RESULT:1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件行先플래그 = 제외行き
			IF 제외カードA == 52354
				효과条件ID:0 = 52351
			ELSEIF 제외カードA == 52351
				효과条件ID:1 = 52354
			ENDIF
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",場所)	
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52355)
	IF RESULT == 0
		対戦カード = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		효과추가종류:0 = 3
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",対戦カード,"표시변경")
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52355)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			SETVAR @"%듀얼리스트%_MZ_効済:場所", 1
			CALL FULLRESET
			효과条件複数 = 97
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"제외")
		ELSEIF ターンプレイヤー != 듀얼리스트
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)

			CALL FULLRESET
			효과範囲제외 = 1
			효과条件ID = 52354
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF モンスター数(듀얼리스트) >= 5
				RETURN 0

			CALL FULLRESET
			효과範囲제외 = 1
			효과条件ID = 52351
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

