@CARDCAN_52602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52602)
SIF RESULT == 1
	RETURN 0

IF 종류 == 특수소환時 || 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,52602)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종류 = 装備마법
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,52602)
		RETURN 0

	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件スーパー종류 = モン全般
	효과条件종류 = 装備마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 出処
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択횟수
#DIM 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52602,1)
	;参考先：妖精シンデレラ
	IF RESULT == 0
		選択횟수 = 0
		WHILE 選択횟수 < 3
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件종류 = 装備마법
			효과条件複数 = 1
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				出処 = %参照先（CS）%
				CALL FULLRESET
				효과範囲필드 = 1
효과条件名前 = 파워 툴 브레이버 드래곤
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,出処)
				選択횟수 += 1
			ELSEIF 選択カード == 9999
				選択횟수 += 3
			ENDIF
		WEND
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52602,2)
	IF RESULT == 0
		;モンスターいなかったら強制的に装備마법
		CALL FULLRESET
		효과条件スーパー종류 = モン全般
		효과条件종류 = 装備마법
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
PRINTL 효과를 무효로 하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				;参考先：泡影
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
			ELSEIF RESULT == いいえ
				;参考先：砂塵
				효과추가종류 = 3
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")
			ENDIF
		ENDIF
	ENDIF
ENDIF