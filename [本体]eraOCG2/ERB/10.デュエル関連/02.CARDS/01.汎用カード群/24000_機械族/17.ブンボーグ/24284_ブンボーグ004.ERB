@CARD_EXPLANATION_24284(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,攻撃時誘発)
PRINTL ①: 이 카드가 상대 몬스터와 전투를 실행하는 데미지 계산 시에 발동할 수 있다.
PRINTL 덱에서 "분보그 004" 이외의 "분보그" 몬스터 1장을 묘지로 보내고,
PRINTL 이 카드의 공격력 수비력은 턴 종료시까지, 묘지로 보낸 그 몬스터의 레벨 × 500 올린다.
PRINTL 이 효과의 발동 후, 턴 종료시까지 상대가 받는 전투 데미지는 0이 된다.
CALLFORM CARD_ABLE(0,攻撃後誘発)
PRINTL ②: 이 카드가 전투로 상대 몬스터를 파괴했을 경우에 발동할 수 있다.
PRINTL 자신의 손패 묘지에서 카드명이 다른 "분보그" 몬스터 2장을 골라 수비 표시로 특수 소환한다.

@CARDCAN_24284(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24284)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(対面者) == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 분보그
	효과条件固名前起動 = 1
	효과条件소환可 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24284(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 選択カード_参照先
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24284)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 분보그
		효과条件固名前 = 분보그 004
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1},"レベル"
			攻撃力修正 = RESULT * 500
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一守",攻撃力修正)
			CALL SET_PLAYER_INFO(対面者,"ダメージ無効",1)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24284)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 분보그
		효과条件固名前選択 = 1
		효과条件複数 = 2
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF
ENDIF

