@CARDCAN_75170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75170)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	룡輝巧의식 = 1
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 의식
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	룡輝巧의식 = 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,75170)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 드라이트론
	효과条件攻撃力 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_75170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC EX参照
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC レベル合計

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75170)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)		
		룡輝巧의식 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = 의식
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		룡輝巧의식 = 0

		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲필드 = 1
효과条件名前 = 룡휘기교－파프뮤
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
PRINTL 룡휘기교－파프뮤'의 X 소재를 제거할까요?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RESULT = いいえ
			ENDIF
			IF RESULT == はい
				CALL FULLRESET
				효과範囲필드 = 1
효과条件名前 = 룡휘기교－파프뮤
				효과条件Ｘ素所持 = 999
				CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"Ｘ",-1)
				IF RESULT == 1	
					CALL CARD_SELECT(듀얼리스트,選択カード)
					CALL CARD_EX_SUMMON(듀얼리스트, 参照先（CS）, 選択カード（CS）)
				ENDIF
			ELSE
				룡輝巧의식 = 1				
				CALL RESETAREA_MAT
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
				素材範囲필드 = 1
				素材範囲손패 = 1
				CALL CARD_SELECT(듀얼리스트,選択カード)
				PRINTFORML  選択カード:{選択カード}/選択カード（CS）:{選択カード（CS）}/参照先（CS）:%参照先（CS）%
				TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード（CS）,参照先（CS）)
				룡輝巧의식 = 0
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75170,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 드라이트론
		효과条件攻撃力 = 999
		CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"一攻",1000)
		SIF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
	ENDIF
ENDIF