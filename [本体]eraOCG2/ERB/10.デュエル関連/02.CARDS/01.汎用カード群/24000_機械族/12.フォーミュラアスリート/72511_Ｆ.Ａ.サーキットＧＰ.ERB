@CARDNAME_72511,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = F.A. 서킷 GP
	CASE "略称"
RESULTS = 서킷 GP
	CASE "カテゴリ"
RESULTS:0 = 포뮬러 애슬리트
ENDSELECT


@CARD_72511(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72511(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「서킷 GP」가 된다.
PRINTL 이 카드명의 ③의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①: 필드의 「F.A.」 몬스터의 레벨은 배틀 페이즈 동안에만 2개 오른다.
CALLFORM CARD_ABLE(10,攻撃後誘発)
PRINTL ②: 1턴에 1번, 자신의 「F.A.」 몬스터가 전투로 상대 몬스터를 파괴했을 때 발동할 수 있다.
PRINTL 자신은 덱에서 1장 드로우한다.
CALLFORM CARD_ABLE(1,破壊→묘지)
PRINTL ③: 이 카드가 효과로 파괴되었을 경우에 발동할 수 있다.
PRINTL 덱에서 「F.A. 서킷 GP」 이외의 「F.A.」 카드 1장을 패에 추가하거나,
PRINTL 필드에 앞면 표시로 놓는다.

@CARDCAN_72511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72511)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	 SIF !MATCH(RESULTS,"포뮬러 애슬리트")
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	CALL CARD_DRAW_CHECK

	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF 발동済_1(듀얼리스트,72511)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = フィールド
	효과条件カテゴリ = 포뮬러 애슬리트
	효과条件固名前 = F.A. 서킷 GP
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72511)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72511,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF

ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72511,1)
	IF RESULT == 0
		IF 마함数(듀얼리스트) < 5
			SIF 듀얼리스트 == "자신"
PRINTL 카드를 필드에 놓으시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = フィールド
			효과条件カテゴリ = 포뮬러 애슬리트
			효과条件固名前 = F.A. 서킷 GP
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件종류 = フィールド
			효과条件カテゴリ = 포뮬러 애슬리트
			효과条件固名前 = F.A. 서킷 GP
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 포뮬러 애슬리트
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"星",2)
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"星",2,72511)

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "サ-キットＧＰ")
ENDIF
