@CARDCAN_24451(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24451)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 포뮬러 애슬리트
	효과条件종류 = 마함全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24451(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24451)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",1)
	ENDIF

ELSEIF 종류 == 攻守変動
	攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_星:場所") * 300
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)

ELSEIF 종류 == 지속효과
	SIF GETVAR(@"%듀얼리스트%_MZ_星:場所") >= 7
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",1)

	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)},"レベル"
	SIF GETVAR(@"%듀얼리스트%_MZ_星:場所") < RESULT
		RETURN 0
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
ENDIF
