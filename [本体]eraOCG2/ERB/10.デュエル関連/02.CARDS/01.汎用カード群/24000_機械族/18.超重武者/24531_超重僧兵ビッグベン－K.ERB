@CARDNAME_24531,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 초중승병 빅벤－K
	CASE "略称"
RESULTS = 승병 벤K
	CASE "カテゴリ"
RESULTS:0 = 초중무사
ENDSELECT


@CARD_24531(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 3500
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT
RETURN 0

