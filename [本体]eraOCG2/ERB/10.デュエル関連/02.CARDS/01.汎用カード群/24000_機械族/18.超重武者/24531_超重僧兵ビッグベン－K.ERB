@CARDCAN_24531(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24531)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,24531)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
    효과条件カテゴリ = 초중무사
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초중무사 장착
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
    IF ゾーン == "손패"
	    SIF 발동済_2(듀얼리스트,24531)
	        RETURN 0
        SIF ゾーン != "손패"
		    RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,24531,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 마함全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 0
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 초중무사
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "EX덱"
	    SIF 발동済_3(듀얼리스트,24531)
	        RETURN 0
        SIF ゾーン != "EX덱"
	        RETURN 0
        SIF 마함数(듀얼리스트) >= 5
	        RETURN 0
        CALL FULLRESET
        효과条件종류 = 싱크로
        CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
        SIF RESULT != 1
	        RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
	


ENDIF


@CARDEFFECT_24531(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24531)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 마함起動
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24531,1)
	IF RESULT == 0
	CALL FULLRESET
        효과範囲덱 = 1
		효과条件カテゴリ = 초중무사 장착
		효과条件종류 = モン全般
        CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後誘発
    IF ゾーン == "손패"
        CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24531,2)
        IF RESULT == 0
	        CALL FULLRESET
	        효과範囲손패 = 1
	        효과範囲덱 = 1
효과条件名前 = 초중승병 빅벤－K
	        CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	        IF RESULT == 1
		        CALL FULLRESET
		        CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		    ENDIF
	    ENDIF
	ELSEIF ゾーン == "EX덱"
	    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24531,3)
	    IF RESULT == 0
		    CALL FULLRESET
효과条件名前 = 초중승병 빅벤－K
		    CALL CARD_SET_BASIC(듀얼리스트,"EX덱",ゾーン,場所,"表側표시")
	    ENDIF
	ENDIF
ENDIF


