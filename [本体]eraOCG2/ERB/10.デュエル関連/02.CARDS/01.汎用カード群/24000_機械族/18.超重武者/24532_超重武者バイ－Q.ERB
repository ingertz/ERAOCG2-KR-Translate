	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 1200
	CASE "튜너"
		RETURN 1
ENDSELECT
RETURN 0

