@CARD_52280(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 싱크로
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 2500
ENDSELECT
RETURN 0


@CARDSUMMON_52280(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 6
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 기계족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件カテゴリ = 초중무사
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,52280) 
	RETURN RESULT
ENDIF



