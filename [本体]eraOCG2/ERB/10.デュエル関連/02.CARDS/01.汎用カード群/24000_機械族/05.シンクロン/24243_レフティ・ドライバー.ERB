@CARD_EXPLANATION_24243(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ②의 효과는 1턴에 한 번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,특수소환時)
PRINTL ①: 이 카드가 특수 소환했을 경우에 발동할 수 있다. 이 카드의 레벨을 턴 종료시까지 1개 올리거나 내린다.
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②: 이 카드를 포함하는 묘지의 「싱크론」 몬스터 3장을 덱으로 되돌리거나,
PRINTL 묘지의 이 카드를 제외하고 발동할 수 있다. 덱에서 「라이티 드라이버」 1장을 패에 넣는다.



@CARDCAN_24243(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24243)
SIF RESULT == 1
	RETURN 0
	
IF 종류 ==  특수소환時
	RETURN 1
ELSEIF 종류 ==  묘지起動
	SIF 발동済_2(듀얼리스트,24243)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 싱크론
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3 && GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 라이티 드라이버
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24243(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード


IF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24243)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"이 카드의 レベルを１つ上げる","이 카드의 レベルを１つ下げる")
		IF RESULT == 0
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",1)
		ELSE
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",-1)
		ENDIF
	ENDIF
ELSEIF 종류 ==  묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24243,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 싱크론
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT >= 3 && GETVAR(@"%듀얼리스트%_제외NG置換") < 1
			CALL YN_CHOICE(듀얼리스트,"「싱크론」モンスター３体を덱に戻す","この카드를 제외한다")
		ELSEIF GETVAR(@"%듀얼리스트%_제외NG置換") < 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 싱크론
			효과条件종류 = モン全般
			효과条件複数 = 3
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ELSE
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
효과条件名前 = 라이티 드라이버
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
