	CALL FULLRESET
	효과条件カテゴリ = 싱크론
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24241,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,124241)
	ENDIF
ENDIF

