@CARD_EXPLANATION_24030(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,S素材時효과)
PRINTL ①: 이 카드가 S 소재로 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 패에서 레벨 2 이하의 몬스터 1장을 특수 소환한다.

@CARDCAN_24030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24030)
SIF RESULT == 1
	RETURN 0

IF 종류 == S素材時효과
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	CALL 효과条件レベル_ADV(2, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == S素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24030)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL 효과条件レベル_ADV(2, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

