VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = TG 로켓 샐러맨더
	CASE "略称"
RESULTS = TG 샐러맨더
	CASE "カテゴリ"
RESULTS:0 = 테크지너스
ENDSELECT

@CARD_24130(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RESULT:1 = 기계족 
		RETURN 원소정령족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 600
	CASE "守備力"
		RETURN 600
ENDSELECT

RETURN 0

