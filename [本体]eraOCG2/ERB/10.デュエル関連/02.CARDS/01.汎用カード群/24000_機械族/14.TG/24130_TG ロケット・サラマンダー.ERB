@CARDCAN_24130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,10
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24130)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,24130)
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,24130)
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 테크지너스
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 테크지너스
	효과条件종류 = EXモン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 테크지너스
	CALLFORM 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1


	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,10
#DIMS DYNAMIC 選択名前

IF 종류 == 필드起動


	SIF 발동済_1(듀얼리스트,24130)
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,24130)
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 테크지너스
	효과条件종류 = EXモン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 테크지너스
	CALLFORM 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 자신 묘지의 레벨 4 이하의 "TG" 몬스터 1장을 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:1 == 1
		RESULT = はい
	ELSEIF 효과使用불가:2 == 1
		RESULT = いいえ
	ENDIF

	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24130,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 테크지너스
			CALLFORM 효과条件レベル_ADV(4, "以下")
			효과추가종류 = 効追無効
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24130,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 테크지너스
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				CALLFORM CARDNAME_{RESULT:1}("名前")
				選択名前 = %RESULTS%
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 테크지너스
				효과条件固名前 = %選択名前%
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF

