@CARDSUMMON_57121(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2
素材条件종족 = 사이버스족

IF EX参照 == 0 || EX参照 == 1
	素材条件종류:0 = 의식
	素材条件종류:1 = 융합
	素材条件종류:2 = 싱크로
	素材条件종류:3 = 엑시즈
	素材条件종류:4 = 링크
ELSEIF EX参照 >= 10
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,57121) 
	RETURN RESULT
ENDIF

@CARDCAN_57121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57121)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,57121)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족 = 사이버스족
	효과条件종류 = 의식以外
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,57121)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 사이버스족
	효과条件종류 = 링크
	CALL 효과条件レベル_ADV(4, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_57121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カードレベル

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57121,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종족 = 사이버스족
		효과条件종류 = 의식以外
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		TRYCALLFORM CARD_{選択カード_ID}, "レベル"
		選択カードレベル = RESULT
		IF 選択カードレベル > 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",選択カードレベル,1)
		ENDIF

	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57121,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",0,"無効")
	ENDIF
ENDIF

