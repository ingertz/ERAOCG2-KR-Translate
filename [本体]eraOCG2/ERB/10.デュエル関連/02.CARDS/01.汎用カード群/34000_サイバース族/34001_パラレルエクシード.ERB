@CARDCAN_34001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34001)
SIF RESULT == 1
	RETURN 0


IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,34001)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,34001,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 링크
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,34001)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 패러렐 엑시드
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_34001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34001,1)
	IF RESULT == 0

		CALL FULLRESET
		효과추가종류:0 = (140 + 4)
		;효과추가종류:1 = (20000 + 1000)
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永攻",-1000)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永守",-1000)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34001,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = 패러렐 엑시드
		효과추가종류:0 = (140 + 4)
		;효과추가종류:1 = (20000 + 1000)
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永攻",-1000)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永守",-1000)
		ENDIF
	ENDIF
ENDIF
