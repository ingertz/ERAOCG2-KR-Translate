@CARDCAN_34216(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 효과条件보존,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34216)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,34216)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,34216,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,34216)
		RETURN 0

	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	FOR カウンタ,0,5
		CALL FULLRESET
		효과条件カテゴリ = 샐러맨그레이트
		효과条件종류 = 링크
		CALL CARD_FILTER_SET(듀얼리스트,"필드",カウンタ,듀얼리스트,1)
		SIF RESULT != 1
			CONTINUE
		カウンタB ++
		VARSET RESULTS
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}, "名前"
		효과条件보존:カウンタB = %RESULTS%
	NEXT

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 샐러맨그레이트
	효과条件종류 = 링크
	효과条件名前:0 = ダミ-０
	효과条件名前:1 = %효과条件보존:1%
	효과条件名前:2 = %효과条件보존:2%
	효과条件名前:3 = %효과条件보존:3%
	효과条件名前:4 = %효과条件보존:4%
	효과条件名前:5 = %효과条件보존:5%
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	SIF 발동済_3(듀얼리스트,34216)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 링크
	효과条件종족 = 사이버스족
	CALL 효과条件レベル_ADV(3, "以上")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34216(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34216,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34216,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 샐러맨그레이트
		효과条件종류 = 링크
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99
			TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
			選択カード名前 = %RESULTS%

			CALL FULLRESET
효과条件名前 = %選択カード名前%
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT

			IF 選択カード != 9999
				選択カード_ID = RESULT:99
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
				CALL RESETCONDITION_MAT(1)
				必要링크数 = 1
				素材条件L値無視 = 1
素材条件名前 = %選択カード名前%
				CALL LINSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34216,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL GET_FIELD_MAGIC_INFO(듀얼리스트,"샐러맨그레이트 성역")
		IF RESULT == 1
PRINTL 「샐러맨그레이트」 L 몬스터 1장으로 L 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL FULLRESET
			효과条件カテゴリ = 샐러맨그레이트
			효과条件종류 = 링크
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				選択カード_ID = RESULT:99
				TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
				選択カード名前 = %RESULTS%

				CALL FULLRESET
효과条件名前 = %選択カード名前%
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
				選択カード = RESULT

				IF 選択カード != 9999
					選択カード_ID = RESULT:99
					TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
					CALL RESETCONDITION_MAT(1)
					必要링크数 = 1
					素材条件L値無視 = 1
素材条件名前 = %選択カード名前%
					CALL LINSUMMON(듀얼리스트, 選択カード)
				ENDIF
			ENDIF

		ELSE
			CALL RESETAREA_MAT
			素材範囲묘지 = 1
			CALL FULLRESET
			효과条件종류 = 링크
			효과条件종족 = 사이버스족
			CALL 효과条件レベル_ADV(3, "以上")
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				選択カード_ID = RESULT:99
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL LINSUMMON(듀얼리스트,選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF

