@CARDCAN_34214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34214)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,34214)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 샐러맨그레이트
	효과条件固名前 = 샐러맨그레이트 오브 파이어
	효과条件종류 = モン全般
	CALLFORM 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_2(듀얼리스트,34214)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALLFORM ATTACK_CARD(듀얼리스트,"종족")
	SIF !MATCH(RESULT,사이버스족)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 破壊カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34214,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 샐러맨그레이트
		효과条件固名前 = 샐러맨그레이트 오브 파이어
		효과条件종류 = モン全般
		CALLFORM 효과条件レベル_ADV(4,"以下")
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		SS소환可能속성 = 화염속성	
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34214,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		破壊カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(対面者,"自動処理",破壊カード,"묘지")
	ENDIF
ENDIF

