@CARDCAN_93431(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIMS DYNAMIC 효과条件보존,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93431)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,93431)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲손패 = 1
	효과条件カテゴリ = 샐러맨그레이트
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93431(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 링크値

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93431,1)
	IF RESULT == 0
PRINTL 효과를 선택해 주세요
		CALL YN_CHOICE(듀얼리스트,"●複数破壊。","●１장 파괴。")
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과条件カテゴリ = 샐러맨그레이트
			효과条件종류 = 링크
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				選択カード_ID = RESULT:99
				CALLFORM CARD_{選択カード_ID}("レベル")
				링크値 = RESULT
				SIF 링크値 >= 10
					링크値 = 10
				CALL FULLRESET
				효과条件任意 = 1
				효과条件複数 = 100 - 링크値
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			ENDIF
		ELSEIF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲손패 = 1
			효과条件カテゴリ = 샐러맨그레이트
			효과条件종류 = モン全般
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ENDIF
