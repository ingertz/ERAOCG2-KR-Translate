@CARDCAN_1654(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1654)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1654)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件固名前 = 피트나이트 필
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,1654)
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時予約
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1654(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID


IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1654,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件攻撃力 = 1500
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"戦",2,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:選択カード"))
		ENDIF
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1654,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,1654,1)
	ENDIF

ELSEIF 종류 == ターン開始時予約
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 피트나이트 필
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF


