PRINTL 자신의 LP가 2000 이하일 경우, 추가로 이하의 효과를 적용할 수 있다.
PRINTL ● 필드의 이 카드를 제외하고, 엑스트라 덱에서 이 카드명 이외의 링크 3 이하의 사이버스족 몬스터 1장을 특수 소환한다.

@CARDCAN_57103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57103)
SIF RESULT == 1
	RETURN 0


IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF 발동済_2(듀얼리스트,57103)
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF


@CARDEFFECT_57103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 속성セット
#DIM DYNAMIC 속성セットビット

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件他所 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 500
	SIF 攻撃力修正 >= 1500
		攻撃力修正 = 1500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57103,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		IF GETVAR(@"ライフ_%듀얼리스트%") <= 2000 && GETVAR(@"%듀얼리스트%_제외NG置換") < 1
			SIF 듀얼리스트 == "자신"
PRINTL 몬스터를 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0

			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件종족 = 사이버스족
			효과条件固名前 = 디코드 토커 히트소울
			CALL 효과条件レベル_ADV(3, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
