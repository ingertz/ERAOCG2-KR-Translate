@CARDCAN_34150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34150)
SIF RESULT == 1
	RETURN 0
IF 종류 == L素材時효과
	SIF 발동済_1(듀얼리스트,34150)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 파이어월 디펜서
	효과条件カテゴリ = 파이어월
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL 효과条件종족_ADV(사이버스족, "以外")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"SS이력")
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF 발동済_2(듀얼리스트,34150)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"묘지")
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID}("カテゴリ")
	SIF !MATCH(RESULTS, "파이어월")
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード


IF 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34150,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = 파이어월 디펜서
		효과条件カテゴリ = 파이어월
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		SS소환可能종족 = 사이버스족
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34150,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
