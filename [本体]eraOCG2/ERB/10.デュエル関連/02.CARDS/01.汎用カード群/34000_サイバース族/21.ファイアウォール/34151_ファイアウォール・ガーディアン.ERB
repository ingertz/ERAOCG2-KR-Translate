@CARDCAN_34151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34151)
SIF RESULT == 1
	RETURN 0
IF 종류 == L素材時효과
	SIF 발동済_1(듀얼리스트,34151)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,34151,"묘지")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF !GROUPMATCH(ゾーン,"묘지")
		RETURN 0
	SIF 발동済_2(듀얼리스트,34151)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0	
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:戦闘場所(듀얼리스트)")}("종류")
	SIF RESULT != 링크
		RETURN 0
	CALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("종류")
	SIF RESULT != 링크
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード


IF 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34151,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과추가종류 = 2
효과条件名前 = 파이어월 가디언
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34151,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		選択カード = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		효과추가종류 = 23
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"지속無効",99999)
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF
ENDIF
