@CARDCAN_57100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57100)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 링크
	효과条件속성:0 = 신속성

	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),0) != 1
		효과条件속성:1 = 빛속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),1) != 1
		효과条件속성:2 = 어둠속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),2) != 1
		효과条件속성:3 = 땅속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),3) != 1
		효과条件속성:4 = 물속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),4) != 1
		효과条件속성:5 = 화염속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),5) != 1
		효과条件속성:6 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_57100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 속성セット
#DIM DYNAMIC 속성セットビット

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57100)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 링크
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:選択カード")}, "レベル"
			選択レベル = RESULT
			攻撃力修正 = 選択レベル * 1000
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57100)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件종류 = 링크
		효과条件行先플래그 = 제외行き
		효과条件속성:0 = 신속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),0) != 1
			효과条件속성:1 = 빛속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),1) != 1
			효과条件속성:2 = 어둠속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),2) != 1
			효과条件속성:3 = 땅속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),3) != 1
			효과条件속성:4 = 물속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),4) != 1
			효과条件속성:5 = 화염속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所"),5) != 1
			효과条件속성:6 = 바람속성
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID}, "속성"
			속성セット = RESULT - 1
			SETBIT 속성セットビット, 속성セット

			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"T1汎数",속성セットビット)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
