;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 이그니스터-Ai 랜드
	CASE "略称"
RESULTS = Ai 랜드
	CASE "カテゴリ"
RESULTS:0 = Ai
ENDSELECT


@CARD_74030(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_74030(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「이그니스터-Ai 랜드」가 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,마함起動)
PRINTL ①: 자신 몬스터 존에 몬스터가 1장 이하일 경우에 발동할 수 있다.
PRINTL 패에서 레벨 4 이하의 「＠이그니스터」 몬스터 1장을 특수 소환한다.
PRINTL 이 턴에 자신은, 원래 속성이 같은 몬스터를 「이그니스터-Ai 랜드」의 효과로 특수 소환할 수 없으며,
PRINTL 사이버스족 몬스터밖에 특수 소환할 수 없다.
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②: 이 카드가 묘지에 존재할 경우에 발동할 수 있다.
PRINTL 자신 묘지에서 「＠이그니스터」 몬스터 1장을 제외하고,
PRINTL 이 카드를 자신 필드에 세트한다.


@CARDCAN_74030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,74030)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT > 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = ＠이그니스터
	CALLFORM 효과条件レベル_ADV(4,"以下")
	효과条件속성:0 = 신속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),0) != 1
		효과条件속성:0 = 빛속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),1) != 1
		효과条件속성:1 = 어둠속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),2) != 1
		효과条件속성:2 = 땅속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),3) != 1
		효과条件속성:3 = 물속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),4) != 1
		효과条件속성:4 = 화염속성
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),5) != 1
		효과条件속성:5 = 바람속성
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,74030)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = ＠이그니스터
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_74030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 속성セット
#DIM DYNAMIC 속성セットビット
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74030)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = ＠이그니스터
		CALLFORM 효과条件レベル_ADV(4,"以下")
		효과条件속성:0 = 신속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),0) != 1
			효과条件속성:0 = 빛속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),1) != 1
			효과条件속성:1 = 어둠속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),2) != 1
			효과条件속성:2 = 땅속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),3) != 1
			효과条件속성:3 = 물속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),4) != 1
			효과条件속성:4 = 화염속성
		SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_T1汎数:場所"),5) != 1
			효과条件속성:5 = 바람속성
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"속성"
			속성セット = RESULT - 1
			SETBIT 속성セットビット, 속성セット

			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"T1汎数",속성セットビット)
			SS소환可能종족 = 사이버스족
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74030)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74030,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = ＠이그니스터
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き,2)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"イグニスタ-Aiランド")
ENDIF
