PRINTL 묘지의 이 카드를 제외하고, 전투하는 자신의 몬스터를 파괴한다.



@CARDCAN_34035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34035)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,34035)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件固名前 = 아치치＠이그니스터
	효과条件カテゴリ = ＠이그니스터
	CALLFORM 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,34035)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)}("종족")
	SIF !MATCH(RESULT,사이버스족)
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)}("속성")
	SIF !MATCH(RESULT,화염속성)
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)}("종류")
	SIF !MATCH(RESULT,링크)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34035(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34035,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件固名前 = 아치치＠이그니스터
		효과条件カテゴリ = ＠이그니스터
		CALLFORM 효과条件レベル_ADV(4,"以下")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34035,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL CARD_DISPOSE(듀얼리스트,"필드",戦闘場所(듀얼리스트),破壊行き)
	ENDIF
ENDIF

