@CARDNAME_57033,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 어스고렘 @ 이그니스터
	CASE "略称"
RESULTS = 어스고렘 @
	CASE "カテゴリ"
RESULTS:0 = @ 이그니스터
ENDSELECT


@CARD_57033(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 사이버스족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 2000
ENDSELECT
RETURN 0

@CARDSUMMON_57033(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件종족 = 사이버스족
ELSEIF EX参照 >= 10
	素材条件종류 = 링크
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,57033) 
	RETURN RESULT
ENDIF

