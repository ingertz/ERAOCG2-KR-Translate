@CARDNAME_57032,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 다크 나이트@이그니스터
	CASE "略称"
RESULTS = 다크 나이트@
	CASE "カテゴリ"
RESULTS:0 = @이그니스터
ENDSELECT


@CARD_57032(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 사이버스족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1300
ENDSELECT
RETURN 0


