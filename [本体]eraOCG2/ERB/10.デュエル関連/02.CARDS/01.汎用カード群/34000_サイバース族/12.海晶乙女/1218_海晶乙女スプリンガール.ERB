CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 묘지에서 "마린세스" 몬스터 1장을 제외하고 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
;PRINTL ②：この카드가 물속성링크몬스터의 링크素材として묘지へ送られた場合に발동할 수 있다。
CALLFORM CARD_ABLE(2,L素材時효과)
PRINTL ②: 이 카드가 링크 소재로서 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 자신 필드의 "마린세스" 몬스터의 수만큼, 자신 덱의 위에서 카드를 묘지로 보낸다.
PRINTL 이 효과로 "마린세스" 카드가 묘지로 보내졌을 경우, 추가로 그 "마린세스" 카드의 수× 200 데미지를 상대에게 준다.
;발동条件설정
@CARDCAN_1218(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1218)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,1218)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1218,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 마린세스
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == L素材時효과
	SIF 발동済_2(듀얼리스트,1218)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	RETURN 1
ENDIF

;효과발동処理
@CARDEFFECT_1218(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 破壊カード

#DIM DYNAMIC モンスター数
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 減少値


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1218,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 마린세스
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF
	ENDIF
ELSEIF 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1218,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 마린세스
		효과条件CNT = 1	
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		モンスター数 = RESULT
		REPEAT モンスター数
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")},"カテゴリ"
			SIF RESULTS == "마린세스"
				条件달성 ++ 
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0)
		REND
		減少値 = 条件달성 * 200
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",減少値,1)
	ENDIF
ENDIF
