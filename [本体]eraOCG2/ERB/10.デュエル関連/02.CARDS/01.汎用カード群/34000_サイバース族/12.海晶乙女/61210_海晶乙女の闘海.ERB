@CARDCAN_61210(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61210)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	RETURN 1

ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 마린세스
	효과条件종류 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 마린세스
	효과条件종류 = 링크
	CALLFORM 효과条件レベル_ADV(4,"以上")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_61210(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61210)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61210)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
		REPEAT 3
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 마린세스
			효과条件종류 = 링크
			CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,효과先,,61210)
			SIF RESULT == 0 || 마함数(듀얼리스트) >= 5
				BREAK
		REND
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 마린세스
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,200)

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 마린세스
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = 600 * RESULT

	CALL FULLRESET
	효과条件カテゴリ = 마린세스
	효과条件レベル = 4
	효과条件종류 = 링크
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正)

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "마린세스 배틀오션")

	CALL FULLRESET
	효과条件カテゴリ = 마린세스
	효과条件レベル = 4
	효과条件종류 = 링크
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
ENDIF
