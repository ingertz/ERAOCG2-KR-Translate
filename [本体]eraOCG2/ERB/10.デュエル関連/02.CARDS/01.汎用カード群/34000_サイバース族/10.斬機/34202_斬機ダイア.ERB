@CARDCAN_34202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,34202)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 
	SIF 발동済_1(듀얼리스트,34202)
		RETURN 0


	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 사이버스족
	효과条件종류 = レベル持ち
	효과条件レベル = 4
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == X素材時효과 || 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,34202)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 참기
	효과条件종류 = EXモン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_34202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 소환時 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34202,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과추가종류 = 効追無効
		효과条件종족 = 사이버스족
		효과条件レベル = 4
		효과条件종류 = レベル持ち
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == X素材時효과 || 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,34202,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 참기
		효과条件종류 = EXモン全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"条達",1,1)
		ENDIF
	ENDIF
ENDIF