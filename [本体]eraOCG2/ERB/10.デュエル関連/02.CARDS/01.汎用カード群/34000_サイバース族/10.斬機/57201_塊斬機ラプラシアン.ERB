@CARDCAN_57201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57201)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,57201)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID}("カテゴリ")
	SIF !MATCH(RESULTS,"참기")
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과")
		RETURN 0
	RETURN 1	
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_57201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57201,1)
	IF RESULT == 0
		IF 손패数(対面者) != 0 && GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= -1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"묘지")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
		ENDIF
		IF モンスター数(対面者) != 0 && GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= -1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
		ENDIF
		IF 마함数(対面者) != 0 && GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= -1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57201,0,X消費1)
	IF RESULT == 0
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57201,11)
	IF RESULT == 0	
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")

		RETURN 1
	ENDIF
	RETURN 0
ENDIF