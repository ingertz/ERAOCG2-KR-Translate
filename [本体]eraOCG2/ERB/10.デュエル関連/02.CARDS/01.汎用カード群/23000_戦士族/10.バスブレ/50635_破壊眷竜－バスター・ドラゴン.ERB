@CARDCAN_50635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50635)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン,"마함")
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF !GROUPMATCH(ゾーン,"필드")
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,21025,"묘지")
	
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 버스터 블레이더
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
효과条件名前 = 버스터 블레이더
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 버스터 블레이더
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 파괴검
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID},"カテゴリ"
	SIF !MATCH(RESULTS,"버스터 블레이더")
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_50635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"戦除")
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"種",드래곤족,50635)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50635,10)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 버스터 블레이더
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		ELSEIF ターンプレイヤー != 듀얼리스트
			CALL FULLRESET
			효과条件カテゴリ = 버스터 블레이더
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 파괴검
				효과条件종류 = モン全般
				CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,"필드",選択カード,,50635)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50635)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件固定 = 破壊대상場所
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
		SIF RESULT
			RETURN 1
	ENDIF
	RETURN 0
ENDIF
