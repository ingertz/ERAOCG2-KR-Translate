@CARDNAME_23271,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = U.A. 판타지스타
	CASE "略称"
RESULTS = 판타지스타
	CASE "カテゴリ"
RESULTS:0 = 울트라 애슬리트
ENDSELECT


@CARD_23271(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 1000
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
	CASE "추가日"
		RETURN 250618
ENDSELECT
RETURN 0

@CARD_EXPLANATION_23271(종류)
#DIM DYNAMIC 종류


