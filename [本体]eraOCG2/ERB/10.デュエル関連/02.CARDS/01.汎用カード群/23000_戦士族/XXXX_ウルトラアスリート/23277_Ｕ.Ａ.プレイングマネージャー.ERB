@CARDCAN_23277(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用不可,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23277)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,23277)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23277,"손패",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
효과条件カテゴリ = 울트라 애슬리트
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,23277)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1 
		효과使用不可:0 = 1
    ENDIF

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1 
		효과使用不可:1 = 1

	ENDIF

    SIF 효과使用不可:0 == 1 && 효과使用不可:1 == 1
	    RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_23277(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 효과使用不可,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23277,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == 특수소환時
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23277,2)
	IF RESULT == 0
	    CALL FULLRESET
	    효과範囲상대필드 = 1
	    효과範囲상대마함 = 1
	    CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	    IF RESULT != 1 
		    효과使用不可:0 = 1
		ENDIF

	    CALL FULLRESET
	    효과範囲상대필드 = 1
	    효과条件표시 = 表側표시
	    CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	    IF RESULT != 1 
		    효과使用不可:1 = 1
		ENDIF

		IF 효과使用不可:0 == 0 && 효과使用不可:1 == 0
PRINTL 어느 효과를 발동하시겠습니까?
				CALL YN_CHOICE(듀얼리스트,"상대の카드를 破壊する。","상대モンスター의 효과를 무효로 한다。 ")
			ENDIF

		IF RESULT == 0
		    CALL FULLRESET
		    CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")

		ELSE
		    CALL FULLRESET
		    CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"無効")
		ENDIF
	    
	ENDIF


ENDIF
