@CARD_EXPLANATION_72348(종류)
#DIM DYNAMIC 종류

PRINTL 자신의 필드는 "U.A. 스타디움"이 된다.
CALLFORM CARD_ABLE(0,효과後誘発)
PRINTL ①: 자신의 필드에 "U.A." 몬스터가 소환되었을 경우에 발동할 수 있다.
PRINTL 덱에서 "U.A." 몬스터 1장을 패에 넣는다.
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②: 자신의 필드의 "U.A." 몬스터의 공격력은 500 올린다.


@CARDCAN_72348(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72348)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発	
    SIF ゾーン != "마함"
		RETURN 0
효과条件カテゴリ = 울트라 애슬리트
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"通常소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件カテゴリ = 울트라 애슬리트
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_72348(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72348)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 효과後誘発	
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72348)
	IF RESULT == 0
	    CALL FULLRESET
		효과範囲덱 = 1
효과条件カテゴリ = 울트라 애슬리트
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
효과条件カテゴリ = 울트라 애슬리트
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "U.A.スタジアム")


ENDIF


