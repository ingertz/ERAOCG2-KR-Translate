PRINTL 이 카드명의 ①②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動,フリー誘発)
PRINTL ①: 자신 / 상대 턴에, 자신 필드의 드래곤족 몬스터 1장
PRINTL 또는 레벨 4 또는 7의 전사족 몬스터 1장을 릴리스하고 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,특수소환時)
PRINTL ②: 이 카드가 특수 소환에 성공했을 경우에 발동할 수 있다.
PRINTL 상대 몬스터를 전부 수비 표시로 한다.
CALLFORM CARD_ABLE(3,필드起動)
PRINTL ③: 이 카드를 릴리스하고 발동할 수 있다.
PRINTL 덱 / 묘지에서 "암흑기사 가이아 솔저" 이외의 레벨 7 이상의 전사족 몬스터 1장을 패에 넣는다.
PRINTL 그 후, 묘지 / 제외되어 있는 레벨 4 전사족 몬스터 1장을 패에 넣을 수 있다.

@CARDCAN_23064(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23064)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,23064)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23064,"손패",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件レベル:0 = 4
		효과条件レベル:1 = 7
		효과条件종족 = 전사족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,23064)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,23064)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件固名前 = 암흑기사 가이아 솔저
	CALL 효과条件レベル_ADV(7, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23064(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC 条件달성,5
#DIM DYNAMIC 효과先

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23064,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 드래곤족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:0 = 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件レベル:0 = 4
		효과条件レベル:1 = 7
		효과条件종족 = 전사족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:1 = 1
		IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
PRINTL 어느 쪽을 릴리스합니까?
			CALL YN_CHOICE(듀얼리스트,"드래곤족モンスター","レベル４ ７の전사족モンスター")
		ELSEIF 효과使用불가:0 != 1 && 효과使用불가:1 == 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 드래곤족
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件レベル:0 = 4
			효과条件レベル:1 = 7
			효과条件종족 = 전사족
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23064,2)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23064,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件종족 = 전사족
		효과条件固名前 = 암흑기사 가이아 솔저
		CALL 효과条件レベル_ADV(7, "以上")
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件レベル = 4
		효과条件종족 = 전사족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 몬스터를 패에 넣습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件レベル = 4
			효과条件종족 = 전사족
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
