@CARDCAN_73061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 효과使用불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73061)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_2(듀얼리스트,73061)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 기사 가이아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1 
		효과使用불가:0 = 1
	ELSE
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件レベル = 5
		효과条件종족 = 드래곤족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1 
			효과使用불가:0 = 1
		ENDIF
	ENDIF

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件レベル = 5
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1 
		효과使用불가:1 = 1
	ELSE
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 기사 가이아
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1 
			효과使用불가:1 = 1
		ENDIF
	ENDIF

	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,3
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73061,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 기사 가이아
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1 
			효과使用불가:0 = 1
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = モン全般
			효과条件レベル = 5
			효과条件종족 = 드래곤족
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 1 
				효과使用불가:0 = 1
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件レベル = 5
		효과条件종족 = 드래곤족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1 
			효과使用불가:1 = 1
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 기사 가이아
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 1 
				효과使用불가:1 = 1
			ENDIF
		ENDIF

		IF 효과使用불가:0 == 0 && 효과使用불가:1 == 0
PRINTL 어느 쪽을 패로 가져오겠습니까?
			CALL YN_CHOICE(듀얼리스트,"드래곤족 レベル５モンスター","「기사 가이아」モンスター")
		ELSEIF 효과使用불가:0 == 1
			RESULT = いいえ
		ELSEIF 효과使用불가:1 == 1
			RESULT = はい
		ENDIF

		IF RESULT == いいえ
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件レベル = 5
			효과条件종족 = 드래곤족
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과条件カテゴリ = 기사 가이아
				효과条件종류 = モン全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ELSE
			CALL FULLRESET
			효과条件カテゴリ = 기사 가이아
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과条件종류 = モン全般
				효과条件レベル = 5
				효과条件종족 = 드래곤족
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73061)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "切り拓かれし땅平")

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 기사 가이아
	효과条件종류:0 = 융합
	효과条件종류:1 = 싱크로
	효과条件종류:2 = 엑시즈
	효과条件종류:3 = 링크
	IF RESULT == 1 
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦阻")
	ENDIF
ENDIF
