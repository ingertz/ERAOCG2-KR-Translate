				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"攻固",攻撃力修正,上書きモード)
			ELSEIF 選択カード >= 2000 && 選択カード < 2005
				選択カード -= 2000
				CALLFORM CARD_{GETVAR(@"%対面者%_필드:選択カード")}("攻撃力")
				攻撃力修正 = RESULT
				CALL SET_FIELD_INFO(対面者,"필드",選択カード,"攻固",攻撃力修正,上書きモード)
			ENDIF
		ENDIF
	ENDIF
