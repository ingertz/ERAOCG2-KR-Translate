@CARDCAN_1620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所

#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1620)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0

	RETURN 1
ELSEIF 종류 == ターン終了時予約
	RETURN 1
ELSEIF 종류 == 제외時
	RETURN 1
ENDIF

@CARDEFFECT_1620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1620)
	IF RESULT == 0
		選択カード = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"제외")
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = D.D. 어설런트
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1620)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,1620)
	ENDIF

ENDIF
