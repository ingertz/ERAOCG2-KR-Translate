PRINTL 그 몬스터를 패에 추가한다.

;발동条件설정
@CARDCAN_1690(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1690)
SIF RESULT == 1
	RETURN 0


IF 종류 == 攻撃時誘発
	IF ゾーン== "필드" 
		SIF GETVAR(@"%듀얼리스트%_戦闘カード") == 場所
			RETURN 0
	ELSEIF ゾーン == "손패"
		PRINT
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,1690)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_戦闘カード") == 5 
		RETURN 0
	SIF GETVAR(@"%対面者%_戦闘カード") == 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_種:%듀얼리스트%_戦闘カード") != 전사족
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,1690) 
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件속성 = 땅속성
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

;효과발동処理
@CARDEFFECT_1690(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1690,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)},("攻撃力")
		攻撃力修正 = RESULT
		選択カード = GETVAR(@"%対面者%_戦闘カード")
		PRINTFORML ターン終了時まで상대 몬스터의 공격력이{攻撃力修正}ポイントDOWN！！
		CALL SET_FIELD_INFO(対面者,"필드",戦闘場所(対面者,1),"一時",-攻撃力修正)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1690,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종족 = 전사족
		효과条件속성 = 땅속성
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ENDIF
