@CARDCAN_23404(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23404)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,23404)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23404,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 팬텀
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,23404)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 팬텀
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23404(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23404,1)
	IF RESULT == 0
PRINTL 레벨을 올려 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		SIF RESULT == はい
			条件달성 = 1
		CALL FULLRESET
		SIF 条件달성 == 1
			효과추가종류 = 効追永星P1
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所, "攻撃표시")
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23404,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
PRINTL 레벨을 올려 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		SIF RESULT == はい
			条件달성 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 팬텀
		SIF 条件달성 == 1
			효과추가종류 = 効追永星P1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
