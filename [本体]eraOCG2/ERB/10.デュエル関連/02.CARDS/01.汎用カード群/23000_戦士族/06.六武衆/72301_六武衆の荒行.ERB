@CARD_EXPLANATION_72301(종류)
#DIM DYNAMIC 종류


CALLFORM CARD_ABLE(0,마함起動 ,손패起動 ,フリー誘発)
PRINTL ①: 자신 필드의 "여섯무사" 몬스터 1장을 대상으로 발동할 수 있다.
PRINTL 그 몬스터와는 카드명이 다르고, 공격력이 같은 "여섯무사" 몬스터 1장을 덱에서 특수 소환한다.
PRINTL 대상 몬스터는 이 턴의 엔드 페이즈에 파괴된다.


@CARDCAN_72301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72301)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF


	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		選択カード_ID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
		TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
		SIF !MATCH(RESULTS,"여섯무사")
			CONTINUE
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 여섯무사
		TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
		효과条件固名前 = %RESULTS%
		효과条件固攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성++
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 条件달성カード名,5
#DIMS DYNAMIC 条件未달성カード名,5
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72301,1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			選択カード_ID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
			TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
			SIF !MATCH(RESULTS,"여섯무사")
				CONTINUE
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 여섯무사
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			효과条件固名前 = %RESULTS%
			효과条件固攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				条件달성カード名:カウンタ = %효과条件固名前%
			ELSE
				条件未달성カード名:カウンタ = %효과条件固名前%
			ENDIF
		NEXT
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 10
		효과条件カテゴリ = 여섯무사
		IF 条件달성カード名:0 != ""
			효과条件名前:0 = %条件달성カード名:0%
		ELSE
			효과条件名前:0 = ""
		ENDIF
		효과条件名前:1 = %条件달성カード名:1%
		효과条件名前:2 = %条件달성カード名:2%
		효과条件名前:3 = %条件달성カード名:3%
		효과条件名前:4 = %条件달성カード名:4%
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			選択カード_ID = RESULT:99
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"終処",破壊行き)
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 여섯무사
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			효과条件固名前 = %RESULTS%
			효과条件固攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:選択カード")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF


