@CARDCAN_1420(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1420)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1	

ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,1420)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALLFORM ATTACK_CARD(듀얼리스트,"종족")
	SIF !MATCH(RESULT,전사족)
		RETURN 0
	CALLFORM ATTACK_CARD(듀얼리스트,"속성")
	SIF !MATCH(RESULT,땅속성)
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	CALL 효과条件レベル_ADV(5, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_1420(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1420,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 전사족
		CALL 효과条件レベル_ADV(5, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 워크라이
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",200)
	ENDIF
ENDIF
