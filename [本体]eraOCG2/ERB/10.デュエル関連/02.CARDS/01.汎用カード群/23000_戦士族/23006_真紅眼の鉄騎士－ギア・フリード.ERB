PRINTL ①: 1턴에 1번, 이 카드가 장착 카드를 장착하고 있을 경우, 자신의 마법 & 함정 존에서
PRINTL 몬스터 또는 장착 마법 카드 1장을 묘지로 보내고, 이하의 효과에서 1개를 선택하여 발동할 수 있다.
PRINTL ●상대 필드의 마법 / 함정 카드 1장을 파괴한다.
PRINTL ●자신의 묘지의 레벨 7 이하의 "붉은 눈" 몬스터 1장을 특수 소환한다.

@CARDCAN_23006(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23006)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종류:0 = モン全般
	효과条件종류:1 = 装備마법
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과制限달성 ++
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 붉은 눈
	효과条件종류 = レベル持ち
	CALLFORM 효과条件レベル_ADV(7, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과制限달성 ++
	SIF 효과制限달성 > 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23006(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23006,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류:0 = モン全般
		효과条件종류:1 = 装備마법
		효과条件표시 = 表側표시
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		IF RESULT == 1
			IF 마함数(対面者) != 0
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 붉은 눈
				효과条件종류 = レベル持ち
				CALLFORM 효과条件レベル_ADV(7, "以下")
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
					CALL YN_CHOICE(듀얼리스트,"●상대の마법 / 함정카드를 破壊する","●묘지の「붉은 눈」を특수소환する")
				ELSE
					RESULT = 0
				ENDIF
			ELSE
				RESULT = 1
			ENDIF
			IF RESULT == 0
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
			ELSE
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 붉은 눈
				효과条件종류 = レベル持ち
				CALLFORM 효과条件レベル_ADV(7, "以下")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
