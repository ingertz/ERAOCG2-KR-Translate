@CARDCAN_51652(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51652)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	; 使用後バトルフェイズが行えない制約はMP2に발동不可+BPスキップで対応。
	SIF メインフェイズ != 1
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") > 2
		RETURN 0
	RETURN 1
ENDIF

