@CARDEFFECT_51652(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

; ①의 효과
IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51652,1,X消費1)
PRINTL 자이언트 트레이너의 열혈 효과, 발동!
	IF RESULT == 0
		CALL FULLRESET
		; X덱の上を1枚めくってモンスターなら손패へ加え800ダメージ。
		; それ 이외의 場合はドローの処理を行う。
		; うららが効かなくなっちゃった。
		효과条件종류 = モン全般
		효과条件任意 = 1
		효과条件山切り無し = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,1)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ELSEIF RESULT == 1
			; モンスターだったので800ダメージ
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
		ENDIF
		; 使用後バトルフェイズ不可
		CALL SET_PLAYER_INFO(듀얼리스트,"バトルスキップ", 1)
		; １ターンに３回しか使えないのでカウント。
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"T1汎数",1)
	ENDIF
ENDIF


