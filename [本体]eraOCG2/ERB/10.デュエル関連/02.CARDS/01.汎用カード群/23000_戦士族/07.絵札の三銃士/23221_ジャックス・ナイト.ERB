	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL FULLRESET
		효과条件カテゴリ = 페이스 카드 삼총사
		효과条件종류 = 마법全般
		CALL CARD_ADD_BASIC(対面者,"덱",ゾーン,場所)
	ENDIF
ENDIF

