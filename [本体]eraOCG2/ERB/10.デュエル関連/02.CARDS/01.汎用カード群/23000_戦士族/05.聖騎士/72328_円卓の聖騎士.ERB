@CARDNAME_72328,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 원탁의 성기사
	CASE "略称"
RESULTS = 원탁의 성기사
	CASE "カテゴリ"
RESULTS:0 = 성기사
ENDSELECT


@CARD_72328(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72328(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「성기사들의 원탁」이 된다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ①: 1턴에 1번, 자신 필드 묘지의 「성기사」「성검」카드의 종류에 따라 이하의 효과를 각각 1번씩 발동할 수 있다.
PRINTL ●3종류 이상: 덱에서 「성기사」「성검」카드 1장을 묘지로 보낸다.
PRINTL ●6종류 이상: 패에서 「성기사」몬스터 1장을 특수 소환한다. 그 후, 패에서 「성검」장비 마법 카드 1장을 그 몬스터에 장비할 수 있다.
PRINTL ●9종류 이상: 자신 묘지의 「성기사」「성검」카드 1장을 대상으로 발동할 수 있다. 그 카드를 패에 추가한다.
PRINTL ●12종류 이상: 자신은 1장 드로우한다.

@CARDCAN_72328(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72328)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 성기사
	효과条件カテゴリ:1 = 성검
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72328(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC カード装備先

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72328,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 성기사
		효과条件カテゴリ:1 = 성검
		효과条件固名前起動 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		カウンタ = RESULT
		IF カウンタ >= 3
			CALL FULLRESET
			효과条件カテゴリ:0 = 성기사
			효과条件カテゴリ:1 = 성검
			효과条件任意 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
		IF カウンタ >= 6
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 성기사
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
PRINTL 패의 「성검」카드를 장비하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					カード装備先 = カード소환先
					CALL FULLRESET
					효과条件カテゴリ = 성검
					효과条件종류 = 装備마법
					CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)	
					選択カード = RESULT
					IF 選択カード != 9999
						選択カード_ID = GETVAR(@"%듀얼리스트%_손패:選択カード")
						CALL FULLRESET
						효과範囲필드 = 1
						효과条件固定 = カード装備先
						CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"손패")
					ENDIF
				ENDIF
			ENDIF
		ENDIF
		IF カウンタ >= 9
			CALL FULLRESET
			효과条件カテゴリ:0 = 성기사
			효과条件カテゴリ:1 = 성검
			효과条件任意 = 1
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ENDIF
		SIF カウンタ >= 12
			CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72328)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "성기사たちの円卓")
ENDIF