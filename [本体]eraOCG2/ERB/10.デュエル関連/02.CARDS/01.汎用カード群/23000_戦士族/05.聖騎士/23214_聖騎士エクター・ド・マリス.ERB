@CARDCAN_23214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23214)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,23214)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23214,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 성기사
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == S素材時효과 || 종류 == X素材時효과 || 종류 == L素材時효과
	SIF 발동済_2(듀얼리스트,23214)
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 성기사
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 성기사
	효과条件종류:0 = 싱크로
	효과条件종류:1 = 엑시즈
	효과条件종류:2 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戻した数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23214,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 성기사
		효과条件종류 = モン全般
		효과条件複数 = 2
		효과条件行先플래그 = 제외行き
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
		ENDIF
	ENDIF
ELSEIF 종류 == S素材時효과 || 종류 == X素材時효과 || 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23214,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = 성기사
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		효과条件複数 = 97
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		戻した数 = RESULT:2
		IF 戻した数 != 0
			CALL FULLRESET
			효과条件カテゴリ = 성기사
			효과条件종류:0 = 싱크로
			효과条件종류:1 = 엑시즈
			효과条件종류:2 = 링크
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)
			選択カード = RESULT
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",戻した数*500)
				SIF 戻した数 >= 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"魔耐")
				SIF 戻した数 >= 2
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"함정耐")
				SIF 戻した数 == 3
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"モ耐")
			ENDIF
		ENDIF
	ENDIF
ENDIF
