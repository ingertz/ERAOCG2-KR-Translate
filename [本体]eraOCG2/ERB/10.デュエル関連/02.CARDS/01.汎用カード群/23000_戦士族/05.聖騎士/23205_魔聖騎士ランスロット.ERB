	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23205,2)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 성검 아론다이트
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF



