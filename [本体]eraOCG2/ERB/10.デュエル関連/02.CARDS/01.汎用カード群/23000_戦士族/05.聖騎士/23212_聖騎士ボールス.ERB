@CARDCAN_23212(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23212)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,23212)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23212,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 어둠속성
	효과条件カテゴリ = 성기사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,23212)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 성검
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 성검
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23212(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC 選択カード_ID,5
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 当選番号

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23212,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23212,2)
	IF RESULT == 0
		FOR カウンタ,0,3
			CALL FULLRESET
			효과条件カテゴリ = 성검
			CALL CARD_ADD_GY_BASIC(듀얼리스트, "덱",ゾーン,場所)
			選択カード:カウンタ = RESULT
			SIF 選択カード:カウンタ != 9999
				選択カード_ID:カウンタ = RESULT:1
		NEXT
		IF 選択カード:0 != 9999 && 選択カード:1 != 9999 && 選択カード:2 != 9999
			当選番号 = RAND:3
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
					CONTINUE
				IF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == 選択カード_ID:当選番号
					CALL CARD_ADD(듀얼리스트,"묘지","손패",カウンタ)
					BREAK
				ENDIF
			NEXT
		ENDIF
	ENDIF
ENDIF
