@CARD_EXPLANATION_23258(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 듀얼 중에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(20,손패起動)
PRINTL ①: 자신의 패 / 묘지에서 전사족 화염속성 몬스터 1장을 제외하고 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다. 그 후, 이 카드의 레벨을 제외한 몬스터와 같게 할 수 있다.
CALLFORM CARD_ABLE(21,묘지起動)
PRINTL ②: 묘지의 이 카드를 제외하고 발동할 수 있다. 다음 상대 턴 종료시에, 제외 상태의 이 카드명을 특수 소환한다.
PRINTL 그 후, 자신의 묘지 / 제외 상태의 전사족 화염속성 몬스터 1장을 고르고 특수 소환할 수 있다.


@CARDCAN_23258(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23258)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_D1(듀얼리스트,23258)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종족 = 전사족
	효과条件속성 = 화염속성
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_D2(듀얼리스트,23258)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時予約
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL CARD_SS_CHECK(듀얼리스트,23258,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = 염성기사－아스톨포
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23258(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_星

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23258,20)
	IF RESULT == 0
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종족 = 전사족
		효과条件속성 = 화염속성
		효과条件他所 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}, "レベル"
			選択カード_星 = RESULT
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
PRINTL 이 카드의 레벨을 변경합니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == はい
				CALL STATCHANGE_EFFECT(듀얼리스트,"自身",カード소환先,"永星",選択カード_星)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23258,21)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL CARD_RESERV(듀얼리스트,23258,スタン予約)
	ENDIF
ELSEIF 종류 == ターン開始時予約
	CALL CARD_RESERV(듀얼리스트,23258)
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲제외 = 1
효과条件名前 = 염성기사－아스톨포
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종족 = 전사족
	효과条件속성 = 화염속성
	효과条件任意 = 1
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF
