PRINTL 이 카드를 장착 마법 카드 취급으로 그 자신 몬스터에 장착한다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ③: 1턴에 1번, 이 카드가 장착 마법 카드 취급일 경우 발동할 수 있다. 이 턴, 장착 몬스터는 튜너가 된다.


@CARDCAN_23597(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23597)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,23597)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23597,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종족 = 전사족
	효과条件속성 = 화염속성
	효과条件スーパー종류 = 装備마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 발동済_1(듀얼리스트,23597) && 발동済_2(듀얼리스트,23597)
		RETURN 0
	ELSEIF 발동済_1(듀얼리스트,23597)
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 전사족
		효과条件속성 = 화염속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF 발동済_2(듀얼리스트,23597)
		CALL CARD_SS_CHECK(듀얼리스트,23597,"묘지")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종족 = 전사족
		효과条件속성 = 화염속성
		효과条件スーパー종류 = 装備마법
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종족 = 전사족
		효과条件속성 = 화염속성
		효과条件スーパー종류 = 装備마법
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23597(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23597,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23597)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종족 = 전사족
		효과条件속성 = 화염속성
		효과条件スーパー종류 = 装備마법
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && 발동済_1(듀얼리스트,23597) == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 전사족
			효과条件속성 = 화염속성
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1 && 발동済_2(듀얼리스트,23597) == 0
				CALL YN_CHOICE(듀얼리스트,"①この카드를 특수소환する","②この카드를 装備する")
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23597,1)
			CALL FULLRESET
			효과추가종류 = 2
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
		ELSE
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23597,2)
			CALL FULLRESET
			효과条件종족 = 전사족
			효과条件속성 = 화염속성
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カード,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23597,10)
	IF RESULT == 0
		CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,装備先,"一Ｔ",1,1)
	ENDIF
ENDIF
