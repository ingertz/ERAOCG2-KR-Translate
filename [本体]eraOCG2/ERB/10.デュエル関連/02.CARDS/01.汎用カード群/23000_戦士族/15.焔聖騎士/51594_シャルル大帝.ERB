@CARDSUMMON_51594(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要링크数 = 1
素材条件名前 = 염성기사제－샤를
素材条件レベル = 9

CALL FULLRESET
효과範囲마함 = 1
효과条件종류 = 装備마법
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT != 1
	素材条件固名前 = 염성기사제－샤를

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,51594) 
	RETURN RESULT
ENDIF

