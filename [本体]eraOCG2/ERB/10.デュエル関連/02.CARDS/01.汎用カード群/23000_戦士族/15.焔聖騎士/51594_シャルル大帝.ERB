@CARDCAN_51594(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51594)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 염성기사제－샤를
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과条件종류 = 装備마법
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종족 = 전사족
	효과条件속성 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,51594)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_装備成功") != 1 && GETVAR(@"%対面者%_装備成功") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,51594)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 装備마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_51594(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 
#DIMS DYNAMIC 選択カード名前 


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51594)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 염성기사제－샤를
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"묘지",選択カード)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",51592,上書きモード)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
			CALL CARD_SET_CATEGORY(듀얼리스트,"필드",場所,"성기사")
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51594,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲마함 = 1
		효과条件종류 = 装備마법
		효과条件표시 = 表側표시
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 0
			CALL FULLRESET
			효과条件종족 = 전사족
			효과条件속성 = 화염속성
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
			SIF RESULT == 0
				RETURN 0
		ENDIF
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",0,"묘지")
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51594,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51594,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = 装備마법
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件固定 = 場所
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード（CS）,参照先（CS）)
			IF RESULT == 1 && 마함数(듀얼리스트) < 5
PRINTL 덱의 몬스터를 장비하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件종족 = 전사족
					효과条件속성 = 화염속성
					CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,51594)
					IF RESULT == 1
						CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
