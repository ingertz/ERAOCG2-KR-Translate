@CARDCAN_41445(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,41445)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,41445)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 악마족
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,41445)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件固名前 = 각인된 마 라크리모사
	효과条件속성 = 빛속성
	효과条件종족 = 악마족
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_41445(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,41445,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件속성 = 빛속성
		효과条件종족 = 악마족
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード_ID = RESULT:99
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			CALL CARD_SS_CHECK(듀얼리스트,選択カード_ID,参照先（CS）)
			IF RESULT != 1
				CALL YN_CHOICE(듀얼리스트,"특수소환する","손패に加える")
			ELSE
				RESULT = 1
			ENDIF
			IF RESULT == 0
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,参照先（CS）,選択カード)
			ELSEIF RESULT == 1
				CALL CARD_DISPOSE(듀얼리스트,参照先（CS）,選択カード,손패行き)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-600,0,41445)
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,41445,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 각인된 마 라크리모사
		효과条件속성 = 빛속성
		효과条件종족 = 악마족
		효과条件종류 = モン全般
		효과条件他所 = 1
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1200,1)
		ENDIF
	ENDIF
ENDIF

