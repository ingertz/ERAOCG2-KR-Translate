@CARDNAME_28470,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 인페르니티 데몬
	CASE "略称"
RESULTS = 만족 데몬
	CASE "カテゴリ"
RESULTS:0 = 인페르니티
RESULTS:1 = 데몬
ENDSELECT


@CARD_28470(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1200
ENDSELECT

RETURN 0

