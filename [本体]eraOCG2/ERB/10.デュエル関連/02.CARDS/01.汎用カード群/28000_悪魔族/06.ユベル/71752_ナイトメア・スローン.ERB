@CARD_EXPLANATION_71752(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「유벨 성의 옥좌」가 된다.
PRINTL 이 카드명의 카드는 1턴에 1번밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①: 이 카드의 발동 시 효과 처리로서, 이하의 효과를 적용할 수 있다.
PRINTL ● 공격력과 수비력이 0인 악마족 몬스터 1장을 덱에서 고르고, 패에 넣거나 파괴한다.
CALLFORM CARD_ABLE(10,효과後誘発)
PRINTL ②: 1턴에 1번, 자신 필드의 레벨 9 이상의 「유벨」 몬스터가 필드에서 벗어났을 경우에 발동할 수 있다.
PRINTL 레벨 9 이상의 「유벨」 몬스터 1장을 자신의 덱 / 묘지 / 제외된 상태에서 패에 넣는다.
PRINTL 그 후, 그 동명 몬스터를 패에서 소환 조건을 무시하고 특수 소환할 수 있다.

@CARDCAN_71752(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71752)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,71752)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 유벨
	CALLFORM 효과条件レベル_ADV(9,"以上")
	효과条件소환可 = 1
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"필드離れ")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 악마족
	효과条件攻撃力 = 1
	효과条件守備力 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71752(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71752,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 유벨
		CALLFORM 효과条件レベル_ADV(9,"以上")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
		選択カード名 = %RESULTS%
		IF 選択カード  != 9999
			CALL FULLRESET
			효과範囲손패 = 1
효과条件名前 = %選択カード名前%
			효과条件任意 = 1
			효과条件特不無視 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71752,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件종족 = 악마족
		효과条件攻撃力 = 1
		효과条件守備力 = 1
		효과条件任意 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			PRINTL 
PRINTL 선택한 카드를 패에 넣으시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ENDIF
		IF RESULT == はい
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード,손패行き)
		ELSEIF RESULT == いいえ
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード,破壊行き)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "유벨城の玉座")
ENDIF

