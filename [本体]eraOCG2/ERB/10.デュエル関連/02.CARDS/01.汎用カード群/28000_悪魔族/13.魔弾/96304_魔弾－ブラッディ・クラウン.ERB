@CARDCAN_96304(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,96304)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 마탄환
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF FINAL_SUMMON_TARGET(듀얼리스트,1) == 5 
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 마탄환의 사수
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			SIF 발동済_1(듀얼리스트,96304)
				RETURN 0
			SIF メインフェイズ != 1
				RETURN 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 마탄환
			효과条件소환可 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件他所 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 5
		RETURN 0

	RETURN 1
ENDIF



@CARDEFFECT_96304(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 속성数
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 효과先

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "마함"
		IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,96304,1)
			IF RESULT == 0
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲묘지 = 1
				효과条件カテゴリ = 마탄환
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ELSE
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,96304)
			IF RESULT == 0
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,96304)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,96304)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"묘지")
	ENDIF
ENDIF
