@CARDCAN_54120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54120)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,54120)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 마탄환
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,54120)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 마탄환
	효과条件종류 = 마함全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_54120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カード数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54120,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 마탄환
		효과範囲제외 = 1
		효과範囲덱 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT
			CALL FULLRESET
			효과範囲상대필드 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 마탄환
				효과条件종류 = 마함全般
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT != 0
					CALL FULLRESET
					효과範囲상대필드 = 1
					효과条件CNT = 1
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					カード数 = RESULT

					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 마탄환
					효과条件종류 = 마함全般
					SIF カード数 >= 2
						효과条件複数 = 100 - カード数
					CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF

			CALL FULLRESET
			효과範囲상대마함 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 마탄환
				효과条件소환可 = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT != 0
					CALL FULLRESET
					효과範囲상대마함 = 1
					효과条件CNT = 1
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					カード数 = RESULT

					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 마탄환
					SIF カード数 >= 2
						효과条件複数 = 100 - カード数
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54120,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ENDIF

