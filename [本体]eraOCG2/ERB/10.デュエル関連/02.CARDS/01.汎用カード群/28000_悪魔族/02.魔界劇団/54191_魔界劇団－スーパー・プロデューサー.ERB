@CARDCAN_54191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54191)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,54191)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件スーパー名前 = 魔界극장「ファンタスティックシアタ-」
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)

	RETURN 1
ENDIF


@CARDEFFECT_54191(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カード_ID

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54191,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件표시 = 表側표시
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF 마함数(듀얼리스트) < 5
				SIF 듀얼리스트 == "자신"
PRINTL 효과를 적용하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RETURN 0
			ENDIF

			IF RESULT == はい
				CALL FULLRESET
				효과範囲덱 = 1
효과条件名前 = 마계 극장 "판타스틱 씨어터"
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
					SIF 듀얼리스트 == "자신"
PRINTL 적용할 효과를 선택해주세요
					CALL YN_CHOICE(듀얼리스트,"●극장を開く","●役者を呼ぶ")
				ELSEIF RESULT != 1
					RESULT = 1
				ENDIF

				IF RESULT == 0
					CALL FULLRESET
					효과範囲덱 = 1
효과条件名前 = 마계 극장 "판타스틱 씨어터"
					CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
				ELSEIF RESULT == 1
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 마계극단
					효과条件分割 = 펜듈럼
					CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
