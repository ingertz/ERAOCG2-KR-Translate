@CARDCAN_1193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1193)
SIF RESULT == 1
	RETURN 0

;P
IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 마계극단－메로- 마돈나
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,1193)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件固名前 = 마계극단－멜로 마돈나
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;M
ELSEIF 종류 == 효과後誘発
	IF ゾーン == "손패"
		SIF 발동済_2(듀얼리스트,1193)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,1193,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊")
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "필드"
		SIF 발동済_3(듀얼리스트,1193)
			RETURN 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 마계극단
		효과条件分割 = 펜듈럼
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 마계대본
		효과条件종류 = 마법全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ENDIF


@CARDEFFECT_1193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;P
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1193)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1193,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		CALL FULLRESET
		효과条件カテゴリ = 마계극단
		효과条件分割 = 펜듈럼
		효과条件固名前 = 마계극단－멜로 마돈나
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		CALL CARD_SS_RESTRICTION(듀얼리스트,"마계극단")
	ENDIF

;モンスター효과-------------------------
ELSEIF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1193,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	
	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1193,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件分割 = 펜듈럼
			효과条件カテゴリ = 마계극단
			CALL 효과条件レベル_ADV(4,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 마계대본
	효과条件종류 = 마법全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 100

	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ENDIF


