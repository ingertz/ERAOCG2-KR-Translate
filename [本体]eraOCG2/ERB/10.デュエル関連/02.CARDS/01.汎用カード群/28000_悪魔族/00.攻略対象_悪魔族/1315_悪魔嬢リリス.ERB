@CARDCAN_1315(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1315)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時強制
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,1315)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 通常함정
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF

@CARDEFFECT_1315(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC ランダム

IF 종류 == 소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",-1000)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1315,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 어둠속성
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件종류 = 通常함정
			효과条件複数 = 3
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "덱",ゾーン,場所)	
			IF RESULT != 9999
				選択カード:0 = RESULT:0
				選択カード:1 = RESULT:1
				選択カード:2 = RESULT:2
				IF 選択カード != 9999
					ランダム = RAND:3
					CALL CARD_DISPOSE(듀얼리스트,"덱",(選択カード:ランダム),마함行き,1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

