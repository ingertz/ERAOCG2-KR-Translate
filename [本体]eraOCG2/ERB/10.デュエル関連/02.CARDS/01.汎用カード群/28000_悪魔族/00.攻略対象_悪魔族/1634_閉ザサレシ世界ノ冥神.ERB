@CARDSUMMON_1645(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

FOR カウンタ,0,5
	SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
		CONTINUE
	条件달성 = 1
	BREAK
NEXT

CALL RESETCONDITION_MAT
IF 条件달성 == 1
	必要링크数 = 4
ELSE
	必要링크数 = 5
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,1645) 
	RETURN RESULT
ENDIF

