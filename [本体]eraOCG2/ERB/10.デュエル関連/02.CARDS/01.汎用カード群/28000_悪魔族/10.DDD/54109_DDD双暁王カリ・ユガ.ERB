@CARDCAN_54109(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 발동불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54109)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	RETURN 1
ELSEIF  종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") >= 1
		발동불가:1 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:2 = 1
	SIF メインフェイズ != 1
		발동불가:2 = 1
	SIF 마함数(듀얼리스트) >= 5
		발동불가:2 = 1
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲마함 = 1
	ENDIF
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 계약서
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	SIF 발동불가:1 == 1 && 발동불가:2 == 1 
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_54109(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54109)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件他所 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"無効")
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54109,0,X消費1)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") >= 1
			발동불가:1 = 1
		SIF ターンプレイヤー != 듀얼리스트
			발동불가:2 = 1
		SIF メインフェイズ != 1
			발동불가:2 = 1
		SIF 마함数(듀얼리스트) >= 5
			발동불가:2 = 1
		CALL FULLRESET
		IF 듀얼리스트 == "자신"
			효과範囲마함 = 1
		ENDIF
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 마함全般
		효과条件カテゴリ = 계약서
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:2 = 1
		IF 발동불가:1 == 0 && 발동불가:2 == 0
			CALL YN_CHOICE(듀얼리스트,"●필드의 마법 / 함정카드를 全て破壊する。","●묘지の「계약서」마법 / 함정 카드 １장을 セットする。")
		ELSEIF 발동불가:1 == 1
			RESULT = いいえ
		ELSE
			RESULT = はい
		ENDIF
		IF RESULT == はい
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"T1汎数",1)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両마함全体",場所,"묘지")
		ELSE
			CALL FULLRESET
			효과条件カテゴリ = 계약서
			효과条件종류 = 마함全般
			CALL CARD_SET_BASIC(듀얼리스트,"묘지",ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF