@CARDCAN_72881(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72881)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72881)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 싱크로
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류:0 = 엑시즈
	효과条件종류:1 = 링크
	효과条件종류:2 = 초차원
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_72881(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,2

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72881,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = 싱크로
		효과条件소환可 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード:0 = RESULT
		IF 選択カード:0 != 9999

			CALL RESETAREA_MAT
			素材範囲필드 = 1
			CALL FULLRESET
			효과条件종류 = 융합
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード:1 = RESULT
			IF 選択カード:1 != 9999

				CALL FULLRESET
				효과範囲필드 = 1
				효과条件튜너 = 1
				효과条件표시 = 表側표시
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件튜너 = -1
					효과条件표시 = 表側표시
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
					IF RESULT == 1

						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",選択カード:0)
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",選択カード:1)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
		EX소환可能종류:0 = 융합
		EX소환可能종류:1 = 싱크로
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF

