@CARD_EXPLANATION_28460(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①② 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動,묘지起動)
PRINTL ①: 이 카드가 패 / 묘지에 존재할 경우, 이 카드 이외의 자신 패 / 필드의 카드 1장을 묘지로 보내고 발동할 수 있다.
PRINTL 이 카드를 특수 소환한다.
PRINTL 이 효과의 발동 후, 턴 종료시까지 자신은 드래곤족 어둠 속성 S 몬스터밖에 EX덱에서 특수 소환할 수 없다.
CALLFORM CARD_ABLE(2,필드起動)
PRINTL ②: 자신 필드의 앞면 표시 몬스터 1장을 대상으로 하고 발동할 수 있다.
PRINTL 패 / 덱에서 악마족 튜너 1장을 묘지로 보내고, 대상 몬스터의 레벨을 1개 올리거나 내린다.

@CARDCAN_28460(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28460)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,28460)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28460,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,28460)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲손패 = 1
	효과条件종족 = 악마족
	효과条件튜너 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_28460(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28460,1)
	IF RESULT == 0
		CALL FULLRESET
		IF モンスター数(듀얼리스트) < 5
			효과範囲손패 = 1
			효과範囲마함 = 1
		ENDIF
		효과範囲필드 = 1
		효과条件他所 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

			EX소환可能종류 = 싱크로
			EX소환可能속성 = 어둠속성
			EX소환可能종족 = 드래곤족
			CALL CARD_EX_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28460,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과条件종족 = 악마족
		효과条件튜너 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과条件종류 = レベル持ち
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				SIF 듀얼리스트 == "자신"
PRINTL 레벨을 올리겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == 0
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",1)
				ELSEIF RESULT == 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一星",-1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
