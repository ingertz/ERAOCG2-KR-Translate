@CARDCAN_28021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28021)
SIF RESULT == 1
	RETURN 0

IF 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,28021)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_EX소환済") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
효과条件名前 = 세상의 끝
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件名前:0 = 종언의 왕 데미스
	효과条件名前:1 = 파멸의 여신 루인
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件종족 = 곤충족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_2(듀얼리스트,28021)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 세상의 끝
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28021,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード)
		CALL FULLRESET
효과条件名前 = 세상의 끝
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)	
		IF RESULT == 1
			$INPUT_LOOP
			CALL FULLRESET
			
			효과条件종류 = モン全般
			효과条件종족 = 곤충족
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "덱",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:選択カード")}, "レベル"
				カウンタ += RESULT
				CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)
				IF カウンタ >= 8
					CALL FULLRESET
					효과範囲손패 = 1
					효과範囲묘지 = 1
					효과条件名前:0 = 종언의 왕 데미스
					효과条件名前:1 = 파멸의 여신 루인
					효과条件特不無視 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ELSE
					GOTO INPUT_LOOP
				ENDIF
			ENDIF
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28021,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
효과条件名前 = 세상의 끝
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF



