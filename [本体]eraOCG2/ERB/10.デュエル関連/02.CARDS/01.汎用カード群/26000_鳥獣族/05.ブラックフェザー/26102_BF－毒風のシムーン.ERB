@CARDCAN_26102(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26102)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,26102)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 검은 선풍
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 블랙 페더
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26102(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26102,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
효과条件名前 = 검은 선풍
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")

		CALL YN_CHOICE(듀얼리스트,"●손패のこの카드를 リリースなしで소환する。","●묘지へ送る。")
		IF RESULT == はい
			CALL CARD_SUMMON_SHORI(듀얼리스트,場所,"攻撃표시")
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		ENDIF

		CALL CARD_RESERV(듀얼리스트,26102)
		EX소환可能속성 = 어둠속성
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
효과条件名前 = 검은 선풍
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
	SIF RESULT == 1
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000)
ENDIF



