@CARDCAN_26101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26101)
SIF RESULT == 1
	RETURN 0
IF 종류 == 소환時
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = BF－환요의 스즈리
	효과条件カテゴリ = 블랙 페더 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,26101)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,126101,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류:0 = 융합
	효과条件종류:1 = 엑시즈
	효과条件종류:2 = 효과モン
	효과条件종류:3 = 通常モン
	효과条件종류:4 = 링크
	효과条件종류:5 = 초차원
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26101)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = BF－환요의 스즈리
		효과条件カテゴリ = 블랙 페더 드래곤
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26101,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,126101)

			EX소환可能종류 = 싱크로
			CALL CARD_EX_RESTRICTION(듀얼리스트)
		ENDIF
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",700)
	ENDIF
ENDIF





