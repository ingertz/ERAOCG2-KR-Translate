@CARDCAN_26201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26201)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	;コントロ-ラ-のターンじゃないなら침묵
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;メインフェイズじゃないなら침묵
	SIF メインフェイズ != 1
		RETURN 0
	;특수소환できないなら침묵
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 펭귄
	효과条件固名前 = 대황제 펭귄
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;それ以外ならOK
	RETURN 1
ENDIF

@CARDEFFECT_26201(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26201)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;덱에서 펭귄を소환
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 펭귄
		효과条件固名前 = 대황제 펭귄
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			;덱에서 펭귄を소환
			효과範囲덱 = 1
			효과条件カテゴリ = 펭귄
			효과条件固名前 = 대황제 펭귄
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		
	ENDIF
ENDIF

