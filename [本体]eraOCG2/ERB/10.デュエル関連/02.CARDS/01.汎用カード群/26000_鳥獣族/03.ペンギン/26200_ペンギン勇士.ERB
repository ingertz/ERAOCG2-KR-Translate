PRINTL 패의 이 카드명 이외의 "펭귄" 몬스터 1장을 특수 소환한다.
RESETCOLOR

@CARDCAN_26200(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26200)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,26200)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,26200,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과条件カテゴリ = 펭귄
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,26200)
		RETURN 0
	;손패に펭귄がいないなら침묵
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 펭귄
	효과条件종류 = モン全般
	효과条件固名前 = 펭귄 용사
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26200(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 選択カード

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26200,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		IF 듀얼리스트 == "자신"
PRINTL 필드의 "펭귄" 몬스터의 레벨을
PRINTL [3] - 3으로 한다
PRINTL [4] - 4로 한다
PRINTL [5] - 5로 한다
			PRINTL 
PRINTL [100] - 사용하지 않는다
			BINPUT
		ELSEIF 듀얼리스트 == "상대"
			RESULT = RAND:3 + 3
		ENDIF
		IF RESULT != 100
			설정レベル = RESULT
			CALL FULLRESET
			효과条件カテゴリ = 펭귄
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一星",설정レベル)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26200,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 펭귄
		효과条件固名前 = 펭귄 용사
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

