	RESETCOLOR

@CARDCAN_26203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26203)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発

	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾者")
	SIF RESULT != 1
		RETURN 0
	;특수소환できないなら침묵
	CALL CARD_SS_CHECK(듀얼리스트,26203,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF ダメージ受者 != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 増減
#DIM DYNAMIC ダメージ量

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26203)
	IF RESULT == 0
		ダメージ量 = GETVAR(@"%듀얼리스트%_変動値")
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",ダメージ受値)
	ENDIF
ENDIF

