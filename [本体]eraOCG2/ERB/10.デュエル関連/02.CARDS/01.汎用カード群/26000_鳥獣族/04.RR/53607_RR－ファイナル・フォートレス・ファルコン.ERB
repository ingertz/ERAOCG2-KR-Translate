@CARDCAN_53607(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,53607)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 레이드 랩터즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,53607)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 레이드 랩터즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53607(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃횟수
#DIM 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53607,10,X消費1)
	IF RESULT == 0
		FOR カウンタ, 0, 紙束最大値
			IF GETVAR(@"%듀얼리스트%_제외:{カウンタ}") == -1
				CONTINUE
			ENDIF
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_제외:カウンタ")}, "カテゴリ"
			IF RESULTS != "레이드 랩터즈"
				CONTINUE
			ENDIF
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_제외:カウンタ")}, "종류"
			IF RESULT > 10
				CONTINUE
			ENDIF
			CALL CARD_DISPOSE(듀얼리스트,"제외",カウンタ,묘지行き)
		NEXT
	ENDIF
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53607,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 엑시즈
		효과条件カテゴリ = 레이드 랩터즈
		효과条件複数 = 98
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		攻撃횟수 = RESULT:2
		SIF 攻撃횟수
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",攻撃횟수)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF
