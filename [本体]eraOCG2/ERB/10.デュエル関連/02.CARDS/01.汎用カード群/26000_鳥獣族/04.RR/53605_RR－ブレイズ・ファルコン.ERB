@CARDCAN_53605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,53605)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과 
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"戦闘", "直接戦闘")
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF モンスター数(対面者) <= 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力상승
#DIM 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과 
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"直攻")
ELSEIF 종류 == ライフ変強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53605)
	IF RESULT == 0
		CALL FULLRESET
		효과条件任意 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53605,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件召種 = 召種全특수
		효과추가종류 = 3
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지",500)
	ENDIF
ENDIF
