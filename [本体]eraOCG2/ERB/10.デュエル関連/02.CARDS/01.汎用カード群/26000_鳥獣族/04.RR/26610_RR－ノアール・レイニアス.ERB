@CARDCAN_26610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26610)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,26610)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,26610)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 레이드 랩터즈
	효과条件종류 = レベル持ち
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 레이드 랩터즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26610,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 레이드 랩터즈
		효과条件종류 = レベル持ち
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
			CALL FULLRESET
			효과条件カテゴリ = 레이드 랩터즈
			효과条件종류 = モン全般
			CALLFORM 효과条件レベル_ADV(選択レベル, "以外")
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26610,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL YN_CHOICE(듀얼리스트,"レベルを１つ上げる。","レベルを１つ下げる。")
		IF RESULT == 0
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"	
				SIF !MATCH(RESULTS, "레이드 랩터즈")
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")},"종류"
				SIF MATCH(RESULT,엑시즈) || MATCH(RESULT,링크)
					CONTINUE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"永星",1)
			NEXT
		ELSEIF RESULT == 1
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"	
				SIF !MATCH(RESULTS, "레이드 랩터즈")
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")},"종류"
				SIF MATCH(RESULT,엑시즈) || MATCH(RESULT,링크)
					CONTINUE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"永星",-1)
			NEXT
		ENDIF
	ENDIF
ENDIF