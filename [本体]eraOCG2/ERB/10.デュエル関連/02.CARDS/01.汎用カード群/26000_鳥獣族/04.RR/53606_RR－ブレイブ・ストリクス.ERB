@CARDCAN_53606(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,53606)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時強制
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 비행야수족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,53606)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ:0 = 레이드 랩터즈
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		효과条件カテゴリ:1 = RUM
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)

	RETURN 1
ELSEIF 종류 == X素材時효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 레이드 랩터즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53606(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力상승
#DIM DYNAMIC 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53606,1,X消費1)
	IF RESULT == 0
		IF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
			CALL YN_CHOICE(듀얼리스트,"①「RR」마법 / 함정をセットする","②「RUM」を손패に加える")
		ELSE
			RESULT = 0
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 레이드 랩터즈
			효과条件종류 = 마함全般
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ = RUM
			효과条件종류 = 마법全般
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,"묘지",場所,53606)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 레이드 랩터즈
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			攻撃力상승 = GETVAR(@"%듀얼리스트%_MZ_星:選択カード") * 100
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",攻撃力상승)
		ENDIF
	ENDIF
ENDIF
