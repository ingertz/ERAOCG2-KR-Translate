PRINTL 자신의 묘지의 "RR" X 몬스터의 랭크의 합계 이하의 랭크를 가지는 "RR" X 몬스터 1장을
PRINTL X 소환 취급으로 EX덱에서 특수 소환한다. 이 효과로 특수 소환한 몬스터는 각성 상태가 된다.
PRINTL 그 후, 그 몬스터의 X 소재를, 묘지의 "RR" X 몬스터와 제거된 X 소재의 합계만큼 늘린다.


@CARDCAN_72663(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72663)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF ターンプレイヤー == 듀얼리스트 && バトルフェイズ == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 레이드 랩터즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 레이드 랩터즈
	효과条件종류 = 엑시즈
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_72663(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 묘지RRX数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC X素材合計
#DIM DYNAMIC ランク合計


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72663)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ,0,5
			CALL FULLRESET
			효과条件カテゴリ = 레이드 랩터즈
			효과条件종류 = 엑시즈
			SIF カウンタ > 0
				효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				X素材合計 += GETVAR(@"%듀얼리스트%_MZ_Ｘ:選択カード") + 1
				CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード)
			ELSE
				BREAK
			ENDIF
		NEXT
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 레이드 랩터즈
		효과条件종류 = 엑시즈
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		묘지RRX数 = RESULT
		ランク合計 = RESULT:2
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 엑시즈
		효과条件カテゴリ = 레이드 랩터즈
		CALLFORM 효과条件レベル_ADV(ランク合計,"以下")
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			CALL FULLRESET
			효과추가종류:0 = 9
			효과추가종류:1 = 40000 + 묘지RRX数 + X素材合計 - 1
			CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",選択カード)
			リザルト：XYZ소환 = 1
		ENDIF
	ENDIF
ENDIF
