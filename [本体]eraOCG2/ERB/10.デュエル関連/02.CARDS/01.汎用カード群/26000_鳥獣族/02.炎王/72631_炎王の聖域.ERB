CALLFORM CARD_ABLE(1,身代효과)
PRINTL ②: 자신의 필드 마법 카드가 효과로 파괴될 경우, 대신에 자신의 패 / 필드(앞면 표시)의 화염 속성 몬스터 1장을 파괴할 수 있다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ③: 상대가 몬스터를 특수 소환했을 경우에 발동할 수 있다.
PRINTL 자신 필드의 몬스터만을 소재로서 화염 속성 엑시즈 몬스터 1장을 엑시즈 소환한다.

@CARDCAN_72631(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72631)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 염왕의 고도
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF 발동済_1(듀얼리스트,72631)
		RETURN 0
	SIF !GROUPMATCH(ゾーン, "마함")
		RETURN 0
	TRYCALLFORM CARD_{破壊대상ID}("종류")
	SIF RESULT != フィールド
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_2(듀얼리스트,72631)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 엑시즈
	효과条件속성 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

