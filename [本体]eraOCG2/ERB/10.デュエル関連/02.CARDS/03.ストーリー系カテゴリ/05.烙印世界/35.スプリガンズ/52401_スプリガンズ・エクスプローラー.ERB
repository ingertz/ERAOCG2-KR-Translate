@CARDCAN_52401(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52401)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52401(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ターゲット
#DIM DYNAMIC 弾数
#DIM DYNAMIC 残弾

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	IF 듀얼리스트 == "자신"
		PRINTFORMW 発射オプション！
		PRINTFORMW ※フルバ-ストを押すと可能な限り효과를 연속使用します！※
		CALL YN_CHOICE(듀얼리스트,"単発사격","フルバ-スト！タリホ－！")
	ELSE
		RESULT = はい
	ENDIF
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52401,0,X消費1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 스프리건즈
			효과条件종류 = モン全般
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52401)
		IF RESULT == 0
			ターゲット = モンスター数(対面者) + 마함数(対面者)
			弾数 = 0
			残弾 = 0
			WHILE GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
				弾数 = 弾数 + 1
			WEND

			IF ターゲット > 弾数
				ターゲット = 弾数
			ELSEIF 弾数 > ターゲット
				残弾 = 弾数 - ターゲット
			ENDIF

			CALL FULLRESET
			효과条件複数 = 100 - ターゲット
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")


			CALL FULLRESET
			효과条件カテゴリ = 스프리건즈
			효과条件종류 = モン全般
			효과条件複数 = ターゲット
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)


			REPEAT 残弾
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",+1)
			REND
			PRINTFORMW タリホ－！！！
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52401)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き,1)
		SIF 듀얼리스트 == "자신"
			PRINTFORMW エクスブロウラ-は危機を感じ取り砂中へ潜航した。
	ENDIF
ENDIF