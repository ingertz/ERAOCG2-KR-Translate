@CARDCAN_24700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24700)
SIF RESULT == 1
	RETURN 0

;各所からの起動してX소재를 추가
;参考：LL-サファイア スパロ-
IF 종류 == 필드起動 || 종류 == 묘지起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24700)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;소환 특수소환時に스프리건즈か大砂바다を손패に加える
;参考：星辰の팔라디온、極夜の기사 가이아
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,24700)
		RETURN 0
	
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 대사해 골드 고르곤다
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 스프리건즈
		효과条件固名前 = 스프리건즈 로키
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_24700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件チェック
#DIM DYNAMIC 条件달성,5


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;各種起動효과
;参考：LL-サファイア スパロ-
IF 종류 == 필드起動 || 종류 == 묘지起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24700,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
		IF RESULT != -1
			CALL FULLRESET
			효과条件カテゴリ = 스프리건즈 
			효과条件종류 = 엑시즈
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
				PRINTFORMW タリホ－！ロッキ-がリロ-ドされた！
			ENDIF
		ENDIF
	ENDIF
;소환 특수소환時효과
;参考：極夜の기사 가이아
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24700,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 대사해 골드 고르곤다
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件달성:0 = 1
		
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 스프리건즈
		효과条件固名前 = 스프리건즈 로키
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件달성:1 = 1

		IF 条件달성:0 != 1 && 条件달성:1 != 1
			SIF 듀얼리스트 == "자신"
PRINTL 어느 것을 패에 넣으시겠습니까?
			CALL YN_CHOICE(듀얼리스트,"대사해 골드 고르곤다","「스프리건즈」モンスター")
		ELSEIF 条件달성:0 != 1 && 条件달성:1 == 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 대사해 골드 고르곤다
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 스프리건즈
			효과条件固名前 = 스프리건즈 로키
			효과条件종류 = モン全般
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



