@CARDCAN_24704(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件チェック,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24704)
SIF RESULT == 1
	RETURN 0

;各所からの起動してX소재를 추가
;参考：LL-サファイア スパロ-
IF 종류 == 묘지起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24704)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;소환 フィールド以外から묘지へ送られた場合に특수소환
;参考：가스타 グリフ
ELSEIF 종류 == 필드起動

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 || 발동済_1(듀얼리스트,24704)
		条件チェック:0 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 || 발동済_2(듀얼리스트,24704)
		条件チェック:1 = 1

	IF 条件チェック:0 == 1 && 条件チェック:1 == 1
		RETURN 0

	ELSEIF 条件チェック:0 != 1 && 条件チェック:1 == 1
		SIF 발동済_1(듀얼리스트,24704)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	ELSEIF 条件チェック:0 == 1 && 条件チェック:1 != 1
	
		SIF 발동済_2(듀얼리스트,24704)
			RETURN 0
		SIF ターンプレイヤー == 듀얼리스트
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ENDIF

	RETURN 1
ENDIF



@CARDEFFECT_24704(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件チェック
#DIM DYNAMIC 条件달성,5


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;各種起動효과
IF 종류 == 필드起動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:0 = 1
	
	SIF 条件달성:0 != 1 && ターンプレイヤー == 듀얼리스트
		条件달성:2 = 1
	
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:1 = 1
	
	SIF 条件달성:1 != 1 && ターンプレイヤー != 듀얼리스트
		条件달성:3 = 1
	
	IF 条件달성:2 == 1
		RESULT = 0
	ELSEIF 条件달성:3 == 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24704,1)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
			IF RESULT != -1
				CALL FULLRESET
				효과条件カテゴリ = 스프리건즈 
				효과条件종류 = 엑시즈
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",500)
					PRINTFORMW タリホ－！サルガスの親分が力強くリロ-ドされた！
				ENDIF
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24704,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件Ｘ素所持 = 999
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			SIF 選択カード == 9999
				RETURN 0
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)

			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ENDIF
;参考：LL-サファイア スパロ-
ELSEIF 종류 == 묘지起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24704,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
		IF RESULT != -1
			CALL FULLRESET
			효과条件カテゴリ = 스프리건즈 
			효과条件종류 = 엑시즈
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",500)
				PRINTFORMW タリホ－！サルガスの親分が力強くリロ-ドされた！
			ENDIF
		ENDIF
	ENDIF
ENDIF



