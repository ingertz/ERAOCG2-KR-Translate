@CARDCAN_50150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50150)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,50150)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종류 = EXモン全般
	효과条件除去種 = 덱
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲상대EX덱 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			RETURN 0
		ELSE
			CALL FULLRESET
			효과範囲상대손패 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_50150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 除去횟수

#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 드래그마
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50150,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = EXモン全般
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"덱")
		CALL FULLRESET
		효과範囲상대EX덱 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		除去횟수 = RESULT / 2
		IF 除去횟수 > 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과条件行先플래그 = 묘지行き
			효과条件複数 = 除去횟수
			CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

