@CARDCAN_61880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61880)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,61880)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 드래그마
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_61880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61880,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所,61880)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 드래그마
			효과条件종류 = モン全般
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")}, "攻撃力"
			효과条件攻撃力 = RESULT
			SIF 효과条件攻撃力 >= 1850
				효과条件スーパー名前 = 알버스의 낙윤
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			CALL CARD_DISPOSE(듀얼리스트,"EX덱",選択カード)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF
ENDIF
