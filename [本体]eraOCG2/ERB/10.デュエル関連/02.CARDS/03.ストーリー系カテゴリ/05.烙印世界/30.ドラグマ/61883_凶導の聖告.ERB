#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_61883(종류)
#DIM DYNAMIC 종류


PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없으며, ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 이 카드의 발동 시 효과 처리로서, 이하의 효과를 적용할 수 있다.
PRINTL ●덱에서 「드래그마」의식 몬스터 1장 또는 「드래그마」마법 카드 1장을 패에 넣는다.
PRINTL 상대 필드에 몬스터가 존재할 경우, 추가로 덱에서 「드래그마」 카드 1장을 패에 넣을 수 있다.
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②: 자신 필드에 「드래그마」의식 몬스터가 존재할 경우에 발동할 수 있다.
PRINTL 자신 또는 상대의 엑스트라 덱을 확인하고, 그 중 몬스터 1장을 고르고 묘지로 보낸다.



@CARDCAN_61883(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61883)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,61883)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 드래그마
	효과条件종류 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,61883)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_61883(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61883,2)
	IF RESULT == 0
PRINTL 상대의 엑스트라 덱을 확인하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			CALL FULLRESET
			;＝要注意＝
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대EX덱",ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		ENDIF	
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61883,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)

		CALL FULLRESET
		효과条件カテゴリ = 드래그마
		효과条件종류:0 = 마법全般
		효과条件종류:1 = 의식
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ = 드래그마
			효과条件任意 = 1
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
