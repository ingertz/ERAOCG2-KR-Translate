@CARDCAN_61882(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 条件달성
#DIM DYNAMIC RESULTL

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61882)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,61882)
		RETURN 0

	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 의식
	효과条件カテゴリ = 드래그마
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1


		
	;最低でもモンスター1枚あればOK
	FOR カウンタ,0,30
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:{カウンタ}")}, "종류"
		SIF RESULT != 3
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:{カウンタ}")}, "カテゴリ"
		SIF !MATCH(RESULTS, "드래그마")
			CONTINUE
		CALL CARD_SS_CHECK(듀얼리스트,GETVAR(@"%듀얼리스트%_손패:{カウンタ}"),"손패",1)
		SIF RESULT == 1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:{カウンタ}")}, "レベル"
		RESULTL = RESULT 
		FOR カウンタB,0,現EX山札数(듀얼리스트)
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:{カウンタB}")}, "レベル"
			IF RESULT == RESULTL
				条件달성 = 1
				BREAK
			ENDIF
		NEXT
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61882(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61882,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 의식
		효과条件カテゴリ = 드래그마
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			IF 듀얼리스트 == "자신"
PRINTL [0] - EX덱에서 묘지로 보냄
PRINTL [1] - 패 / 필드에서 묘지로 보냄
				PRINTL
				BINPUT
			ELSE
				RESULT = 0
			ENDIF
			IF RESULT == 0
				CALL RESETAREA_MAT
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_손패:{選択カード}")}(듀얼리스트,選択カード)
				素材範囲EX덱 = 1
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:{選択カード}")}("レベル")
				素材条件レベル = RESULT
				TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,"손패")
			ELSE
				CALL RESETAREA_MAT
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_손패:{選択カード}")}(듀얼리스트,選択カード)
				素材範囲필드 = 1
				素材範囲손패 = 1
				TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,"손패")
			ENDIF
			CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
		ENDIF
	ENDIF
ENDIF