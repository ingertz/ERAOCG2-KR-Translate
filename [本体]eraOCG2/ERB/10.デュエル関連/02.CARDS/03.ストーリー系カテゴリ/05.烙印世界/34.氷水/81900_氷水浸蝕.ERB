@CARDNAME_81900,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 히스이 침식
	CASE "略称"
RESULTS = 히스이 침식
	CASE "カテゴリ"
RESULTS:0 = 히스이
ENDSELECT


@CARD_81900(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_81900(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ①: 상대 필드의 앞면 표시 카드 1장을 대상으로 발동할 수 있다.
PRINTL 자신 필드의 「히스이」 몬스터 1장을 파괴하고, 대상 카드의 효과를 무효로 한다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ②: 자신 필드의 앞면 표시 「히스이」 몬스터가 파괴 이외의 방법으로 필드에서 벗어났을 경우에 발동할 수 있다.
PRINTL 덱에서 「히스이」 몬스터 1장을 특수 소환하거나, 패에 넣는다.

@CARDCAN_81900(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81900)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,81900)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 히스이
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,81900)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,61901)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 히스이
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊以外")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 히스이
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_81900(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 속성数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81900,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 히스이
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"無効")
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81900,2)
	IF RESULT == 0
		CALL FULLRESET
		SIF 듀얼리스트 == "자신"
PRINTL 어느 쪽으로 하시겠습니까?
		CALL YN_CHOICE(듀얼리스트,"특수소환","손패に加える")
		IF RESULT == 0
			효과範囲덱 = 1
			효과条件カテゴリ = 히스이
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 1
			효과範囲덱 = 1
			효과条件カテゴリ = 히스이
			효과条件종류 = モン全般
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81900)
	IF RESULT == 0
	ENDIF
ENDIF
