@CARDSUMMON_50612(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 10
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件カテゴリ = 상검
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50612) 
	RETURN RESULT
ENDIF


@CARDCAN_50612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50612)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 상검
	효과条件종류 = 싱크로
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	IF RESULT == 1
		SIF 발동済_1(듀얼리스트,50612)
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_最召場所") == 場所
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 상검
		효과条件종류 = 싱크로
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
		SIF RESULT != 1
			RETURN 0
		CALL CARD_DRAW_CHECK
		RETURN 1
	ELSE
		SIF 발동済_2(듀얼리스트,50612)
			RETURN 0
		CALL FULLRESET
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,50612)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 대상ゾーン
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発

	CALL FULLRESET
	효과条件カテゴリ = 상검
	효과条件종류 = 싱크로
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50612,1)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50612,2)
		IF RESULT == 0
			효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"제외")
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1200,1)
		ENDIF
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50612,3)
	IF RESULT == 0
		대상ゾーン = %効後_ゾーン:(効後_カウンタ - 1)%
		IF 대상ゾーン == "마함"
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"제외")
		ENDIF
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1200,1)
	ENDIF
ENDIF
