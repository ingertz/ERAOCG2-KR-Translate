@CARDSUMMON_50600(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 알버스의 낙윤
ELSEIF EX参照 >= 10
	素材条件以攻撃力 = 2500
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50600) 
	RETURN RESULT
ENDIF



@CARDCAN_50600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50600)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン) == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_3(듀얼리스트,50600)
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 회진룡 바스타드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0	
	RETURN 1
ENDIF




@CARDEFFECT_50600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正



IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50600,10)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐",1)
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50600,3)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,50600)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	IF モンスター数(듀얼리스트) != 5
PRINTL 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1		
			효과条件カテゴリ:0 = 드래그마
			효과条件カテゴリ:1 = 알버스의 낙윤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ:0 = 드래그마
			효과条件カテゴリ:1 = 알버스의 낙윤
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF	
	ELSE
		CALL FULLRESET
		효과条件カテゴリ:0 = 드래그마
		효과条件カテゴリ:1 = 알버스의 낙윤
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF




