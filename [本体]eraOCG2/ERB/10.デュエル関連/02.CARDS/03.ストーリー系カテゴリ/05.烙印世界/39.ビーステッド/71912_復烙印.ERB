@CARD_71912(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT
RETURN 0

@CARD_EXPLANATION_71912(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ①: 빛 / 어둠 속성 몬스터가 제외되었을 경우에 발동할 수 있다.
PRINTL 자신 또는 상대의 제외 상태 몬스터 1장을 덱의 맨 아래로 되돌리고, 자신은 1장 드로우한다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ②: 상대가 몬스터를 소환 / 특수 소환했을 경우에 발동할 수 있다.
PRINTL 자신의 묘지의 「비-스티드」 몬스터 1장을 특수 소환한다.


@CARDCAN_71912(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,10
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71912)
SIF RESULT == 1
	RETURN 0


IF 종류 == 효과後誘発

	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0

	SIF 발동済_1(듀얼리스트,71912)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 어둠속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과除送")
	SIF RESULT != 1
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲상대제외 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	SIF 발동済_2(듀얼리스트,71912)
		효과使用불가:2 = 1
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般",1)
	SIF RESULT != 1
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 비스테드
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71912(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC EX条件달성
;융합소환
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,71912)
		효과使用불가:1 = 1
	SIF 발동済_2(듀얼리스트,71912)
		효과使用불가:2 = 1

	CALL FULLRESET
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 어둠속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과除送")
	SIF RESULT != 1
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲상대제외 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1

	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般",1)
	SIF RESULT != 1
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 비스테드
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71912,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲제외 = 1
			효과範囲상대제외 = 1
			효과条件속성:0 = 빛속성
			효과条件속성:1 = 어둠속성
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF

	IF 효과使用불가:2 == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71912,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 비스테드
			효과条件종류 = モン全般
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71912)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF
