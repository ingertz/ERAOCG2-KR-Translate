@CARDCAN_51782(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51782)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 2
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 테라나이트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51782(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51782,10)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트 && メインフェイズ == 1
			IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
				PRINTL
PRINTL [0] ●3개: 「No.」이외로 랭크 업
				SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= 6
PRINTL [1] ●7개: 상대 메인 2까지 스킵
				BINPUT
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 0
		ENDIF

		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-3)
			CALL FULLRESET
			효과条件固カテゴリ = 넘버즈
			효과条件レベル = GETVAR(@"%듀얼리스트%_MZ_星:場所") + 1
			효과条件종류 = 엑시즈
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL RESETCONDITION_MAT
				必要素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 場所
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カード)
			ENDIF
		ELSEIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-7)
			CALL SET_PLAYER_INFO(対面者,"ドロースキップ", 1)
			CALL SET_PLAYER_INFO(対面者,"メインスキップ", 1)
			CALL SET_PLAYER_INFO(対面者,"バトルスキップ２", 1)
			PRINTL
			SETCOLOR C_YELLOW
			PRINTW 星の巡りが加速し始める   ！
			RESETCOLOR
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51782)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 테라나이트
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
		ENDIF
	ENDIF
ENDIF