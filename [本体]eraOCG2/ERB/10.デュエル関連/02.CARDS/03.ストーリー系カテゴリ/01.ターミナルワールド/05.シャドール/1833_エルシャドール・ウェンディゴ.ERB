@CARDSUMMON_1833(듀얼리스트, 소환カード, EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 섀도르
ELSEIF EX参照 >= 10
	素材条件속성 = 바람속성
ENDIF

IF EX参照 == 1
	;PRINTL サモンまでは言ってるよ
	CALL FUSCAN(듀얼리스트, 소환カード, 1833) 
	RETURN RESULT
ENDIF

@CARDCAN_1833(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트, 종류, ゾーン, 場所, 1833)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트, 1833)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 섀도르
	CALL CARD_CHECK_ADV(듀얼리스트, 종류, ゾーン, 場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1833(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 1833, 1)
	IF RESULT == 0
		;자신 필드
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드", ゾーン, 場所)
		選択カード = RESULT
		SIF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트, "필드", 選択カード, "戦耐", 1, 1)
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 1833)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 마함全般
		효과条件カテゴリ = 섀도르
		CALL CARD_ADD_BASIC(듀얼리스트, "묘지", ゾーン, 場所)
	ENDIF
ENDIF
