@CARD_EXPLANATION_28205(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,손패→묘지)
PRINTL ①: 이 카드가 패에서 버려졌을 경우에 발동할 수 있다.
PRINTL 이 카드를 특수 소환한다.
PRINTL 이 효과로 특수 소환한 이 카드의 공격력은 200 올라가고, 필드에서 벗어났을 경우 제외된다.

@CARDCAN_28205(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28205)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패→묘지
	CALL CARD_SS_CHECK(듀얼리스트,28205,"묘지")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28205(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28205)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 마굉신수 가나시아
		효과추가종류:0 = 2
		효과추가종류:1 = 100000 + 200
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

