@CARDCAN_1835(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1835)
SIF RESULT == 1
	RETURN 0

IF 종류 == R素材時효과
	SIF 발동済_1(듀얼리스트,1835)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 의식
	효과条件종족 = 전사족
	효과条件カテゴリ = 네크로즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1835(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == R素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1835,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 의식
		효과条件종족 = 전사족
		효과条件カテゴリ = 네크로즈
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

