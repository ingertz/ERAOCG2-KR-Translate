@CARDCAN_29999(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29999)
SIF RESULT == 1
	RETURN 0

;특수소환
IF 종류 == 손패起動 
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 싱크로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時強制
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == チェーン可否
	RETURN 1
ENDIF

@CARDEFFECT_29999(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29999)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件종류 = 의식
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件종류 = 융합
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件종류 = 싱크로
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件종류 = 엑시즈
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 특수소환時強制
	FOR カウンタ,0,VARSIZE(@"%対面者%_손패") - 1
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%対面者%_손패:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(対面者,"손패",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,5
		VARSET RESULT
		VARSET RESULTS
		SIF カウンタ == 場所
			CONTINUE
		SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(対面者,"필드",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,5
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%対面者%_마함:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(対面者,"마함",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,VARSIZE(@"%対面者%_묘지") - 1
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%対面者%_묘지:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(対面者,"묘지",カウンタ,제외行き)
	NEXT

	FOR カウンタ,0,VARSIZE(@"%듀얼리스트%_손패") - 1
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%듀얼리스트%_손패:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(듀얼리스트,"손패",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,5
		VARSET RESULT
		VARSET RESULTS
		SIF カウンタ == 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,5
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,제외行き)
	NEXT
	FOR カウンタ,0,VARSIZE(@"%듀얼리스트%_묘지") - 1
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%듀얼리스트%_묘지:{カウンタ}") == -1
			CONTINUE
		CALL CARD_DISPOSE(듀얼리스트,"묘지",カウンタ,제외行き)
	NEXT
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"一破")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"無差耐")
ENDIF


