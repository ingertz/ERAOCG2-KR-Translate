PRINTL 상대 묘지에 「웜 바르세스」 「웜 디미클레스」 중에서 1장을 선택하고 생성한다.

@CARDCAN_36100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36100)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,36100)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 웜
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == F素材時효과 || 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	RETURN 1
ENDIF

@CARDEFFECT_36100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36100,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 웜
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)	
		SIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",3,1)
	ENDIF

ELSEIF 종류 == F素材時효과 || 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36100)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
PRINTL 보낼 웜을 선택해 주세요
			CALL YN_CHOICE(듀얼리스트,"●웜 바르세스","●웜 디미클레스")
		ELSE
			RESULT = RAND:2
		ENDIF

		IF RESULT == 0
			CALL CARD_GENERATE_GY(対面者,136100)
		ELSEIF RESULT == 1
			CALL CARD_GENERATE_GY(対面者,236100)
		ENDIF
	ENDIF
ENDIF


