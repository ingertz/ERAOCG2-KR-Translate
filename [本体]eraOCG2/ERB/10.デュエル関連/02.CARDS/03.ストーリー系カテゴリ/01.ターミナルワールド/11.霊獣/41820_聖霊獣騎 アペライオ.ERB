#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 성령수기 아페라이오
	CASE "略称"
RESULTS = 수기 아페라이오
	CASE "カテゴリ"
RESULTS:0 = 령수
ENDSELECT


@CARD_41820(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
