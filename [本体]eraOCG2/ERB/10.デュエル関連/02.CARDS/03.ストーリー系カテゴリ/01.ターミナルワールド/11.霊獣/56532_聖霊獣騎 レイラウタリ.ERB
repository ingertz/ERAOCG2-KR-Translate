@CARDSUMMON_56532(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 4
素材条件종류 = 효과全般
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 령수
ENDIF
IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,56532) 
	RETURN RESULT
ENDIF



@CARDCAN_56532(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,56532)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		SIF 발동済_2(듀얼리스트,56532)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF 종류 == フリー誘発
			RETURN 0

		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = 령수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 령수
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF 발동済_3(듀얼리스트,56532)
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF




@CARDEFFECT_56532(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"제외NG置換",3,1)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56532,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件カテゴリ = 령수
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1 && モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과条件カテゴリ = 령수
				효과条件종류 = モン全般
				CALL CARD_CHOOSE_BASIC(듀얼리스트, "손패",ゾーン,場所)	
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				ENDIF
			ENDIF
		ENDIF
	ELSEIF ターンプレイヤー != 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,56532,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件カテゴリ = 령수
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"제외")
			ENDIF
		ENDIF
	ENDIF
ENDIF
