@CARDCAN_54312(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54312)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,54312)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	IF 종류 == EX덱起動
		CALL CARD_SS_CHECK(듀얼리스트,54312,"EX덱")
		SIF RESULT == 1
			RETURN 0
	ELSEIF 종류 == 묘지起動
		CALL CARD_SS_CHECK(듀얼리스트,54312,"묘지")
		SIF RESULT == 1
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 벨즈 우로보로스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 벨즈
	효과条件カテゴリ:1 = 침략의
	효과条件他所 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL 효과条件レベル_ADV(5, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		IF 묘지数(対面者) == 0 && 손패数(対面者) == 0
			RETURN 0
		ELSEIF 발동済_2(듀얼리스트,54312)
			RETURN 0
		ENDIF
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_54312(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54312,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 벨즈 우로보로스
		효과条件カテゴリ:0 = 벨즈
		효과条件カテゴリ:1 = 침략의
		효과条件複数 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			IF 종류 == EX덱起動
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과추가종류 = 効追Ｘ素 + 2
				효과条件名前 = 벨즈 우로보로스
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				CALL CARD_SS_RESTRICTION(듀얼리스트,"벨즈")
			ELSEIF 종류 == 묘지起動
				CALL FULLRESET
				효과範囲묘지 = 1
				효과추가종류 = 効追Ｘ素 + 3
				효과条件名前 = 벨즈 우로보로스
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				CALL CARD_SS_RESTRICTION(듀얼리스트,"벨즈")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54312,2,X消費1)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			PRINTL
PRINTL 어떤 효과를 발동하시겠습니까?
			PRINTL
			IF モンスター数(対面者) != 0 || 마함数(対面者) != 0
PRINTL [ 1] - 상대 필드 위에 존재하는 카드 1장을 고르고 주인의 패로 되돌린다.
			ELSE
PRINTL  --  - 상대 필드에 카드가 존재하지 않습니다.
			ENDIF
			IF 손패数(対面者) != 0
PRINTL [ 2] - ●상대의 패를 랜덤하게 1장 고르고 묘지로 보낸다.
			ELSE
PRINTL  --  - 상대의 패에 카드가 존재하지 않습니다.
			ENDIF
			IF 묘지数(対面者) != 0
PRINTL [ 3] - ●상대의 묘지에 존재하는 카드 1장을 선택하여 게임에서 제외한다.
			ELSE
PRINTL  --  - 상대의 묘지에 카드가 존재하지 않습니다.
			ENDIF
			BINPUT
		ELSEIF 듀얼리스트 == "상대"
			IF モンスター数(対面者) != 0 || 마함数(対面者) != 0
				RESULT = 1
			ELSEIF 손패数(対面者) != 0
				RESULT = 2
			ELSEIF 묘지数(対面者) != 0
				RESULT = 3
			ENDIF
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
		ELSEIF RESULT == 2
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"묘지")
		ELSEIF RESULT == 3
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대묘지",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF