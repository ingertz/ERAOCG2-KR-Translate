@CARDCAN_28171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28171)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,28171)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 벨즈
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 選択レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28171,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 벨즈
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			소환権 ++

			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:選択カード")}, "レベル"
			選択レベル = RESULT
			IF 選択レベル >= 5
				CALL FULLRESET
				효과条件カテゴリ = 인벨즈
				효과条件종류 = モン全般
				효과条件任意 = 1
				CALL 효과条件レベル_ADV(3, "以下")
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,0,1900)
ENDIF