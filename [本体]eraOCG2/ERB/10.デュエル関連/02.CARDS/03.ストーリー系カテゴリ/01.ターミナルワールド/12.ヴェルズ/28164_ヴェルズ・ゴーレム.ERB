@CARDCAN_28164(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 現在レベル

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28164)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,28164)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28164,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 벨즈
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,28164)
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 신속성
	효과条件속성:2 = 땅속성
	효과条件속성:3 = 물속성
	효과条件속성:4 = 화염속성
	효과条件속성:5 = 바람속성
	효과条件표시 = 表側표시
	효과条件종류 = レベル持ち
	CALL 효과条件レベル_ADV(5, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_3(듀얼리스트,28164)
		RETURN 0
	CALL FULLRESET
	現在レベル = GETVAR(@"%듀얼리스트%_MZ_星:場所") - 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 벨즈
	CALL 효과条件レベル_ADV(現在レベル,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28164(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 現在レベル

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28164,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 効追永星M1
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28164,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성:0 = 빛속성
		효과条件속성:1 = 신속성
		효과条件속성:2 = 땅속성
		효과条件속성:3 = 물속성
		효과条件속성:4 = 화염속성
		효과条件속성:5 = 바람속성
		효과条件표시 = 表側표시
    	효과条件종류 = レベル持ち
		CALL 효과条件レベル_ADV(5, "以上")
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28164,3)
	IF RESULT == 0
		CALL FULLRESET
		現在レベル = GETVAR(@"%듀얼리스트%_MZ_星:場所") - 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 벨즈
		CALL 효과条件レベル_ADV(現在レベル,"以下")
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
