@CARD_24264(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 1000
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT
RETURN 0

