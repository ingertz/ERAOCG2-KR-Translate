@CARDNAME_29182,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 세이크리드 폴룩스
	CASE "略称"
RESULTS = 사 폴룩스
	CASE "カテゴリ"
RESULTS:0 = 세이크리드

ENDSELECT


@CARD_29182(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족 
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1700
	CASE "守備力"
		RETURN 600
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_29182(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 １번만 사용할 수 없다.
CALLFORM CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：이 카드가 소환 특수소환했을 경우에 발동할 수 있다.
PRINTL 이 턴, 자신은 통상소환에 더해 １번, 자신 메인 페이즈에 「세이크리드」 몬스터 １장을 소환할 수 있다.
CALLFORM CARD_ABLE(2,X素材時효과)
PRINTL ②：이 카드가 「세이크리드」 몬스터의 엑시즈 소재로 사용되었을 경우에 발동할 수 있다.
PRINTL 이 카드명 이외의 자신의 묘지 / 제외 상태인 「세이크리드」 몬스터 １장을 패에 넣는다.


@CARDCAN_29182(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29182)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,29182)
		RETURN 0
	RETURN 1

ELSEIF 종류 == X素材時효과
	SIF 발동済_2(듀얼리스트,29182)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 세이크리드
	효과条件종류 = モン全般
	효과条件固名前 = 세이크리드 폴룩스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 세이크리드
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_29182(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29182,1)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,29182,短紋章予約)
	ENDIF

ELSEIF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29182,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 세이크리드
		효과条件종류 = モン全般
		효과条件固名前 = 세이크리드 폴룩스
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件カテゴリ = 세이크리드
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ENDIF
