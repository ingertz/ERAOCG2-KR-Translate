@CARDCAN_29189(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29189)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,29189) && 발동済_2(듀얼리스트,29189)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 세이크리드
		효과条件他所 = 1
		효과条件종류 = レベル持ち
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29189(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29189,15)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = レベル持ち
		효과条件カテゴリ = 세이크리드
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			CALL YN_CHOICE(듀얼리스트,"●대상の몬스터의 レベルを１つ上げる。","●대상の몬스터의 レベルを１つ下げる。")
			IF RESULT == 0
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永星",1)
			ELSEIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永星",-1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	EX소환可能종류 = 엑시즈
	CALL CARD_EX_RESTRICTION(듀얼리스트)
ENDIF
