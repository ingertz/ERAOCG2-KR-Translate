@CARDNAME_72992,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 테라나이트 세이크리드
	CASE "略称"
RESULTS = 테라 세이크리드
	CASE "カテゴリ"
RESULTS:0 = 세이크리드
RESULTS:1 = 테라나이트
ENDSELECT


@CARD_72992(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72992(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없으며, 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: 이 카드의 발동 시의 효과 처리로서,
PRINTL 자신의 패 / 묘지에서 "테라나이트", "세이크리드" 몬스터 1장을 고르고 특수 소환할 수 있다.
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②: 자신 필드의 "테라나이트", "세이크리드" 엑시즈 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 자신의 몬스터와는 랭크가 다른 "테라나이트", "세이크리드" 엑시즈 몬스터 1장을,
PRINTL 대상 몬스터 위에 겹쳐 엑시즈 소환으로 취급하여 엑스트라 덱에서 특수 소환한다.

@CARDCAN_72992(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72992)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,72992)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ:0 = 세이크리드
	효과条件カテゴリ:1 = 테라나이트
	효과条件종류 = 엑시즈
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,72992)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72992(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72992,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 세이크리드
		효과条件カテゴリ:1 = 테라나이트
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")

			CALL FULLRESET
			CALL 효과条件レベル_ADV(설정レベル,"以外")
			효과条件カテゴリ:0 = 세이크리드
			효과条件カテゴリ:1 = 테라나이트
			효과条件종류 = 엑시즈	
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)

			選択カードB = RESULT
			;戻る
			IF 選択カードB != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カードB}")}(듀얼리스트,選択カードB)
				CALL RESETCONDITION_MAT(1)
				代替素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 選択カード
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードB)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72992,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)

		SIF モンスター数(듀얼리스트) >= 5
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 세이크리드
		효과条件カテゴリ:1 = 테라나이트
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
