@CARDCAN_29193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29193)
SIF RESULT == 1
	RETURN 0
IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 발동済_1(듀얼리스트,29193)
		효과使用불가:0 = 1
	ELSE
		효과使用불가:1 = 1
	ENDIF
	SIF 발동済_2(듀얼리스트,29193)
		효과使用불가:1 = 1
	
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		효과使用불가:0 = 1

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 세이크리드
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		효과使用불가:0 = 1

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 세이크리드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 && モンスター数(듀얼리스트) >= 5
		효과使用불가:1 = 1

	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == X素材時효과
	SIF 발동済_3(듀얼리스트,29193)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,128162,"")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	IF 발동済_1(듀얼리스트,29193)
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29193,2)
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件カテゴリ = 세이크리드
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29193,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件カテゴリ = 세이크리드
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件종류 = モン全般
				효과条件カテゴリ = 세이크리드
				CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF


ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29193,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,128162,"守備표시")
		CALL FULLRESET
		EX소환可能종류 = 엑시즈
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
