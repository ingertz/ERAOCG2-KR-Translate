@CARDNAME_28159,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 각성 기사－세피라 뷰트
	CASE "略称"
RESULTS = 세피라 뷰트
	CASE "カテゴリ"
RESULTS:0 = 테라나이트
RESULTS:1 = 스텔라나이트
RESULTS:2 = 세피라
ENDSELECT


@CARD_28159(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1900
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 雄性
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT

