@CARDNAME_20183,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 검성의 네크로즈－세피라 세이바-
	CASE "略称"
RESULTS = 세피라 세이바-
	CASE "カテゴリ"
RESULTS:0 = 네크로즈
RESULTS:1 = 세피라
ENDSELECT


@CARD_20183(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 雄性
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT

