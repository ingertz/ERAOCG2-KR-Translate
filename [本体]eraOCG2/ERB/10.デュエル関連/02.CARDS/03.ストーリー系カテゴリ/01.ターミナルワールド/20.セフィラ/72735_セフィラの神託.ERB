@CARDNAME_72735,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 세피라의 신탁
	CASE "略称"
RESULTS = 세피라의 신탁
	CASE "カテゴリ"
RESULTS:0 = 세피라
ENDSELECT


@CARD_72735(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72735(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「세피라의 신탁」이 된다.
PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 이 카드의 발동 시의 효과 처리로서 덱에서 「세피라」 몬스터 1장을 패에 추가할 수 있다.
PRINTL ②: 이하의 몬스터를, 「세피라」 몬스터를 사용하여 의식 소환,
PRINTL 또는 「세피라」 몬스터를 소재로서 특수 소환했을 때,
PRINTL 자신은 각각의 효과를 1턴에 1번씩 발동할 수 있다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ●의식: 상대 필드의 몬스터 1장을 덱으로 되돌린다.
CALLFORM CARD_ABLE(3,효과後誘発)
PRINTL ●융합: 패의 몬스터 1장을 특수 소환한다.
CALLFORM CARD_ABLE(4,효과後誘発)
PRINTL ●싱크로: 덱의 몬스터 1장을 덱의 맨 위에 놓는다.
CALLFORM CARD_ABLE(10,효과後誘発)
PRINTL ●엑시즈: 덱에서 1장 드로우하고, 그 후 손패를 1장 버린다.
@CARDCAN_72735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC 효과先
#DIM DYNAMIC 효과先_ID

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72735)
SIF RESULT == 1
	RETURN 0

;효과使用불가 2의식,3융합,4싱크로,5엑시즈,6링크

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72735)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
	효과先_ID = GETVAR(@"%듀얼리스트%_필드:효과先")
	SIF 효과先 == 5 
		RETURN 0

	CALL FULLRESET
	효과条件종류 = 링크以外
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	IF RESULT != 1
		CALLFORM CARD_{효과先_ID}("종류")
			SIF RESULT != 의식
				RETURN 0
	ENDIF
	CALL FULLRESET
	효과条件カテゴリ = 세피라
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊以外")
	;CARD_CHECK_FIN_DATAにX소환時の完全묘지行きの対応がないため暫定的に
	IF RESULT != 1
		CALLFORM CARD_{효과先_ID}("종류")
		SIF RESULT != 엑시즈
			RETURN 0
	ENDIF
	SIF 발동済_2(듀얼리스트,72735)
		효과使用불가:2 = 1
	SIF 발동済_3(듀얼리스트,72735)
		효과使用불가:3 = 1
	SIF 발동済_4(듀얼리스트,72735)
		효과使用불가:4 = 1
	;발동済み_5が無いので…
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		효과使用불가:5 = 1
	SIF 효과使用불가:2 == 1 && 효과使用불가:3 == 1 && 효과使用불가:4 == 1 && 효과使用불가:5 == 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_72735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 효과先
#DIM DYNAMIC 효과先_ID

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72735,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件カテゴリ = 세피라
		효과条件종류 = モン全般
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "세피라の신탁")
ELSEIF 종류 == 효과後誘発
	효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
	효과先_ID = GETVAR(@"%듀얼리스트%_필드:효과先")

	CALLFORM CARD_{효과先_ID}("종류") 
	IF RESULT == 의식
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72735,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"덱")
		ENDIF
	ELSEIF RESULT == 융합
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72735,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종류 = モン全般
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ELSEIF RESULT == 싱크로
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72735,4)
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_ADD_DECK_SPC(듀얼리스트,"덱",選択カード)
			ENDIF
		ENDIF
	ELSEIF RESULT == 엑시즈
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72735,10)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF