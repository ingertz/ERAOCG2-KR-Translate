@CARDCAN_24256(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24256)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	IF 直前戦闘破壊ID(듀얼리스트,1) == 0
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("속성")
		SIF !MATCH(RESULT,빛속성)
			RETURN 0
	ELSE
		TRYCALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("속성")
		SIF !MATCH(RESULT,빛속성)
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = Ａ Ｏ Ｊ
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0


	RETURN 1
ENDIF

@CARDEFFECT_24256(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = Ａ Ｏ Ｊ
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦阻")

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24256)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件속성 = 빛속성
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"無効")

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = Ａ Ｏ Ｊ
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
