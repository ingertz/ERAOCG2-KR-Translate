@CARDCAN_52023(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과使用불가,10
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52023)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:0 = 1

	SIF 손패数(듀얼리스트) == 0
		효과使用불가:1 = 1

	IF  손패数(対面者) == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대묘지 = 1
		효과条件속성 = 빛속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:1 = 1
	ENDIF
	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_52023(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード
#DIM DYNAMIC 효과使用불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52023,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 裏側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:0 = 1

		SIF 손패数(듀얼리스트) == 0
			효과使用불가:1 = 1

		IF  손패数(対面者) == 0
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대묘지 = 1
			효과条件속성 = 빛속성
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				효과使用불가:1 = 1
		ENDIF

		IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
PRINTL 어느 쪽을 섬멸하시겠습니까?
			CALL YN_CHOICE(듀얼리스트,"セットカード 마법 / 함정 카드 ","빛속성モンスター")
		ELSEIF 효과使用불가:0 != 1 && 효과使用불가:1 == 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
			CALL FULLRESET
			효과条件표시 = 裏側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
		ELSE

			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%듀얼리스트%_손패:カウンタ") == -1
					CONTINUE
				CALL CARD_DISPOSE(듀얼리스트,"손패",カウンタ)
			NEXT
			CALL FULLRESET
			효과条件속성 = 빛속성
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
			FOR カウンタ, 0, 99
				IF GETVAR(@"%対面者%_손패:カウンタ") == -1
					CONTINUE
				ENDIF
				TRYCALLFORM CARD_{GETVAR(@"%対面者%_손패:カウンタ")}, "속성"
				IF RESULT != 빛속성
					CONTINUE
				ENDIF
				CALL CARD_DISPOSE(対面者,"손패",カウンタ)
			NEXT

			CALL FULLRESET
			효과範囲상대묘지 = 1
			효과条件속성 = 빛속성
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",(RESULT:3),1)	
		ENDIF
	ENDIF
ENDIF