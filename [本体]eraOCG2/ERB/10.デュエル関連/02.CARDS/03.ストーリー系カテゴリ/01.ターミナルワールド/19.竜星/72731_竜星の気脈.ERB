@CARDCAN_72731(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72731)
SIF RESULT == 1
	RETURN 0

CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 빛속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 바람속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 물속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 땅속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 화염속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1
CALL FULLRESET
효과範囲묘지 = 1
효과条件カテゴリ = 룡성
효과条件속성 = 어둠속성
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
SIF RESULT == 1
	カウンタ += 1

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF カウンタ < 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF カウンタ < 2
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 룡성
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF カウンタ < 3
		RETURN 0
	TRYCALLFORM CARD_{破壊대상ID}("カテゴリ")
	 SIF !MATCH(RESULTS,"룡성")
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF カウンタ < 4
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_72731(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 選択カード


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72731)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 룡성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72731)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表",1,72731)
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72731)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF