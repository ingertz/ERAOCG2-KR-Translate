IF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92752)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92752,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 룡성
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_TMP_EX_RST(듀얼리스트,"종류",싱크로)
;	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"SS阻（종류）", 싱크로,上書きモード)
ENDIF
