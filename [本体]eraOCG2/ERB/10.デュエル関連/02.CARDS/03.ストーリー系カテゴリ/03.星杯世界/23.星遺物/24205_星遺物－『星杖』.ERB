@CARDNAME_24205,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 성유물－『성장』
	CASE "略称"
RESULTS = 『성장』
	CASE "カテゴリ"
RESULTS:0 = 성유물
RESULTS:1 = 오르페골
ENDSELECT


@CARD_24205(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 2500
ENDSELECT

RETURN 0

