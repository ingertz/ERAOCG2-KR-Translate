@CARDCAN_54003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54003)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,54003)
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	SIF 마함数(対面者) == 0
		条件달성 ++
	SIF モンスター数(対面者) == 0
		条件달성 ++
	SIF 条件달성 == 2
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_2(듀얼리스트,54003)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_54003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC カウンタ


IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54003,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 트로이메어
			효과条件固名前 = 트로이메어 유니콘
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				SIF 듀얼리스트 == "자신"
PRINTL 드로우하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == はい
					CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54003,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件他所 = 1
		효과条件カテゴリ = 트로이메어
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		CALL CARDDRAW_BASIC(듀얼리스트,RESULT)
	ENDIF
ENDIF

