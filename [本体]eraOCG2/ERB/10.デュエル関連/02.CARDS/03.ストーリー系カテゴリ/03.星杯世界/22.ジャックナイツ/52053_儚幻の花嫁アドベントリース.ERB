@CARDCAN_52053(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52053)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 발동済_1(듀얼리스트,52053)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과範囲상대EX덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT > 16
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 잭나이츠
	효과条件カテゴリ:1 = 트로이메어
	효과条件カテゴリ:2 = 성유물
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,52053)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 성유물
	효과条件종류:0 = 지속마법
	효과条件종류:1 = 지속함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52053(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 対戦カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52053,1)
	IF RESULT == 0
		FOR カウンタ,0,2
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ:0 = 잭나이츠
			효과条件カテゴリ:1 = 트로이메어
			효과条件カテゴリ:2 = 성유물
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 0 || モンスター数(듀얼리스트) >= 5
				BREAK
		NEXT
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52053,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 성유물
		효과条件종류:0 = 지속마법
		효과条件종류:1 = 지속함정
		효과範囲묘지 = 1
		효과範囲덱 = 1
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 잭나이츠
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")

	CALL FULLRESET
	효과条件カテゴリ = 트로이메어
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")

	CALL FULLRESET
	효과条件カテゴリ = 성유물
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
    CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")

ENDIF
