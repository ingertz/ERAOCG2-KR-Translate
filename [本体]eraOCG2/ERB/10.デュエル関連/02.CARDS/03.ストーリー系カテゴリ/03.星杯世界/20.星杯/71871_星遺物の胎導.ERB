@CARDCAN_71871(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과발동불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71871)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,71871)
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件レベル = 9
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과발동불가:1 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件レベル = 9
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과발동불가:2 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル = 9
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과발동불가:2 = 1

	SIF 효과발동불가:1 == 1 && 효과발동불가:2 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71871(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 효과발동불가,10

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71871,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件レベル = 9
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과발동불가:1 = 1

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件レベル = 9
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과발동불가:2 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル = 9
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과발동불가:2 = 1

		IF 효과발동불가:1 != 1 && 효과발동불가:2 != 1
PRINTL 필드의 레벨 9 몬스터를 선택하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSEIF 효과발동불가:1 != 1
			RESULT = はい
		ELSEIF 효과발동불가:2 != 1
			RESULT = いいえ
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:選択カード")}, "名前"
				選択カード名 = %RESULTS%

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件レベル = 9
				효과추가종류:0 = 6
				효과추가종류:1 = 11
				효과条件固名前 = %選択カード名%	
				효과条件複数 = 2			
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件レベル = 9
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF