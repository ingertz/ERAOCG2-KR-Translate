@CARDCAN_41920(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,41920)
SIF RESULT == 1
	RETURN 0

IF (종류 == 필드起動 && メインフェイズ == 1) || (종류 == フリー誘発 && メインフェイズ == 1)
	SIF 발동済_1(듀얼리스트,41920)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과条件표시 = 10
	효과条件종류 = モン全般
	효과条件除去種 = 마함
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF (종류 == 필드起動 && バトルフェイズ == 1) || (종류 == フリー誘発 && バトルフェイズ == 1)
	SIF 발동済_2(듀얼리스트,41920)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件除去種 = 묘지
	SIF 듀얼리스트 == "상대"
		효과条件固名前 = 스네이크 아이즈 이그제큐트 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 10
		효과条件スーパー종류 = モン全般
		효과条件종류 = 마법全般
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_41920(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF (종류 == 필드起動 && メインフェイズ == 1) || (종류 == フリー誘発 && メインフェイズ == 1)
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,41920,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과範囲상대필드 = 1
		효과範囲상대묘지 = 1
		효과条件표시 = 10
		효과条件종류 = モン全般
		효과条件除去種 = 마함
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",1)
	ENDIF
ELSEIF (종류 == 필드起動 && バトルフェイズ == 1) || (종류 == フリー誘発 && バトルフェイズ == 1)
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,41920,2)
	IF RESULT == 0
		CALL FULLRESET
		SIF 듀얼리스트 == "상대"
			효과条件固名前 = 스네이크 아이즈 이그제큐트 드래곤
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 10
			효과条件スーパー종류 = モン全般
			효과条件종류 = 마법全般
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両마함単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
