VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 죄보의 속삭임
	CASE "略称"
		RESULTS = 죄보의 속삭임
	CASE "カテゴリ"
		RESULTS:0 = 죄보
ENDSELECT


@CARD_61923(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_61923(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 1번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,마함起動,손패起動,フリー誘発)
PRINTL ①：자신 필드의 미확인족 또는 마법사족 몬스터 １장을 손패 EX덱으로 되돌린다。
PRINTL 그 후、자신의 묘지 / 제외 상태인 미확인족 또는 마법사족 몬스터 １장을 특수 소환한다。
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ②：「죄보의 속삭임」が 몬스터의 효과で묘지로 보내진 경우에 발동할 수 있다。
PRINTL 묘지에서 "죄보의 속삭임」 １장을 자신 필드에 세트한다。


@CARDCAN_61923(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61923)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	;효과①발동済みかチェック
	SIF 발동済_1(듀얼리스트,61923)
		RETURN 0

	;場に마법사があるかチェック
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족:0 = 마법사족
	효과条件종족:1 = 미확인족
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;묘지、제외に마법사があるかチェック
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종족:0 = 마법사족
	효과条件종족:1 = 미확인족
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	;효과②발동済みかチェック
	SIF 발동済_2(듀얼리스트,61923)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	;다른 효과의 발동チェック
	CALL FULLRESET
	효과条件名前 = 죄보의 속삭임
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"モン효과墓送")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_61923(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 行先플래그

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61923,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
        ;패로 되돌린다
        CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족:0 = 마법사족
		효과条件종족:1 = 미확인족
		효과条件표시 = 表側표시
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
        IF RESULT == 1
        ENDIF

        ;특수소환
        CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종족:0 = 마법사족
		효과条件종족:1 = 미확인족
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 효과後誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61923,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = 죄보의 속삭임
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,마함行き,1)
		ENDIF
	ENDIF
ENDIF
