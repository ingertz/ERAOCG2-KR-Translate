@CARDCAN_46949(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,46949)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX덱起動
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,46949,"EX덱")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件名前 = 비서스-스타프로스트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件固攻撃力 = 1500
	효과条件固守備力 = 2100
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_46949(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力修正,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46949)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件名前 = 비서스-스타프로스트
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲묘지 = 1
			효과条件固攻撃力 = 1500
			효과条件固守備力 = 2100
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46949)
	IF RESULT == 0
		CALL FULLRESET
		효과条件除去種 = 묘지
		효과条件他所 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"選択")
		IF RESULT == 1
			選択カード_ID = RESULT:99
			CALL CARD_SELECT(듀얼리스트,RESULT:1)
			選択カード = RESULT

			TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
			攻撃力修正:0 = RESULT
			TRYCALLFORM CARD_{選択カード_ID},"守備力"
			攻撃力修正:1 = RESULT

			CALL CARD_DISPOSE(대상者（CS）,"필드",選択カード,破壊行き)
			SIF RESULT != 0
				RETURN 0
			IF 攻撃力修正:0 >= 攻撃力修正:1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",(攻撃力修正:0)/2)
			ELSEIF 攻撃力修正:0 < 攻撃力修正:1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",(攻撃力修正:1)/2)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
ENDIF
