	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스케어클로
	효과条件종류 = 링크
	CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
	IF RESULT != 9999
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",RESULT,"貫通",1)
	ENDIF
ENDIF

