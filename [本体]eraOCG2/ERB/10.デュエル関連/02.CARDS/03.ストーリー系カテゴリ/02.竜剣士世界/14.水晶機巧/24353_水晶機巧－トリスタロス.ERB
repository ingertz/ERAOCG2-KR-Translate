	CASE "略称"
RESULTS = CS-트리스타로스
	CASE "カテゴリ"
RESULTS:0 = 크리스트론
ENDSELECT


@CARD_24353(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 기계족
