@CARDCAN_72077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72077)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF 발동済_1(듀얼리스트,72077)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 진룡	
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,72077)
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1
	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_3(듀얼리스트,72077)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 효과使用불가,10
#DIM DYNAMIC ランダム제외
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,72077)
		효과使用불가:1 = 1
	SIF 발동済_2(듀얼리스트,72077)
		효과使用불가:2 = 1


	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 진룡	
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		효과使用불가:1 = 1

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 진룡 몬스터를 패에서 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:2 == 1
		RESULT = はい
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ENDIF
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72077,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 진룡
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				ENDIF
			ENDIF
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72077,2)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 진룡	
			효과条件複数 = 3
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72077)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72077,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
	ENDIF
ENDIF

