@CARDCAN_20375(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用不可,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20375)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF 마함数(듀얼리스트) >= 5
	    효과使用不可:1 = 1

	SIF 발동済_2(듀얼리스트,20375)
		효과使用不可:2 = 1
	CALL CARD_SS_CHECK(듀얼리스트,20375,"손패")
	SIF RESULT == 1
		효과使用不可:2 = 1

	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 마제스펙터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用不可:2 = 1

	SIF 효과使用不可:1 == 1 && 효과使用不可:2 == 1
		RETURN 0
	RETURN 1


ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,20375)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
효과条件カテゴリ = 마제스펙터
	효과条件종류 = EX以外全般
	효과条件소환可 = 1
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1



ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_3(듀얼리스트,20375)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件カテゴリ = 마제스펙터
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0	
	RETURN 1


ENDIF



@CARDEFFECT_20375(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 효과使用不可,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
    SIF 마함数(듀얼리스트) >= 5
        효과使用不可:1 = 1

    SIF 발동済_2(듀얼리스트,20375)
        효과使用不可:2 = 1
	
	CALL FULLRESET
	효과範囲필드 = 1
효과条件カテゴリ = 마제스펙터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用不可:2 = 1

	IF 효과使用不可:1 == 0 && 효과使用不可:2 == 0
PRINTL 이 카드를 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用不可:2 == 1
		RESULT = いいえ
	ELSEIF 효과使用不可:1 == 1
		RESULT = はい
	ENDIF

	IF RESULT == いいえ
	    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20375)
	    IF RESULT == 0
		    CALL FULLRESET
		    CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF


	ELSEIF RESULT == はい
	    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20375,2)
	    IF RESULT == 0
		    CALL FULLRESET
		    CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20375,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
효과条件カテゴリ = 마제스펙터
		효과条件종류 = EX以外全般
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF


ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20375,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
효과条件カテゴリ = 마제스펙터
		효과条件종류 = 마함全般
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"破耐")

ENDIF