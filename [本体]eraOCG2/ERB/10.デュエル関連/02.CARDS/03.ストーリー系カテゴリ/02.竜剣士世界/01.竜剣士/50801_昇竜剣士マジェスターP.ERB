@CARDCAN_50801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50801)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 룡검사
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50801)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,50801)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件分割 = 펜듈럼
	CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50801,0,X消費2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 룡검사
		효과条件分割 = 펜듈럼
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		EX소환可能종류:0 = 효과モン
		EX소환可能종류:1 = 通常モン
		EX소환可能종류:2 = 의식
		EX소환可能종류:3 = 융합
		EX소환可能종류:4 = 싱크로
		EX소환可能종류:6 = 링크
		EX소환可能종류:7 = 초차원
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF