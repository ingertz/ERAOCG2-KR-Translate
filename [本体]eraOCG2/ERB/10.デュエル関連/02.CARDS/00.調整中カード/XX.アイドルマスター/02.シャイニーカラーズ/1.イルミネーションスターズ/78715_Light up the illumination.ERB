@CARDCAN_78715(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 条件達成,3
#DIMS DYNAMIC 条件カテゴリ = "사쿠라기 마노", "카자노 히오리", "하치미야 메구루"

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78715)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,78715)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 손패起動
		SIF 손패数(듀얼리스트) < 3
			RETURN 0
	ELSE
		SIF 손패数(듀얼리스트) < 2
			RETURN 0
	ENDIF
	FOR カウンタ, 0, 3
		CALL FULLRESET
		효과範囲손패 = 1
효과条件カテゴリ = %条件カテゴリ:カウンタ%
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ:0 = %条件カテゴリ:((カウンタ + 1) % 3)%
			효과条件カテゴリ:1 = %条件カテゴリ:((カウンタ + 2) % 3)%
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件達成:カウンタ += 1
		ENDIF
	NEXT
	SIF !MATCH(条件達成,1)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78715(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カテゴリ
#DIM DYNAMIC 条件達成,3
#DIMS DYNAMIC 条件カテゴリ = "사쿠라기 마노", "카자노 히오리", "하치미야 메구루"

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78715,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			FOR カウンタ, 0, 3
				CALL FULLRESET
				효과範囲손패 = 1
효과条件カテゴリ = %条件カテゴリ:カウンタ%
				효과条件종류 = モン全般
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ:0 = %条件カテゴリ:((カウンタ + 1) % 3)%
					효과条件カテゴリ:1 = %条件カテゴリ:((カウンタ + 2) % 3)%
					효과条件종류 = モン全般
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					SIF RESULT == 1
						条件達成:カウンタ += 1
				ENDIF
			NEXT
			CALL FULLRESET
			효과範囲손패 = 1
			FOR カウンタ, 0, 3
				SIF 条件達成:カウンタ
					효과条件カテゴリ:カウンタ = %条件カテゴリ:カウンタ%
			NEXT
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カードID = RESULT:99
			IF RESULT != 9999
				選択カテゴリ = -1
				TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
				IF MATCH(RESULTS,条件カテゴリ:0)
					選択カテゴリ = 0
				ELSEIF MATCH(RESULTS,条件カテゴリ:1)
					選択カテゴリ = 1
				ELSEIF MATCH(RESULTS,条件カテゴリ:2)
					選択カテゴリ = 2
				ENDIF
				SIF 選択カテゴリ == -1
					RETURN
PRINTL 첫 번째 몬스터를 패에 넣습니다.
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = %条件カテゴリ:((選択カテゴリ + 1) % 3)%
				효과条件종류 = モン全般
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
PRINTL 두 번째 몬스터를 패에 넣습니다.
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = %条件カテゴリ:((選択カテゴリ + 2) % 3)%
					효과条件종류 = モン全般
					CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
		CALL CARD_SS_RESTRICTION(듀얼리스트,"일루미네이션 스타즈")
	ENDIF
ENDIF