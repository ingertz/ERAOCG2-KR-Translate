@CARDCAN_78716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78716)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 손패数(듀얼리스트) < 2
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		SIF 손패数(듀얼리스트) < 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,78716)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件カテゴリ = 일루미네이션 스타즈
	효과条件종류 = モン全般
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
효과条件カテゴリ = 일루미네이션 스타즈
	효과条件종류 = モン全般
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 候補カードID,紙束最大値
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78716,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(GETVAR(@"ライフ_%듀얼리스트%") / 2))
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件カテゴリ = 일루미네이션 스타즈
			효과条件종류 = モン全般
			효과条件固名前選択 = 1
			효과条件行先플래그 = EX덱行き
			효과条件複数 = 3
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
효과条件カテゴリ = 일루미네이션 스타즈
				효과条件종류 = モン全般
				효과条件固名前選択 = 1
				효과条件複数 = 3
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					VARSET 候補カードID,-1
					FOR カウンタ, 0, 紙束最大値
						選択カードID = GETVAR(@"%듀얼리스트%_손패:カウンタ")
						SIF 選択カードID == -1
							BREAK
						TRYCALLFORM CARD_{選択カードID}("맥시멈")
						SIF RESULT < 1
							CONTINUE
						TRYCALLFORM CARDSUMMON_{選択カードID}(듀얼리스트,カウンタ,1)
						IF RESULT >= 1
							候補カードID:カウンタB = 選択カードID
							カウンタB++
							SIF カウンタB >= VARSIZE("효과条件ID")
								BREAK
						ENDIF
					NEXT
					IF カウンタB > 0
PRINTL 패에서 맥시멈 소환할 몬스터를 선택할 수 있습니다.
						CALL FULLRESET
						효과範囲손패 = 1
						효과条件任意 = 1
						FOR カウンタ, 0, VARSIZE("효과条件ID")
							SIF 候補カードID == -1
								BREAK
							효과条件ID:カウンタ = 候補カードID:カウンタ
						NEXT
						CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
						IF RESULT != 9999
							CALL CARD_SELECT(듀얼리스트,RESULT)
							CALL MAXSUMMON(듀얼리스트,選択カード（CS）,"손패")
						ENDIF
					ENDIF
				ENDIF
			ENDIF
		ENDIF
		CALL CARD_SS_RESTRICTION(듀얼리스트,"일루미네이션 스타즈")
	ENDIF
ENDIF