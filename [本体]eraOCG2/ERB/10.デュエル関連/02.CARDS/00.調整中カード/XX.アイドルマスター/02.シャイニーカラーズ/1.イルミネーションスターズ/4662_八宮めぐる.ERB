PRINTL 이 효과로 패에 넣지 않은 쪽의 몬스터 1장을 패에 넣을 수 있다.
PRINTL 이 효과 발동 후, 자신은 「일루미네이션 스타즈」 몬스터밖에 특수 소환할 수 없다.

@CARDCAN_4662(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4662)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4662)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 사쿠라기 마노
	효과条件カテゴリ:1 = 카자노 히오리
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4662(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4662,1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}("カテゴリ")
			SIF !MATCH(RESULTS,"일루미네이션 스타즈")
				CONTINUE
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,손패行き)
		NEXT
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 사쿠라기 마노
		효과条件カテゴリ:1 = 카자노 히오리
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		選択カードID = RESULT:1
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = モン全般
			TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
			IF MATCH(RESULTS,"사쿠라기 마노")
효과条件カテゴリ = 카자노 히오리
			ELSEIF MATCH(RESULTS,"카자노 히오리")
효과条件カテゴリ = 사쿠라기 마노
			ELSE
효과条件カテゴリ = -1
			ENDIF
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
PRINTL 패를 1장 버리고, 묘지에서 패에 넣지 않은 쪽의 몬스터를 덱에서 패에 넣겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					CALL FULLRESET
					효과範囲손패 = 1
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件종류 = モン全般
					TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
					IF MATCH(RESULTS,"사쿠라기 마노")
효과条件カテゴリ = 카자노 히오리
					ELSEIF MATCH(RESULTS,"카자노 히오리")
효과条件カテゴリ = 사쿠라기 마노
					ELSE
효과条件カテゴリ = -1
					ENDIF
					CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
		CALL CARD_SS_RESTRICTION(듀얼리스트,"일루미네이션 스타즈")
	ENDIF
ENDIF