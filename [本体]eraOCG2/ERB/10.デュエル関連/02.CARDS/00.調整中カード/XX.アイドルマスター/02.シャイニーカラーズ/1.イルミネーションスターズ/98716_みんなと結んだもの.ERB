@CARDCAN_98716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件達成

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,98716)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,98716)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	FOR カウンタ, 1, 3
		選択カードID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
		SIF 選択カードID < 1
			CONTINUE
		TRYCALLFORM CARDCAN_{選択カードID}(듀얼리스트,맥시멈条件,"필드",カウンタ)
		IF RESULT == 1
			条件達成++
			BREAK
		ENDIF
	NEXT
	SIF 条件達成 < 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件カテゴリ = 일루미네이션 스타즈
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_98716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 손패起動효과

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,98716,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲EX덱 = 1
효과条件カテゴリ = 일루미네이션 스타즈
		효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_RESERV(듀얼리스트,98716,短紋章予約)
		ENDIF
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
효과条件カテゴリ = 일루미네이션 스타즈
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐",3)
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",3)
ENDIF

