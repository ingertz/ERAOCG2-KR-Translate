@CARDCAN_99578(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99578)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
			RETURN 0
		RETURN 1
	ENDIF
	SIF ゾーン == "필드"
		RETURN 1
	RETURN 0
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF 발동済_2(듀얼리스트,99578)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,99578,"마함")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	SIF 발동済_3(듀얼리스트,99578)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	;SIF 마함数(듀얼리스트) >= 5
	;	RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"소환出処",1,2)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_最召場所") == 場所
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99578(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用플래그= 0
#DIM DYNAMIC 選択結果
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件종족 = 전사족
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"貫通")
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99578,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"마함",場所)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99578)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99578,3)
	IF RESULT == 0
		;この카드를 제외한다。
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		IF RESULT == 1
			;제외したら、묘지제외からパルテ 이외의 ARG☆S지속함정を任意で앞면 표시로 置ける。（任意なので、置ける카드가 なくても발동可能）
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲제외 = 1
효과条件カテゴリ = ARG☆S
효과条件固名前 = E.R.ARG☆S─열투의 파르테
			효과条件종류 = 지속함정
			효과条件任意 = 1
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99578)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ENDIF

