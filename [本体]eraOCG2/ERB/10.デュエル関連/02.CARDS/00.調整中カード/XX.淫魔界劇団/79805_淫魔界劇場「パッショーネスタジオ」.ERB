#DIM DYNAMIC 女優人数
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

SIF 마함数(対面者) >= 5
	RETURN 0
フィルム설치先 = 現마함(対面者)
CALL CARD_GENERATE_MAGIC(対面者,179805,1)

TRYCALLFORM INMAKAIFILM_{台本ID}_{효과番号}(女優ID:0,女優ID:1,女優ID:2,女優ID:3,女優ID:4)
タイトル = %RESULTS%
シチュ종류 = RESULT

FOR カウンタ,0,5
	IF 女優ID:カウンタ <= 0
		女優人数 = カウンタ
		BREAK
	ENDIF
	CALL INMAKAIFILM_GETNAME(女優ID:カウンタ)
	女優대상:カウンタ = RESULT
	女優名前:カウンタ = %RESULTS%
NEXT

IF 女優人数 > 1
	フィルム名称 = 【%女優名前% ほか】『%タイトル%』
ELSE
	フィルム名称 = 【%女優名前%】『%タイトル%』
ENDIF
FOR カウンタ,0,5
	SIF 女優대상:カウンタ <= 0
		BREAK
	CALL INMAKAIFILM_PICTURE(女優대상:カウンタ,シチュ종류)
	IF RESULT == 1
		SETCOLOR C_PINK
		PRINTFORMW %女優名前:カウンタ%의 야한 필름이 촬영되었다
		RESETCOLOR
	ENDIF
NEXT

SETCOLOR C_YELLOW
PRINTFORMW %フィルム名称%이 발매되었다！
RESETCOLOR
CALL CARD_SET_RENAME(対面者,"마함",フィルム설치先,フィルム名称)
