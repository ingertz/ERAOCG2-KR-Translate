@CARDCAN_79807(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79807)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,79807)
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과条件성별 = 牝性 
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,79807)
		RETURN 0
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 음마계극단
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대손패 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79807(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 조교대상
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79807,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件성별 = 牝性
		TRYCALLFORM CARDNAME_{直前戦闘破壊ID(듀얼리스트,1)}, "名前"
		효과条件名前 = %RESULTS%
		TRYCALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}, "分割"
		IF RESULT == 펜듈럼
			효과範囲EX덱 = 1
			효과範囲상대EX덱 = 1
		ENDIF
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			選択カード = RESULT:1
			CALL CARD_EROTICS(選択カード)
			IF RESULT != -1 && 듀얼리스트 == "자신"
				조교대상 = RESULT
				SETCOLOR C_YELLOW
				PRINTFORMW 전투에 패배한 %CALLNAME:조교대상%는 히로인 패배물 작품을 촬영당했다…
				PRINTL
				RESETCOLOR
				CALL EROTIC_MOVE("晒しもの",조교대상,-1,150)
				CALL EROTIC_MOVE("前穴凌辱",조교대상,MASTER,500)
			ENDIF
			SIF GETVARS(@"%듀얼리스트%_フィールド名") == "음마계 스튜디오"
				CALL INMAKAIFILM_GENERATE(듀얼리스트,79807,1,選択カード)
			TRYCALLFORM CARD_{選択カード}, "攻撃力"
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",RESULT,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79807,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대손패 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT > 0
			選択カード = RESULT
			選択カード_ID = RESULT:99
			TRYCALLFORM CARD_{選択カード_ID},"성별"
			IF RESULT == 牝性
				CALL CARD_EROTICS(選択カード_ID)
				IF RESULT != -1 && 듀얼리스트 == "자신"
					조교대상 = RESULT
					CALL CARD_SELECT(듀얼리스트,選択カード)
					SETCOLOR C_YELLOW
					PRINTFORMW 붙잡힌 %CALLNAME:조교대상%는 히로인 패배물 작품을 촬영당했다…
					PRINTL
					RESETCOLOR
					CALL EROTIC_MOVE("晒しもの",조교대상,-1,150)
					CALL EROTIC_MOVE("前穴凌辱",조교대상,MASTER,500)
				ENDIF
				CALL FULLRESET
				CALL CARD_SP_SUMMON(대상者（CS）,参照先（CS）,選択カード（CS）,,1)
				SIF GETVARS(@"%듀얼리스트%_フィールド名") == "음마계 스튜디오"
					CALL INMAKAIFILM_GENERATE(듀얼리스트,79807,2,選択カード_ID)
			ELSE
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				CALL CARD_ADD(듀얼리스트, "상대손패", "손패", 選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF

;台本の①의 효과で生成されるフィルムの설정
@INMAKAIFILM_79807_1(女優ID:0,女優ID:1,女優ID:2,女優ID:3,女優ID:4)
#DIM DYNAMIC 女優ID, 5 ;대상の牝몬스터의 カードID
#DIM DYNAMIC 女優대상, 5 ;えっち用のID：csv無しなら-1
#DIMS DYNAMIC 女優名前, 5
#DIM DYNAMIC 女優人数 ;女優IDが存在する総人数
#DIM DYNAMIC シチュ종류 ;표시される画像のシチュエ-ション지정したい場合「シチュ종류 = シチュ_파이즈리」のようにする。特に지정しない(ランダムでいい)場合シチュ종류 = 0。지정できるシチュは@IMAGE_HAMEDORIを参照。
#DIMS DYNAMIC タイトル
#DIM DYNAMIC カウンタ
VARSET RESULT
VARSET RESULTS

FOR カウンタ,0,5
	IF 女優ID:カウンタ <= 0
		女優人数 = カウンタ
		BREAK
	ENDIF
	CALL INMAKAIFILM_GETNAME(女優ID:カウンタ)
	女優대상:カウンタ = RESULT
	女優名前:カウンタ = %RESULTS%
NEXT

;生成されるフィルムは【%女優名前%】『%タイトル%』となる
SELECTCASE RAND:3
	CASE 0
		TRYCALLFORM CARDNAME_{女優ID},"名前"
		タイトル = %RESULTS%、치욕의 패배절정
		シチュ종류 = シチュ_ハメ取り
	CASE 1
		タイトル = 저는 자지에게 져버렸습니다 %女優名前%
		シチュ종류 = シチュ_ハメ取り
	CASE 2
		タイトル = 굴복 절정 타락 히로인 %女優名前%
		シチュ종류 = シチュ_ハメ取り
	CASE 3
		タイトル =  %女優名前% 악몽의 쾌락심문
		シチュ종류 = シチュ_ハメ取り
ENDSELECT

RESULT = シチュ종류
RESULTS = %제목%

