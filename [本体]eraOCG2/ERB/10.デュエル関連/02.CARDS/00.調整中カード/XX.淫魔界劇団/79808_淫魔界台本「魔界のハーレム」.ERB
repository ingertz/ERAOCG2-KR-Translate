	IF 女優ID:カウンタ <= 0
		女優人数 = カウンタ
		BREAK
	ENDIF
	CALL INMAKAIFILM_GETNAME(女優ID:カウンタ)
	女優대상:カウンタ = RESULT
	女優名前:カウンタ = %RESULTS%
NEXT

;生成されるフィルムは【%女優名前%】『%タイトル%』となる
