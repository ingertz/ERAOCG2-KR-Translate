@CARDSUMMON_59750(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2
素材条件素材ID起動 = 2

;素材１장 目＝슬라임
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 슬라임
;素材２장目＝モン全般
ELSEIF EX参照 >= 10
	素材条件종류 = モン全般
ENDIF


IF EX参照 == 1
	;PRINTL サモンまでは言ってるよ
	CALL FUSCAN(듀얼리스트,소환カード,59750) 
	RETURN RESULT
ENDIF

@CARDCAN_59750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59750)
SIF RESULT == 1
	RETURN 0



IF 종류 == EX소환時強制
	;場にいないかチェック
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	;효과②발동済みかチェック
	SIF 발동済_2(듀얼리스트,59750)
		RETURN 0
	;メインフェイズじゃないかチェック
	SIF メインフェイズ != 1
		RETURN 0
	;場に묘상があるかチェック
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 묘상
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;융합소환できる카드가 ないかチェック
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲상대필드 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件소환可 = 1
	強制必要素材名前 = 음란한 슬라임 소녀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;それ以外ならOK
	RETURN 1
;場にいないかチェック
ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_59750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 取込カードID
#DIM DYNAMIC 캐릭터番号

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == EX소환時強制
	;汎数に기록した素材があるかチェック
	IF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") >= 0
		;汎数読み込み
		取込カードID = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
		;기록した素材の성별をチェック
		TRYCALLFORM CARD_{取込カードID}, "성별"
		;♀かふたなりなら続行
		IF GROUPMATCH(RESULT,1,3)
			;変化元IDに汎数を打ち込み
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",取込カードID,上書きモード)
			;フレ-バ-、캐릭터リスト読み込み
			CALL CARD_EROTICS(取込カードID)
			SIF RESULT != -1
				PRINTFORMW 슬라임 소녀는%NAME:RESULT%의 유전자를 이어 받고 있다…！
		ENDIF
	ENDIF
	;使い終わった汎数を削除
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",0,上書きモード)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59750,2)
	IF RESULT == 0
		;묘상１개를 消費
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件カテゴリ = 묘상
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		;융합소환処理。素材は서로의 場
		CALL RESETAREA_MAT
		CALL FULLRESET
		素材範囲필드 = 1
		素材範囲상대필드 = 1
		효과条件종류 = 융합
		효과条件소환可 = 1
		;一体目の素材は必ず슬라임ガ-ルに
		強制必要素材名前 = 음란한 슬라임 소녀
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL FUSSUMMON(듀얼리스트, 選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	;묘지의 슬라임数をチェック
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 슬라임
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	;묘지의 ♀数をチェック
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件성별 = 牝性
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 += RESULT * 300
	;上がる공격력이 1500を超えるなら1500に固定
	SIF 攻撃力修正 >= 1500
		攻撃力修正 = 1500
		;攻撃力変化処理
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正)
ELSEIF 종류 == 지속효과
	;戦闘耐性付与
	CALL FULLRESET
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所")  == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"戦耐")
ENDIF
