@CARDNAME_79751,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 슬라임 리인 카네이션
	CASE "略称"
		RESULTS = 슬라임 리인카
	CASE "カテゴリ"
		RESULTS:0 = 슬라임
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79751(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT
RETURN 0

