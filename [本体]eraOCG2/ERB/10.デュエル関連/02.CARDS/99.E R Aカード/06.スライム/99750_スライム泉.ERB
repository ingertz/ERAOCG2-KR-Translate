@CARDCAN_99750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99750)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;①を발동済みなら침묵
	SIF 발동済_1(듀얼리스트,99750)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	;除去する카드가 ないなら침묵
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件固カテゴリ = 묘상
	효과条件除去種 = リリース
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;묘지에 슬라임が３장ないなら침묵
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 슬라임
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	;それ以外ならOK
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	;②を발동済みなら침묵
	SIF 발동済_2(듀얼리스트,99750)
		RETURN 0
	;마함にないなら침묵
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	;묘상をチェック
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 묘상
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;それ以外ならOK
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発 && ゾーン == "마함" && GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 行先플래그
#DIM DYNAMIC ライフ回復量



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99750,1)
	IF RESULT == 0
		;묘지의 슬라임を選択、덱에 Ｘ３
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 슬라임
		효과条件複数 = 3
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			;상대 필드의 카드 １장을 묘지에 
			CALL FULLRESET
			효과条件固カテゴリ = 묘상
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과範囲상대묘지 = 1
				효과条件성별 = 牝性
				효과추가カテ = 묘상
				효과条件任意 = 1
				CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",1)
				IF RESULT == 1
					조교대상 = RESULT:1
					CALL CARD_EROTICS(조교대상)
					IF RESULT != -1
						조교대상 = RESULT
						SETCOLOR C_PINK
						PRINTFORML
						PRINTFORMW %CALLNAME:조교대상%은 슬라임의 샘으로 납치되어 슬라임의 묘상이 되어 버렸다！
						PRINTFORML
						RESETCOLOR
						CALL EROTIC_MOVE("묘상捕縛",조교대상,-1,300)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時強制
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99750,2)
	IF RESULT == 0
		;묘상をチェック
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件カテゴリ = 묘상
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		ライフ回復量 = RESULT * 1000
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",ライフ回復量)
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99750)
	IF RESULT == 0
		TRYCALLFORM CARDCAN_99750(듀얼리스트,마함起動,"마함",場所)
		IF RESULT == 1
			PRINTFORML 
			PRINTFORML 지금 바로 효과를 사용하시겠습니까？
			PRINTFORML 
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == 0
				TRYCALLFORM CARDEFFECT_99750(듀얼리스트,마함起動,"마함",場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
