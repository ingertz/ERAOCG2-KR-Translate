	CASE "名前"
		RESULTS = 번식하는 슬라임의 샘
	CASE "略称"
		RESULTS = 슬라임의 샘
	CASE "カテゴリ"
		RESULTS:0 = 슬라임
		RESULTS:1 = E.R.A
ENDSELECT


