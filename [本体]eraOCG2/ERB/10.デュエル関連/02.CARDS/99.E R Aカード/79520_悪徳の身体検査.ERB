@CARDNAME_79520,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = MAPPO.U 악덕의 신체검사
	CASE "略称"
		RESULTS = 악덕의 신체검사
	CASE "カテゴリ"
		RESULTS:0 = MAPPO
		RESULTS:1 = MAPPO.U
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_79520(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
	CASE "추가日"
		RETURN 250401
ENDSELECT

RETURN 0

