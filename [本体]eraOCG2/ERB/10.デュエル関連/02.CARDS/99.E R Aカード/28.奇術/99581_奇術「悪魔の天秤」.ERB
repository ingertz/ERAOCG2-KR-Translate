@CARDCAN_99581(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99581)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,99581)
		RETURN 0
	SIF 발동済_2(듀얼리스트,99581)
		RETURN 0
	IF ゾーン == "손패"
		IF GETVARS(@"%듀얼리스트%_フィールド名") !=  "P.M.G쇼 타임♪"
			SIF ターンプレイヤー != 듀얼리스트
				RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,99581)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_1(듀얼리스트,99581)
		RETURN 0
	SIF 발동済_2(듀얼리스트,99581)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	;条件確認
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 기술
	효과条件종류 = 마함全般
	효과条件固名前 = 기술카드「악마의 천칭」
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_99581(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択結果
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상ID
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件달성 = 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99581,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"リリース")
		조교대상ID = RESULT:2
		IF RESULT == 1
			;자신의 묘지에 기술카드가 あれば제외한다。
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 기술
			효과条件固名前 = 기술카드「악마의 천칭」
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				;CPUは기술카드あれば제외をする。
				IF 듀얼리스트 == "상대"
					選択結果 = はい
				ELSE
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件종류 = モン全般
					CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
					IF RESULT == 1
						;どちらも条件を満たしている場合は選択肢を出す。
						PRINTL 어느쪽 효과를 적용하시겠습니까？
						CALL YN_CHOICE(듀얼리스트,"●자신 묘지의 「기술」카드 １장을 제외한다。","●자신 필드의 몬스터 １장을 릴리스 한다。")
						選択結果 = RESULT
					ELSE
						選択結果 = はい
					ENDIF
				ENDIF
			ELSE
				選択結果 = いいえ
			ENDIF
			
			IF 選択結果 == はい
				;묘지의 "기술"카드 １장을 제외한다。
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 기술
				효과条件固名前 = 기술카드「악마의 천칭」
				효과条件行先플래그 = 제외行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				条件달성 = 1
			ELSE
				;자신 필드의 몬스터를 릴리스 한다。
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件종류 = モン全般
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
			;エロ조교部分（ＰＭＧが땅面から生やした天秤が상대を喰らう（丸飲みとして解釈））
			;条件：フィールドが「쇼 타임♪"인 경우에 発生（フィールド마법＋ＰＭＧが필드에 居る状態）＋묘지コストで代替。
			IF GETVARS(@"%듀얼리스트%_フィールド名") ==  "P.M.G쇼 타임♪" && 条件달성 == 1
						
				CALL CARD_EROTICS(조교대상ID)
				조교대상 = RESULT
				;PRINTFORMW 조교대상ID：{조교대상ID}　　조교대상：{조교대상}
				
				IF 조교대상 != -1
					PRINTFORML 판도라 매지션 걸이 완드를 휘두르니、지면에서 기분나쁜 장식의 천칭이 솟아올랐다！
					PRINTFORML 그 저울에 올라가버린 %NAME:조교대상%가 곤란해하니、저울이 순식간에 괴물의 입으로 변모했다。
					PRINTFORMW 괴물에게 삼켜진 %NAME:조교대상%의 단말마와 함께、악마의 천칭은 지면으로 가라앉아 사라져갔다   
					CALL EROTIC_MOVE("丸飲み",조교대상,-1,300)
					CALL CARD_EROTICS_END(조교대상)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99581,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 기술
		효과条件固名前 = 기술카드「악마의 천칭」
		효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
