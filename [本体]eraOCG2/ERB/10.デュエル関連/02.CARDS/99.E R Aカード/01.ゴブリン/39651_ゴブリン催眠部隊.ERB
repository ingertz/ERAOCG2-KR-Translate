@CARDNAME_39651,参照先
;ココ39651で지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 고블린 최면부대
	CASE "略称"
		RESULTS = 고블린 최면부대
	CASE "カテゴリ"
		RESULTS:0 = 고블린
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39651(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS


SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

