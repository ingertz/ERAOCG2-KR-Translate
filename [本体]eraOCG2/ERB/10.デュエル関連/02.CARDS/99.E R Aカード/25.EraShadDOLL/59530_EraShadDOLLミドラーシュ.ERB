@CARDCAN_59530(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상 = -1

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트, 종류, ゾーン, 場所, 59530)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == 묘지起動
	SIF !GROUPMATCH(ゾーン, "필드", "묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		;상대가 あなた（＝MASTER）の場合は발동불가、それ 이외의 조교대상なら許可
		SIF 조교대상 == MASTER
			RETURN 0
		RETURN 1
	ELSE
		;대상상대가 -1(조교대상じゃない캐릭터？)の場合も효과발동불가
		RETURN 0
	ENDIF
	;よくわからんがとりま발동불가で
	RETURN 0
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
		CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		;상대가 あなた（＝MASTER）の場合は지속無効
		SIF 조교대상 == MASTER
			RETURN 0
	ELSE
		;대상상대가 -1(조교대상じゃない캐릭터？)の場合も지속無効
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_59530(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상 = -1
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == 묘지起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 59530, 1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트, ゾーン, 場所, 제외行き)
		CALL FULLRESET
		
		CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			;MASTER상대だと何も起きない
			SIF 조교대상 == MASTER
				RETURN 0
			;상대プレイヤーの반발각인が消え去る
			MARK:조교대상:반발각인 = 0
			TCVAR:조교대상:반발각인취득 = 0
			;분노状態も解除
			CFLAG:조교대상:극대노 = 0
			CFLAG:조교대상:기분나쁨 = 0
			TCVAR:조교대상:기분나쁨 = 0
			BASE:조교대상:분노 = 0
			;부정系のPALAMも全て0にリセットされる
			PALAM:조교대상:반감 = 0
			PALAM:조교대상:불쾌 = 0
			PALAM:조교대상:억울 = 0
			PALAM:조교대상:부정 = 0

			;憑依状態も考えたけど、다른 エロ行為と変に競合する可能性あるのでコメントアウト
			;命令に従うようになるor催眠暗示にかかりやすい状態になるとかあったら状態変化としてつけたい
			;CFLAG:조교대상:빙의중 = 1

			;フレ-バ-텍스트
			PRINTFORML 미도라시는 그림자의 실로  %CALLNAME:조교대상%마음을 붙잡아 버렸다！
			PRINTFORML 불퀘감에 고민하는 표정을 짓고 있던 %CALLNAME:조교대상%이지만, 서서히 감정이 사라져 인형처럼 움직임을 멈추었다
			PRINTFORML 잠시후, 초점이 맞지 않는 공허한 눈동자로 이쪽을 향하던 %CALLNAME:조교대상%의 어깨 거나하게 취한듯 어깨를 떨구었다
			PRINTFORMW 갑자기 표정이 돌아온 %CALLNAME:조교대상%는 방금까지의 사건이 기억에서 빠진 것처럼 듀얼을 재개했다……
			
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트, "SS阻害状態", 3, 1)
	CALL STATCHANGE_EFFECT(듀얼리스트, "자신", 場所, "戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트, "자신", 場所, "破耐")
ENDIF
