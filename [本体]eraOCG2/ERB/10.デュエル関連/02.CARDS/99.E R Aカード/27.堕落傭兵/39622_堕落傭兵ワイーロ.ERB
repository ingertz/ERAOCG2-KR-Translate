@CARDCAN_39622(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39622)
SIF RESULT == 1
	RETURN 0



IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件名前 = 타락용병 와이로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,39622,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39622(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM サーチカード 
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 전초지효과
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39622,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 695
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所, "攻撃표시",1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == 특수소환時
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦無",1,1)
ELSEIF 종류 == ターン終了時強制
	전초지효과 = 1
	;前哨땅があれば2回行う。
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 타락용병의 전초지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		전초지효과 = 2
	REPEAT 전초지효과
		;攻撃力アップ処理
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
		;詐欺契約があればコストは상대가 払う。
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 타락용병의 사기계약
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT > 0
			CALL FULLRESET
			PRINTFORMW 타락용병 와이로는 왼손에 카메라를 들고 오른손엔 동전을 쥔 채 코인토스를 권유하고 있다. 
			PRINTFORMW 코인토스에서 뒤가 나오면 와이로는 덱에서 카드를 뽑게 해주는 것 같다.
			SELECTCASE RAND:2
				CASE 0
					PRINTW 코인은 앞이 나왔다!
				CASE 1
					PRINTW 코인은 뒤가 나왔다!

					CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
					IF RESULT != -1
						조교대상 = RESULT
						PRINTFORML 
						SETCOLOR C_PINK 
						PRINTFORMW 코인토스의 결과에 따라、타락용병 와이로는 몰래 촬영을 개시했다. 몰래 %NAME:조교대상%의 속옷사진을 찍고 카드를 뽑게 해주었다.
						RESETCOLOR
						CALL EROTIC_MOVE("パンツ晒し",조교대상,-1,300)
					ELSE
						PRINTFORML 
						PRINTFORMW 코인토스의 결과에 따라 와이로는 카드를 뽑게 해주었다.。
					ENDIF
					CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDSELECT
		;詐欺契約が無い경우、コストは자신이 払う
		ELSE
			CALL FULLRESET
			PRINTFORMW 타락용병 와이로는 왼손에 카메라를 들고, 오른손으론 동전을 쥔 채 코인토스를 권유하고 있다.
			PRINTFORMW 코인토스에서 뒤가 나오면 와이로는 상대가 카드를 뽑게 해주는 것 같다..
			SELECTCASE RAND:2
				CASE 0
					PRINTW 코인은 앞면이다！
				CASE 1
					PRINTW 코인은 뒷면이다！

					CALL CARD_EROTICS(상대プレイヤー,対面者)
					IF RESULT != -1
						조교대상 = RESULT
						PRINTFORML 
						SETCOLOR C_PINK 
						PRINTFORMW 코인토스의 결과로서、타락용병 와이로는 몰래 촬영을 개시했다. 몰래 %NAME:조교대상%의 속옷사진을 찍고 카드를 뽑게 해주었다.
						RESETCOLOR
						CALL EROTIC_MOVE("パンツ晒し",조교대상,-1,300)
					ELSE
						PRINTFORML 
						PRINTFORMW 코인토스의 결과로서 타락용병 와이로는 카드를 뽑게 해주었다.
					ENDIF
					CALL CARDDRAW_BASIC(対面者,1)
			ENDSELECT
		ENDIF
	REND
ENDIF

