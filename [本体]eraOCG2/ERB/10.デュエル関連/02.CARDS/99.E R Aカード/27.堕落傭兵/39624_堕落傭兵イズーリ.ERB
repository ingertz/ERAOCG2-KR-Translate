@CARDCAN_39624(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39624)
SIF RESULT == 1
	RETURN 0



IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件名前 = 타락용병 이즈리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,39624,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39624(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM サーチカード 
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 전초지효과
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39624,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 695
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所, "攻撃표시",1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == 특수소환時
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦無",1,1)
ELSEIF 종류 == ターン終了時強制
	전초지효과 = 1
	;前哨땅があれば2回行う。
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 타락용병의 전초지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		전초지효과 = 2
	REPEAT 전초지효과
		;詐欺契約があればコストは상대가 払う。
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 타락용병의 사기계약
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT > 0
			CALL FULLRESET
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML 
				SETCOLOR C_PINK 
				PRINTFORMW %NAME:조교대상%는 타락용병 이즈리에게 가슴을 희롱당한다.
				RESETCOLOR
				CALL EROTIC_MOVE("バスト조교",조교대상,-1,300)
			ELSE
				PRINTFORML 
				PRINTFORMW 타락용병 이즈리는 계약자의 엉덩이를 두르려 울분을 맑게했다.
			ENDIF
			ダメージ量 = モンスター数(対面者) + 마함数(対面者)
			ダメージ量 = ダメージ量 * 200
			CALL LIFE_CHANGE(対面者,"減少","효과",ダメージ量)
		;詐欺契約が無い경우、コストは자신이 払う
		ELSE
			CALL CARD_EROTICS(상대プレイヤー,対面者)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML 
				SETCOLOR C_PINK 
				PRINTFORMW %NAME:조교대상%는 타락용병 이즈리에게 가슴을 희롱당한다.
				RESETCOLOR
				CALL EROTIC_MOVE("バスト조교",조교대상,-1,300)
			ELSE
				PRINTFORML 
				PRINTFORMW 타락용병 이즈리는 주인의 엉덩이를 두드려 울분을 맑게했다.
			ENDIF
			ダメージ量 = モンスター数(듀얼리스트) + 마함数(듀얼리스트)
			ダメージ量 = ダメージ量 * 200
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
	REND
ENDIF

