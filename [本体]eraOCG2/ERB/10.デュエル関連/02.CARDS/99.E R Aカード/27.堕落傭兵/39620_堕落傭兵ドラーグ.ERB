@CARDCAN_39620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39620)
SIF RESULT == 1
	RETURN 0



IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件名前 = 타락용병 드래그
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,39620,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39620(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM サーチカード 
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 전초지효과
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39620,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 695
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所, "攻撃표시",1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == 특수소환時
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦無",1,1)
ELSEIF 종류 == ターン終了時強制
	전초지효과 = 1
	;前哨땅があれば2回行う。
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 타락용병의 전초지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		전초지효과 = 2
	REPEAT 전초지효과
		;詐欺契約があればコストは상대가 払う。
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 타락용병의 사기계약
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT > 0
			CALL FULLRESET
			CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				조교대상 = RESULT
				CALL FULLRESET
				;조교대상が牝性・ふたなりで薬Ｃが３個 이상의 場合強姦する。
				IF GETVAR(@"%対面者%_薬Ｃ") >= 3 && TALENT:조교대상:성별 != 2
					PRINTFORML 
					SETCOLOR C_PINK 
					PRINTFORMW %NAME:조교대상%은 미독에 빠져가는 가운데, 타락용병 드래그에게 범해지고 있다.。
					RESETCOLOR
					CALL EROTIC_MOVE("前穴凌辱",조교대상,-1,300)
					IF GETVAR(@"%対面者%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%対面者%_薬Ｃ") * 200
						CALL LIFE_CHANGE(対面者,"減少","효과",ダメージ量)
					ENDIF
				;조교대상が雄性の場合で薬Ｃが３個 이상의 場合殴るのみ。
				ELSEIF GETVAR(@"%対面者%_薬Ｃ") >= 3
					PRINTFORML 
					PRINTFORMW 타락용병 드래그는 최음독에 먹히고 있는 %NAME:조교대상%를 때리며 화를 가라앉히고 있다.
					RESETCOLOR
					IF GETVAR(@"%対面者%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%対面者%_薬Ｃ") * 200
						CALL LIFE_CHANGE(対面者,"減少","효과",ダメージ量)
					ENDIF
				;조교대상의 薬Ｃが３個未満の場合は盛るだけ。
				ELSE 
					PRINTFORMW 타락용병 드래그는 계약주에게 수상한 음료를 건네고 있다.
				ENDIF
			ELSE
				;조교대상ではない경우、薬毒Ｃが３個以上でも殴るのみ
				IF GETVAR(@"%対面者%_薬Ｃ") >= 3
					PRINTFORML 
					PRINTFORMW 타락용병 드래그에 먹힌 계약주를 때리며 울분을 삭히고 있다.
					RESETCOLOR
					IF GETVAR(@"%対面者%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%対面者%_薬Ｃ") * 200
						CALL LIFE_CHANGE(対面者,"減少","효과",ダメージ量)
					ENDIF
				;조교대상ではない場合で薬毒Ｃが３個未満の場合は盛るだけ
				ELSE
					PRINTFORML 
					PRINTFORMW 타락용병 드래그는 계약주에게 수상한 음료를 건네고 있다.
					RESETCOLOR
				ENDIF
			ENDIF
		ELSE
			;詐欺契約が無い경우、コストは자신이 払う
			CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,,1)
			CALL CARD_EROTICS(상대プレイヤー,対面者)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML 
				SETCOLOR C_PINK 
				PRINTFORMW %NAME:조교대상%는 타락용병 드래그에게 수상한 음료를 권유받고 있다.
				RESETCOLOR
				IF GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3 && TALENT:조교대상:성별 != 2
					PRINTFORML 
					SETCOLOR C_PINK 
					PRINTFORMW %NAME:조교대상%은 미독에 빠진 채로、타락용병 드래그에게 범해지고 있다.
					RESETCOLOR
					CALL EROTIC_MOVE("前穴凌辱",조교대상,-1,300)
					IF GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%듀얼리스트%_薬Ｃ") * 200
						CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
					ENDIF
				ELSEIF  GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3
					PRINTFORML 
					PRINTFORMW 타락용병 드래그은 미독에 먹혀가는 %NAME:조교대상%를 때리며 화를 삭히고 있다.
					RESETCOLOR
					IF GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%듀얼리스트%_薬Ｃ") * 200
						CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
					ENDIF
				ENDIF
			ELSE
				IF GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3
					PRINTFORML 
					PRINTFORMW 타락용병 드래그는 미독에 먹혀가는 주인을 때리며 화를 삭히고 있다。
					RESETCOLOR
					IF GETVAR(@"%듀얼리스트%_薬Ｃ") >= 3
						ダメージ量 = GETVAR(@"%듀얼리스트%_薬Ｃ") * 200
						CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
					ENDIF
				ELSE
					PRINTFORML 
					PRINTFORMW 타락용병 드래그는 주인에게 수상한 음료를 권유하고 있다.
					RESETCOLOR
				ENDIF
			ENDIF
		ENDIF
		;공격력은 上がる。
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
	REND
ENDIF

