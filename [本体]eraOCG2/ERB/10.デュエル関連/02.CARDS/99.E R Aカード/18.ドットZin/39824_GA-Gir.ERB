#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 가가가 걸.zin
	CASE "略称"
		RESULTS = GA-Gir.zin
	CASE "カテゴリ"
		RESULTS:0 = 닷진
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39824(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
