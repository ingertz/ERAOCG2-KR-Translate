@CARDCAN_39821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39821)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39821)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39821,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
	RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 닷진
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL CAT_CHECK("E.R.A",듀얼리스트,戦闘場所(듀얼리스트,1),1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상 
#DIM DYNAMIC 対面대상
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39821,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과추가カテ = E.R.A
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			CALL CARD_EROTICS(他参照選択カードID)
			IF RESULT != -1
				対面대상 = RESULT
				PRINTFORMW %CALLNAME:竿役대상%는 갑작스레 몸 전체에 열이 올라, 생각이 분홍색으로 물들어간다.
				PRINTFORMW 그대로 최면에 걸린 듯 %CALLNAME:竿役대상%는 %듀얼리스트%의 필드로 걸어가며, 곧 일어날 일에 심장이 뛰기 시작했다.
			ENDIF
			CALL FULLRESET
			효과추가종류 = 695
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所, "攻撃표시",1)

			CALL CARD_EROTICS(39821)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORMW %CALLNAME:조교대상%는 갑자기 몸이 열에 휩싸여 달뜬 상태로 소환되어 버렸다.
				PRINTFORMW 평소보다 더 진한 젖소 가슴을 흔들며, 무거운 소리를 내며 울린다.  %CALLNAME:조교대상%는 음란하게 부드러워 보이는 육체를 드러냈다.
				CALL EROTIC_MOVE("晒しもの",조교대상)
			ENDIF
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = E.R.A
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"表固")
	IF 戦闘場所(듀얼리스트) == 場所 && 戦闘場所(듀얼리스트,1) != 5
		CALL CAT_CHECK("E.R.A",듀얼리스트,戦闘場所(듀얼리스트,1),1)
		SIF RESULT == 1
			CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"戦耐")
	ENDIF
ELSEIF 종류 == 常在無効
	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"無効")
ELSEIF 종류 == 攻撃時強制誘発
	CALL DOT_ZIN_ACT(듀얼리스트,39821,戦闘カードID(듀얼리스트,1))
ENDIF

