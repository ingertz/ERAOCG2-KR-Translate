@CARDCAN_79602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79602)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件성별 = 牝性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 装備先
		RETURN 0

	IF 戦闘場所(듀얼리스트,1) != 5
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		SIF RESULT != 牝性
			RETURN 0
	ELSEIF 듀얼리스트 == "자신"
		SIF OPPOSER == -1
			RETURN 0
		SIF TALENT:OPPOSER:성별 == 2
			RETURN 0
	ELSEIF 듀얼리스트 == "상대"
		SIF TALENT:MASTER:성별 == 2
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_79602(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 装備先
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 実行役대상
#DIM DYNAMIC 자신戦闘
#DIM DYNAMIC 상대戦闘

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79602)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		;효과範囲상대필드 = 1
		효과条件성별 = 牝性 
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79602)
	IF RESULT == 0
		CALL CARD_EROTICS_FIELD(装備者,"필드",装備先)
		SIF RESULT != -1
			実行役대상 = RESULT

		자신戦闘 = 戦闘場所(듀얼리스트)
		상대戦闘 = 戦闘場所(듀얼리스트,1)
		CALL SET_FIELD_INFO(装備者,"필드",자신戦闘,"発情",2,1)

		IF 戦闘場所(듀얼리스트,1) != 5
			CALL SET_FIELD_INFO(対面者,"필드",상대戦闘,"発情",2,1)
			CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
			IF RESULT != -1
				조교대상 = RESULT
			ENDIF
		ELSE
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				조교대상 = RESULT
			ENDIF
		ENDIF
		IF 조교대상 >= 0
			PRINTFORML %CALLNAME:조교대상%는 발정한 몬스터에게 덮쳐지고 말았다.
			CALL EROTIC_MOVE("ディ-プ키스",조교대상, 実行役대상,200)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"戦耐")
ELSEIF 종류 == 攻守変動
	;装備モンスターがいないときは自壊する	
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,-700)
ENDIF



