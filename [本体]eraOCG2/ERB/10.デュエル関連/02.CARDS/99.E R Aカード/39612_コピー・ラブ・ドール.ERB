@CARDCAN_39612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상 = -1
#DIMS DYNAMIC 変身カード名

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39612)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39612)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;例外処理のため
	CALL CARD_SS_CHECK(듀얼리스트,0,"",1)
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT > -1
		조교대상 = NO:RESULT
		TRYCALLFORM CARDNAME_{조교대상}("名前")
		変身カード名 = %RESULTS%
		SIF 変身カード名 == ""
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	SIF 발동済_2(듀얼리스트,39612)
		RETURN 0
	CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT > -1
		조교대상 = NO:RESULT
		TRYCALLFORM CARDNAME_{조교대상}("名前")
		変身カード名 = %RESULTS%
		SIF 変身カード名 == ""
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_39612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 変身カード名

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39612,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,消滅行き)
		CALL FULLRESET
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		조교대상 = NO:RESULT
		SIF 조교대상 == 0
			조교대상 = 99999
		VARSET RESULTS
		TRYCALLFORM CARDNAME_{조교대상}("名前")
		変身カード名 = %RESULTS%
		IF 変身カード名 != ""
			CALL FULLRESET
			효과추가종류 = 効追無効
			CALL CARD_GENERATE(対面者,조교대상)
			PRINTFORMW 카피 러브돌은 %変身カード名%로 모습을 바꾸어 상대 필드에 나타났다!
		ELSE
			PRINTFORMW 카피 러브돌은 변신에 실패했다…….
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39612,2)
	IF RESULT == 0

		CALL FULLRESET
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		조교대상 = NO:RESULT
		TRYCALLFORM CARDNAME_{조교대상}("名前")
		変身カード名 = %RESULTS%
		IF 変身カード名 != ""
			CALL CARD_RECONSTRUCT(듀얼리스트,ゾーン,場所,조교대상)
			PRINTFORMW 카피 러브돌은 %変身カード名%로 모습을 바꿨다!
			소환権 ++
		ENDIF
	ENDIF
ENDIF
