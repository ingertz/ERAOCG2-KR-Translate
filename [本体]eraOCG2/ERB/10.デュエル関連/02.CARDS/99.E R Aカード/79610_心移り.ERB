@CARDCAN_79610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79610)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力상승値
#DIM DYNAMIC 조교대상
#DIM DYNAMIC レイプ횟수
#DIM DYNAMIC 寝取り成功
#DIM DYNAMIC 元持ち主
#DIM DYNAMIC 절정횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79610)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件성별 = 牝性 
		효과추가종류 = 3
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		選択カード = GETVAR(@"%듀얼리스트%_필드:コントロール先")
		元持ち主 = GETVAR(@"%듀얼리스트%_MZ_所有:コントロール先")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"戦無",1,1)
		IF 듀얼리스트 == "자신"
			IF HAS_PENIS(MASTER)
				CALL CARD_EROTICS(選択カード)
				IF RESULT != -1
					조교대상 = RESULT
					PRINTFORML 신체의 자유를 빼앗긴 %CALLNAME:조교대상%는 %CALLNAME:MASTER%를 억울한 듯이 노려보면서,
					PRINTFORMW 허벅다리를 벌리고, 야시시한 포즈로 어필하고 있다.
					PRINTFORM 그리고 %CALLNAME:MASTER%의 
					IF TALENT:MASTER:형태 == 0 || TALENT:MASTER:형태 == 4
						PRINTFORM 훌륭한 
					ELSEIF TALENT:MASTER:형태 <= 3
						PRINTFORM 허접한 
					ELSEIF TALENT:MASTER:형태 >= 5
						PRINTFORM 커다란 
					ENDIF
					PRINTFORML 육봉을 앞에 두고, 군침을 삼켰다.
					IF TALENT:MASTER:형태 == 0
						レイプ횟수 = 4
					ELSE
						レイプ횟수 = (TALENT:MASTER:형태) - 1
					ENDIF
					;PRINTFORML {レイプ횟수}
					FOR カウンタ,0,レイプ횟수
						CALL EROTIC_MOVE("前穴凌辱",조교대상,MASTER,200)
						;PRINTFORMW 절정횟수:{RESULT:1}		
						절정횟수 += RESULT:1
						SIF 절정횟수 >= 10
							寝取り成功 = 1
					NEXT
					IF 寝取り成功 == 1
						PRINTFORML %CALLNAME:조교대상%는 당신의 자지에 완전히 패배해, 야한 표정으로 볼일 다 본 그것을 혀로 할짝이고 있다.
						CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"所有",1,1)
						IF 選択カード < 100000
							IF 듀얼리스트 == "자신" && 元持ち主 == 2
								CALL CARD_GET_SINGLE(選択カード,1)
								PRINTFORML
							ENDIF
						ENDIF
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


