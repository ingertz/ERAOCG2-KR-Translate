@CARDCAN_59760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59760)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,59760)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,59760)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 어둠속성
	효과条件종족 = 기계족
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59760,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		FOR カウンタ,0,3
			CALL CARD_DISPOSE(対面者,"덱",0,제외行き)
		NEXT		
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通")

	CALL FULLRESET
	효과範囲상대제외 = 1
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,上書きモード)
ELSEIF 종류 == バトル開始時強制
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",2,1)

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59760,2)
	IF RESULT == 0
        CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
		CALL SHUFFLE(듀얼리스트)
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",300)
		CALL FULLRESET
		효과条件속성 = 어둠속성
		효과条件종족 = 기계족
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
    ENDIF

ENDIF