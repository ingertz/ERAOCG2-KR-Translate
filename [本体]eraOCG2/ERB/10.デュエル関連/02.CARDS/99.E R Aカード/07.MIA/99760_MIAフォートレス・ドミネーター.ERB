@CARDCAN_99760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99760)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン終了時
	SIF 발동済_3(듀얼리스트,99760)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,99760)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,99760)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_99760(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC カード추가先
#DIM DYNAMIC 所有者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == ターン終了時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99760,3)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			所有者 = 2
		ELSE
			所有者 = 1
		ENDIF
		CALL FULLRESET
		カード추가先 = 現제외数(対面者)
		CALL CARD_RECONSTRUCT(対面者,"제외",カード추가先,39760)
		PRINTFORML 
		PRINTFORMW %対面者%의 제외 존에 MIA 파워유닛이 증가했다.
	ENDIF
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99760,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대묘지 = 1
			효과条件성별 = 牝性
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				選択カード_ID = GETVAR(@"%対面者%_%参照先（CS）%:選択カード")
				TRYCALLFORM CARDNAME_{選択カード_ID}("名前")
				PRINTFORML 
				PRINTFORMW 검은 요새에 떨어진 %RESULTS%는 MIA의 새로운 희생자가 되었다.
				CALL CARD_RECONSTRUCT(対面者,参照先（CS）,選択カード,39761)
				CALL CARD_EROTICS(選択カード_ID)
				IF RESULT != -1
					조교대상 = RESULT
					CALL EROTIC_MOVE("拷問処理",조교대상,-1,500)
				ENDIF
				CALL CARD_ADD(듀얼리스트,本参照先（CS）, "손패", 選択カード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99760,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = MIA
		효과条件종류 = 엑시즈
		효과条件レベル = 4
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
