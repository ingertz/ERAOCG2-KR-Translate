VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = MIA 도미네이터 포트리스
	CASE "略称"
		RESULTS = MIA도미네이터F
	CASE "カテゴリ"
		RESULTS:0 = MIA
		RESULTS:1 = E.R.A
ENDSELECT


