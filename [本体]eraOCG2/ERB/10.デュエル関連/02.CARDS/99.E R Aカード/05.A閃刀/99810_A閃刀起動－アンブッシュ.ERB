@CARDNAME_99810,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = A섬도초동－앰부시
	CASE "略称"
		RESULTS = A섬초－AMBUSH
	CASE "カテゴリ"
		RESULTS:0 = A섬도
		RESULTS:1 = E.R.A
		RESULTS:2 = 섬도
ENDSELECT


@CARD_99810(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 通常함정
ENDSELECT

RETURN 0

