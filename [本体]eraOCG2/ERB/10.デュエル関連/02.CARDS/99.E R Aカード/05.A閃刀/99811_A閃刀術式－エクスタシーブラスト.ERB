@CARDNAME_99811,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = A섬도술식－엑스터시 블래스트
	CASE "略称"
		RESULTS = A섬술－ECSTASY
	CASE "カテゴリ"
		RESULTS:0 = A섬도
		RESULTS:1 = E.R.A
		RESULTS:2 = 섬도
ENDSELECT


@CARD_99811(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_99811(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL 이 카드의 효과는 자신 필드에 "A섬도희－아자레아」 몬스터가 존재할 경우에만 사용할 수 있다。
CALL CARD_ABLE(1,마함起動)
PRINTL ①：상대 필드의 암컷 몬스터 1장을 대상으로 발동할 수 있다。
PRINTL 그 몬스터를 파괴하고, 덱에서 "A섬도」 카드 1장을 묘지로 보낸다。
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_99811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99811)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = A섬도희－아자레아
	효과条件名前:1 = A섬도희－아자레아 인덜전스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = A섬도
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = A섬도희－아자레아
	효과条件名前:1 = A섬도희－아자레아 인덜전스

	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_99811(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99811)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		IF RESULT != 0
			CALL CARD_EROTICS(他参照選択カードID)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORMW %CALLNAME:조교대상%는 분홍색 빛에 직격당하마자 전신을 경련하며 무너져 내렸다。
				PRINTFORMW 질구에서 애액을 흘리며 경련하듯 허리를 떨고 있는 %CALLNAME:조교대상%을、
				PRINTFORMW 아자레아는 조롱과 함께 발로 걷어차버렸다。
				CALL EROTIC_MOVE("절정光線",조교대상,-1,300)
			ENDIF
			CALL FULLRESET
			효과条件カテゴリ = A섬도
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99811)
	IF RESULT == 0
	ENDIF
ENDIF
