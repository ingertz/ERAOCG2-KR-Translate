@CARDNAME_39710,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = A섬도희－아자레아
	CASE "略称"
		RESULTS = A섬도희 아자레아
	CASE "カテゴリ"
		RESULTS:0 = A섬도희
		RESULTS:1 = A섬도
		RESULTS:2 = E.R.A
		RESULTS:3 = 섬도
		RESULTS:4 = 섬도희
ENDSELECT


@CARD_39710(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN  효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 1500
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		RETURN 2003
ENDSELECT

RETURN 0

