	素材条件カテゴリ = A섬도희
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,39716) 
	RETURN RESULT
ENDIF



@CARDCAN_39716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39716)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39716)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件성별 = 牝性
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == リアクション효과 || 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT == 0
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_39716(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊カード
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39716,1)
	IF RESULT == 0
	REPEAT 3
		CALL FULLRESET
		효과条件성별 = 牝性
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"EX덱",選択カード)
		ENDIF
	REND
ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件성별 = 牝性
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正)	


ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"함정耐")

	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦耐")
ELSEIF 종류 == 常在無効
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効")

		
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
			CONTINUE
			
		CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORMW 에너지 추출 장치에 삼켜진 %CALLNAME:조교대상%는 끊임없는 쾌락에 환희하며 미친듯이 가버리고 있다。
			CALL EROTIC_MOVE("생체파츠",조교대상,-1,200)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1)
		ENDIF
	NEXT
ENDIF


