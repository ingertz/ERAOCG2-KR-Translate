@CARDNAME_39607,参照先
;ココ39607で지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 봉음구를 통솔하는 여왕
	CASE "略称"
		RESULTS = 봉음구통솔여왕
	CASE "カテゴリ"
		RESULTS:0 = 봉음구
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39607(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS


SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

