VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 봉음구의 조교사
	CASE "略称"
		RESULTS = 봉음구 조교사
	CASE "カテゴリ"
		RESULTS:0 = 봉음구
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39609(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS


SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

