PRINTL 이 카드에 미약 카운터를 1개 두고, 상대 플레이어는 이 카드에 놓여진 미약카운터X200LP 를 회복한다.
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_39801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39801)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39801)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 트립아로마지-재스민-
	효과条件종족 = 식물족
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,39801)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件名前 = 트립아로마지-재스민-
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 回復量
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39801,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = 트립아로마지-재스민-
		효과条件종족 = 식물족
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF モンスター数(対面者) > 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
				IF RESULT == 1
					選択カード = RESULT:1
					CALL CARD_SELECT(듀얼리스트,選択カード)
					選択カード = RESULT
					CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
					IF RESULT != -1
						조교대상 = RESULT
						PRINTFORML 
						SETCOLOR C_PINK 
						PRINTFORML %NAME:조교대상%은 재스민이 피우는 미향에 의해 발정했다!
						RESETCOLOR
						CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1391),200)
					ENDIF
					CALL STATCHANGE_EFFECT(対面者,"자신",選択カード,"発情",2)
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)
				ENDIF
			ENDIF
			SS소환可能종족 = 식물족
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39801,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML 
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%의 몸에 재스민의 꽃이 피었다!
			RESETCOLOR
			CALL EROTIC_MOVE("淫紋の疼き",조교대상,NO_TO_CHARANUM(1391),200)
		ENDIF
		CALL CARD_ADD(対面者,"상대묘지","마함",場所)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_EROTICS(상대プレイヤー,対面者)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML 
		SETCOLOR C_PINK 
		PRINTFORMW %NAME:조교대상%은 몸에 핀 재스민의 꽃으로부터 힘을 빨아들여졌다!
		RESETCOLOR
		CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1391),200)
	ENDIF

	CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,,1)
	回復量 = GETVAR(@"%듀얼리스트%_薬Ｃ") * 200
	CALL LIFE_CHANGE(対面者,"増加","효과",回復量)
ENDIF
