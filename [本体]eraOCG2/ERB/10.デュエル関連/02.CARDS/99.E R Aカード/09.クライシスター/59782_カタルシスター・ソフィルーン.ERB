@CARDSUMMON_59782(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 10
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件名前:0 = 마르코시아스의 악령
	素材条件名前:1 = 크라이시스타 마르파
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件종족 = 마법사족
	素材条件속성 = 빛속성
ENDIF
IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,59782)
	RETURN RESULT
ENDIF


@CARDCAN_59782(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59782)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,59782)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 악령
		효과条件종류 = 마함全般
		효과条件分割 = 효과なし
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,59782)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 악령
		효과条件종류 = 마함全般
		효과条件分割 = 효과なし
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,59782)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
    CALL FULLRESET
    CALL CARD_CHECK_START_DATA(듀얼리스트,1)
    SIF RESULT != 1
        RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件スーパー종류 = モン全般
	효과条件カテゴリ = 악령
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_言発:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_言発:場所") == 0
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59782(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件달성A
#DIM DYNAMIC 条件달성B

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59782,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 악령
		효과条件종류 = 마함全般
		효과条件分割 = 효과なし
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성A ++
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성B ++
		IF 듀얼리스트 == "자신"
		PRINTFORML
		PRINTFORML 어느 쪽을 설치합니까?
		PRINTFORML 
		SIF 条件달성A != 0
			PRINTFORML [0] - 자심 묘지의「악령」카드
		SIF 条件달성B != 0
			PRINTFORML [1] - 상대 필드의 몬스터
		PRINTFORML
		BINPUT
		ENDIF
		IF RESULT == 0 || (듀얼리스트 == "상대" && 条件달성A > 0)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 악령
			효과条件종류 = 마함全般
			효과条件分割 = 효과なし
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
			IF RESULT == 1 && GETVAR(@"%듀얼리스트%_MZ_言発:場所") != 0
				PRINTFORML
				PRINTFORML
				SETCOLOR C_PINK
				PRINTFORML 악마에 매료된 소피렌느는 악령을을 불러들였다....!
				RESETCOLOR
				PRINTFORML
				CALL EROTIC_MOVE("全身凌辱",NO_TO_CHARANUM(2102),-1,500)
				CALL EROTIC_MOVE("全身凌辱",NO_TO_CHARANUM(2103),-1,500)
			ENDIF
		ELSE
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件종류 = モン全般
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
			選択カード = RESULT:1
			CALL CARD_EROTICS(選択カード)
			IF RESULT != -1 && GETVAR(@"%듀얼리스트%_MZ_言発:場所") != 0
				조교대상 = RESULT
				PRINTFORML
				PRINTFORML
				SETCOLOR C_PINK
				PRINTFORML 악령에 저항할 수 없는 소피렌느는 자신들의 몸을 사용해 %CALLNAME:조교대상%에게 봉사해, 자신들의 포로로 만들었다...!
				RESETCOLOR
				PRINTFORML
				CALL EROTIC_MOVE("全身애무",조교대상,-1,500)
			ENDIF
		ENDIF
		VARSET 条件달성A
		VARSET 条件달성B
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59782,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 악령
		효과条件スーパー종류 = モン全般
		효과条件표시 = 10
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		조교대상 = RESULT:1
		TRYCALLFORM CARDNAME_{조교대상},"カテゴリ"
		IF RESULTS == "悪霊" && GETVAR(@"%듀얼리스트%_MZ_言発:場所") != 0
			PRINTFORML
			PRINTFORML
			PRINTFORML 소피렌느는 보다 깊게 악령을 수중에 넣어 힘을 해방시켰다!
			PRINTFORML
			CALL EROTIC_MOVE("全身애무",NO_TO_CHARANUM(2102),-1,500)
			CALL EROTIC_MOVE("全身애무",NO_TO_CHARANUM(2103),-1,500)
			PRINTFORML
			PRINTFORML 소피렌느는 시커먼 대궁을 사용해 화살을 당기며,
			PRINTFORMW 당신이 지정한 카드를 쏘아 맞췄다!
		ELSEIF GETVAR(@"%듀얼리스트%_MZ_言発:場所") != 0
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				PRINTFORML
				PRINTFORML
				PRINTFORML 소피렌느는 %NAME:RESULT%를 악령에게 제물로 바쳐, 힘을 해방시켰다!
				PRINTFORML
				CALL EROTIC_MOVE("全身애무",RESULT,-1,500)
			ENDIF
		PRINTFORML
		PRINTFORML 소피렌느는 시커먼 대궁을 사용해 화살을 당기며,
		PRINTFORMW 당신이 지정한 카드를 쏘아 맞췄다!
		ENDIF
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"덱")
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == ターン終了時強制
	PRINTFORML
	PRINTFORML
	SETCOLOR C_PINK
	PRINTFORML 소피아와 이렌느의 몸과 영혼은 지금도 악령에게 침식 당하고 있다...!
	RESETCOLOR
	PRINTFORML
	CALL EROTIC_MOVE("全身애무",NO_TO_CHARANUM(2102),-1,500)
	CALL EROTIC_MOVE("全身애무",NO_TO_CHARANUM(2103),-1,500)
ELSEIF 종류 == 攻撃時強制誘発
	PRINTFORML 소피렌느는 군데군데 녹슨 총을 한 손으로 잡으며,
	PRINTFORMW 상대 몬스터를 벌집으로 만들었다!
ENDIF

