		RESULTS:1 = E.R.A
ENDSELECT


@CARD_59782(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 싱크로
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 3000
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		SELECTCASE RAND:2
			CASE 0
				RESULT:1 = 2103
				RETURN 2102
			CASE 1
				RESULT:1 = 2102
				RETURN 2103
		ENDSELECT

ENDSELECT

RETURN 0

