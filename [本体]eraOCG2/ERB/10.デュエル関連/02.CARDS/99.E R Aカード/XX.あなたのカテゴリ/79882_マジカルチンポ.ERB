@CARDNAME_79882,参照先
;ココ79882で지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 매지컬 자지
	CASE "略称"
RESULTS = 매직자지
	CASE "カテゴリ"
RESULTS:0 = 당신
RESULTS:1 = E.R.A
	CASE "生産불가"
		RETURN 1
	CASE "추가日"
		RETURN 250507
ENDSELECT


@CARD_79882(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 装備마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_79882(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTFORML 「듀얼리스트 %CALLNAME:MASTER%」에게만 장착 가능。
PRINTL 「매지컬 자지」는 자신 필드위에 １장밖에 앞면표시로 존재 할 수 없다。
CALL CARD_ABLE(1,攻守変動)
PRINTL ①：장착몬스터의 공격력은 원래 공격력의 배가 된다。
SETCOLOR C_GRAY
PRINTL 마스터가 매지컬자지를 갖고있을 경우、장착몬스터의 공격력은 원래 공격력의 ３배가 된다。
RESETCOLOR
CALL CARD_ABLE(2,지속효과)
PRINTL ②：장착몬스터는 관통공격과 완전내성을 얻는다。
IF TALENT:MASTER:매지컬자지 == 1
	PRINTFORML ③：자신 필드에「듀얼리스트 %CALLNAME:MASTER%」가 존재하는 한、이 카드는 상대의 효과로는 파괴되지 않는다。
ELSE
	SETCOLOR C_GRAY
	PRINTFORML %CALLNAME:MASTER%가 매지컬자지를 갖고있을 때、진정한 효과가 나타난다…
	RESETCOLOR
ENDIF
CALL TEXT_DECORATION("ROGUE")


@CARDCAN_79882(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 装備先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79882)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 듀얼리스트 %CALLNAME:MASTER%
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
효과条件名前 = 매지컬 자지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動 || 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	RETURN 1

ENDIF

@CARDEFFECT_79882(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 装備先
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 쾌락ダメージ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79882)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		;효과範囲상대필드 = 1
효과条件名前 = 듀얼리스트 %CALLNAME:MASTER%
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}("攻撃力")
	攻撃力修正 = RESULT
	SIF TALENT:MASTER:매지컬자지 == 1
		攻撃力修正 = (攻撃力修正 * 2)
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,攻撃力修正)

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"貫通")
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"함정耐")

	IF TALENT:MASTER:매지컬자지 == 1
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 듀얼리스트 %CALLNAME:MASTER%
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"破耐")
	ENDIF
ELSEIF 종류 == リアクション효과
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		IF 조교대상 >= 0
			SETCOLOR C_PINK
			PRINTFORML 
			PRINTFORMW %CALLNAME:조교대상%는 매지컬 자지에서 눈을 떼지 못하고있다…
			PRINTFORMW ……
			IF ABL:조교대상:욕망 < 5
				SELECTCASE RAND:3 + 1
					CASE 1
						PRINTFORMW …
					CASE 2
						PRINTFORMW …
						PRINTFORMW %CALLNAME:조교대상%는 눈을 돌리려 하고있지만、자지에 못이 박힌듯 하다…
						IF ABL:조교대상:욕망 < 3
							PRINTFORMW %NAME:조교대상%의 『욕망』이 1올랐다！	
							ABL:조교대상:욕망 += 1
						ENDIF
						CALL EROTIC_MOVE("노출単発",조교대상,-1,100)
					CASE 3
						PRINTFORMW …
						PRINTFORMW %CALLNAME:조교대상%는 참지 못하고 자지를 반찬삼아 자위하기 시작했다…
						IF ABL:조교대상:욕망 < 5
							PRINTFORMW %NAME:조교대상%의 『욕망』이 1올랐다！	
							ABL:조교대상:욕망 += 1
						ENDIF
						CALL EROTIC_MOVE("催眠자위",조교대상,-1,100)
				ENDSELECT
			ELSE
				PRINTFORMW …
				PRINTFORMW %CALLNAME:조교대상%는 참지못하고 자지를 물기 시작했다…
				CALL EROTIC_MOVE("催眠自発スロ-ト",조교대상,-1,100)
			ENDIF
			RESETCOLOR
		ENDIF
	ENDIF
ENDIF
