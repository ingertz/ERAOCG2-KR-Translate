@CARDCAN_39772(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39772)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,39772)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대손패 = 1
	효과範囲상대마함 = 1
	효과条件종류 = 마함全般
	효과条件표시 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_3(듀얼리스트,39772)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,0,"",1)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39772(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 除去횟수
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39772,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대손패 = 1
		효과範囲상대마함 = 1
		효과条件종류 = 마함全般
		효과条件표시 = 0
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		除去횟수 = RESULT
		IF 除去횟수 != 0
			CALL FULLRESET
			효과範囲상대손패 = 1
			효과範囲상대마함 = 1
			효과条件종류 = 마함全般
			효과条件行先플래그 = 덱行き
			효과条件複数 = 除去횟수
			효과条件표시 = 0
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

			FOR カウンタ, 0, 除去횟수
				CALL FULLRESET
				효과条件行先플래그 = 묘지行き
				효과条件성별 = 牝性
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대EX덱",ゾーン,場所)
				조교대상 = RESULT:1
				CALL CARD_EROTICS(조교대상)
				IF RESULT > 0
					조교대상 = RESULT
					PRINTFORML
					SETCOLOR C_PINK
					PRINTFORMW %CALLNAME:조교대상%는 음교의 야연(사바트)에 끌려들어갔다…！
					RESETCOLOR
					PRINTFORML
					CALL EROTIC_MOVE("全身凌辱",조교대상, -1, 500)
				ENDIF
			NEXT
		ENDIF
		CALL SHUFFLE(対面者)
	ENDIF
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39772,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대덱 = 1
		효과範囲상대묘지 = 1
		효과条件성별 = 牝性 
		효과추가종류 = 効追無効
		효과条件特不無視 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,,1)
	ENDIF
ENDIF

