@CARDCAN_99601(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99601)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	SIF モンスター数(듀얼리스트) != 0
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_99601(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5

#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99601)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF 戦闘場所(듀얼리스트,1) != 5 && モンスター数(듀얼리스트) == 0
			IF 戦闘カードID(듀얼리스트,1) != -1
				TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
				SIF RESULT == 牝性
					CALL CARD_RESERV(듀얼리스트,99601)
			ENDIF
		ENDIF
		CALL FULLRESET
		효과条件표시 = 1
		효과추가종류 = 2
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
		CALL EVADE_ATTACK(듀얼리스트)

	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과추가종류:1 = 695
	효과条件표시 = 表側표시
	효과条件성별 = 牝性
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",カウンタ,"強奪")
	SIF RESULT == 1
		条件달성 = 1
	IF 条件달성 && 듀얼리스트 == "자신"
PRINTL 상대 필드의 하인들이 당신에게 애교를 부리며 몸을 끌어당겼다.
PRINTL 지금 이 순간부터 당신은 그녀들의 주인 ...... 그녀들을 어떻게 할지도 당신의 자유입니다.
	ENDIF
ENDIF

