@CARDCAN_79621(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79621)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트,1)
	SIF RESULT == -1
		RETURN 0
	SIF TALENT:RESULT:성별 == 2
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_79621(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC ランダム제외
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 절정数
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79621)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		ダメージ量 = ABL:MASTER:기교 * 50
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML 
			SETCOLOR C_PINK 
			IF TALENT:조교대상:성별 != 2
				PRINTFORMW 이 카드의 발동 처리후, 플레이어는 상대 플레이어에게 더듬기 플레이를 할 수 있게 되었다!
				PRINTFORMW %NAME:조교대상%는 당신에게 보지를 농락당하고 있다!
			ENDIF
			RESETCOLOR
			CALL EROTIC_MOVE("손가락入れ",조교대상,MASTER,ダメージ量)
			절정数 = RESULT:1
		ENDIF

		PRINTFORML 직전에 절정했어? 라는 질문에 대해, 상대는 
		IF 절정数 >= 1
			PRINTFORML 「네……」라고 경련하며 대답하고 말았다……
			CALL CARDDRAW_BASIC(듀얼리스트,2)
		ELSE

			PRINTFORML 「아니」라는 분노 섞인 대답이 돌아와, 서투르다고 힐책당했다…….
			REPEAT 3
				SIF 現EX山札数(듀얼리스트) <= 0
					BREAK
				ランダム제외 = RAND:現EX山札数(듀얼리스트)
				CALL CARD_DISPOSE(듀얼리스트,"EX덱",ランダム제외,제외行き)
			REND
		ENDIF
	ENDIF
ENDIF
