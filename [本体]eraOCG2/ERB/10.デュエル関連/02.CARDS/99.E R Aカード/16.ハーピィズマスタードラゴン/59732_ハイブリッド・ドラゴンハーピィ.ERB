CALL CARD_ABLE(10,필드起動,フリー誘発)
PRINTL ①：１턴에 １번、자신 / 상대턴에 발동할 수 있다。
PRINTL 자신의 묘지 / 제외 상태인 "해피" 카드 １장을 덱아래로 되돌리고、
PRINTL 상대의 마법＆함정 존의 카드 １장을 덱아래로 되돌린다。
CALL CARD_ABLE(2,攻撃時強制誘発)
PRINTL ②：이 카드가 수컷몬스터와 전투하는 공격선언시에 발동한다。
PRINTL 전투하는 수컷몬스터를 파괴하고、그 공격력만큼의 데미지를 상대에게 주고、이 카드에 개별카운터를 １개 놓는다。
CALL CARD_ABLE(3,ターン終了時)
PRINTL ③：자신 / 상대의 엔드 페이즈에、이 카드에 개별카운터가 놓여있는 경우에 발동할 수 있다。
PRINTL 이 카드의 개별카운터를 １개 제거하고、
PRINTL 덱에서 레벨４ 이하의 "해피" 몬스터 １장을 특수 소환한다。
CALL TEXT_DECORATION("ROGUE")


@CARDCAN_59732(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59732)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,59732)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲묘지 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件名前 = 하이브리드 드래곤 해피
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 해피
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件除去種 = 덱行き
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_3(듀얼리스트,59732)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") == 0
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 해피
	효과条件종류 = モン全般
	CALL 효과条件レベル_ADV(4,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_59732(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 戦闘カード_ID
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59732,1)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲묘지 = 1
		CALL FULLRESET
		TRYCALLFORM CARDSUMMON_59732(듀얼리스트,場所)
		CALL FUSSUMMON(듀얼리스트,場所,제외行き)
		IF RESULT == 1
			SS소환可能속성 = 바람속성
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59732,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 해피
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"덱")
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	戦闘カード = 戦闘場所(듀얼리스트,1)
	戦闘カード_ID = 戦闘カードID(듀얼리스트,1)
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",戦闘カード,"묘지")
	TRYCALLFORM CARD_{戦闘カード_ID},"名前"
	IF RESULTS != ""
		PRINTFORMW 《하이브리드 드래곤 해피》는《%RESULTS%》를 밀어넘어뜨려、그대로 정기를 쥐어짜냈다。
	ENDIF
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",1)
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59732,3)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",-1)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 해피
		효과条件종류 = モン全般
		CALL 효과条件レベル_ADV(4,"以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		PRINTFORMW 《하이브리드 드래곤 해피》는 새로운 해피의 아이를 낳아냈다！
	ENDIF
ENDIF

