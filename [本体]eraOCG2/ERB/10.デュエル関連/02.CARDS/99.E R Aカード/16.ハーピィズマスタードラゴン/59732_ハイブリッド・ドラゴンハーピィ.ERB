@CARDNAME_59732,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 하이브리드 드래곤 해피
	CASE "略称"
		RESULTS = 혼혈룡 해피
	CASE "カテゴリ"
		RESULTS:0 = 해피
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_59732(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1500
	CASE "성별"
		RETURN 牝性
	CASE "특수制限"
		RETURN 1
ENDSELECT

RETURN 0


@CARDSUMMON_59732(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件속성 = 바람속성
	素材条件성별 = 牝性
	素材条件カテゴリ = 해피
ELSEIF EX参照 >= 10
	素材条件성별 = 雄性
	素材条件종족 = 드래곤족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,59732) 
	RETURN RESULT
ENDIF


@CARD_EXPLANATION_59732(종류)
