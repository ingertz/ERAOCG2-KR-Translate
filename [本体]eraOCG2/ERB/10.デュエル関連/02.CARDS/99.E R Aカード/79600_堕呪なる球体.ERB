@CARDCAN_79600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79600)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1	
	효과条件성별 = 牝性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	RETURN 1

ENDIF

@CARDEFFECT_79600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 装備先
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%
;PRINTFORML 装備者:%装備者%　装備先:{装備先}


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79600)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件성별 = 牝性 
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF
ELSEIF 종류 == 효과後強制誘発


	TRYCALLFORM CARDNAME_{GETVAR(@"%装備者%_필드:装備先")}, "名前"
	PRINTFORML %RESULTS%의 국문에 큼직한 비즈가 삽입되어 간다…….
	CALL SET_FIELD_INFO(装備者,"필드",装備先,"永攻",-700)
	CALL CARD_EROTICS_FIELD(装備者,"필드",装備先)
	IF RESULT != -1
		조교대상 = RESULT
		CALL EROTIC_MOVE("애널解し",조교대상)
	ENDIF

	CALL CARD_LOADUP

	IF GETVAR(@"%装備者%_MZ_攻:装備先") <= 0
		TRYCALLFORM CARDNAME_{GETVAR(@"%装備者%_필드:装備先")}, "名前"
		PRINTFORML 한계를 맞이한 %RESULTS%는 끝까지 삽입당한 비즈를 단번에 뽑혀졌고,
		PRINTFORMW 장액을 흩뿌리면서 절정하고 말았다.
		CALL CARD_EROTICS_FIELD(装備者,"필드",装備先)
		IF RESULT != -1
			조교대상 = RESULT
			CALL EROTIC_MOVE("애널解し",조교대상, -1, 500)
		ENDIF
		TRYCALLFORM CARD_{GETVAR(@"%装備者%_필드:装備先")}, "攻撃力"
		CALL LIFE_CHANGE(装備者,"減少","효과",RESULT)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",装備先,"묘지")

		IF GETVAR(@"%装備者%_필드:装備先") != -1
			TRYCALLFORM CARDNAME_{GETVAR(@"%装備者%_필드:装備先")}, "名前"
			PRINTFORML 파괴되는 것을 받아들일 수 없었던 %RESULTS%의 애널에 비즈가 다시 삽입되고 있다.
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"戦無")
ENDIF





