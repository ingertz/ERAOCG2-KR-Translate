@CARDCAN_99680(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99680)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF GETVARS(@"%듀얼리스트%_フィールド名") != "트립 트리트 トラック！"
			RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,99680)
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_99680(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 回復量
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウント数
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99680,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1	
			PRINTL 어느쪽에게 효과를 사용하시겠습니까？
			CALL YN_CHOICE(듀얼리스트,"●상대플레이어","●상대 몬스터")
		ELSE
			RESULT = 0
		ENDIF

		IF RESULT == 0
			CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)
			
			CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
			回復量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
			CALL LIFE_CHANGE(対面者,"増加","효과", 回復量 * 100)

			SIF 듀얼리스트 == "자신"
				PRINTL 묘지의 카드를 덱으로 되돌리시겠습니까？
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0
			
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件複数 = 97
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

			IF GETVAR(@"%対面者%_薬Ｃ") >= 9
				CALL SET_PLAYER_INFO(듀얼리스트,"ドロー불가",1,1)
			ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				選択カード = RESULT:1
				CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
				IF RESULT != -1
					조교대상 = RESULT
					PRINTFORML %CALLNAME:조교대상%는 과자가 가져다주는 고양에 저항하지 못하고、자위를 시작해버렸다。
					CALL EROTIC_MOVE("麻薬자위",조교대상)
				ENDIF
				CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)

				CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
				回復量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
				CALL LIFE_CHANGE(対面者,"増加","효과", 回復量 * 100)

				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 슈가러쉬
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				SIF RESULT != 1
					RETURN 0

				FOR カウンタ,0,5
					SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%対面者%_MZ_薬Ｃ:カウンタ")  
						CONTINUE
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"不材",1) 
					条件달성 = 1
				NEXT
				IF 条件달성 && 듀얼리스트 == "자신"
					PRINTL 상대 필드의 하수인은 고자에 뇌가 녹아、주인의 지시에 제대로 반응하지 못하게 되었다！
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF