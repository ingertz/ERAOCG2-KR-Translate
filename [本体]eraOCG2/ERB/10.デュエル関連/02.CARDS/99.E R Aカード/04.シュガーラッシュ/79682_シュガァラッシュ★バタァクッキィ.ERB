@CARDCAN_79682(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79682)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF GETVARS(@"%듀얼리스트%_フィールド名") != "트립 트리트 트럭！"
			SIF ターンプレイヤー != 듀얼리스트
				RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,79682)
		RETURN 0
	
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 슈가러쉬
	SIF ゾーン == "손패"
	    효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
    	CALL FULLRESET
    	효과範囲상대필드 = 1
    	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	    IF RESULT != 1
    		RETURN 0
    	ENDIF
    ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_79682(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 回復量
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79682,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1	
			PRINTL 어느쪽에게 효과를 사용하시겠습니까？
			CALL YN_CHOICE(듀얼리스트,"●상대플레이어","●상대 몬스터")
		ELSE
			RESULT = 0
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)
			

			CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
			回復量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
			CALL LIFE_CHANGE(対面者,"増加","효과", 回復量 * 100)
			
			CALL FULLRESET
			효과条件カテゴリ = 슈가러쉬
			효과条件任意 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,2)
			ENDIF
			
			IF GETVAR(@"%対面者%_薬Ｃ") >= 8
				CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2,1)
            ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				選択カード = RESULT:1
				CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
				IF RESULT != -1
					조교대상 = RESULT
					PRINTFORML %CALLNAME:조교대상%는 과자가 가져다주는 고양에 저항하지 못하고、자위를 시작해버렸다。
					CALL EROTIC_MOVE("麻薬자위",조교대상)
				ENDIF
				CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)

				CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
				回復量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
				CALL LIFE_CHANGE(対面者,"増加","효과", 回復量 * 100)

				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 슈가러쉬
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

				FOR カウンタ,0,5
					SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
						CONTINUE
					SIF GETVAR(@"%対面者%_MZ_薬Ｃ:カウンタ") <= 0
						CONTINUE
					CALL FULLRESET
					효과추가종류 = 2
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",カウンタ,"표시변경")
						条件달성 = 1
				NEXT
				IF 条件달성 && 듀얼리스트 == "자신"
					PRINTL 상대 필드의 하수인들은 과자에 빠져、주저앉아버렸다！
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF