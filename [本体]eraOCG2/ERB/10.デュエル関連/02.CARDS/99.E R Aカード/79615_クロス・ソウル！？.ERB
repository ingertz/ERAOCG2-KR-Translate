@CARDCAN_79615(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79615)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 牝性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 雄性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_79615(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC 選択カード_ID,10
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力상승値
#DIM DYNAMIC 조교대상
#DIM DYNAMIC レイプ횟수
#DIM DYNAMIC 寝取り成功
#DIM DYNAMIC 元持ち主
#DIM DYNAMIC 절정횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発

	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79615)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード:1 = RESULT
			選択カード_ID:1 = RESULT:99

			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			효과条件성별 = 雄性
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				選択カード:2 = RESULT
				選択カード_ID:2 = RESULT:99

				CALL CARD_SELECT(듀얼리스트,選択カード:1)
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"変化元ID",選択カード_ID:2)
				CALL CARD_SELECT(듀얼리스트,選択カード:1)
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"無効",1)


				CALL CARD_SELECT(듀얼리스트,選択カード:2)
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"変化元ID",選択カード_ID:1)
				CALL CARD_SELECT(듀얼리스트,選択カード:2)
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"無効",1)

				PRINTFORMW 선택한 몬스터 2장의 영혼이 뒤바뀌어,
				PRINTFORMW 저마다 자신의 육체에 대한 위화감, 혼란과 묘한 흥분을 기억하고 말았다.
			ENDIF
		ENDIF
	ENDIF
ENDIF


