@CARDNAME_59811,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 스노우케이브 홀－클라리아
	CASE "略称"
		RESULTS = 함박눈의클라리아
	CASE "カテゴリ"
		RESULTS:0 = 함정 속으로
		RESULTS:1 = 충혹마
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_59811(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARDSUMMON_59811(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 2
素材条件カテゴリ = 충혹마

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,59811) 
	RETURN RESULT
ENDIF

