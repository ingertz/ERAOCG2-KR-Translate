@CARDCAN_39600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39600)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0	
	CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動 || 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39600)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一時",GETVAR(@"%듀얼리스트%_MZ_攻:場所"))
		CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
		IF RESULT != -1
			조교대상 = RESULT
			CALL EROTIC_MOVE("両穴凌辱",조교대상,-1,300)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39600)
	IF RESULT == 0
		CALL FULLRESET
		CALLFORM CARDNAME_{直前戦闘破壊ID(듀얼리스트,1)}("名前")
		효과条件名前 = %RESULTS%
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "상대묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EROTICS_FIELD(듀얼리스트,"묘지",選択カード,1)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML %CALLNAME:조교대상%는 묘지에서 끌려나와, 바이브레이션 토쳐 디바이스에게 붙잡혔다.
				PRINTFORML %CALLNAME:조교대상%는 조교 영향을 받게 되어버렸다.
				CALL EROTIC_MOVE("両穴凌辱",조교대상,-1,150)
			ENDIF
			CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"상대묘지",選択カード)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)	


ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")

ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_装:{カウンタ}") != 場所
			CONTINUE
		
		CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML 사로잡혀버린 %CALLNAME:조교대상%는 쌍두 바이브에 격렬하게 꿰뚫리면서 흐려진 목소리를 계속해서 내고 있다.
			CALL EROTIC_MOVE("両穴凌辱",조교대상,-1,50)
		ENDIF
	NEXT
ENDIF
