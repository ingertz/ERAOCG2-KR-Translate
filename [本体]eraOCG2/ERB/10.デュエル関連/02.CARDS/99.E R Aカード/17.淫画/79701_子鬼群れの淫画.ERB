@CARDCAN_79701(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 合計攻撃力
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79701)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,79701)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	IF 종류 == 묘지起動
		SIF GETVARS(@"%듀얼리스트%_フィールド名") !=  "음화憶の美術館"
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	CALL CARD_SS_CHECK(듀얼리스트,79701,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,79701)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	FOR カウンタ,0,5
		VARSET RESULT
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
		SIF !MATCH(RESULTS, "음화")
			CONTINUE
		合計攻撃力 += GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
	NEXT
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	효과条件攻撃力 = 合計攻撃力
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79701(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 合計攻撃力
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79701,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79701,2)
	IF RESULT == 0
		FOR カウンタ,0,5
			VARSET RESULT
			SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
			SIF !MATCH(RESULTS, "음화")
				CONTINUE
			合計攻撃力 += GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
		NEXT
		CALL FULLRESET
		효과条件성별 = 牝性 
		효과条件攻撃力 = 合計攻撃力
		효과範囲상대필드 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:99
		CALL CARD_SELECT(듀얼리스트,RESULT)
		CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,本参照先（CS）,選択カード（CS）,4)
		CALL CARD_EROTICS(選択カード_ID)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORMW %CALLNAME:조교대상%는 고블린이 번식하는 그림 속으로 끌려들어갔다！
			CALL EROTIC_MOVE("拘束晒し",조교대상,-1,300)
		ELSE
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			PRINTFORMW %RESULTS%는 고블린이 번식하는 그림 속으로 끌려들어갔다！
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",選択カード_ID,上書きモード)
	ENDIF
ENDIF



