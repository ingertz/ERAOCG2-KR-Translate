@CARDCAN_79703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 合計レベル
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79703)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79703)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ENDIF
	CALL CARD_SS_CHECK(듀얼리스트,79703,ゾーン)
	SIF RESULT == 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,79703)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 음화
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		合計レベル = RESULT * 4
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과条件성별 = 牝性
	효과条件종류 = モン全般
	CALL 효과条件レベル_ADV(合計レベル,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 合計レベル
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 元持ち主

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79703,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 음화
		효과条件分割 = 효과モン
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대덱 = 1
			효과範囲상대묘지 = 1
			효과条件성별 = 牝性 
			효과추가종류 = 効追無効
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"",,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79703,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 음화
		효과条件複数 = 97
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		合計レベル = RESULT:2 * 4
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대묘지 = 1
			효과条件성별 = 牝性
			CALL 효과条件レベル_ADV(合計レベル,"以下")
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード_ID = RESULT:99
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			IF 本参照先（CS） == "상대필드"
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"強奪")
				IF 듀얼리스트 == "자신"
					CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"所有",1,1)
					CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"接可",2,1)
				ELSEIF 듀얼리스트 == "상대"
					CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"所有",2,1)
				ENDIF
			ELSEIF 本参照先（CS） == "상대묘지"
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"상대묘지",選択カード)
				IF 듀얼리스트 == "자신"
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"所有",1,1)
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"接可",2,1)
				ELSEIF 듀얼리스트 == "상대"
					CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"所有",2,1)
				ENDIF
			ENDIF
			CALL CARD_EROTICS(選択カード_ID)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML
				SETCOLOR C_PINK
				PRINTFORMW 음교의 야회가 벌어지는 그림 속으로 끌려간 %CALLNAME:조교대상%은 상대의 카드로 덮어씌워졌다…！
				RESETCOLOR
				PRINTFORML
				CALL EROTIC_MOVE("全身凌辱",조교대상, -1, 500)
			ENDIF
			IF 選択カード_ID < 100000
				IF 듀얼리스트 == "자신" && 元持ち主 == 2
					CALL CARD_GET_SINGLE(選択カード_ID,1)
				ELSEIF 듀얼리스트 == "상대" && ITEM:他参照選択カードID > 0 && 元持ち主 == 1
					PRINTL
					SETCOLOR C_RED
					TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
					PRINTFORMW 《%RESULTS%》를 빼앗겼습니다！
					ITEM:選択カード_ID -= 1
					RESETCOLOR
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF



