CALL TEXT_DECORATION("ROGUE")

@CARDCAN_79650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79650)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件성별 = 牝性 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 装備先
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 装備先
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79650)
	IF RESULT == 0
		;패에서 발동後、마법トラップ 존에 カード이동
		CALL FULLRESET
		효과範囲필드 = 1
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)

		CALL CARD_EROTICS(RESULT:1)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML %CALLNAME:조교대상%는 유리 드레스를 몸에 걸친 채, 부끄러운 듯이 눈을 흘겼다.
			CALL EROTIC_MOVE("晒しもの",조교대상)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",装備先)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML 가벼운 충격에 유리 드레스는 깨져 나가버리고, %CALLNAME:조교대상%는 얼굴을 붉히고, 큰 소리를 질렀다.
		CALL EROTIC_MOVE("晒しもの",조교대상)
	ENDIF
	CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"服状",2,1)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"接可",2,1)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"表",2,1)
	CALL EVADE_ATTACK(듀얼리스트)
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,1000)
ENDIF

