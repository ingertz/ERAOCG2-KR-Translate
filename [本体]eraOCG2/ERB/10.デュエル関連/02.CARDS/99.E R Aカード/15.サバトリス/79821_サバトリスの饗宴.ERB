CALL TEXT_DECORATION("ROGUE")

@CARDCAN_79821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79821)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_3(듀얼리스트,79821)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 사바트리스
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,79821)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_79821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 悪性카운터数
#DIM DYNAMIC 조교대상
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79821,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件複数 = 3
		효과条件カテゴリ = 사바트리스
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79821,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件カテゴリ = 사바트리스
		효과条件종류 = モン全般
		CALL 효과条件レベル_ADV(4, "以下")
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻守変動
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:カウンタ") == 0
			CONTINUE
		悪性카운터数 += GETVAR(@"%듀얼리스트%_MZ_悪Ｃ:カウンタ")
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_悪Ｃ:カウンタ") == 0
			CONTINUE
		悪性카운터数 += GETVAR(@"%対面者%_MZ_悪Ｃ:カウンタ")
	NEXT
	CALL FULLRESET
	효과条件カテゴリ = 사바트리스
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,悪性카운터数*100,悪性카운터数*100)

	CALL FULLRESET
	효과条件カテゴリ = 사바트리스
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"貫通",3)
ELSEIF 종류 == ターン終了時強制
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}, "カテゴリ"
			SIF MATCH(RESULTS, "사바트리스")
				CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORMW %NAME:조교대상%은 유녀들이 자아내는 최음향에 노출되었다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,-1,400)
		ENDIF
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",カウンタ,"発情",2)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"悪Ｃ",1)
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "カテゴリ"
			SIF MATCH(RESULTS, "사바트리스")
				CONTINUE
		;CALL CARD_EFFECT_CHECK(対面者,カウンタ,79800)
		;SIF RESULT == 0
		;	CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ,1)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORMW %NAME:조교대상%은 유녀들이 자아내는 최음향에 노출되었다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,-1,400)
		ENDIF
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",カウンタ,"発情",2)
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",カウンタ,"悪Ｃ",1)
		;CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"薬Ｃ",1)
	NEXT
	;CALL SET_PLAYER_INFO(듀얼리스트,"悪Ｃ",1,1,1)
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "유음욕의 만찬")
ENDIF
