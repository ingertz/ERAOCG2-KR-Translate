@CARDNAME_79852,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 마인드컨트롤러 - 치태의 전달 예고
	CASE "略称"
		RESULTS = MC 전달예고
	CASE "カテゴリ"
		RESULTS:0 = MC
		RESULTS:1 = E.R.A
		RESULTS:2 = AliVe♡Twin
ENDSELECT


@CARD_79852(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
ENDSELECT

RETURN 0

