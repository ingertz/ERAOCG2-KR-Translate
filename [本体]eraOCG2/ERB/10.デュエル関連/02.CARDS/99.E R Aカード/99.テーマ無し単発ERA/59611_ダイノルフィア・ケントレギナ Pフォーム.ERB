#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 다이놀피어 켄트레기나 파이즈리자우루스
	CASE "略称"
		RESULTS = 켄트레기나ＰＳ
	CASE "カテゴリ"
		RESULTS:0 = 다이놀피어
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_59611(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

